#!/bin/sh
# Bootstrap spell: uninstalls the bwrap command using the system package manager.

uninstall_bwrap_usage() {
        cat <<'USAGE' >&2
Usage: uninstall-bwrap

This spell uninstalls the bwrap command using the system package manager.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        uninstall_bwrap_usage
        exit 0
        ;;
esac

set -eu

SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
ASSUME_YES=1 "$SCRIPT_DIR/manage-system-command" --uninstall bwrap bubblewrap
