#!/bin/sh
# Bootstrap spell: installs the xclip clipboard utility using the system package manager.

install_xclip_usage() {
        cat <<'USAGE' >&2
Usage: install-xclip

This spell installs the xclip clipboard utility using the system package manager.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        install_xclip_usage
        exit 0
        ;;
esac

set -eu

SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
ASSUME_YES=1 "$SCRIPT_DIR/manage-system-command" xclip xclip
