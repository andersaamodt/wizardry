#!/bin/sh

# Teleport to bookmarks set by mark-location.

jump_to_marker_usage() {
cat <<'USAGE'
Usage: jump-to-marker [marker]

Teleport to a marker set with mark-location. Defaults to marker "1", marker "0" cycles through all saved locations.
USAGE
}

case "${1-}" in
--help|--usage|-h)
  jump_to_marker_usage
  exit 0
  ;;
esac

# Load uncastable imp for direct execution (BEFORE main logic)
# When executed directly: always source to ensure uncastable sees correct $0
# When sourced (testing): use from PATH if available to avoid forks
case "$0" in
  sh|dash|bash|zsh|ksh|mksh|*/sh|*/dash|*/bash|*/zsh|*/ksh|*/mksh)
    # Being sourced - use from PATH if available
    if ! command -v uncastable >/dev/null 2>&1; then
      if [ -n "${WIZARDRY_DIR-}" ]; then
        _i="$WIZARDRY_DIR/spells/.imps/sys"
      elif [ -n "${ROOT_DIR-}" ]; then
        _i="$ROOT_DIR/spells/.imps/sys"
      else
        _i="$(cd "$(dirname "$0")" && cd .. && cd .. && pwd)/spells/.imps/sys"
      fi
      [ -f "$_i/uncastable" ] && . "$_i/uncastable"
    fi
    ;;
  *)
    # Being executed - always source to ensure correct $0 detection
    if [ -n "${WIZARDRY_DIR-}" ]; then
      _i="$WIZARDRY_DIR/spells/.imps/sys"
    elif [ -n "${ROOT_DIR-}" ]; then
      _i="$ROOT_DIR/spells/.imps/sys"
    else
      _i="$(cd "$(dirname "$0")" && cd .. && cd .. && pwd)/spells/.imps/sys"
    fi
    [ -f "$_i/uncastable" ] && . "$_i/uncastable"
    ;;
esac
