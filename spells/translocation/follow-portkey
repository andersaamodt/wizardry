#!/bin/sh

# This spell activates a portkey enchantment to teleport to the stored destination.
# The destination is read from the file's 'context' extended attribute.

require-wizardry || return 1

follow_portkey_usage() {
cat <<'USAGE'
Usage: follow-portkey <file>

Read the destination from a portkey-enchanted file and print the cd command needed to teleport there. Use with eval, for example: eval "$(follow-portkey file)".
USAGE
}



follow_portkey() {
case "${1-}" in
--help|--usage|-h)
  follow_portkey_usage
  return 0
  ;;
esac

set -eu
. env-clear

# Ensure file argument is provided
if [ -z "${1-}" ]; then
        usage-error "follow-portkey" "file path required"
fi

file=$1

# Verify file exists
if ! is file "$file"; then
        die "follow-portkey: file not found: $file"
        return 1
fi

# Read the context attribute from the file
context=$(read-magic "$file" context 2>/dev/null || true)

# Verify context was found
case "$context" in
        ''|*Error*)
                die "follow-portkey: no portkey enchantment on file: $file"
        return 1
                ;;
esac

# Verify destination exists
if ! is dir "$context"; then
        warn "follow-portkey: destination does not exist: $context"
fi

# Output the cd command for eval
printf 'cd "%s"\n' "$context"
say "Following portkey to $context."
}


# Load castable imp for direct execution (AFTER all functions defined)
# When executed directly: always source to ensure castable sees correct $0
# When sourced (testing): use from PATH if available to avoid forks
case "$0" in
  sh|dash|bash|zsh|ksh|mksh|*/sh|*/dash|*/bash|*/zsh|*/ksh|*/mksh)
    # Being sourced - use from PATH if available
    if ! command -v castable >/dev/null 2>&1; then
      _d=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
      _r=$(cd "$_d" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
      _i="${WIZARDRY_DIR:-${_r}}/spells/.imps/sys"
      [ -f "$_i/castable" ] && . "$_i/castable"
    fi
    ;;
  *)
    # Being executed - always source to ensure correct $0 detection
      _d=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
      _r=$(cd "$_d" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
      _i="${WIZARDRY_DIR:-${_r}}/spells/.imps/sys"
      [ -f "$_i/castable" ] && . "$_i/castable"
    ;;
esac

castable "$@"
