#!/bin/sh

# This spell enchants a file with a portkey that transports to a destination.
# Activate the portkey with follow-portkey to teleport to the stored location.

require-wizardry || exit 1

enchant_portkey_usage() {
cat <<'USAGE'
Usage: enchant-portkey <file> [destination]

Enchant a file with a portkey that stores a destination path, defaulting to marker 1 ($SPELLBOOK_DIR/.markers/1) when none is provided. Activate the portkey later with follow-portkey to teleport to the stored location.
USAGE
}



enchant_portkey() {
case "${1-}" in
--help|--usage|-h)
  enchant_portkey_usage
  return 0
  ;;
esac

set -eu
. env-clear

# Ensure file argument is provided
if [ -z "${1-}" ]; then
        usage-error "enchant-portkey" "file path required"
fi

file=$1
destination=${2-}
spell_home=$(env-or SPELLBOOK_DIR "${HOME:-.}/.spellbook")
markers_dir="$spell_home/.markers"
marker_file="$markers_dir/1"

# Verify file exists
if ! is file "$file"; then
        die "enchant-portkey: file not found: $file"
        return 1
fi

# If no destination provided, try to read from marker file
if is unset "$destination"; then
        if is file "$marker_file"; then
                destination=$(read-file "$marker_file")
        else
                die "enchant-portkey: no destination provided and no marker 1 found."
        return 1
        fi
fi

# Verify destination is valid
if is unset "$destination"; then
        die "enchant-portkey: destination cannot be empty."
        return 1
fi

# Enchant the file with the destination context
enchant "$file" context "$destination" >/dev/null

say "Portkey enchanted on '$(file-name "$file")'. Use follow-portkey to activate."
}


# Source castable imp if not already available (for direct execution)
if ! command -v castable >/dev/null 2>&1; then
  # Try to find imps directory relative to this spell
  _spell_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _repo_root=$(cd "$_spell_dir" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  # Try to find imps directory relative to this spell
  _spell_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _repo_root=$(cd "$_spell_dir" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  WIZARDRY_IMPS_SYS="${WIZARDRY_DIR:-${_repo_root}}/spells/.imps/sys"
  if [ -f "$WIZARDRY_IMPS_SYS/castable" ]; then
    . "$WIZARDRY_IMPS_SYS/castable"
  fi
fi

# Source castable imp if not already available (for direct execution)
if ! command -v castable >/dev/null 2>&1; then
  # Try to find imps directory relative to this spell
  _spell_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _repo_root=$(cd "$_spell_dir" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  WIZARDRY_IMPS_SYS="${WIZARDRY_DIR:-${_repo_root}}/spells/.imps/sys"
  if [ -f "$WIZARDRY_IMPS_SYS/castable" ]; then
    . "$WIZARDRY_IMPS_SYS/castable"
  fi
fi

castable "$@"
