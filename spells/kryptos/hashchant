#!/bin/sh

# Hashchant spell: weave a checksum into a file's extended attributes.
# Stores a CRC-32 derived from the filename and contents under user.hash.


set -eu
show_usage() {
        cat <<'USAGE'
Usage: hashchant <file>

Compute a CRC-32 hash from the filename and contents, then write it to the
file's user.hash extended attribute when supported. Prints the applied hash.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        show_usage
        exit 0
        ;;
esac

if [ -z "${1-}" ]; then
  echo "Error: No file specified."
  exit 1
fi

file=$1

if [ ! -e "$file" ]; then
  echo "Error: File not found."
  exit 1
fi

helper_usable() {
  helper=$1
  if ! command -v "$helper" >/dev/null 2>&1; then
    return 1
  fi

  resolved=$(command -v "$helper")

  if [ "${WIZARDRY_TEST_HELPERS_ONLY-0}" -eq 1 ]; then
    case $resolved in
      "${WIZARDRY_TMPDIR}"/*)
        ;;
      *)
        return 1
        ;;
    esac
  fi

  return 0
}

filename=$(basename "$file")
hash=$( (echo "$filename" && cat "$file") | cksum | awk '{ print $1 }')
hash=$(printf '0x%X' "$hash")

apply_hash() {
  helper=$1
  case "$helper" in
    attr)
      attr -s "user.hash" -V "$hash" "$file" 2>/dev/null
      ;;
    xattr)
      xattr -w "user.hash" "$hash" "$file" 2>/dev/null
      ;;
    setfattr)
      setfattr -n "user.hash" -v "$hash" "$file" 2>/dev/null
      ;;
  esac
}

apply_first_available() {
  last_helper=""
  last_status=0

  for helper in attr xattr setfattr; do
    if ! helper_usable "$helper"; then
      continue
    fi

    if apply_hash "$helper"; then
      echo "File enchanted with hash: $hash"
      return 0
    fi

    last_helper=$helper
    last_status=$?
  done

  if [ -n "$last_helper" ]; then
    echo "Error: Failed to write hash using $last_helper (exit $last_status)." >&2
  else
    echo "Error: xattr and attr commands not found. Cannot enchant file."
  fi

  return 1
}

if ! apply_first_available; then
  exit 1
fi
