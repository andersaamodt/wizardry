#!/bin/sh

# This spell applies an extended attribute to a file.
# With 2 or fewer args, it autodetects order: one is a file, one is attribute=value.


show_usage() {
cat <<'USAGE'
Usage: enchant [file] attribute=value

Apply an extended attribute with the given name and value to a file using attr, xattr, or \
  setfattr. With two arguments the spell figures out which is the path and which is attribute=value, defaulting to the current directory, and the legacy <file> <attribute> <value> [helper] form still works.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        show_usage
        exit 0
        ;;
esac
set -eu

# Check if argument looks like a valid attribute=value pair
# Returns 0 if it's a valid attr=value (non-empty attr and value)
is_attr_value() {
        case "$1" in
        *=*)
                # Also check that both sides are non-empty
                _av_attr="${1%%=*}"
                _av_val="${1#*=}"
                [ -n "$_av_attr" ] && [ -n "$_av_val" ] && return 0
                return 1
                ;;
        *) return 1 ;;
        esac
}

# Parse attribute=value into separate parts
# Caller should use is_attr_value first to ensure valid format
parse_attr_value() {
        _attr_val=$1
        _attr="${_attr_val%%=*}"
        _val="${_attr_val#*=}"
        printf '%s\n%s\n' "$_attr" "$_val"
}

helper_path() {
        helper=$1
        lacks "$helper" && return 1

        path=$(command -v "$helper")
        if [ "${WIZARDRY_TEST_HELPERS_ONLY-0}" -eq 1 ]; then
                case "$path" in
                /usr/*|/bin/*|/sbin/*|/usr/local/*)
                        return 1 ;;
                esac
        fi

        printf '%s\n' "$path"
        return 0
}

set_with_attr() {
        if attr_path=$(helper_path attr); then
                "$attr_path" -s "$1" -V "$2" "$3"
                return $?
        fi

        return 127
}

set_with_xattr() {
        if xattr_path=$(helper_path xattr); then
                        "$xattr_path" -w "$1" "$2" "$3"
                        return $?
        fi

        return 127
}

set_with_setfattr() {
        if setfattr_path=$(helper_path setfattr); then
                        "$setfattr_path" -n "$1" -v "$2" "$3"
                        return $?
        fi

        return 127
}

helpers_for_preference() {
        preferred=$1
        case "$preferred" in
        "")
                printf '%s\n' attr xattr setfattr
                ;;
        attr|xattr|setfattr)
                printf '%s\n' "$preferred"
                for helper in attr xattr setfattr; do
                        if [ "$helper" != "$preferred" ]; then
                                printf '%s\n' "$helper"
                        fi
                done
                ;;
        *)
                printf '%s\n' "Error: Unknown helper '$preferred'. Choose attr, xattr, or \
                  setfattr." >&2
                return 1
                ;;
        esac
}

set_attribute() {
        key=$1
        value=$2
        file=$3
        preferred=${4-}
        helpers=$(helpers_for_preference "$preferred") || return 1

        attempted_helper=""
        attempt_status=0

        for helper in $helpers; do
                case "$helper" in
                attr)
                        set_with_attr "$key" "$value" "$file" ;;
                xattr)
                        set_with_xattr "$key" "$value" "$file" ;;
                setfattr)
                        set_with_setfattr "$key" "$value" "$file" ;;
                esac

                status=$?
                case "$status" in
                0)
                        return 0 ;;
                127)
                        ;; # Helper unavailable; try the next option.
                *)
                        attempted_helper=$helper
                        attempt_status=$status
                        ;;
                esac
        done

        if [ -n "$attempted_helper" ]; then
                printf "%s\n" "Error: Failed to set attribute using '$attempted_helper' (exit \
                  $attempt_status)." >&2
        else
                printf "%s\n" "Error: This spell requires the 'attr', 'xattr', or 'setfattr' command to \
                  be installed." >&2
        fi

        return 1
}

# Parse arguments - supports both new 2-arg and legacy 3-arg formats
parse_arguments() {
        file=""
        key=""
        value=""
        preferred=""

        if [ $# -eq 0 ]; then
                printf '%s\n' "Error: At least one argument is required (attribute=value)." >&2
                return 1
        elif [ $# -eq 1 ]; then
                # One arg: must be attribute=value, use current directory
                if is_attr_value "$1"; then
                        parsed=$(parse_attr_value "$1")
                        key=$(printf '%s' "$parsed" | sed -n '1p')
                        value=$(printf '%s' "$parsed" | sed -n '2p')
                        file=$PWD
                else
                        printf '%s\n' "Error: Single argument must be attribute=value format." >&2
                        return 1
                fi
        elif [ $# -eq 2 ]; then
                # Two args: detect which is file and which is attribute=value
                if is_attr_value "$1" && is_attr_value "$2"; then
                        printf '%s\n' "Error: Both arguments look like attribute=value pairs." >&2
                        return 1
                elif is_attr_value "$1"; then
                        # First is attr=val, second is file
                        parsed=$(parse_attr_value "$1")
                        key=$(printf '%s' "$parsed" | sed -n '1p')
                        value=$(printf '%s' "$parsed" | sed -n '2p')
                        file=$2
                elif is_attr_value "$2"; then
                        # First is file, second is attr=val
                        file=$1
                        parsed=$(parse_attr_value "$2")
                        key=$(printf '%s' "$parsed" | sed -n '1p')
                        value=$(printf '%s' "$parsed" | sed -n '2p')
                else
                        # Neither has valid attr=value format
                        # Provide consistent error message regardless of whether args exist as files
                        printf '%s\n' "Error: Two-argument format requires one argument to be in 'attribute=v \
                          \
                          alue' format." >&2
                        printf '%s\n' "       Use 'enchant <file> attr=value' or 'enchant attr=value \
                          \
                          <file>'" >&2
                        return 1
                fi
        elif [ $# -eq 3 ] || [ $# -eq 4 ]; then
                # Legacy 3-4 arg format: file, attribute, value, [helper]
                file=$1
                key=$2
                value=$3
                preferred=${4-}
        else
                printf '%s\n' "Error: Too many arguments provided." >&2
                return 1
        fi

        # Validate we have all required parts (mainly for legacy 3-arg format
        # where empty args might be passed)
        if [ -z "$file" ] || [ -z "$key" ] || [ -z "$value" ]; then
                printf '%s\n' "Error: File, attribute, and value are all required." >&2
                return 1
        fi

        # Export for use in main
        ENCHANT_FILE=$file
        ENCHANT_KEY=$key
        ENCHANT_VALUE=$value
        ENCHANT_PREFERRED=$preferred
}

main() {
        if ! parse_arguments "$@"; then
                exit 1
        fi

        file=$ENCHANT_FILE
        key=$ENCHANT_KEY
        value=$ENCHANT_VALUE
        preferred=$ENCHANT_PREFERRED

        gone "$file" && fail "Error: The file does not exist."

        if ! set_attribute "$key" "$value" "$file" "$preferred"; then
                exit 1
        fi

        printf "The file has been enchanted with the attribute '%s' and value \
          '%s'.\n" "$key" "$value"
}

main "$@"
