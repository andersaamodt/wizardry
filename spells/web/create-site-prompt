#!/bin/sh

# Prompt for site name and create it.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: create-site-prompt

Interactively prompts for a site name and creates the site.
USAGE
  exit 0
  ;;
esac

set -eu
. env-clear

# Prompt for site name
printf 'Enter site name: '
read -r site_name

if [ -z "$site_name" ]; then
  warn "create-site-prompt: no site name entered"
  exit 1
fi

create-site "$site_name"
