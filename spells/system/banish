#!/bin/sh

# Banish environmental chaos and validate wizardry readiness at different levels.
# This spell assumption-checks, self-heals, and tests the environment,
# ensuring all prerequisites are met for each spell level.

show_usage() {
  cat <<'USAGE'
Usage: banish [LEVEL] [OPTIONS]

Validate wizardry at the specified spell level, checking assumptions, 
self-healing issues, and running tests. Each level builds on previous levels.

NOTE: Banish requires wizardry to be installed. Run ./install first.
See .github/SPELL_LEVELS.md for complete level documentation.

Arguments:
  LEVEL                 Spell level to validate (0-27, default: 1)
                        Level 0: POSIX & platform foundation
                        Level 1: Wizardry installation
                        Level 2: Menu system
                        Level 3: MUD basics (cd-hook, look)
                        Level 4: Navigation (jump-to-marker, mark-location)
                        Level 5: Arcane file operations
                        Level 6: Basic cantrips
                        Level 7: Validation helpers
                        Level 8: Advanced cantrips
                        Level 9: System configuration
                        Level 10: Testing infrastructure
                        Level 11: System maintenance
                        Level 12: Advanced system tools
                        Level 13: Divination
                        Level 14: Advanced MUD
                        Level 15-20: Specialized domains (crypto, SSH, priorities, wards, enchant, PSI, spellcraft)
                        Level 21-25: Menus (core, system, MUD, domain)
                        Level 26: System services
                        Level 27: Optional arcana & third-party integrations

Options:
  --no-heal             Skip self-healing (only report issues)
  --no-tests            Skip running tests (only check assumptions)
  --only                Only validate this specific level (don't run lower levels)

Environment Variables:
  WIZARDRY_DIR          Target wizardry installation directory

Exit Codes:
  0  Level is ready (all checks passed, tests passed)
  1  Critical issues found (cannot continue)
  2  Invalid usage

Examples:
  banish                    # Validate through level 1 (default - levels 0-1: POSIX + wizardry)
  banish 0                  # Validate level 0 only (POSIX foundation)
  banish 2                  # Validate through level 2 (levels 0-2: POSIX + wizardry + menu)
  banish 4 --no-tests       # Validate through level 4, skip tests
  banish 1 --no-heal        # Validate through level 1, only report issues
USAGE
}

banish() {
case "${1-}" in
--help|--usage|-h)
  show_usage
  return 0
  ;;
esac

set -eu

# Parse arguments
target_level=1
skip_tests=0
skip_heal=0
only_this_level=0

# First, check if first arg is a number (the level)
if [ "$#" -gt 0 ]; then
  case "$1" in
    [0-9]|[0-9][0-9])
      target_level=$1
      shift
      ;;
  esac
fi

while [ "$#" -gt 0 ]; do
  case $1 in
    --no-heal)
      skip_heal=1
      shift
      ;;
    --no-tests)
      skip_tests=1
      shift
      ;;
    --only)
      only_this_level=1
      shift
      ;;
    --)
      shift
      break
      ;;
    -*)
      printf 'Error: unknown option: %s\n' "$1" >&2
      show_usage >&2
      return 2
      ;;
    *)
      # Check if it's a valid level number
      case "$1" in
        [0-9]|[0-9][0-9])
          target_level=$1
          shift
          ;;
        *)
          printf 'Error: unexpected argument: %s\n' "$1" >&2
          show_usage >&2
          return 2
          ;;
      esac
      ;;
  esac
done

# Validate level
if [ "$target_level" -lt 0 ] || [ "$target_level" -gt 27 ]; then
  printf 'Error: level must be 0-27, got: %s\n' "$target_level" >&2
  show_usage >&2
  return 2
fi

# Source shared spell level definitions from sys imp
# This file is shared by banish, test-magic, and demo-magic
if [ -n "${WIZARDRY_DIR-}" ] && [ -f "${WIZARDRY_DIR}/spells/.imps/sys/spell-levels" ]; then
  . "${WIZARDRY_DIR}/spells/.imps/sys/spell-levels"
else
  # Fallback: try to find from script location
  _banish_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _wiz_root=$(CDPATH= cd -- "$_banish_dir/../.." && pwd -P)
  if [ -f "$_wiz_root/spells/.imps/sys/spell-levels" ]; then
    . "$_wiz_root/spells/.imps/sys/spell-levels"
  else
    # Final fallback: define inline if spell-levels not found
    get_level_spells() { printf '' ; }
    get_level_imps() { printf '' ; }
    banish_level_name() { printf 'Unknown' ; }
  fi
fi

# Generic spell checking function with consistent formatting
# Usage: banish_check_spells "spell1:dir1 spell2:dir2 spell3" "default_dir"
banish_check_spells() {
  spell_list=$1
  default_dir=${2:-cantrips}
  missing=""
  
  for spell_info in $spell_list; do
    case "$spell_info" in
      *:*)
        # Format: spell:dir
        spell=$(printf '%s' "$spell_info" | cut -d: -f1)
        dir=$(printf '%s' "$spell_info" | cut -d: -f2)
        ;;
      *)
        # Plain spell name, use default directory
        spell=$spell_info
        dir=$default_dir
        ;;
    esac
    
    if [ ! -f "${WIZARDRY_DIR}/spells/$dir/$spell" ]; then
      missing="${missing:+$missing }$spell"
    else
      # Output to stderr so it doesn't get captured in missing=$(...)
      printf "  ✓ %s\n" "Found spell: $spell" >&2
    fi
  done
  
  # Return the missing list via stdout for caller to handle
  printf '%s' "$missing"
}

# Generic level validation - validates spells and imps for a level
banish_validate_level_spells() {
  level=$1
  
  # Get spell list for this level
  spell_list=$(get_level_spells "$level")
  
  if [ -n "$spell_list" ]; then
    missing=$(banish_check_spells "$spell_list" "cantrips")
    
    if [ -n "$missing" ]; then
      printf "Warning: %s\n" "Missing Level $level spells: $missing"
      return 1
    fi
  fi
  
  # Get imp list for this level  
  imp_list=$(get_level_imps "$level")
  
  if [ -n "$imp_list" ]; then
    printf "  • %s\n" "Checking Level $level imps..."
    missing_imps=""
    for imp in $imp_list; do
      if [ ! -f "${WIZARDRY_DIR}/spells/.imps/$imp" ]; then
        missing_imps="${missing_imps:+$missing_imps }$imp"
      else
        printf "  ✓ %s\n" "Found imp: $imp" >&2
      fi
    done
    
    if [ -n "$missing_imps" ]; then
      printf "Warning: %s\n" "Missing Level $level imps: $missing_imps"
      return 1
    fi
  fi
  
  return 0
}


# Run level-specific checks and actions
banish_level() {
  level=$1
  level_name=$(banish_level_name "$level")
  
  printf '\n=== Level %d: %s ===\n' "$level" "$level_name"
  
  # Levels 3-26 follow standard pattern: just validate spells
  if [ "$level" -ge 3 ] && [ "$level" -le 26 ]; then
    printf 'Checking Level %d: %s...\n' "$level" "$level_name"
    banish_validate_level_spells "$level"
    printf 'Level %d complete\n' "$level"
    return $?
  fi
  
  # Levels 0, 1, 2, and 27 have special handling
  case "$level" in
    0)
      banish_level_0
      ;;
    1)
      banish_level_1
      ;;
    2)
      banish_level_2
      ;;
    27)
      banish_level_27
      ;;
    *)
      printf 'Warning: Level %d not yet implemented\n' "$level" >&2
      ;;
  esac
}

# Level 0: System Foundation (wizardry installation assumptions)
banish_level_0() {
  # Stage 1: Set up WIZARDRY_DIR first (needed for other checks)
  printf '\nConfiguring WIZARDRY_DIR:\n'
  
  wizardry_not_installed=0
  
  if [ -n "${WIZARDRY_DIR-}" ]; then
    # Already set in environment
    printf "  ✓ %s\n" "Using existing: $WIZARDRY_DIR"
  else
    # Auto-detect
    printf "  • %s\n" "Auto-detecting wizardry installation..."
    
    # Try to find wizardry by looking for this script's location
    has_dirname=$(command -v dirname >/dev/null 2>&1 && echo 1 || echo 0)
    has_cd=$(command -v cd >/dev/null 2>&1 && echo 1 || echo 0)
    has_pwd=$(command -v pwd >/dev/null 2>&1 && echo 1 || echo 0)
    if [ "$has_dirname" = "1" ] && [ "$has_cd" = "1" ] && [ "$has_pwd" = "1" ]; then
      script_dir=$(CDPATH= cd -- "$(dirname "$0")" 2>/dev/null && pwd -P) || true
      if [ -n "$script_dir" ]; then
        # We're in spells/system, so go up two levels
        _potential_dir=$(CDPATH= cd -- "$script_dir/../.." 2>/dev/null && pwd -P) || true
        if [ -n "$_potential_dir" ] && [ -d "$_potential_dir/spells" ]; then
          WIZARDRY_DIR=$_potential_dir
          printf "  ✓ %s\n" "Detected from script location: $WIZARDRY_DIR"
        fi
      fi
    fi
    
    # Fallback to standard location
    if [ -z "${WIZARDRY_DIR-}" ]; then
      if [ -n "${HOME-}" ] && [ -d "${HOME}/.wizardry/spells" ]; then
        WIZARDRY_DIR="${HOME}/.wizardry"
        printf "  ✓ %s\n" "Found standard location: $WIZARDRY_DIR"
      else
        wizardry_not_installed=1
      fi
    fi
  fi
  
  # Verify WIZARDRY_DIR structure (essential wizardry assumptions)
  if [ -n "${WIZARDRY_DIR-}" ]; then
    if [ ! -d "${WIZARDRY_DIR}/spells" ]; then
      wizardry_not_installed=1
    fi
  fi
  
  # Special case: If wizardry is not installed, report assumptions and stop
  if [ "$wizardry_not_installed" -eq 1 ]; then
    printf "%s\n" ""
    printf "%s\n" "Wizardry installation not found."
    printf "%s\n" ""
    printf "%s\n" "The following assumptions are not met:"
    printf "%s\n" "  • WIZARDRY_DIR not set or directory not found"
    printf "%s\n" "  • Wizardry spells directory not found"
    printf "%s\n" "  • invoke-wizardry not available"
    printf "%s\n" ""
    printf "%s\n" "To install wizardry, run: ./install"
    printf "%s\n" ""
    return 1
  fi
  
  # Wizardry is installed - continue with validation
  if [ -n "${WIZARDRY_DIR-}" ]; then
    # Check for critical wizardry directories
    printf "  • %s\n" "Checking wizardry structure..."
    for dir in spells spells/.imps spells/.imps/sys .tests; do
      if [ -d "${WIZARDRY_DIR}/$dir" ]; then
        printf "  ✓ %s\n" "Found: $dir/"
      else
        printf "Warning: %s\n" "Missing: $dir/"
      fi
    done
    
    # Export WIZARDRY_DIR for downstream tools
    export WIZARDRY_DIR
    printf "%s\n" "Environment prepared: WIZARDRY_DIR=$WIZARDRY_DIR"
  fi
  
  # Stage 2: Detect OS and system information
  printf '\nDetecting OS and system information:\n'
  
  # Detect operating system
  if command -v uname >/dev/null 2>&1; then
    os_kernel=$(uname -s 2>/dev/null || printf 'unknown')
    printf "  ✓ %s\n" "Kernel: $os_kernel"
    
    # Try to detect distribution if available
    if [ -n "${WIZARDRY_DIR-}" ] && [ -f "${WIZARDRY_DIR}/spells/divination/detect-distro" ]; then
      distro=$("${WIZARDRY_DIR}/spells/divination/detect-distro" 2>/dev/null || printf 'unknown')
      printf "  ✓ %s\n" "Distribution: $distro"
    elif [ -f /etc/os-release ]; then
      distro=$(grep '^ID=' /etc/os-release 2>/dev/null | cut -d= -f2 | tr -d '"' || printf 'unknown')
      printf "  ✓ %s\n" "Distribution: $distro"
    fi
  else
    printf "Warning: %s\n" "uname not found - cannot detect OS"
  fi
  
  # Stage 3: Check POSIX environment using detect-posix if available
  printf '\nChecking POSIX toolchain:\n'
  posix_check_failed=0
  missing_recommended=''
  
  # Try to use detect-posix if available
  if [ -n "${WIZARDRY_DIR-}" ] && [ -f "${WIZARDRY_DIR}/spells/divination/detect-posix" ]; then
    printf "  • %s\n" "Using detect-posix for environment checks"
    "${WIZARDRY_DIR}/spells/divination/detect-posix" --verbose || posix_check_failed=1
    
    if [ "$posix_check_failed" -ne 0 ]; then
      printf "Warning: %s\n" "detect-posix reported issues with POSIX environment"
      printf "Warning: %s\n" "Some wizardry features may not work correctly"
    fi
  else
    # Fallback: manual check of critical tools if detect-posix not available
    printf "  • %s\n" "detect-posix not found, using fallback checks"
    critical_tools="sh test printf"
    missing_critical=''
    
    for tool in $critical_tools; do
      if ! command -v "$tool" >/dev/null 2>&1; then
        missing_critical="${missing_critical:+$missing_critical }$tool"
      else
        printf "  ✓ %s\n" "Found: $tool"
      fi
    done
    
    if [ -n "$missing_critical" ]; then
      printf "Warning: %s\n" "Critical POSIX tools missing: $missing_critical"
      printf "Warning: %s\n" "Cannot self-heal without basic shell utilities"
      return 1
    fi
    
    # Check recommended tools
    recommended_tools="awk sed grep find mktemp dirname basename pwd cd curl wget tar"
    for tool in $recommended_tools; do
      if ! command -v "$tool" >/dev/null 2>&1; then
        missing_recommended="${missing_recommended:+$missing_recommended }$tool"
        printf "Warning: %s\n" "Recommended tool missing: $tool"
      else
        printf "  ✓ %s\n" "Found: $tool"
      fi
    done
  fi
  
  # Stage 4: Verify invoke-wizardry and RC integration
  if [ -n "${WIZARDRY_DIR-}" ]; then
    printf '\nVerifying invoke-wizardry and shell integration:\n'
    
    # Check invoke-wizardry exists
    if [ ! -f "$WIZARDRY_DIR/spells/.imps/sys/invoke-wizardry" ]; then
      printf "Warning: %s\n" "invoke-wizardry not found at $WIZARDRY_DIR/spells/.imps/sys/invoke-wizardry"
      printf "Warning: %s\n" "Run ./install to repair wizardry"
      return 1
    else
      printf "  ✓ %s\n" "invoke-wizardry is available"
    fi
    
    # Check if shell RC file exists and contains wizardry invocation
    rc_file=""
    if [ -n "${SHELL-}" ]; then
      case "$(basename "$SHELL")" in
        bash) rc_file="${HOME}/.bashrc" ;;
        zsh) rc_file="${HOME}/.zshrc" ;;
        *) rc_file="${HOME}/.profile" ;;
      esac
    else
      rc_file="${HOME}/.profile"
    fi
    
    if [ -f "$rc_file" ]; then
      if grep -q "invoke-wizardry" "$rc_file" 2>/dev/null; then
        printf "  ✓ %s\n" "Shell RC configured: $rc_file"
      else
        printf "Warning: %s\n" "Shell RC exists but wizardry not sourced: $rc_file"
        printf "%s\n" "Run: source \"\$HOME/.wizardry/spells/.imps/sys/invoke-wizardry\""
      fi
    else
      printf "Warning: %s\n" "Shell RC file not found: $rc_file"
      printf "%s\n" "Wizardry may not be available in new shells"
    fi
  fi
  
  # Stage 5: Set baseline PATH if needed
  printf '\nChecking PATH:\n'
  baseline_path="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"
  case ":${PATH-}:" in
    *":/usr/bin:"*|*":/bin:"*)
      printf "  ✓ %s\n" "PATH includes standard directories"
      ;;
    *)
      printf "Warning: %s\n" "PATH missing standard directories, adding baseline"
      PATH="${baseline_path}${PATH:+:}${PATH-}"
      export PATH
      ;;
  esac
  
  # Stage 6: Check for package managers (system foundation)
  printf '\nChecking package managers:\n'
  found_pkg_mgr=0
  for pkg_mgr in apt yum dnf pacman brew nix-env; do
    if command -v "$pkg_mgr" >/dev/null 2>&1; then
      printf "  ✓ %s\n" "Found package manager: $pkg_mgr"
      found_pkg_mgr=1
    fi
  done
  
  if [ "$found_pkg_mgr" -eq 0 ]; then
    printf "Warning: %s\n" "No known package manager found"
    printf "Warning: %s\n" "Self-healing capabilities will be limited"
  fi
  
  # Stage 7: Check and self-heal essential development tools
  printf '\nChecking essential development tools:\n'
  
  # Check for git
  if ! command -v git >/dev/null 2>&1; then
    printf "Warning: %s\n" "git not found - required for wizardry development"
    if [ "$skip_heal" -eq 0 ] && [ -x "${WIZARDRY_DIR}/spells/.arcana/core/install-git" ]; then
      printf "%s\n" "Attempting to install git..."
      "${WIZARDRY_DIR}/spells/.arcana/core/install-git" || printf "Warning: %s\n" "Failed to install git"
      # Re-check
      if command -v git >/dev/null 2>&1; then
        printf "  ✓ %s\n" "git installed successfully"
      fi
    fi
  else
    printf "  ✓ %s\n" "git available"
  fi
  
  # Stage 8: Check POSIX tools and attempt self-healing
  # Report summary and attempt self-healing if enabled
  if [ -n "$missing_recommended" ]; then
    printf "Warning: %s\n" "Some recommended tools are missing: $missing_recommended"
    printf "Warning: %s\n" "Wizardry may have reduced functionality"
    
    if [ "$skip_heal" -eq 0 ] && [ "$found_pkg_mgr" -eq 1 ]; then
      printf "%s\n" "Attempting to install missing tools (this may require sudo)..."
      # Whitelist of allowed POSIX tools to install (security: prevent command injection)
      allowed_tools="awk sed grep find mktemp dirname basename pwd cd curl wget tar sh test printf cat sort"
      
      # Try to install missing tools based on detected package manager
      for pkg_mgr in apt yum dnf pacman brew; do
        if command -v "$pkg_mgr" >/dev/null 2>&1; then
          case "$pkg_mgr" in
            apt)
              for tool in $missing_recommended; do
                # Validate tool is in whitelist
                tool_allowed=0
                for allowed in $allowed_tools; do
                  if [ "$tool" = "$allowed" ]; then
                    tool_allowed=1
                    break
                  fi
                done
                
                if [ "$tool_allowed" -eq 1 ]; then
                  printf "  • %s\n" "Installing $tool..."
                  sudo apt-get install -y "$tool" >/dev/null 2>&1 || printf "Warning: %s\n" "Failed to install $tool"
                else
                  printf "Warning: %s\n" "Skipping $tool (not in allowed tools list)"
                fi
              done
              break
              ;;
            yum|dnf)
              for tool in $missing_recommended; do
                # Validate tool is in whitelist
                tool_allowed=0
                for allowed in $allowed_tools; do
                  if [ "$tool" = "$allowed" ]; then
                    tool_allowed=1
                    break
                  fi
                done
                
                if [ "$tool_allowed" -eq 1 ]; then
                  printf "  • %s\n" "Installing $tool..."
                  sudo "$pkg_mgr" install -y "$tool" >/dev/null 2>&1 || printf "Warning: %s\n" "Failed to install $tool"
                else
                  printf "Warning: %s\n" "Skipping $tool (not in allowed tools list)"
                fi
              done
              break
              ;;
            pacman)
              for tool in $missing_recommended; do
                # Validate tool is in whitelist
                tool_allowed=0
                for allowed in $allowed_tools; do
                  if [ "$tool" = "$allowed" ]; then
                    tool_allowed=1
                    break
                  fi
                done
                
                if [ "$tool_allowed" -eq 1 ]; then
                  printf "  • %s\n" "Installing $tool..."
                  sudo pacman -S --noconfirm "$tool" >/dev/null 2>&1 || printf "Warning: %s\n" "Failed to install $tool"
                else
                  printf "Warning: %s\n" "Skipping $tool (not in allowed tools list)"
                fi
              done
              break
              ;;
            brew)
              for tool in $missing_recommended; do
                # Validate tool is in whitelist
                tool_allowed=0
                for allowed in $allowed_tools; do
                  if [ "$tool" = "$allowed" ]; then
                    tool_allowed=1
                    break
                  fi
                done
                
                if [ "$tool_allowed" -eq 1 ]; then
                  printf "  • %s\n" "Installing $tool..."
                  brew install "$tool" >/dev/null 2>&1 || printf "Warning: %s\n" "Failed to install $tool"
                else
                  printf "Warning: %s\n" "Skipping $tool (not in allowed tools list)"
                fi
              done
              break
              ;;
          esac
        fi
      done
    else
      printf "%s\n" "Install manually using your package manager if needed"
    fi
  fi
  
  # Success
  printf "%s\n" "Level 0 complete - system foundation validated"
  return 0
}

# Level 1: Wizardry Installation
banish_level_1() {
  printf "%s\n" "Checking Level 1: Wizardry Installation..."
  
  # Verify wizardry is installed
  if [ ! -d "${WIZARDRY_DIR}/spells" ]; then
    printf "Warning: %s\n" "Wizardry not installed at $WIZARDRY_DIR"
    return 1
  fi
  
  # Validate spells and imps using generic function
  banish_validate_level_spells 1 || return 1
  
  printf "%s\n" "Level 1 complete"
}

# Level 2: Menu System
banish_level_2() {
  printf "%s\n" "Checking Level 2: Menu System..."
  
  # Validate spells using generic function
  banish_validate_level_spells 2 || return 1
  
  # Check if stty is available (required for menu terminal control)
  if ! command -v stty >/dev/null 2>&1; then
    printf "Warning: %s\n" "stty command not found - required for menu"
    if [ "$skip_heal" -eq 0 ]; then
      if [ -x "${WIZARDRY_DIR}/spells/.arcana/core/install-stty" ]; then
        printf "%s\n" "Attempting to install stty..."
        "${WIZARDRY_DIR}/spells/.arcana/core/install-stty" || printf "Warning: %s\n" "Failed to install stty"
        # Re-check after install
        if command -v stty >/dev/null 2>&1; then
          printf "  ✓ %s\n" "stty installed successfully"
        fi
      else
        printf "%s\n" "install-stty script not found - install stty manually"
      fi
    fi
  else
    printf "  ✓ %s\n" "stty available"
  fi
  
  printf "%s\n" "Level 2 complete"
}

# Levels 3-26: Standard validation pattern (now handled in banish_level dispatcher)

# Level 27: Optional Arcana & Third-Party Integrations
banish_level_27() {
  printf "%s\n" "Checking Level 27: Optional Arcana & Third-Party Integrations..."
  
  # Level 27 is special - contains all spells in spells/.arcana/
  if [ -d "${WIZARDRY_DIR}/spells/.arcana" ]; then
    arcana_count=$(find "${WIZARDRY_DIR}/spells/.arcana" -type f 2>/dev/null | wc -l)
    printf "  ✓ %s\n" "Found $arcana_count arcana spells/scripts"
  else
    printf "%s\n" "Arcana directory not found (optional)"
  fi
  
  printf "%s\n" "Level 27 complete"
}

# Main execution: Run levels 0 through target_level (or only target_level if --only)
if [ "$only_this_level" -eq 1 ]; then
  printf '\n=== Validating Wizardry Level %d: %s (only) ===\n' "$target_level" "$(banish_level_name "$target_level")"
else
  printf '\n=== Validating Wizardry through Level %d: %s ===\n' "$target_level" "$(banish_level_name "$target_level")"
fi

# Run each level from 0 to target_level (or just target_level if --only)
if [ "$only_this_level" -eq 1 ]; then
  current_level=$target_level
else
  current_level=0
fi

while [ "$current_level" -le "$target_level" ]; do
  banish_level "$current_level" || {
    exit_code=$?
    printf "Error: %s\n" "Level $current_level validation failed, cannot continue"
    return "$exit_code"
  }
  if [ "$only_this_level" -eq 1 ]; then
    break
  fi
  current_level=$((current_level + 1))
done

# Final success message
printf '\n✓ Validation complete - Level %d ready\n' "$target_level"

return 0
}


# Load castable imp for direct execution (AFTER all functions defined)
# CRITICAL: banish is a bootstrap spell that may run before wizardry is installed
# So we need to handle missing castable gracefully
case "$0" in
  sh|dash|bash|zsh|ksh|mksh|*/sh|*/dash|*/bash|*/zsh|*/ksh|*/mksh)
    # Being sourced - use from PATH if available
    if ! command -v castable >/dev/null 2>&1; then
      # Try to find and source castable
      if [ -n "${WIZARDRY_DIR-}" ] && [ -f "${WIZARDRY_DIR}/spells/.imps/sys/castable" ]; then
        _i="$WIZARDRY_DIR/spells/.imps/sys"
      elif [ -n "${ROOT_DIR-}" ] && [ -f "${ROOT_DIR}/spells/.imps/sys/castable" ]; then
        _i="$ROOT_DIR/spells/.imps/sys"
      else
        # Try to find wizardry relative to this script
        _script_dir=$(CDPATH= cd -- "$(dirname "$0")" 2>/dev/null && pwd -P) || _script_dir=""
        if [ -n "$_script_dir" ]; then
          _wiz_root=$(CDPATH= cd -- "$_script_dir/../.." 2>/dev/null && pwd -P) || _wiz_root=""
          if [ -n "$_wiz_root" ] && [ -f "$_wiz_root/spells/.imps/sys/castable" ]; then
            _i="$_wiz_root/spells/.imps/sys"
          fi
        fi
      fi
      [ -n "${_i-}" ] && [ -f "$_i/castable" ] && . "$_i/castable"
    fi
    ;;
  *)
    # Being executed - try to find and source castable
    if [ -n "${WIZARDRY_DIR-}" ] && [ -f "${WIZARDRY_DIR}/spells/.imps/sys/castable" ]; then
      _i="$WIZARDRY_DIR/spells/.imps/sys"
    elif [ -n "${ROOT_DIR-}" ] && [ -f "${ROOT_DIR}/spells/.imps/sys/castable" ]; then
      _i="$ROOT_DIR/spells/.imps/sys"
    else
      # Try to find wizardry relative to this script
      _script_dir=$(CDPATH= cd -- "$(dirname "$0")" 2>/dev/null && pwd -P) || _script_dir=""
      if [ -n "$_script_dir" ]; then
        _wiz_root=$(CDPATH= cd -- "$_script_dir/../.." 2>/dev/null && pwd -P) || _wiz_root=""
        if [ -n "$_wiz_root" ] && [ -f "$_wiz_root/spells/.imps/sys/castable" ]; then
          _i="$_wiz_root/spells/.imps/sys"
        fi
      fi
    fi
    [ -n "${_i-}" ] && [ -f "$_i/castable" ] && . "$_i/castable"
    ;;
esac

# Only call castable if it's available (either from PATH or just sourced)
if command -v castable >/dev/null 2>&1; then
  castable "$@"
else
  # Castable not available - call the function directly
  # This happens when running as a bootstrap script before wizardry is installed
  banish "$@"
fi
