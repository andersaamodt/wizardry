#!/bin/sh

# Show status of a wizardry web site.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: web-site-status SITENAME

Shows the status of a website including build state and serving status.

Example: web-site-status mysite
USAGE
  exit 0
  ;;
esac

require-wizardry || exit 1

set -eu
. env-clear

site_name=${1-}
if [ -z "$site_name" ]; then
  die 2 "web-site-status: SITENAME required"
fi

WEB_ROOT=${WIZARDRY_WEB_ROOT:-$HOME/.wizardry-web}
SITES_DIR="$WEB_ROOT/sites"
SITE_DIR="$SITES_DIR/$site_name"

if [ ! -d "$SITE_DIR" ]; then
  printf 'not found\n'
  exit 1
fi

# Check if built
if [ -d "$SITE_DIR/build" ] && [ -f "$SITE_DIR/build/pages/index.html" ]; then
  build_status="built"
else
  build_status="not built"
fi

# Check if serving (placeholder - would check nginx/process)
serve_status="not serving"

printf '%s, %s\n' "$build_status" "$serve_status"
