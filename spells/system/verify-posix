#!/bin/sh

# Verify that wizardry spells use POSIX-compliant shell practices.

show_usage() {
        cat <<'USAGE' >&2
Usage: verify-posix [script ...]

Checks the provided spells—or every executable spell by default—for POSIX sh shebangs and common bashism pitfalls using checkbashisms.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        show_usage
        exit 0
        ;;
esac

set -eu

script_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
repo_dir=$(CDPATH= cd -- "$script_dir/../.." && pwd -P)

# Add imps to PATH so we can use temp-file and cleanup-file directly
if [ -d "$repo_dir/spells/.imps" ]; then
  PATH="$repo_dir/spells/.imps:$PATH"
  for impdir in "$repo_dir"/spells/.imps/*; do
    [ -d "$impdir" ] || continue
    PATH="$impdir:$PATH"
  done
  export PATH
fi

checkbashisms_cmd=${CHECKBASHISMS-}
if [ -z "$checkbashisms_cmd" ] && command -v checkbashisms >/dev/null 2>&1; then
  checkbashisms_cmd=$(command -v checkbashisms)
fi

if [ -z "$checkbashisms_cmd" ]; then
  printf '%s\n' "verify-posix: checkbashisms is required but not found in PATH." >&2
  exit 1
fi

gather_default_targets() {
  find "$repo_dir/spells" -type f \( -perm -u+x -o -perm -g+x -o -perm -o+x \) \
    -print | sort | while IFS= read -r file; do
      first_line=$(sed -n '1p' "$file")
      case $first_line in
        '#!/bin/sh'|'#! /bin/sh'|'#!/usr/bin/env sh'|'#! /usr/bin/env sh')
          printf '%s\n' "${file#"$repo_dir/"}"
          ;;
      esac
    done
}

collect_targets() {
  if [ "$#" -gt 0 ]; then
    printf '%s\n' "$@"
  else
    gather_default_targets
  fi
}

failures=0
total=0
failed_targets=""
failed_details=""

# Helper functions for colored output (similar to test imps)
print_pass() {
  target=$1
  if [ -t 1 ] && command -v tput >/dev/null 2>&1 && tput setaf 1 >/dev/null 2>&1; then
    green=$(tput setaf 2 2>/dev/null || true)
    reset=$(tput sgr0 2>/dev/null || true)
    printf '%sPASS%s %s\n' "$green" "$reset" "$target"
  else
    printf 'PASS %s\n' "$target"
  fi
}

print_fail() {
  target=$1
  reason=${2-}
  if [ -t 1 ] && command -v tput >/dev/null 2>&1 && tput setaf 1 >/dev/null 2>&1; then
    red=$(tput setaf 1 2>/dev/null || true)
    reset=$(tput sgr0 2>/dev/null || true)
    if [ -n "$reason" ]; then
      printf '%sFAIL%s %s: %s\n' "$red" "$reset" "$target" "$reason"
    else
      printf '%sFAIL%s %s\n' "$red" "$reset" "$target"
    fi
  else
    if [ -n "$reason" ]; then
      printf 'FAIL %s: %s\n' "$target" "$reason"
    else
      printf 'FAIL %s\n' "$target"
    fi
  fi
}

record_failure() {
  target=$1
  reason=${2-}
  failures=$((failures + 1))
  failed_targets=${failed_targets:+$failed_targets,}$target
  if [ -n "$reason" ]; then
    if [ -n "$failed_details" ]; then
      failed_details="$failed_details, $target ($reason)"
    else
      failed_details="$target ($reason)"
    fi
  fi
}

targets_file=$(temp-file verify-posix-targets) || exit 1
trap 'cleanup-file "$targets_file"' EXIT HUP INT TERM
collect_targets "$@" >"$targets_file"

while IFS= read -r target; do
  [ -n "$target" ] || continue
  total=$((total + 1))

  case $target in
    /*)
      path="$target"
      ;;
    *)
      path="$repo_dir/$target"
      ;;
  esac

  if [ ! -e "$path" ]; then
    print_fail "$target" "missing file"
    record_failure "$target" "missing file"
    continue
  fi

  if [ ! -f "$path" ]; then
    print_fail "$target" "not a regular file"
    record_failure "$target" "not a regular file"
    continue
  fi

  shebang=$(sed -n '1p' "$path")

  case $shebang in
    '')
      print_fail "$target" "lacks a shebang; expected #!/bin/sh"
      record_failure "$target" "no shebang"
      continue
      ;;
    '#!')
      print_fail "$target" "has an empty shebang; expected #!/bin/sh"
      record_failure "$target" "empty shebang"
      continue
      ;;
    '#!'*)
      interpreter=${shebang#\#!}
      while [ "${interpreter# }" != "$interpreter" ]; do
        interpreter=${interpreter# }
      done
      ;;
    *)
      print_fail "$target" "lacks a shebang; expected #!/bin/sh"
      record_failure "$target" "no shebang"
      continue
      ;;
  esac

  case $interpreter in
    '/bin/sh'|'/usr/bin/env sh')
      :
      ;;
    '/usr/bin/env bash'*|'/bin/bash'*)
      print_fail "$target" "uses $shebang (should use /bin/sh)"
      record_failure "$target" "bash shebang"
      continue
      ;;
    *)
      print_fail "$target" "uses $shebang (should use /bin/sh)"
      record_failure "$target" "wrong shebang"
      continue
      ;;
  esac

  tmp_log=$(temp-file verify-posix-log) || exit 1
  if "$checkbashisms_cmd" "$path" >"$tmp_log" 2>&1; then
    print_pass "$target"
  else
    print_fail "$target"
    while IFS= read -r line; do
      printf '  %s\n' "$line"
    done <"$tmp_log"
    record_failure "$target" "bashisms detected"
  fi
  cleanup-file "$tmp_log"
done <"$targets_file"
trap - EXIT HUP INT TERM
rm -f "$targets_file"

printf '\n'
if [ "$failures" -eq 0 ]; then
  if [ -t 1 ] && command -v tput >/dev/null 2>&1 && tput setaf 1 >/dev/null 2>&1; then
    green=$(tput setaf 2 2>/dev/null || true)
    bold=$(tput bold 2>/dev/null || true)
    reset=$(tput sgr0 2>/dev/null || true)
    printf '%s%sAll %d scripts are POSIX-compliant.%s\n' "$bold" "$green" "$total" "$reset"
  else
    printf 'All %d scripts are POSIX-compliant.\n' "$total"
  fi
else
  heading-section "POSIX Compliance Summary"
  passed=$((total - failures))
  printf 'Passed: %d/%d\n' "$passed" "$total"
  printf 'Failed: %d\n' "$failures"
  if [ "$failures" -le 12 ] && [ -n "$failed_details" ]; then
    printf '\nFailed scripts:\n'
    # Split by comma and print each failure
    printf '%s' "$failed_details" | tr ',' '\n' | while IFS= read -r failure; do
      [ -n "$failure" ] && printf '  %s\n' "$failure"
    done
  else
    printf '\nFailing spells: %s\n' "$failed_targets"
  fi
  exit 1
fi
