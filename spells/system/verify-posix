#!/bin/sh

# Verify that wizardry spells use POSIX-compliant shell practices.

set -eu

script_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
repo_dir=$(CDPATH= cd -- "$script_dir/../.." && pwd -P)

checkbashisms_cmd=${CHECKBASHISMS-}
is unset "$checkbashisms_cmd" && has checkbashisms && checkbashisms_cmd=$(where checkbashisms)

is unset "$checkbashisms_cmd" && die "verify-posix: checkbashisms is required but not found in PATH."

gather_default_targets() {
  find "$repo_dir/spells" -type f \( -perm -u+x -o -perm -g+x -o -perm -o+x \) \
    -print | sort | while IFS= read -r file; do
      first_line=$(sed -n '1p' "$file")
      case $first_line in
        '#!/bin/sh'|'#! /bin/sh'|'#!/usr/bin/env sh'|'#! /usr/bin/env sh')
          printf '%s\n' "${file#"$repo_dir/"}"
          ;;
      esac
    done
}

collect_targets() {
  if [ "$#" -gt 0 ]; then
    printf '%s\n' "$@"
  else
    gather_default_targets
  fi
}

failures=0
total=0
failed_targets=""

targets_file=$(mktemp "${TMPDIR:-/tmp}/verify-posix-targets.XXXXXX") || exit 1
collect_targets "$@" >"$targets_file"

while IFS= read -r target; do
  is unset "$target" && continue
  total=$((total + 1))

  case $target in
    /*)
      path="$target"
      ;;
    *)
      path="$repo_dir/$target"
      ;;
  esac

  gone "$path" && say "FAIL $target: missing file" && failures=$((failures + 1)) && failed_targets=${failed_targets:+$failed_targets,}$target && continue

  is file "$path" || { say "FAIL $target: not a regular file"; failures=$((failures + 1)); failed_targets=${failed_targets:+$failed_targets,}$target; continue; }

  shebang=$(first "$path")

  case $shebang in
    '')
      printf 'FAIL %s: lacks a shebang; expected #!/bin/sh\n' "$target"
      failures=$((failures + 1))
      failed_targets=${failed_targets:+$failed_targets,}$target
      continue
      ;;
    '#!')
      printf 'FAIL %s: has an empty shebang; expected #!/bin/sh\n' "$target"
      failures=$((failures + 1))
      failed_targets=${failed_targets:+$failed_targets,}$target
      continue
      ;;
    '#!'*)
      interpreter=${shebang#\#!}
      while [ "${interpreter# }" != "$interpreter" ]; do
        interpreter=${interpreter# }
      done
      ;;
    *)
      printf 'FAIL %s: lacks a shebang; expected #!/bin/sh\n' "$target"
      failures=$((failures + 1))
      failed_targets=${failed_targets:+$failed_targets,}$target
      continue
      ;;
  esac

  case $interpreter in
    '/bin/sh'|'/usr/bin/env sh')
      :
      ;;
    '/usr/bin/env bash'*|'/bin/bash'*)
      printf 'FAIL %s: uses %s; please use /bin/sh\n' "$target" "$shebang"
      failures=$((failures + 1))
      failed_targets=${failed_targets:+$failed_targets,}$target
      continue
      ;;
    *)
      printf 'FAIL %s: uses %s; please use /bin/sh\n' "$target" "$shebang"
      failures=$((failures + 1))
      failed_targets=${failed_targets:+$failed_targets,}$target
      continue
      ;;
  esac

  tmp_log=$(mktemp "${TMPDIR:-/tmp}/verify-posix.XXXXXX") || exit 1
  if "$checkbashisms_cmd" "$path" >"$tmp_log" 2>&1; then
    printf 'PASS %s\n' "$target"
  else
    printf 'FAIL %s\n' "$target"
    while IFS= read -r line; do
      printf '  %s\n' "$line"
    done <"$tmp_log"
    failures=$((failures + 1))
    failed_targets=${failed_targets:+$failed_targets,}$target
  fi
  rm -f "$tmp_log"
done <"$targets_file"
rm -f "$targets_file"

if [ "$failures" -eq 0 ]; then
  say "All $total scripts are POSIX-compliant."
else
  say "$failures of $total scripts failed POSIX compliance."
  say "Failing spells: $failed_targets"
  exit 1
fi
