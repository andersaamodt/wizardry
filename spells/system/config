#!/bin/sh

# Manage key=value configuration files safely with atomic updates.

config_usage() {
cat <<'USAGE'
Usage: config COMMAND FILE KEY [VALUE]

Safely manage key=value configuration files.

Commands:
  get FILE KEY          Get value for key (empty if not found)
  set FILE KEY VALUE    Set key=value (creates file if needed)
  has FILE KEY          Check if key exists (exit 0 if yes, 1 if no)
  del FILE KEY          Delete key from file

Examples:
  config set ~/.app/config db-host localhost
  config get ~/.app/config db-host
  config has ~/.app/config db-host && echo "configured"
  config del ~/.app/config old-setting

Features:
  - Atomic updates (temp files + mv)
  - Key validation (alphanumeric, dash, underscore only)
  - Safe parsing (no shell expansion)
  - Handles = in values correctly

The config imps provide bulletproof configuration file management.
USAGE
}

case "${1-}" in
--help|--usage|-h)
    config_usage
    exit 0
    ;;
esac

require-wizardry || exit 1

set -eu
. env-clear

config() {
    command="${1-}"
    
    case "$command" in
        get|set|has|del)
            shift
            "config-$command" "$@"
            ;;
        "")
            config_usage >&2
            return 2
            ;;
        *)
            config_usage >&2
            return 2
            ;;
    esac
}


# Source castable imp if not already available (for direct execution)
if ! command -v castable >/dev/null 2>&1; then
  # Try to find imps directory relative to this spell
  _spell_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _repo_root=$(cd "$_spell_dir" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  WIZARDRY_IMPS_SYS="${WIZARDRY_DIR:-${_repo_root}}/spells/.imps/sys"
  if [ -f "$WIZARDRY_IMPS_SYS/castable" ]; then
    . "$WIZARDRY_IMPS_SYS/castable"
  fi
fi

castable "$@"
