#!/bin/sh

# This spell hardens SSH configuration with security best practices.
# It backs up the original config and applies secure settings.

case "${1-}" in
--help|--usage|-h)
  cat << 'USAGE'
Usage: ssh-barrier

Harden the SSH server configuration with security best practices. Backs up the original config, disables root login, and turns off password authentication.
USAGE
  exit 0
  ;;
esac

set -eu
. env-clear

# Source colors for colored output
. colors

sshd_config="${SSHD_CONFIG:-/etc/ssh/sshd_config}"

# Confirm before proceeding
if ! ask-yn "Do you wish to cast the SSH Standard Barrier spell?" no; then
  printf '%s\n' "Spell cancelled."
  exit 0
fi

# Make a backup of the original SSH configuration file
backup "$sshd_config" ".original" || { printf '%s\n' "Cannot backup $sshd_config" >&2; exit 1; }

# Disable root login
sed-inplace 's/#PermitRootLogin prohibit-password/PermitRootLogin no/g' "$sshd_config"

# Disable password authentication
sed-inplace 's/#PasswordAuthentication yes/PasswordAuthentication no/g' "$sshd_config"

# Enable Public Key Authentication
sed-inplace 's/#PubkeyAuthentication yes/PubkeyAuthentication yes/g' "$sshd_config"

# Specify allowed users
printf '%s\n' "AllowUsers $(id -un)" >> "$sshd_config"

# Change SSH default port
sed-inplace 's/#Port 22/Port 2222/g' "$sshd_config"

# Enable X11 forwarding
printf '%s\n' "X11Forwarding yes" >> "$sshd_config"

# Enable TCP keepalives
printf '%s\n' "TCPKeepAlive yes" >> "$sshd_config"

# Enable key-based authentication timeout
printf '%s\n' "ClientAliveInterval 300" >> "$sshd_config"
printf '%s\n' "ClientAliveCountMax 0" >> "$sshd_config"

printf '%s\n' "SSH barrier spell cast successfully. Restart sshd to apply changes."
