#!/bin/sh

# This spell returns files in a directory matching a given hash.
# Searches current directory by default.


evoke_hash_usage() {
  cat <<'USAGE'
Usage: evoke-hash <hash> [directory]

Find files whose hash attribute matches a given value, searching the current directory by default. The hash should be set beforehand with the hashchant spell.
USAGE
}


evoke_hash() {
case "${1-}" in
--help|--usage|-h)
  evoke_hash_usage
  return 0
  ;;
esac

require-wizardry || exit 1

set -eu
. env-clear

if [ "$#" -lt 1 ]; then
  evoke_hash_usage >&2
  return 1
fi

hash=$1
directory=${2:-.}

if [ ! -d "$directory" ]; then
  die "evoke-hash: directory not found"
  return 1
fi

found=0
for file in "$directory"/*; do
  [ -f "$file" ] || continue
  
  file_hash=$(read-magic "$file" hash 2>/dev/null) || continue
  
  if [ "$file_hash" = "$hash" ]; then
    abs-path "$file"
    found=1
    return 0
  fi
done

if [ "$found" -eq 0 ]; then
  warn "No file found for hash $hash."
  info "Tip: use \"forall hashchant\" to hash files in this directory."
  return 1
fi
}


# Source castable imp if not already available (for direct execution)
if ! command -v castable >/dev/null 2>&1; then
  # Try to find imps directory relative to this spell
  _spell_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _repo_root=$(cd "$_spell_dir" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  # Try to find imps directory relative to this spell
  _spell_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _repo_root=$(cd "$_spell_dir" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  WIZARDRY_IMPS_SYS="${WIZARDRY_DIR:-${_repo_root}}/spells/.imps/sys"
  if [ -f "$WIZARDRY_IMPS_SYS/castable" ]; then
    . "$WIZARDRY_IMPS_SYS/castable"
  fi
fi

# Source castable imp if not already available (for direct execution)
if ! command -v castable >/dev/null 2>&1; then
  # Try to find imps directory relative to this spell
  _spell_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _repo_root=$(cd "$_spell_dir" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  WIZARDRY_IMPS_SYS="${WIZARDRY_DIR:-${_repo_root}}/spells/.imps/sys"
  if [ -f "$WIZARDRY_IMPS_SYS/castable" ]; then
    . "$WIZARDRY_IMPS_SYS/castable"
  fi
fi

castable "$@"
