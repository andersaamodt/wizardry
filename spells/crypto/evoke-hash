#!/bin/sh

# This spell returns files in a directory matching a given hash.
# Searches current directory by default.


evoke_hash_usage() {
  cat <<'USAGE'
Usage: evoke-hash <hash> [directory]

Find files whose hash attribute matches a given value, searching the current directory by default. The hash should be set beforehand with the hashchant spell.
USAGE
}


evoke_hash() {
case "${1-}" in
--help|--usage|-h)
  evoke_hash_usage
  return 0
  ;;
esac

require-wizardry || return 1

set -eu
. env-clear

if [ "$#" -lt 1 ]; then
  evoke_hash_usage >&2
  return 1
fi

hash=$1
directory=${2:-.}

if [ ! -d "$directory" ]; then
  die "evoke-hash: directory not found"
  return 1
fi

found=0
for file in "$directory"/*; do
  [ -f "$file" ] || continue
  
  file_hash=$(read-magic "$file" hash 2>/dev/null) || continue
  
  if [ "$file_hash" = "$hash" ]; then
    abs-path "$file"
    found=1
    return 0
  fi
done

if [ "$found" -eq 0 ]; then
  warn "No file found for hash $hash."
  info "Tip: use \"forall hashchant\" to hash files in this directory."
  return 1
fi
}


# Load castable imp for direct execution
# CRITICAL: Check if already available before sourcing to avoid fork limits
if ! command -v castable >/dev/null 2>&1; then
  _d=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _r=$(cd "$_d" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  _i="${WIZARDRY_DIR:-${_r}}/spells/.imps/sys"
  [ -f "$_i/castable" ] && . "$_i/castable"
fi

castable "$@"
