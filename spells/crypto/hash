#!/bin/sh

# Hash spell: compute a CRC-32 checksum for a given file path.
# Prints the checksum in hexadecimal alongside the resolved path.


hash_usage() {
cat <<'USAGE'
Usage: hash <file>

Compute the CRC-32 hash of a file and print it in hexadecimal, resolving the path relative to this spell when needed.
USAGE
}

hash() {
case "${1-}" in
--help|--usage|-h)
  hash_usage
  return 0
  ;;
esac

require-wizardry || return 1

set -eu
. env-clear

if [ "$#" != 1 ]; then
    hash_usage >&2
    return 2
fi

# Get the directory where the script is being called from
script_dir="$(cd "$(dirname "$0")" >/dev/null 2>&1 && pwd)"

# Get the file name specified as an argument
file_name="$1"

# Concatenate the script directory and the file name to get the full file path
file="$script_dir/$file_name"

if [ ! -f "$file" ]; then
    die "hash: Your spell fizzles. There is no file."
    return 1
fi

# Normalize double slashes for macOS compatibility
normalized_file=$(norm-path "$file")
say "$normalized_file"
# Compute the CRC-32 hash
crc=$(cksum "$file" | awk '{print $1}')

# Convert the hash to hexadecimal and display it
say "$(printf "0x%x" "$crc")"
}


# Load castable imp for direct execution (AFTER all functions defined)
# When executed directly: always source to ensure castable sees correct $0
# When sourced (testing): use from PATH if available to avoid forks
case "$0" in
  sh|dash|bash|zsh|ksh|mksh|*/sh|*/dash|*/bash|*/zsh|*/ksh|*/mksh)
    # Being sourced - use from PATH if available
    if ! command -v castable >/dev/null 2>&1; then
      _d=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
      _r=$(cd "$_d" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
      _i="${WIZARDRY_DIR:-${_r}}/spells/.imps/sys"
      [ -f "$_i/castable" ] && . "$_i/castable"
    fi
    ;;
  *)
    # Being executed - always source to ensure correct $0 detection
      _d=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
      _r=$(cd "$_d" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
      _i="${WIZARDRY_DIR:-${_r}}/spells/.imps/sys"
      [ -f "$_i/castable" ] && . "$_i/castable"
    ;;
esac

castable "$@"
