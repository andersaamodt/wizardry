#!/bin/sh

# Hash spell: compute a CRC-32 checksum for a given file path.
# Prints the checksum in hexadecimal alongside the resolved path.


hash_usage() {
cat <<'USAGE'
Usage: hash <file>

Compute the CRC-32 hash of a file and print it in hexadecimal, resolving the path relative to this spell when needed.
USAGE
}

hash() {
case "${1-}" in
--help|--usage|-h)
  hash_usage
  return 0
  ;;
esac

require-wizardry || exit 1

set -eu
. env-clear

if [ "$#" != 1 ]; then
    hash_usage >&2
    return 2
fi

# Get the directory where the script is being called from
script_dir="$(cd "$(dirname "$0")" >/dev/null 2>&1 && pwd)"

# Get the file name specified as an argument
file_name="$1"

# Concatenate the script directory and the file name to get the full file path
file="$script_dir/$file_name"

if [ ! -f "$file" ]; then
    die "hash: Your spell fizzles. There is no file."
    return 1
fi

# Normalize double slashes for macOS compatibility
normalized_file=$(norm-path "$file")
say "$normalized_file"
# Compute the CRC-32 hash
crc=$(cksum "$file" | awk '{print $1}')

# Convert the hash to hexadecimal and display it
say "$(printf "0x%x" "$crc")"
}


# Source castable imp if not already available (for direct execution)
if ! command -v castable >/dev/null 2>&1; then
  # Try to find imps directory relative to this spell
  _spell_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _repo_root=$(cd "$_spell_dir" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  # Try to find imps directory relative to this spell
  _spell_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _repo_root=$(cd "$_spell_dir" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  WIZARDRY_IMPS_SYS="${WIZARDRY_DIR:-${_repo_root}}/spells/.imps/sys"
  if [ -f "$WIZARDRY_IMPS_SYS/castable" ]; then
    . "$WIZARDRY_IMPS_SYS/castable"
  fi
fi

# Source castable imp if not already available (for direct execution)
if ! command -v castable >/dev/null 2>&1; then
  # Try to find imps directory relative to this spell
  _spell_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _repo_root=$(cd "$_spell_dir" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  WIZARDRY_IMPS_SYS="${WIZARDRY_DIR:-${_repo_root}}/spells/.imps/sys"
  if [ -f "$WIZARDRY_IMPS_SYS/castable" ]; then
    . "$WIZARDRY_IMPS_SYS/castable"
  fi
fi

castable "$@"
