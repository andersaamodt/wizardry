#!/bin/sh

# This spell displays the MUD install menu.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: mud-install-menu

Display the MUD installation menu with toggleable features like the cd hook, showing [X] for enabled items and [ ] for disabled ones.
USAGE
  exit 0
  ;;
esac

set -eu
. env-clear

# Catch Ctrl-C and TERM signal to exit 1 cleanly
trap 'exit 0' INT TERM

# Load color palette (colors handles terminal capability detection internally)
# shellcheck source=/dev/null
. "$(command -v colors)"

if ! require menu "The MUD Install menu needs the 'menu' command to present options."; then
  exit 1
fi

# Check if a MUD config feature is enabled
is_feature_enabled() {
  feature=$1
  default_enabled=0
  
  # parse-enabled defaults to enabled (1), all others default to disabled (0)
  case "$feature" in
    parse-enabled) default_enabled=1 ;;
  esac
  
  mud_config_path=$(command -v mud-config 2>/dev/null)
  if [ -z "$mud_config_path" ] || [ ! -x "$mud_config_path" ]; then
    # mud-config not available, use default
    [ "$default_enabled" -eq 1 ]
    return $?
  fi
  
  # Get the value, using default if key doesn't exist
  value=$(mud-config get "$feature" 2>/dev/null) || value=""
  if [ -z "$value" ]; then
    [ "$default_enabled" -eq 1 ]
    return $?
  fi
  
  [ "$value" = "1" ]
}

# Check if cd hook is enabled (uses separate config file for historical reasons)
is_cd_hook_enabled() {
  spell_home=$(env-or SPELLBOOK_DIR "${HOME:-.}/.spellbook")
  cd_config="$spell_home/.mud/config"
  
  if [ ! -f "$cd_config" ]; then
    return 1
  fi
  
  # Check if cd-look=1 is set
  value=$(config-get "$cd_config" "cd-look" 2>/dev/null || printf '0')
  [ "$value" = "1" ]
}

loop_limit=${MENU_LOOP_LIMIT:-}
first_run=1
start_selection=1

# Track toggle states: 1=parse, 2=mud-menu, 3=CD hook, 4=avatar, 5=touch, 6=all
was_parse=0
was_cd=0
was_avatar=0
was_touch=0
was_all=0

while true; do
  if [ "$first_run" -eq 0 ]; then
    # Check which toggle changed and keep cursor there
    if is_feature_enabled "parse-enabled"; then now_parse=1; else now_parse=0; fi
    if is_cd_hook_enabled; then now_cd=1; else now_cd=0; fi
    if is_feature_enabled "avatar"; then now_avatar=1; else now_avatar=0; fi
    if is_feature_enabled "touch-hook"; then now_touch=1; else now_touch=0; fi
    
    # Check if all features are enabled
    now_all=1
    for feature in avatar touch-hook; do
      if ! is_feature_enabled "$feature"; then
        now_all=0
        break
      fi
    done

    if [ "$was_parse" != "$now_parse" ]; then
      start_selection=1
    elif [ "$was_cd" != "$now_cd" ]; then
      start_selection=3
    elif [ "$was_avatar" != "$now_avatar" ]; then
      start_selection=4
    elif [ "$was_touch" != "$now_touch" ]; then
      start_selection=5
    elif [ "$was_all" != "$now_all" ]; then
      start_selection=6
    else
      start_selection=1
    fi
  else
    first_run=0
  fi

  # Save toggle states before displaying menu (for comparison on next iteration)
  if is_feature_enabled "parse-enabled"; then was_parse=1; else was_parse=0; fi
  if is_cd_hook_enabled; then was_cd=1; else was_cd=0; fi
  if is_feature_enabled "avatar"; then was_avatar=1; else was_avatar=0; fi
  if is_feature_enabled "touch-hook"; then was_touch=1; else was_touch=0; fi
  
  # Check if all features are enabled
  was_all=1
  for feature in avatar touch-hook; do
    if ! is_feature_enabled "$feature"; then
      was_all=0
      break
    fi
  done

  # Build menu entries based on current state
  # Build parse toggle
  if is_feature_enabled "parse-enabled"; then
    parse_toggle="[X] Parse (natural language commands)%toggle-parse"
  else
    parse_toggle="[ ] Parse (natural language commands)%toggle-parse"
  fi
  
  # Build cd hook toggle label based on current state
  if is_cd_hook_enabled; then
    cd_hook="[X] cd hook (look on directory change)%toggle-cd"
  else
    cd_hook="[ ] cd hook (look on directory change)%toggle-cd"
  fi
  
  # Build avatar toggle
  if is_feature_enabled "avatar"; then
    avatar="[X] Avatar (HP/MP, inventory)%toggle-avatar"
  else
    avatar="[ ] Avatar (HP/MP, inventory)%toggle-avatar"
  fi
  
  # Build touch hook toggle
  if is_feature_enabled "touch-hook"; then
    touch_hook="[X] Touch hook (planned)%toggle-touch-hook"
  else
    touch_hook="[ ] Touch hook (planned)%toggle-touch-hook"
  fi
  
  # Build show/hide MUD in main menu toggle
  if is_feature_enabled "mud-enabled"; then
    mud_menu="[X] Show MUD in main menu%toggle-mud-menu"
  else
    mud_menu="[ ] Show MUD in main menu%toggle-mud-menu"
  fi
  
  # Build enable/disable all toggle
  all_enabled=1
  for feature in avatar touch-hook; do
    if ! is_feature_enabled "$feature"; then
      all_enabled=0
      break
    fi
  done
  
  if [ "$all_enabled" -eq 1 ]; then
    toggle_all="Disable all MUD features%toggle-all-mud --disable"
  else
    toggle_all="Enable all MUD features%toggle-all-mud --enable"
  fi
  
  tor="Set up tor hidden service%setup-tor"
  # Exit button kills this menu script via TERM signal
  # Menu (child process) evals: kill -TERM $PPID → kills its parent (this script)
  exit_label=$(exit-label)
  exit_item="${exit_label}%kill -TERM \$PPID"

  set -- "$parse_toggle" "$mud_menu" "$cd_hook" "$avatar" "$touch_hook" "$toggle_all" "$tor" "$exit_item"
  menu --start-selection "$start_selection" "MUD Install:" "$@" || menu_status=$?
  menu_status=${menu_status:-0}
  
  # ESC kills this menu script via TERM signal (same as Exit button)
  # Direct kill: kill -TERM $$ → kills this script
  if [ "$menu_status" -eq 130 ]; then
    printf 'ESC\n' >&2
    kill -TERM $$ 2>/dev/null || true
    exit 0
  fi

  # Support MENU_LOOP_LIMIT for testing
  if [ -n "$loop_limit" ]; then
    loop_limit=$((loop_limit - 1))
    if [ "$loop_limit" -le 0 ]; then
      break
    fi
  fi
done
