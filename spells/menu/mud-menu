#!/bin/sh

# This spell displays the MUD install menu.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: . mud-menu    OR    mud menu    (via parse/gloss)

Display the MUD installation menu with toggleable features like the cd hook, showing [X] for enabled items and [ ] for disabled ones.

This spell must be sourced (not executed) to affect your current shell.
USAGE
  return 0 2>/dev/null || exit 0
  ;;
esac

# Uncastable pattern - detect if sourced
mud_menu_sourced=0
if eval '[ -n "${ZSH_VERSION+x}" ]' 2>/dev/null; then
  case "${ZSH_EVAL_CONTEXT-}" in
    *:file) mud_menu_sourced=1 ;;
  esac
else
  mud_menu_base=${0##*/}
  case "$mud_menu_base" in
    sh|dash|bash|zsh|ksh|mksh) mud_menu_sourced=1 ;;
    mud-menu) mud_menu_sourced=0 ;;
    parse) mud_menu_sourced=1 ;;  # Sourced via parse
    *) mud_menu_sourced=1 ;;
  esac
fi

if [ "$mud_menu_sourced" -eq 0 ]; then
  printf '%s\n' "This spell must be sourced. Use:  . mud-menu  OR  mud menu" >&2
  return 1 2>/dev/null || exit 1
fi
unset mud_menu_sourced mud_menu_base

set +e  # Permissive mode since we're in user's shell
set -u

. env-clear

# Load color palette (colors handles terminal capability detection internally)
# shellcheck source=/dev/null
. "$(command -v colors)"

if ! require menu "The MUD Install menu needs the 'menu' command to present options."; then
  return 1
fi

# Get config file location
spell_home=$(env-or SPELLBOOK_DIR "${HOME:-.}/.spellbook")
CONFIG_FILE="$spell_home/.mud"

# Use temp file imp for selection tracking
SELECTION_FILE=$(temp-file mud-menu-selection)
export SELECTION_FILE
# Catch Ctrl-C, TERM, and EXIT signals to clean up properly
# For sourced scripts: INT (Ctrl-C) returns 130, TERM returns 0, EXIT always cleans up
trap 'cleanup-file "$SELECTION_FILE" 2>/dev/null || true' EXIT
trap 'cleanup-file "$SELECTION_FILE" 2>/dev/null || true; return 130' INT
trap 'cleanup-file "$SELECTION_FILE" 2>/dev/null || true; return 0' TERM

# Ensure spellbook directory and config file exist
mkdir -p "$spell_home"
touch "$CONFIG_FILE"

# Check if a MUD config feature is enabled
is_feature_enabled() {
  feature=$1
  default_enabled=0
  
  # Default enabled features: parse-enabled, mud-enabled, cd-look
  # These are the core MUD experience that demonstrate wizardry's unique value
  # Avatar and touch-hook are more invasive and better as opt-in features
  case "$feature" in
    parse-enabled|mud-enabled|cd-look) default_enabled=1 ;;
    *) default_enabled=0 ;;
  esac
  
  # Get the value using config-get
  value=$(config-get "$CONFIG_FILE" "$feature" 2>/dev/null || printf '')
  
  # If no value set, use default
  if [ -z "$value" ]; then
    [ "$default_enabled" -eq 1 ]
    return $?
  fi
  
  # Otherwise check if value is "1"
  [ "$value" = "1" ]
}

loop_limit=${MENU_LOOP_LIMIT:-}

while true; do
  # Clear menu_status from previous iteration (important for uncastable/sourced menus)
  unset menu_status
  
  # Read last selected position from temp file, default to 1
  if [ -f "$SELECTION_FILE" ]; then
    start_selection=$(cat "$SELECTION_FILE" 2>/dev/null || printf '1')
    # Handle empty file
    if [ -z "$start_selection" ]; then
      start_selection=1
    fi
  else
    start_selection=1
  fi
  # Build menu entries based on current state
  
  # Build parse toggle
  if is_feature_enabled "parse-enabled"; then
    parse_toggle="[X] Parse (natural language commands)%toggle-parse; echo 3 > \"$SELECTION_FILE\""
  else
    parse_toggle="[ ] Parse (natural language commands)%toggle-parse; echo 3 > \"$SELECTION_FILE\""
  fi
  
  # Build cd hook toggle label based on current state
  if is_feature_enabled "cd-look"; then
    cd_hook="[X] Look on directory change (cd hook)%. toggle-cd; echo 5 > \"$SELECTION_FILE\""
  else
    cd_hook="[ ] Look on directory change (cd hook)%. toggle-cd; echo 5 > \"$SELECTION_FILE\""
  fi
  
  # Build cd-listen toggle
  if is_feature_enabled "cd-listen"; then
    cd_listen="[X] Listen on directory change (cd hook)%. toggle-listen; echo 6 > \"$SELECTION_FILE\""
  else
    cd_listen="[ ] Listen on directory change (cd hook)%. toggle-listen; echo 6 > \"$SELECTION_FILE\""
  fi
  
  # Build avatar toggle
  if is_feature_enabled "avatar"; then
    avatar="[X] Avatar (HP/MP, inventory)%toggle-avatar; echo 7 > \"$SELECTION_FILE\""
  else
    avatar="[ ] Avatar (HP/MP, inventory)%toggle-avatar; echo 7 > \"$SELECTION_FILE\""
  fi
  
  # Build touch hook toggle
  if is_feature_enabled "touch-hook"; then
    touch_hook="[X] On-touch triggers (touch hook)%toggle-touch-hook; echo 8 > \"$SELECTION_FILE\""
  else
    touch_hook="[ ] On-touch triggers (touch hook)%toggle-touch-hook; echo 8 > \"$SELECTION_FILE\""
  fi
  
  # Build show/hide MUD in main menu toggle
  if is_feature_enabled "mud-enabled"; then
    mud_menu="[X] Show MUD in main menu%toggle-mud-menu; echo 4 > \"$SELECTION_FILE\""
  else
    mud_menu="[ ] Show MUD in main menu%toggle-mud-menu; echo 4 > \"$SELECTION_FILE\""
  fi
  
  # Build enable/disable all toggle (including cd-look, cd-listen, and tor)
  all_enabled=1
  for feature in parse-enabled mud-enabled avatar touch-hook cd-look cd-listen; do
    if ! is_feature_enabled "$feature"; then
      all_enabled=0
      break
    fi
  done
  # Also check tor hosting status
  if [ "$all_enabled" -eq 1 ] && [ "$tor_configured" -eq 0 ]; then
    all_enabled=0
  fi
  
  if [ "$all_enabled" -eq 1 ]; then
    # When disabling, copy_onion and separator will disappear, moving toggle_all from position 10 to 8
    toggle_all="Disable all MUD features%toggle-all-mud --disable; echo 8 > \"$SELECTION_FILE\""
  else
    # When enabling, copy_onion and separator will appear, keeping toggle_all at position 10
    toggle_all="Enable all MUD features%toggle-all-mud --enable; echo 10 > \"$SELECTION_FILE\""
  fi
  
  # Build tor hidden service toggle based on current state
  # Inline check for hidden service configuration
  tor_configured=0
  
  # Try to detect torrc path
  torrc_path=""
  if command -v torrc-path >/dev/null 2>&1; then
    torrc_path=$(torrc-path 2>/dev/null) || torrc_path=""
  fi
  
  # Fallback to common locations if torrc-path not available
  if [ -z "$torrc_path" ]; then
    if [ "$(uname -s 2>/dev/null)" = "Darwin" ]; then
      # macOS
      for path in /usr/local/etc/tor/torrc /opt/local/etc/tor/torrc; do
        if [ -f "$path" ]; then
          torrc_path="$path"
          break
        fi
      done
    else
      # Linux
      if [ -f /etc/tor/torrc ]; then
        torrc_path="/etc/tor/torrc"
      fi
    fi
  fi
  
  # Check if MUD HiddenServiceDir is configured (uncommented lines only)
  if [ -n "$torrc_path" ] && [ -f "$torrc_path" ]; then
    # Pattern matches lines with HiddenServiceDir that ends with /mud or /mud/
    # This naturally excludes commented lines (which start with #)
    if grep -E -q "^[[:space:]]*HiddenServiceDir.*/mud(/)?$" "$torrc_path" 2>/dev/null; then
      tor_configured=1
    fi
  fi
  
  if [ "$tor_configured" -eq 1 ]; then
    # remove-tor-hidden-service already restarts tor, so no need to restart again
    tor_cmd="remove-tor-hidden-service -y"
    # When disabling, copy_onion and separator will disappear, moving tor from position 9 to 7
    tor="[X] Tor hosting%$tor_cmd; echo 7 > \"$SELECTION_FILE\""
  else
    # setup-tor already restarts tor, so no need to restart again
    tor_cmd="setup-tor -y"
    # When enabling, copy_onion and separator will appear, keeping tor at 9
    tor="[ ] Tor hosting%$tor_cmd; echo 9 > \"$SELECTION_FILE\""
  fi
  
  # Build copy .onion address option if tor is configured
  copy_onion=""
  separator=""
  if [ "$tor_configured" -eq 1 ] && [ -n "$torrc_path" ]; then
    # Extract the HiddenServiceDir path from torrc
    hostname_dir=$(grep -E "^[[:space:]]*HiddenServiceDir.*/mud(/)?$" "$torrc_path" 2>/dev/null \
      | awk '{print $2}' | head -1)
    if [ -n "$hostname_dir" ]; then
      # Remove trailing slash if present
      hostname_dir="${hostname_dir%/}"
      hostname_file="$hostname_dir/hostname"
      copy_cmd="clip-copy \"\$(sudo cat \"$hostname_file\" 2>/dev/null"
      copy_cmd="$copy_cmd || cat \"$hostname_file\")\""
      copy_onion="Copy .onion address%$copy_cmd; echo 1 > \"$SELECTION_FILE\""
      separator="---"
    fi
  fi
  
  # Exit button kills this menu script via TERM signal
  # Menu (child process) evals: kill -TERM $PPID â†’ kills its parent (this script)
  exit_item="Exit%kill -TERM \$PPID"

  # Build menu items list - use conditional expansion for copy_onion and separator
  # When tor is enabled: copy_onion, separator, parse, mud_menu, cd_hook, cd_listen, avatar, touch_hook, tor, toggle_all, exit
  # When tor is disabled: parse, mud_menu, cd_hook, cd_listen, avatar, touch_hook, tor, toggle_all, exit
  set -- ${copy_onion:+"$copy_onion"} ${separator:+"$separator"} "$parse_toggle" "$mud_menu" "$cd_hook" "$cd_listen" "$avatar" "$touch_hook" "$tor" "$toggle_all" "$exit_item"
  
  menu --start-selection "$start_selection" "MUD Install:" "$@" || menu_status=$?
  menu_status=${menu_status:-0}
  
  # ESC causes menu to exit with 130 - handle gracefully by returning
  if [ "$menu_status" -eq 130 ]; then
    printf 'ESC\n' >&2
    return 0
  fi

  # Support MENU_LOOP_LIMIT for testing
  if [ -n "$loop_limit" ]; then
    loop_limit=$((loop_limit - 1))
    if [ "$loop_limit" -le 0 ]; then
      break
    fi
  fi
done
