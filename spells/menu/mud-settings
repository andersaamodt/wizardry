#!/bin/sh

# This spell displays the MUD settings menu.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE' >&2
Usage: . mud-settings    OR    mud settings    (via parse/gloss)

Opens the MUD Settings menu so you can create or select a player, manage the public key used for adventures, and configure MUD hosting options.

This spell must be sourced (not executed) to affect your current shell.
USAGE
  return 0 2>/dev/null || return 0
  ;;
esac

# Uncastable pattern - detect if sourced
mud_settings_sourced=0
if eval '[ -n "${ZSH_VERSION+x}" ]' 2>/dev/null; then
  case "${ZSH_EVAL_CONTEXT-}" in
    *:file) mud_settings_sourced=1 ;;
  esac
else
  mud_settings_base=${0##*/}
  case "$mud_settings_base" in
    sh|dash|bash|zsh|ksh|mksh) mud_settings_sourced=1 ;;
    mud-settings) mud_settings_sourced=0 ;;
    parse) mud_settings_sourced=1 ;;  # Sourced via parse
    *) mud_settings_sourced=1 ;;
  esac
fi

if [ "$mud_settings_sourced" -eq 0 ]; then
  printf '%s\n' "This spell must be sourced. Use:  . mud-settings  OR  mud settings" >&2
  return 1 2>/dev/null || return 1
fi
unset mud_settings_sourced mud_settings_base

set +e  # Permissive mode since we're in user's shell
set -u

. env-clear

# Catch Ctrl-C and TERM signal to return cleanly
# Catch Ctrl-C and TERM signal to return cleanly
# INT (Ctrl-C) should return 130, TERM should return 0
trap 'return 130' INT
trap 'return 0' TERM

# Load color palette (colors handles terminal capability detection internally)
# shellcheck source=/dev/null
. "$(command -v colors)"

if ! require menu "The MUD Settings menu needs the 'menu' command to present options."; then
  return 1
fi

loop_limit=${MENU_LOOP_LIMIT:-}
first_run=1

while true; do
  # Clear menu_status from previous iteration (important for uncastable/sourced menus)
  unset menu_status
  
  if [ "$first_run" -eq 0 ]; then
    :
  else
    first_run=0
  fi

  # Get current player for menu label
  current_player=${MUD_PLAYER:-$(whoami)}
  
  # Check if player has a key (copy vs create)
  player_key_path="$HOME/.ssh/${current_player}.pub"
  if [ -f "$player_key_path" ]; then
    key_action="Copy player key%cat \"$player_key_path\" | pbcopy 2>/dev/null || cat \"$player_key_path\" | xclip -selection clipboard 2>/dev/null || cat \"$player_key_path\""
  else
    key_action="Create player key%ssh-keygen -t ed25519 -f \"$HOME/.ssh/$current_player\" -N '' && cat \"$HOME/.ssh/${current_player}.pub\""
  fi
  
  # Build menu items
  change="Change Player%choose-player"
  new="New Player%new-player"
  
  # Exit button kills this menu script via TERM signal
  # Menu (child process) evals: kill -TERM $PPID â†’ kills its parent (this script)
  exit_label=$(exit-label)
  exit_item="${exit_label}%kill -TERM \$PPID"

  # Build menu arguments
  set -- "$key_action" "$change" "$new" "$exit_item"
  menu "MUD Settings:" "$@" || menu_status=$?
  menu_status=${menu_status:-0}
  
  # ESC causes menu to exit with 130 - handle gracefully by returning
  if [ "$menu_status" -eq 130 ]; then
    printf 'ESC\n' >&2
    return 0
  fi

  # Support MENU_LOOP_LIMIT for testing
  if [ -n "$loop_limit" ]; then
    loop_limit=$((loop_limit - 1))
    if [ "$loop_limit" -le 0 ]; then
      break
    fi
  fi
done
