#!/bin/sh
# This spell displays the main MUD (Multi-User Dungeon) menu interface.

set -eu

if [ -n "${REQUIRE_COMMAND-}" ]; then
  require_cmd=$REQUIRE_COMMAND
else
  require_cmd=require-command
fi

require() {
  "$require_cmd" "$@"
}

load_colors() {
  if color_path=$(command -v colors 2>/dev/null); then
    # shellcheck source=/dev/null
    . "$color_path"
  else
    RESET=''
    CYAN=''
    GREY=''
  fi
}

load_colors

if ! require menu "The MUD menu needs the 'menu' command to present options."; then
  exit 1
fi

# Add visual spacing before launching a submenu command
launch_submenu() {
  printf '\n'
  WIZARDRY_SUBMENU=1 "$@"
}

display_menu() {
  look="Look Around%ls"
  cast="Spellbook%WIZARDRY_SUBMENU=1 spellbook"
  home="Teleport Home%cd"
  jump="Teleport to Marker%jump"
  portal="Teleport to Portal Chamber%cd /mnt"
  install="Install MUD%launch_submenu mud-install-menu"
  admin="Admin MUD Hosting%launch_submenu mud-admin"
  settings="MUD Settings%launch_submenu mud-settings"
  exit_label=$(exit-label)
  exit_item="${exit_label}%kill -2 $$"

  set -- \
    "$look" \
    "$cast" \
    "$home" \
    "$jump" \
    "$portal" \
    "$install" \
    "$admin" \
    "$settings" \
    "$exit_item"
  MENU_ESCAPE_STATUS=$menu_escape_status menu "MUD Menu:" "$@"
}

menu_escape_status=113
first_run=1

while true; do
  if [ "$first_run" -eq 0 ]; then
    printf '\n'
  else
    first_run=0
  fi

  if display_menu; then
    status=0
  else
    status=$?
  fi

  if [ "$status" -eq "$menu_escape_status" ]; then
    break
  fi

  if [ "$status" -ne 0 ]; then
    exit "$status"
  fi

done
