#!/bin/sh
# This spell displays the main MUD (Multi-User Dungeon) menu interface.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: . mud    OR    mud    (via parse/gloss)

Displays the MUD (Multi-User Dungeon) menu.

This spell must be sourced (not executed) to affect your current shell.
USAGE
  return 0 2>/dev/null || return 0
  ;;
esac

# Uncastable pattern - detect if sourced
# Skip check if running in compiled/doppelganger context
if [ -z "${WIZARDRY_TEST_COMPILED:-}" ]; then
  mud_sourced=0
  if eval '[ -n "${ZSH_VERSION+x}" ]' 2>/dev/null; then
    case "${ZSH_EVAL_CONTEXT-}" in
      *:file) mud_sourced=1 ;;
    esac
  else
    mud_base=${0##*/}
    case "$mud_base" in
      sh|dash|bash|zsh|ksh|mksh) mud_sourced=1 ;;
      mud) mud_sourced=0 ;;
      parse) mud_sourced=1 ;;  # Sourced via parse
      *) mud_sourced=1 ;;
    esac
  fi

  if [ "$mud_sourced" -eq 0 ]; then
    printf '%s\n' "This spell must be sourced. Use:  . mud  OR  mud" >&2
    return 1 2>/dev/null || return 1
  fi
  unset mud_sourced mud_base
fi

set +e  # Permissive mode since we're in user's shell
set -u

. env-clear

# Catch Ctrl-C and TERM signal to return cleanly
trap 'return 0' INT TERM

# Load color palette (colors handles terminal capability detection internally)
# shellcheck source=/dev/null
. "$(command -v colors)"

if ! require menu "The MUD menu needs the 'menu' command to present options."; then
  return 1
fi

first_run=1

while true; do
  if [ "$first_run" -eq 0 ]; then
    :
  else
    first_run=0
  fi

  # Get platform-specific portal chamber location
  platform=$(detect-distro 2>/dev/null || printf 'unknown')
  case "$platform" in
    mac)
      # macOS uses /Volumes for mounted drives
      portal_location="/Volumes"
      ;;
    *)
      # Linux and others use /mnt
      portal_location="/mnt"
      ;;
  esac
  
  look="Look Around%look"
  stats="View Stats%stats"
  home="Teleport Home%cd"
  jump="Teleport to Marker%jump-to-marker"
  portal="Teleport to Portal Chamber%cd $portal_location"
  admin="Admin MUD Hosting%mud-admin-menu"
  settings="MUD Settings%mud-settings"
  # Exit button kills this menu script via TERM signal
  # Menu (child process) evals: kill -TERM $PPID → kills its parent (this script)
  exit_label=$(exit-label)
  exit_item="${exit_label}%kill -TERM \$PPID"

  set -- \
    "$look" \
    "$stats" \
    "$home" \
    "$jump" \
    "$portal" \
    "$admin" \
    "$settings" \
    "$exit_item"
  menu "MUD Menu:" "$@" || menu_status=$?
  menu_status=${menu_status:-0}
  
  # ESC kills this menu script via TERM signal (same as Exit button)
  # Direct kill: kill -TERM $$ → kills this script
  if [ "$menu_status" -eq 130 ]; then
    printf 'ESC\n' >&2
    kill -TERM $$ 2>/dev/null || true
    return 0
  fi
done
