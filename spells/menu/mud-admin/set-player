#!/bin/sh

# This spell sets the current player identity for MUD connections.
# The player name is stored in the MUD config directory.

set_player_usage() {
cat <<'USAGE'
Usage: set-player <playername>

Set the current player identity for MUD connections. The player name is stored
in the MUD config directory and used by MUD spells that need player identity.
USAGE
}



set_player() {
case "${1-}" in
--help|--usage|-h)
  set_player_usage
  return 0
  ;;
esac

set -eu
. env-clear

player="${1-}"

if [ -z "$player" ]; then
    printf '%s\n' "set-player: player name required." >&2
    set_player_usage >&2
    return 1
fi

# Store player name using mud-config instead of polluting rc files
if command -v mud-config >/dev/null 2>&1; then
    mud-config set player "$player"
    printf '%s\n' "Player identity set to '$player'."
else
    printf '%s\n' "set-player: mud-config not found. Install wizardry or ensure spells are in PATH." >&2
    return 1
fi
}

# Self-execute when run directly (not sourced)
case "$0" in
  */set-player) set_player "$@" ;; esac
