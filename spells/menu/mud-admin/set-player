#!/bin/sh

# This spell sets the current player identity for MUD connections.
# The player name is stored in the MUD config directory.

set_player_usage() {
cat <<'USAGE'
Usage: set-player <playername>

Set the current player identity for MUD connections. The player name is stored
in the MUD config directory and used by MUD spells that need player identity.
USAGE
}



set_player() {
case "${1-}" in
--help|--usage|-h)
  set_player_usage
  return 0
  ;;
esac

set -eu
env_clear

player="${1-}"

if [ -z "$player" ]; then
    usage-error "set-player" "player name required"
fi

# Store player name using mud-config instead of polluting rc files
if has mud-config; then
    mud-config set player "$player"
    printf '%s\n' "Player identity set to '$player'."
else
    die "set-player: mud-config not found. Install wizardry or ensure spells are in PATH."
        return 1
fi
}


# Load castable imp (for direct execution)
# Always source castable, never use from PATH
  if true; then
  _d=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _r=$(cd "$_d" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  _i="${WIZARDRY_DIR:-${_r}}/spells/.imps/sys"
  [ -f "$_i/castable" ] && . "$_i/castable"
fi

castable "$@"
