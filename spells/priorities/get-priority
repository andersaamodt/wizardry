#!/bin/sh

# This spell retrieves the priority value of a file from its extended attributes.
# Use it to check the relative importance of files within a directory.


get_priority_usage() {
cat <<'USAGE'
Usage: get-priority <file>

Read and print the priority extended attribute from a file, outputting the number if set.
USAGE
}



get_priority() {

case "${1-}" in
--help|--usage|-h)
        get_priority_usage
        return 0
        ;;
esac

require-wizardry || exit 1

set -eu
. env-clear

# Ensure file argument is provided
if [ -z "${1-}" ]; then
        usage-error "get-priority" "file path required"
fi

file=$1

# Verify file exists
if ! is file "$file"; then
        die "get-priority: file not found: $file"
        return 1
fi

# Read and print the priority
priority=$(read-magic "$file" priority 2>/dev/null || true)

# Handle error messages or empty values
case "$priority" in
        *Error*|'')
                return 0
                ;;
        *)
                say "$priority"
                ;;
esac
}


# Source castable imp if not already available (for direct execution)
if ! command -v castable >/dev/null 2>&1; then
  # Try to find imps directory relative to this spell
  _spell_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _repo_root=$(cd "$_spell_dir" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  # Try to find imps directory relative to this spell
  _spell_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _repo_root=$(cd "$_spell_dir" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  WIZARDRY_IMPS_SYS="${WIZARDRY_DIR:-${_repo_root}}/spells/.imps/sys"
  if [ -f "$WIZARDRY_IMPS_SYS/castable" ]; then
    . "$WIZARDRY_IMPS_SYS/castable"
  fi
fi

# Source castable imp if not already available (for direct execution)
if ! command -v castable >/dev/null 2>&1; then
  # Try to find imps directory relative to this spell
  _spell_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _repo_root=$(cd "$_spell_dir" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  WIZARDRY_IMPS_SYS="${WIZARDRY_DIR:-${_repo_root}}/spells/.imps/sys"
  if [ -f "$WIZARDRY_IMPS_SYS/castable" ]; then
    . "$WIZARDRY_IMPS_SYS/castable"
  fi
fi

castable "$@"
