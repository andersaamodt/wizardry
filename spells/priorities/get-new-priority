#!/bin/sh

# This spell determines the next appropriate priority for a file in a directory.
# Use it to find what priority value to assign when adding a file to a priority list.


get_new_priority_usage() {
cat <<'USAGE'
Usage: get-new-priority <file>

Compute the next priority value for a file within its directory's list. It looks at existing priorities and returns the highest value plus one, or 1 if none exist.
USAGE
}



get_new_priority() {

case "${1-}" in
--help|--usage|-h)
        get_new_priority_usage
        return 0
        ;;
esac

require-wizardry || return 1

set -eu
env-clear

# Ensure file argument is provided
if [ -z "${1-}" ]; then
        usage-error "get-new-priority" "file path required"
fi

file=$1

# Verify file exists
if ! is file "$file"; then
        die "get-new-priority: file not found: $file"
        return 1
fi

# Get the directory containing the file
dir=$(parent "$file")
if [ "$dir" = "." ]; then
        dir=$(here)
fi

# Start with a highest priority of 0
highest_priority=0

# Loop through all files in the directory to find the highest priority
for f in "$dir"/*; do
        # Skip if not a file
        is file "$f" || continue

        # Get the file's priority
        file_priority=$(read_magic "$f" priority 2>/dev/null || true)

        # Skip if no priority or error
        case "$file_priority" in
                ''|*Error*|*[!0-9]*) continue ;;
        esac

        # Update highest if this priority is higher
        if [ "$file_priority" -gt "$highest_priority" ]; then
                highest_priority=$file_priority
        fi
done

# The new priority is one higher than the highest
say "$((highest_priority + 1))"
}


# Load castable imp for direct execution (AFTER all functions defined)
# When executed directly: always source to ensure castable sees correct $0
# When sourced (testing): use from PATH if available to avoid forks
case "$0" in
  sh|dash|bash|zsh|ksh|mksh|*/sh|*/dash|*/bash|*/zsh|*/ksh|*/mksh)
    # Being sourced - use from PATH if available
    if ! command -v castable >/dev/null 2>&1; then
      # Use WIZARDRY_DIR or ROOT_DIR if available (avoids dirname/basename)
      if [ -n "${WIZARDRY_DIR-}" ]; then
        _i="$WIZARDRY_DIR/spells/.imps/sys"
      elif [ -n "${ROOT_DIR-}" ]; then
        _i="$ROOT_DIR/spells/.imps/sys"
      else
        _i="${WIZARDRY_DIR:-${ROOT_DIR:-${0%/*/*/*}}}/spells/.imps/sys"
      fi
      [ -f "$_i/castable" ] && . "$_i/castable"
    fi
    ;;
  *)
    # Being executed - always source to ensure correct $0 detection
    if [ -n "${WIZARDRY_DIR-}" ]; then
      _i="$WIZARDRY_DIR/spells/.imps/sys"
    elif [ -n "${ROOT_DIR-}" ]; then
      _i="$ROOT_DIR/spells/.imps/sys"
    else
      _i="${WIZARDRY_DIR:-${ROOT_DIR:-${0%/*/*/*}}}/spells/.imps/sys"
    fi
    [ -f "$_i/castable" ] && . "$_i/castable"
    ;;
esac

castable "$@"
