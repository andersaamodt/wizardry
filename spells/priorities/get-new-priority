#!/bin/sh

# This spell determines the next appropriate priority for a file based on echelons.
# Use it to find what priority value to assign when adding a file to a priority list.

case "${1-}" in
--help|--usage|-h)
  cat << 'USAGE'
Usage: get-new-priority <file>

Compute the next priority value for a file within its directory's echelon system. Returns the highest echelon priority if the file belongs to the highest echelon, or one higher if it should be promoted to a new echelon.
USAGE
  exit 0
  ;;
esac

set -eu
. env-clear

# Ensure file argument is provided
if [ -z "${1-}" ]; then
  printf '%s\n' "get-new-priority: file path required" >&2
  exit 2
fi

file=$1

# Verify file exists
if [ ! -f "$file" ]; then
  printf '%s\n' "get-new-priority: file not found: $file" >&2
  exit 1
fi

# Hash the file
hashchant "$file" >/dev/null 2>&1 || true
file_hash=$(read-magic "$file" user.hash 2>/dev/null || true)

# Get the directory containing the file
dir=$(dirname "$file")
if [ "$dir" = "." ]; then
  dir=$(pwd -P)
fi

# Start with a highest priority of 0
highest_priority=0

# Loop through all files in the directory to find the highest priority
for f in "$dir"/*; do
  # Skip if not a file
  [ -f "$f" ] || continue

  # Get the file's priority
  file_priority=$(read-magic "$f" priority 2>/dev/null || true)

  # Skip if no priority or error
  case "$file_priority" in
    ''|*Error*|*[!0-9]*) continue ;;
  esac

  # Update highest if this priority is higher
  if [ "$file_priority" -gt "$highest_priority" ]; then
    highest_priority=$file_priority
  fi
done

# Get the current priorities list from the directory
dir_priorities=$(read-magic "$dir" priorities 2>/dev/null || true)

# If there's no priority list yet, the new priority is 1
case "$dir_priorities" in
  ''|*Error*)
    printf '%s\n' "1"
    exit 0
    ;;
esac

# Check if the file should be in the highest echelon or promoted
# Loop through the priority hashes to check echelons
found_lower_echelon=0
for priority_hash in $(printf '%s' "$dir_priorities" | tr ',' ' '); do
  # Get the file for this hash
  priority_file=$(get-card "$priority_hash" "$dir" 2>/dev/null || true)
  
  # Skip if file not found
  if [ -z "$priority_file" ]; then
    continue
  fi
  
  # Get the priority of this file
  file_priority=$(read-magic "$priority_file" priority 2>/dev/null || true)
  
  # Skip if no priority or error
  case "$file_priority" in
    ''|*Error*|*[!0-9]*) continue ;;
  esac
  
  # If we find any file with priority less than the highest,
  # it means not all files are in the top echelon
  if [ "$file_priority" != "$highest_priority" ]; then
    found_lower_echelon=1
    break
  fi
done

# If we found a lower echelon, new file joins the highest echelon
# Otherwise, all files are in top echelon, so promote to new echelon
if [ "$found_lower_echelon" -eq 1 ]; then
  printf '%s\n' "$highest_priority"
else
  printf '%s\n' "$((highest_priority + 1))"
fi
