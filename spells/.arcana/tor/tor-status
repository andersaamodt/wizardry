#!/bin/sh

# This spell checks and displays the running status of Tor.

show_usage() {
        cat <<'USAGE' >&2
Usage: tor-status

Reports whether Tor is installed, running, and bootstrapped by inspecting systemd status and recent logs.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        show_usage
        exit 0
        ;;
esac

set -eu
. colors

# Check if Tor is installed
if is-installed tor > /dev/null; then
  # Check if Tor is running
  if is-service-running tor > /dev/null; then
    # Parse the latest Tor logs
    log_entry=$(journalctl --quiet -u tor.service --no-pager -n 50)

    # Interpret the log messages
    if echo "$log_entry" | grep -q 'Bootstrapped 100%'; then
      if echo "$log_entry" | grep -q 'Tried for .* without success'; then
        status="installed, running, disconnected"
      else
        status="installed, running, bootstrapped"
      fi
    elif echo "$log_entry" | grep -q 'Our directory information is no longer up-to-date enough to build circuits'; then
      status="installed, running, bootstrapping"
    elif echo "$log_entry" | grep -Eq 'Our circuit died|Tried for .* without success'; then
      status="installed, running, disconnected"
    else
      status="installed, running, error"
    fi
  else
    status="installed, not running"
  fi
else
  status="not installed"
fi

# Color output based on status (inlined from color_for_status)
case "$status" in
  "installed, running, bootstrapped")
    color="${GREEN}"
    ;;
  "not installed")
    color="${GRAY}"
    ;;
  "installed, not running"|"installed, running, bootstrapping")
    color="${YELLOW}"
    ;;
  "installed, running, disconnected"|"installed, running, error"|"*")
    color="${RED}"
    ;;
esac

printf "${color}${status}${RESET}\n"
