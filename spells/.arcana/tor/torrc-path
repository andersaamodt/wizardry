#!/bin/sh

# This script outputs the location of the torrc file if it exists,
# or the standard location for the current OS if it does not

torrc_path_usage() {
        cat <<'USAGE' >&2
Usage: torrc-path

Prints the path to the active torrc configuration if one exists, or the standard location for your platform so you know where to create it.
USAGE
}

torrc_path() {
case "${1-}" in
--help|--usage|-h)
        torrc_path_usage
        return 0
        ;;
esac

require-wizardry || return 1



set -eu
. env-clear
platform=$(detect-distro 2>/dev/null || printf 'unknown')
TORRC_PATHS=""

# Define the standard locations for each platform
case $platform in
  arch)
    TORRC_PATHS="/etc/tor/torrc"
    ;;
  debian|fedora|nixos|linux)
    TORRC_PATHS="/etc/tor/torrc /usr/local/etc/tor/torrc"
    ;;
  mac)
    TORRC_PATHS="/usr/local/etc/tor/torrc"
    ;;
  *)
    # Fallback to uname for BSD systems
    OS=$(uname -s 2>/dev/null || printf 'unknown')
    case $OS in
      "FreeBSD"|"NetBSD"|"OpenBSD")
        TORRC_PATHS="/usr/local/etc/tor/torrc"
        ;;
      *)
        printf '%s\n' "Unsupported platform: $platform" >&2
        return 1
        ;;
    esac
    ;;
esac

# Check each path for the existence of the torrc file
for torrc_path in $TORRC_PATHS; do
  if [ -f "$torrc_path" ]; then
    printf '%s\n' "$torrc_path"
    return 0
  fi
done

# If no torrc file is found, output the first standard path for the current platform
printf '%s\n' "$(printf '%s' "$TORRC_PATHS" | cut -d' ' -f1)"
}

# Load castable imp for direct execution (AFTER all functions defined)
# When executed directly: always source to ensure castable sees correct $0
# When sourced (testing): use from PATH if available to avoid forks
case "$0" in
  sh|dash|bash|zsh|ksh|mksh|*/sh|*/dash|*/bash|*/zsh|*/ksh|*/mksh)
    # Being sourced - use from PATH if available
    if ! command -v castable >/dev/null 2>&1; then
      _d=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
      _r=$(cd "$_d" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
      _i="${WIZARDRY_DIR:-${_r}}/spells/.imps/sys"
      [ -f "$_i/castable" ] && . "$_i/castable"
    fi
    ;;
  *)
    # Being executed - always source to ensure correct $0 detection
      _d=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
      _r=$(cd "$_d" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
      _i="${WIZARDRY_DIR:-${_r}}/spells/.imps/sys"
      [ -f "$_i/castable" ] && . "$_i/castable"
    ;;
esac

castable "$@"
