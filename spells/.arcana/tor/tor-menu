#!/bin/sh

# Present the Tor management menu.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: tor-menu

Displays the Tor management menu.
USAGE
  exit 0
  ;;
esac

require-wizardry || exit 1

set -eu
. colors

# Catch Ctrl-C and TERM signal to exit cleanly
# INT (Ctrl-C) should exit 130, TERM should exit 0
trap 'exit 130' INT
trap 'exit 0' TERM

first_run=1

while true; do
  if [ "$first_run" -eq 0 ]; then
    printf '\n'
  else
    first_run=0
  fi

  # Build menu
  title="${BOLD}${CYAN}Tor: $(tor-status)"
  exit_label=$(exit-label)
  exit_option="${exit_label}%kill -TERM \$PPID"
  
  # Build macOS dependency entries (only show on macOS)
  macos_deps=""
  if [ "$(uname -s 2>/dev/null)" = "Darwin" ]; then
    # Check libevent status
    if is-libevent-installed; then
      libevent_option="[X] libevent%uninstall-libevent && exec \$0"
    else
      libevent_option="[ ] libevent%install-libevent && exec \$0"
    fi
    
    # Check openssl status
    if is-openssl-installed; then
      openssl_option="[X] openssl%uninstall-openssl && exec \$0"
    else
      openssl_option="[ ] openssl%install-openssl && exec \$0"
    fi
    
    macos_deps="$libevent_option
$openssl_option"
  fi
  
  # Build tor control options (Start/Stop/Restart)
  start_option=""
  stop_option=""
  restart_option=""
  
  if is-tor-running >/dev/null 2>&1; then
    stop_option="Stop Tor%stop-tor"
    restart_option="Restart Tor%restart-tor"
  else
    start_option="Start Tor%start-tor"
  fi
  
  if command -v tor >/dev/null 2>&1; then
    config_option="Configure Tor%configure-tor"
    repair_option="Repair Permissions%repair-tor-permissions"
    uninstall_option="Uninstall Tor%uninstall-tor"
    
    # Check for .onion address file to offer copy option
    copy_onion_option=""
    if is-tor-hidden-service-configured; then
      # Try to find hostname file in common locations
      hostname_file=""
      for possible_path in \
        "/usr/local/var/lib/tor/mud/hostname" \
        "/var/lib/tor/mud/hostname" \
        "/opt/local/var/lib/tor/mud/hostname" \
        "/usr/local/var/tor/mud/hostname"; do
        if [ -f "$possible_path" ]; then
          hostname_file="$possible_path"
          break
        fi
      done
      
      if [ -n "$hostname_file" ]; then
        copy_onion_option="Copy .onion address%copy \"$hostname_file\""
      fi
    fi
    
    # Build menu options dynamically
    menu_options=""
    
    # Add copy .onion option if available
    [ -n "$copy_onion_option" ] && menu_options="$menu_options $copy_onion_option"
    
    # Add start/stop/restart options
    [ -n "$start_option" ] && menu_options="$menu_options $start_option"
    [ -n "$restart_option" ] && menu_options="$menu_options $restart_option"
    [ -n "$stop_option" ] && menu_options="$menu_options $stop_option"
    
    # Add configure/repair/uninstall options
    menu_options="$menu_options $config_option $repair_option $uninstall_option"
    
    # Add macOS dependencies if present
    [ -n "$libevent_option" ] && menu_options="$menu_options $libevent_option"
    [ -n "$openssl_option" ] && menu_options="$menu_options $openssl_option"
    
    # Add exit option
    menu_options="$menu_options $exit_option"
    
    # shellcheck disable=SC2086
    menu "$title" $menu_options || menu_status=$?
  else
    install_option="Install Tor%install-tor"
    # Show dependencies in menu even when Tor is not installed (macOS only)
    if [ -n "$macos_deps" ]; then
      menu "$title" "$install_option" "$libevent_option" "$openssl_option" \
        "$exit_option" || menu_status=$?
    else
      menu "$title" "$install_option" "$exit_option" || menu_status=$?
    fi
  fi
  menu_status=${menu_status:-0}
  
  # ESC causes menu to exit with 130 - handle gracefully by exiting
  if [ "$menu_status" -eq 130 ]; then
    printf 'ESC\n' >&2
    exit 0
  fi
done
