#!/bin/sh
# This spell repairs Tor file and directory permissions.

show_usage() {
        cat <<'USAGE' >&2
Usage: repair-tor-permissions

Resets ownership and permissions on Tor configuration and runtime directories for your platform so the service can start safely.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        show_usage
        exit 0
        ;;
esac


set -eu
if [ "$(id -u)" != "0" ]; then
   printf '%s\n' "repair-tor-permissions: root privileges required."
   exit 1
fi

user_owner="debian-tor"
group_owner="debian-tor"

platform=$(detect-distro 2>/dev/null || printf 'unknown')
case "$platform" in
  debian)
    user_owner="debian-tor"
    group_owner="debian-tor"
    ;;
  arch)
    user_owner="tor"
    group_owner="tor"
    ;;
  mac)
    user_owner="_tor"
    group_owner="_tor"
    ;;
  *)
    # Default to debian-tor for unknown Linux distros
    user_owner="debian-tor"
    group_owner="debian-tor"
    ;;
esac

# Define a function to set permissions and ownership
set_permissions() {
    perm_path="$1"
    perm_user="$2"
    perm_group="$3"
    perm_mode="$4"

    if [ ! -d "$perm_path" ]; then
        printf '%s\n' "Directory $perm_path does not exist. Skipping."
        return
    fi

    current_user=$(stat -c %U "$perm_path")
    current_group=$(stat -c %G "$perm_path")
    
    if [ "$current_user" != "$perm_user" ] || [ "$current_group" != "$perm_group" ]; then
        chown -R "$perm_user":"$perm_group" "$perm_path"
        printf '%s\n' "Changed owner and group of $perm_path to $perm_user and $perm_group."
    else
        printf '%s\n' "Owner and group of $perm_path are correct."
    fi

    if [ "$(stat -c %a "$perm_path")" != "$perm_mode" ]; then
        chmod "$perm_mode" "$perm_path"
        printf '%s\n' "Changed permissions of $perm_path to $perm_mode."
    else
        printf '%s\n' "Permissions of $perm_path are correct."
    fi
}

set_permissions "/etc/tor" "$user_owner" "$group_owner" "700"
set_permissions "/var/lib/tor" "$user_owner" "$group_owner" "700"
set_permissions "$HOME/.tor" "$user_owner" "$group_owner" "700"