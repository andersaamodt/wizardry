#!/bin/sh
# This spell checks and displays the status of Tor bridges.

tor_bridge_status_usage() {
        cat <<'USAGE' >&2
Usage: tor-bridge-status

Checks the local torrc to see if bridge mode is enabled. Requires root; exits 0 when bridges are on and 1 otherwise.
USAGE
}

tor_bridge_status() {
case "${1-}" in
--help|--usage|-h)
        tor_bridge_status_usage
        return 0
        ;;
esac

require-wizardry || return 1


set -eu
. env-clear
if [ "$(id -u)" != "0" ]; then
   echo "tor-bridge-status: root privileges required."
   return 1
fi

# Identify torrc file location based on platform
platform=$(detect-distro 2>/dev/null || printf 'unknown')
case "$platform" in
   mac)
     torrc_location="/usr/local/etc/tor/torrc"
     ;;
   *)
     if [ -f "/etc/tor/torrc" ]; then
        torrc_location="/etc/tor/torrc"
     elif [ -f "/usr/local/etc/tor/torrc" ]; then
        torrc_location="/usr/local/etc/tor/torrc"
     else
        echo "Cannot locate torrc file. Exiting."
        return 1
     fi
     ;;
esac

# Check if bridge mode is currently enabled
bridge_enabled=$(awk '/^BridgeRelay 1/ {print $2}' "$torrc_location")

if [ "$bridge_enabled" = "1" ]; then
    if [ -t 1 ]; then
        echo "Bridge mode is enabled."
    fi
    return 0
else
    if [ -t 1 ]; then
        echo "Bridge mode is disabled."
    fi
    return 1
fi

}

# Load castable imp for direct execution (AFTER all functions defined)
# When executed directly: always source to ensure castable sees correct $0
# When sourced (testing): use from PATH if available to avoid forks
case "$0" in
  sh|dash|bash|zsh|ksh|mksh|*/sh|*/dash|*/bash|*/zsh|*/ksh|*/mksh)
    # Being sourced - use from PATH if available
    if ! command -v castable >/dev/null 2>&1; then
      _d=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
      _r=$(cd "$_d" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
      _i="${WIZARDRY_DIR:-${_r}}/spells/.imps/sys"
      [ -f "$_i/castable" ] && . "$_i/castable"
    fi
    ;;
  *)
    # Being executed - always source to ensure correct $0 detection
      _d=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
      _r=$(cd "$_d" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
      _i="${WIZARDRY_DIR:-${_r}}/spells/.imps/sys"
      [ -f "$_i/castable" ] && . "$_i/castable"
    ;;
esac

castable "$@"
