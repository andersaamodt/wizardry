#!/bin/sh

# Present the simplex-chat management menu.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: . simplex-chat-menu    OR    simplex chat menu    (via parse/gloss)

Displays the simplex-chat management menu.

This spell must be sourced (not executed) to affect your current shell.
USAGE
  return 0 2>/dev/null || exit 0
  ;;
esac

require-wizardry || return 1 2>/dev/null || exit 1

# Uncastable pattern - detect if sourced
simplex_chat_menu_sourced=0
if eval '[ -n "${ZSH_VERSION+x}" ]' 2>/dev/null; then
  case "${ZSH_EVAL_CONTEXT-}" in
    *:file) simplex_chat_menu_sourced=1 ;;
  esac
else
  simplex_chat_menu_base=${0##*/}
  case "$simplex_chat_menu_base" in
    sh|dash|bash|zsh|ksh|mksh) simplex_chat_menu_sourced=1 ;;
    simplex-chat-menu) simplex_chat_menu_sourced=0 ;;
    parse) simplex_chat_menu_sourced=1 ;;  # Sourced via parse
    *) simplex_chat_menu_sourced=1 ;;
  esac
fi

if [ "$simplex_chat_menu_sourced" -eq 0 ]; then
  printf '%s\n' "This spell must be sourced. Use:  . simplex-chat-menu  OR  simplex chat menu" >&2
  return 1 2>/dev/null || exit 1
fi
unset simplex_chat_menu_sourced simplex_chat_menu_base

set +e  # Permissive mode since we're in user's shell
set -u
. env-clear
. colors

trap 'return 0' INT TERM

first_run=1

while true; do
  if [ "$first_run" -eq 0 ]; then
    printf '\n'
  else
    first_run=0
  fi

  # Build menu based on simplex-chat installation status
  title="${BOLD}${CYAN}SimpleX Chat: $(simplex-chat-status)"
  exit_label=$(exit-label)
  exit_option="${exit_label}%kill -TERM \$PPID"
  
  if command -v simplex-chat >/dev/null 2>&1; then
    run_option="Run SimpleX Chat%simplex-chat"
    uninstall_option="Uninstall SimpleX Chat%uninstall-simplex-chat"
    menu "$title" "$run_option" "$uninstall_option" "$exit_option" || true
  else
    install_option="Install SimpleX Chat%install-simplex-chat"
    menu "$title" "$install_option" "$exit_option" || true
  fi
done
