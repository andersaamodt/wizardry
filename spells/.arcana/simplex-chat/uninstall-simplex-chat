#!/bin/sh

# Uninstall simplex-chat via the system package manager with optional data cleanup.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: uninstall-simplex-chat

Removes simplex-chat using the detected package manager and optionally cleans up local data and triggers nixos-rebuild.
USAGE
  exit 0
  ;;
esac

require-wizardry || exit 1

set -eu
. env-clear

script_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd)
manage_cmd=${MANAGE_SYSTEM_COMMAND:-manage-system-command}

if ! command -v "$manage_cmd" >/dev/null 2>&1; then
  core_dir=$(CDPATH= cd -- "$script_dir" 2>/dev/null && cd .. && cd core && pwd -P)
  if [ -n "$core_dir" ] && [ -x "$core_dir/manage-system-command" ]; then
    manage_cmd="$core_dir/manage-system-command"
  else
    printf '%s\n' "uninstall-simplex-chat: unable to find manage-system-command" >&2
    exit 1
  fi
fi

# Uninstall SimpleX Chat
printf '%s\n' "Uninstalling SimpleX Chat..."
"$manage_cmd" uninstall simplex-chat

printf '%s\n' "SimpleX Chat uninstallation complete."
