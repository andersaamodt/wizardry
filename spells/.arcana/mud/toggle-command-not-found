#!/bin/sh

# Toggle command-not-found hook on/off in MUD config.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: toggle-command-not-found

Toggle the planned command-not-found hook on or off. When enabled it will provide helpful suggestions when a command is not found; for now the toggle only updates $MUD_DIR/config.
USAGE
  exit 0
  ;;
esac

require-wizardry || exit 1

set -eu
. env-clear

SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
MUD_CONFIG="$SCRIPT_DIR/mud-config"

if [ ! -x "$MUD_CONFIG" ]; then
        printf '%s\n' "Error: mud-config not found at '$MUD_CONFIG'." >&2
        return 1
fi

# Toggle the feature and report state
new_state=$("$MUD_CONFIG" toggle command-not-found)

if [ "$new_state" = "1" ]; then
        printf '%s\n' "✓ Command-not-found hook enabled (planned feature)."
else
        printf '%s\n' "✓ Command-not-found hook disabled."
fi
