#!/bin/sh

# Toggle command-not-found hook on/off using config imps

toggle_command_not_found_usage() {
cat <<'USAGE'
Usage: toggle-command-not-found

Turn the command-not-found hook (handle-command-not-found) on or off.
When enabled, invoke-wizardry will set up command_not_found_handle to auto-load spells.
USAGE
}

case "${1-}" in
--help|--usage|-h)
	toggle_command_not_found_usage
	exit 0
	;;
esac

set -eu

# Get script directory to find imps
SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
ROOT_DIR=$(cd "$SCRIPT_DIR/../../.." && pwd -P)
IMPS_DIR="$ROOT_DIR/spells/.imps/fs"

# Determine config file location
SPELLBOOK_DIR="${SPELLBOOK_DIR:-$HOME/.spellbook}"
CONFIG_FILE="$SPELLBOOK_DIR/.mud/config"

# Ensure parent directory exists
mkdir -p "$(dirname "$CONFIG_FILE")"
touch "$CONFIG_FILE"

# Check current state
if "$IMPS_DIR/config-has" "$CONFIG_FILE" "command-not-found" 2>/dev/null; then
	current_value=$("$IMPS_DIR/config-get" "$CONFIG_FILE" "command-not-found" 2>/dev/null)
	if [ "$current_value" = "1" ]; then
		# Currently enabled, disable it
		"$IMPS_DIR/config-del" "$CONFIG_FILE" "command-not-found"
		printf '%s\n' "✓ command-not-found hook disabled. Wizardry will not auto-load spells via command_not_found_handle."
		printf '%s\n' ""
		printf '%s\n' "Note: Open a new terminal window for changes to take effect."
		exit 0
	fi
fi

# Currently disabled, enable it
"$IMPS_DIR/config-set" "$CONFIG_FILE" "command-not-found" "1"
printf '%s\n' "✓ command-not-found hook enabled. Wizardry will auto-load spells via command_not_found_handle."
printf '%s\n' ""
printf '%s\n' "Note: Open a new terminal window for changes to take effect."
