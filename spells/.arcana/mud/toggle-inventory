#!/bin/sh

# Toggle inventory feature on/off in MUD config.
# This is a planned feature that will enable inventory management.

toggle_inventory_usage() {
cat <<'USAGE'
Usage: toggle-inventory

Toggle the planned inventory feature on or off. When enabled it will track items you collect and let you manage them; for now the toggle just updates $MUD_DIR/config.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        toggle_inventory_usage
        exit 0
        ;;
esac

set -eu

script_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
mud_config="$script_dir/mud-config"

if [ ! -x "$mud_config" ]; then
        printf '%s\n' "Error: mud-config not found at '$mud_config'." >&2
        exit 1
fi

# Toggle the feature and report state
new_state=$("$mud_config" toggle inventory)

if [ "$new_state" = "1" ]; then
        printf '%s\n' "✓ Inventory feature enabled (planned feature)."
else
        printf '%s\n' "✓ Inventory feature disabled."
fi
