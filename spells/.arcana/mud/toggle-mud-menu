#!/bin/sh

# Toggle MUD visibility in the main menu.
# When enabled, MUD appears in the main menu. When disabled, it is hidden.

toggle_mud_menu_usage() {
cat <<'USAGE'
Usage: toggle-mud-menu

Show or hide the MUD entry in the main menu. The spell flips the current state and tells you whether the menu is now visible.
USAGE
}

toggle_mud_menu() {
case "${1-}" in
--help|--usage|-h)
  toggle_mud_menu_usage
  return 0
  ;;
esac

require-wizardry || return 1


set -eu
env-clear

SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
MUD_CONFIG="$SCRIPT_DIR/mud-config"

if [ ! -x "$MUD_CONFIG" ]; then
  printf '%s\n' "Error: mud-config not found at '$MUD_CONFIG'." >&2
  return 1
fi

# Toggle the mud-enabled setting
new_state=$("$MUD_CONFIG" toggle "mud-enabled")

if [ "$new_state" = "1" ]; then
  printf '%s\n' "✓ MUD menu enabled in main menu."
else
  printf '%s\n' "✓ MUD menu hidden from main menu."
fi

}

# Load castable imp for direct execution (AFTER all functions defined)
# When executed directly: always source to ensure castable sees correct $0
# When sourced (testing): use from PATH if available to avoid forks
case "$0" in
  sh|dash|bash|zsh|ksh|mksh|*/sh|*/dash|*/bash|*/zsh|*/ksh|*/mksh)
    # Being sourced - use from PATH if available
    if ! command -v castable >/dev/null 2>&1; then
      # Use WIZARDRY_DIR or ROOT_DIR if available (avoids dirname/basename)
      if [ -n "${WIZARDRY_DIR-}" ]; then
        _i="$WIZARDRY_DIR/spells/.imps/sys"
      elif [ -n "${ROOT_DIR-}" ]; then
        _i="$ROOT_DIR/spells/.imps/sys"
      else
        _i="${WIZARDRY_DIR:-${ROOT_DIR:-${0%/*/*/*/*}}}/spells/.imps/sys"
      fi
      [ -f "$_i/castable" ] && . "$_i/castable"
    fi
    ;;
  *)
    # Being executed - always source to ensure correct $0 detection
    if [ -n "${WIZARDRY_DIR-}" ]; then
      _i="$WIZARDRY_DIR/spells/.imps/sys"
    elif [ -n "${ROOT_DIR-}" ]; then
      _i="$ROOT_DIR/spells/.imps/sys"
    else
      _i="${WIZARDRY_DIR:-${ROOT_DIR:-${0%/*/*/*/*}}}/spells/.imps/sys"
    fi
    [ -f "$_i/castable" ] && . "$_i/castable"
    ;;
esac

castable "$@"
