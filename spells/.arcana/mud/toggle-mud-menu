#!/bin/sh

# Toggle MUD visibility in the main menu.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: toggle-mud-menu

Show or hide the MUD entry in the main menu. The spell flips the current state and tells you whether the menu is now visible.
USAGE
  exit 0
  ;;
esac

set -eu

# Get script directory to find imps
SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
ROOT_DIR=$(cd "$SCRIPT_DIR/../../.." && pwd -P)
IMPS_DIR="$ROOT_DIR/spells/.imps/fs"

# Determine config file location
SPELLBOOK_DIR="${SPELLBOOK_DIR:-$HOME/.spellbook}"
CONFIG_FILE="$SPELLBOOK_DIR/.mud"

# Ensure spellbook directory exists
mkdir -p "$SPELLBOOK_DIR"
touch "$CONFIG_FILE"

# Check current state
if "$IMPS_DIR/config-has" "$CONFIG_FILE" "mud-enabled" 2>/dev/null; then
  current_value=$("$IMPS_DIR/config-get" "$CONFIG_FILE" "mud-enabled" 2>/dev/null)
  if [ "$current_value" = "1" ]; then
    # Currently enabled, disable it
    "$IMPS_DIR/config-del" "$CONFIG_FILE" "mud-enabled"
    printf '%s\n' "✓ MUD menu hidden from main menu."
    exit 0
  fi
fi

# Currently disabled, enable it
"$IMPS_DIR/config-set" "$CONFIG_FILE" "mud-enabled" "1"
printf '%s\n' "✓ MUD menu enabled in main menu."
