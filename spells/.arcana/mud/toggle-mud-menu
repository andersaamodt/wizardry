#!/bin/sh

# Toggle MUD visibility in the main menu.
# When enabled, MUD appears in the main menu. When disabled, it is hidden.

toggle_mud_menu_usage() {
cat <<'USAGE'
Usage: toggle-mud-menu

Show or hide the MUD entry in the main menu. The spell flips the current state and tells you whether the menu is now visible.
USAGE
}

case "${1-}" in
--help|--usage|-h)
	toggle_mud_menu_usage
	exit 0
	;;
esac

set -eu

script_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
mud_config="$script_dir/mud-config"

if [ ! -x "$mud_config" ]; then
	printf '%s\n' "Error: mud-config not found at '$mud_config'." >&2
	exit 1
fi

# Toggle the mud-enabled setting
new_state=$("$mud_config" toggle "mud-enabled")

if [ "$new_state" = "1" ]; then
	printf '%s\n' "✓ MUD menu enabled in main menu."
else
	printf '%s\n' "✓ MUD menu hidden from main menu."
fi
