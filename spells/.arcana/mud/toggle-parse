#!/bin/sh

# Toggle parse-enabled setting in MUD config

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: toggle-parse

Toggle the parse-enabled setting. When parse is enabled, generate-glosses
creates first-word glosses that enable natural language commands like
"read magic" instead of "read-magic".
USAGE
  exit 0
  ;;
esac

set -eu

# Get script directory to find imps
SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
ROOT_DIR=$(cd "$SCRIPT_DIR/../../.." && pwd -P)
IMPS_DIR="$ROOT_DIR/spells/.imps/fs"

# Determine config file location
SPELLBOOK_DIR="${SPELLBOOK_DIR:-$HOME/.spellbook}"
CONFIG_FILE="$SPELLBOOK_DIR/.mud"

# Ensure spellbook directory exists
mkdir -p "$SPELLBOOK_DIR"
touch "$CONFIG_FILE"

# Check current state
if "$IMPS_DIR/config-has" "$CONFIG_FILE" "parse-enabled" 2>/dev/null; then
  current_value=$("$IMPS_DIR/config-get" "$CONFIG_FILE" "parse-enabled" 2>/dev/null)
  if [ "$current_value" = "1" ]; then
    # Currently enabled, disable it
    "$IMPS_DIR/config-del" "$CONFIG_FILE" "parse-enabled"
    printf '%s\n' "✓ Parse disabled. Only exact spell names will work."
    exit 0
  fi
fi

# Currently disabled, enable it
"$IMPS_DIR/config-set" "$CONFIG_FILE" "parse-enabled" "1"
printf '%s\n' "✓ Parse enabled. Natural language commands will be available after running 'invoke-wizardry'."
