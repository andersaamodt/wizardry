#!/bin/sh

# Toggle touch hook on/off in MUD config.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: toggle-touch-hook

Toggle the planned touch hook on or off. When enabled it will fire actions when you touch a portkey or other special file; for now the toggle only updates $MUD_DIR/config.
USAGE
  exit 0
  ;;
esac

require_wizardry || exit 1

set -eu
env_clear

SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
MUD_CONFIG="$SCRIPT_DIR/mud-config"

if [ ! -x "$MUD_CONFIG" ]; then
        printf '%s\n' "Error: mud-config not found at '$MUD_CONFIG'." >&2
        return 1
fi

# Toggle the feature and report state
new_state=$("$MUD_CONFIG" toggle touch-hook)

if [ "$new_state" = "1" ]; then
        printf '%s\n' "✓ Touch hook enabled (planned feature)."
else
        printf '%s\n' "✓ Touch hook disabled."
fi
