#!/bin/sh

# Toggle touch hook on/off in MUD config.
# This is a planned feature that will activate special behavior on touch.

toggle_touch_hook_usage() {
cat <<'USAGE'
Usage: toggle-touch-hook

Toggle the planned touch hook on or off. When enabled it will fire actions when you touch a portkey or other special file; for now the toggle only updates $MUD_DIR/config.
USAGE
}

toggle_touch_hook() {
case "${1-}" in
--help|--usage|-h)
        toggle_touch_hook_usage
        return 0
        ;;
esac

require-wizardry || return 1


set -eu
. env-clear

SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
MUD_CONFIG="$SCRIPT_DIR/mud-config"

if [ ! -x "$MUD_CONFIG" ]; then
        printf '%s\n' "Error: mud-config not found at '$MUD_CONFIG'." >&2
        return 1
fi

# Toggle the feature and report state
new_state=$("$MUD_CONFIG" toggle touch-hook)

if [ "$new_state" = "1" ]; then
        printf '%s\n' "✓ Touch hook enabled (planned feature)."
else
        printf '%s\n' "✓ Touch hook disabled."
fi

}

# Load castable imp for direct execution
# CRITICAL: Check if already available before sourcing to avoid fork limits
if ! command -v castable >/dev/null 2>&1; then
  _d=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _r=$(cd "$_d" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  _i="${WIZARDRY_DIR:-${_r}}/spells/.imps/sys"
  [ -f "$_i/castable" ] && . "$_i/castable"
fi

castable "$@"