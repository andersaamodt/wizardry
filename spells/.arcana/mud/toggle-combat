#!/bin/sh

# Toggle HP/MP and combat feature on/off in MUD config.
# This is a planned feature that will enable combat mechanics.

toggle_combat_usage() {
cat <<'USAGE'
Usage: toggle-combat

Toggle the planned HP/MP combat feature on or off. When enabled it will track health and mana once the feature lands; for now it simply updates $MUD_DIR/config.
USAGE
}

toggle_combat() {
case "${1-}" in
--help|--usage|-h)
        toggle_combat_usage
        return 0
        ;;
esac

require-wizardry || return 1


set -eu
. env-clear

SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
MUD_CONFIG="$SCRIPT_DIR/mud-config"

if [ ! -x "$MUD_CONFIG" ]; then
        printf '%s\n' "Error: mud-config not found at '$MUD_CONFIG'." >&2
        return 1
fi

# Toggle the feature and report state
new_state=$("$MUD_CONFIG" toggle combat)

if [ "$new_state" = "1" ]; then
        printf '%s\n' "✓ HP/MP and combat feature enabled (planned feature)."
else
        printf '%s\n' "✓ HP/MP and combat feature disabled."
fi

}

# Load castable imp for direct execution (AFTER all functions defined)
# When executed directly: always source to ensure castable sees correct $0
# When sourced (testing): use from PATH if available to avoid forks
case "$0" in
  sh|dash|bash|zsh|ksh|mksh|*/sh|*/dash|*/bash|*/zsh|*/ksh|*/mksh)
    # Being sourced - use from PATH if available
    if ! command -v castable >/dev/null 2>&1; then
      _d=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
      _r=$(cd "$_d" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
      _i="${WIZARDRY_DIR:-${_r}}/spells/.imps/sys"
      [ -f "$_i/castable" ] && . "$_i/castable"
    fi
    ;;
  *)
    # Being executed - always source to ensure correct $0 detection
      _d=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
      _r=$(cd "$_d" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
      _i="${WIZARDRY_DIR:-${_r}}/spells/.imps/sys"
      [ -f "$_i/castable" ] && . "$_i/castable"
    ;;
esac

castable "$@"
