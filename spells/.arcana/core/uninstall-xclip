#!/bin/sh
# Bootstrap spell: uninstalls the xclip clipboard utility.

uninstall_xclip_usage() {
        cat <<'USAGE' >&2
Usage: uninstall-xclip

This spell uninstalls the xclip clipboard utility.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        uninstall_xclip_usage
        exit 0
        ;;
esac

set -eu

SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
"$SCRIPT_DIR/manage-system-command" --uninstall xclip xclip
