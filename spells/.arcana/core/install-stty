#!/bin/sh
# Bootstrap spell: installs the stty command using the system package manager.

install_stty_usage() {
        cat <<'USAGE' >&2
Usage: install-stty

This spell installs the stty command using the system package manager.
USAGE
}

install_stty() {
case "${1-}" in
--help|--usage|-h)
        install_stty_usage
        return 0
        ;;
esac



set -eu
. env-clear

SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)

APT_PACKAGE=coreutils
DNF_PACKAGE=coreutils
YUM_PACKAGE=coreutils
ZYPPER_PACKAGE=coreutils
PACMAN_PACKAGE=coreutils
APK_PACKAGE=coreutils
BREW_PACKAGE=coreutils
ASSUME_YES=1

export APT_PACKAGE DNF_PACKAGE YUM_PACKAGE ZYPPER_PACKAGE
export PACMAN_PACKAGE APK_PACKAGE BREW_PACKAGE ASSUME_YES

"$SCRIPT_DIR/manage-system-command" stty coreutils

}

# Load castable imp for direct execution
if true; then  # Always source castable, never use from PATH
  _d=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _r=$(cd "$_d" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  _i="${WIZARDRY_DIR:-${_r}}/spells/.imps/sys"
  [ -f "$_i/castable" ] && . "$_i/castable"
fi

castable "$@"