#!/bin/sh

# Bootstrap spell: Install the stty command using the system package manager.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: install-stty

This spell installs the stty command using the system package manager.
USAGE
  exit 0
  ;;
esac

set -eu

SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)

# Package names for officially supported platforms
APT_PACKAGE=coreutils
PACMAN_PACKAGE=coreutils
NIX_PACKAGE=coreutils
PKGIN_PACKAGE=coreutils
ASSUME_YES=1

export APT_PACKAGE PACMAN_PACKAGE NIX_PACKAGE PKGIN_PACKAGE ASSUME_YES

"$SCRIPT_DIR/manage-system-command" stty coreutils
