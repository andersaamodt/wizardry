#!/bin/sh
# Bootstrap spell: installs the xsel clipboard utility using the system package manager.

install_xsel_usage() {
        cat <<'USAGE' >&2
Usage: install-xsel

This spell installs the xsel clipboard utility using the system package manager.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        install_xsel_usage
        exit 0
        ;;
esac

set -eu

script_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
ASSUME_YES=1 "$script_dir/manage-system-command" xsel xsel
