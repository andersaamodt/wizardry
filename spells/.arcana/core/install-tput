#!/bin/sh
# Bootstrap spell: installs the tput command using the system package manager.

install_tput_usage() {
        cat <<'USAGE' >&2
Usage: install-tput

This spell installs the tput command using the system package manager.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        install_tput_usage
        exit 0
        ;;
esac

set -eu

script_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)

APT_PACKAGE=ncurses-bin
DNF_PACKAGE=ncurses
YUM_PACKAGE=ncurses
ZYPPER_PACKAGE=ncurses
PACMAN_PACKAGE=ncurses
APK_PACKAGE=ncurses
BREW_PACKAGE=ncurses
ASSUME_YES=1

export APT_PACKAGE DNF_PACKAGE YUM_PACKAGE ZYPPER_PACKAGE
export PACMAN_PACKAGE APK_PACKAGE BREW_PACKAGE ASSUME_YES

"$script_dir/manage-system-command" tput ncurses
