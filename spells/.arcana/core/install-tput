#!/bin/sh

# Bootstrap spell: Install the tput command using the system package manager.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: install-tput

This spell installs the tput command using the system package manager.
USAGE
  exit 0
  ;;
esac

set -eu

SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)

# Package names for officially supported platforms
APT_PACKAGE=ncurses-bin
PACMAN_PACKAGE=ncurses
NIX_PACKAGE=ncurses
PKGIN_PACKAGE=ncurses
ASSUME_YES=1

export APT_PACKAGE PACMAN_PACKAGE NIX_PACKAGE PKGIN_PACKAGE ASSUME_YES

"$SCRIPT_DIR/manage-system-command" tput ncurses
