#!/bin/sh
# Bootstrap spell: installs the tput command using the system package manager.

install_tput_usage() {
        cat <<'USAGE' >&2
Usage: install-tput

This spell installs the tput command using the system package manager.
USAGE
}

install_tput() {
case "${1-}" in
--help|--usage|-h)
        install_tput_usage
        return 0
        ;;
esac

require-wizardry || return 1


set -eu
. env-clear

SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)

APT_PACKAGE=ncurses-bin
DNF_PACKAGE=ncurses
YUM_PACKAGE=ncurses
ZYPPER_PACKAGE=ncurses
PACMAN_PACKAGE=ncurses
APK_PACKAGE=ncurses
BREW_PACKAGE=ncurses
ASSUME_YES=1

export APT_PACKAGE DNF_PACKAGE YUM_PACKAGE ZYPPER_PACKAGE
export PACMAN_PACKAGE APK_PACKAGE BREW_PACKAGE ASSUME_YES

"$SCRIPT_DIR/manage-system-command" tput ncurses

}

# Load castable imp for direct execution
if true; then  # Always source castable, never use from PATH
  _d=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _r=$(cd "$_d" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  _i="${WIZARDRY_DIR:-${_r}}/spells/.imps/sys"
  [ -f "$_i/castable" ] && . "$_i/castable"
fi

castable "$@"