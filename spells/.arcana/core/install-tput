#!/usr/bin/env sh
# Bootstrap spell: installs the tput command using the system package manager.

show_usage() {
        cat <<'USAGE' >&2
Usage: install-tput

This spell installs the tput command using the system package manager.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        show_usage
        exit 0
        ;;
esac

set -eu

script_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
"$script_dir/manage-system-command" \
  --apt-package ncurses-bin \
  --dnf-package ncurses \
  --yum-package ncurses \
  --zypper-package ncurses \
  --pacman-package ncurses \
  --apk-package ncurses \
  tput ncurses
