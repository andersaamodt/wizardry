#!/bin/sh

# Bootstrap spell: Uninstall the grep command.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: uninstall-grep

This spell uninstalls the grep command using the system package manager.
USAGE
  exit 0
  ;;
esac

set -eu

SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)

# Package names for officially supported platforms (from detect-distro)
APT_PACKAGE=grep          # Debian, Ubuntu, Raspbian
PACMAN_PACKAGE=grep       # Arch, Manjaro
NIX_PACKAGE=gnugrep       # NixOS
PKGIN_PACKAGE=grep        # macOS (pkgin package manager)

export APT_PACKAGE PACMAN_PACKAGE NIX_PACKAGE PKGIN_PACKAGE

"$SCRIPT_DIR/manage-system-command" --uninstall grep grep
