#!/usr/bin/env sh
# Bootstrap spell: uninstalls the xsel clipboard utility.

show_usage() {
        cat <<'USAGE' >&2
Usage: uninstall-xsel

This spell uninstalls the xsel clipboard utility.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        show_usage
        exit 0
        ;;
esac

set -eu

script_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
"$script_dir/manage-system-command" --uninstall xsel xsel
