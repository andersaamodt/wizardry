#!/usr/bin/env sh
# Bootstrap spell: uninstalls the dd command using the system package manager.

show_usage() {
        cat <<'USAGE' >&2
Usage: uninstall-dd

This spell uninstalls the dd command using the system package manager.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        show_usage
        exit 0
        ;;
esac

set -eu

script_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
apt_package=coreutils dnf_package=coreutils yum_package=coreutils zypper_package=coreutils pacman_package=coreutils apk_package=coreutils brew_package=coreutils \
  ASSUME_YES=1 "$script_dir/manage-system-command" --uninstall dd coreutils
