#!/bin/sh
# Bootstrap spell: uninstalls the core wizardry dependencies.


uninstall_core_usage() {
        cat <<'USAGE' >&2
Usage: uninstall-core

This spell uninstalls the core wizardry dependencies.
USAGE
}

uninstall_core() {
case "${1-}" in
--help|--usage|-h)
        uninstall_core_usage
        return 0
        ;;
esac

require-wizardry || return 1


script_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)

uninstall_core_resolve_spell() {
  spell_name=$1
  if command -v "$spell_name" >/dev/null 2>&1; then
    printf '%s\n' "$spell_name"
    return 0
  fi

  if [ -x "$script_dir/$spell_name" ]; then
    printf '%s\n' "$script_dir/$spell_name"
    return 0
  fi

  printf '%s\n' "uninstall-core: missing helper '$spell_name'" >&2
  return 1
}

uninstall_core() {
  # detect_platform - inlined
  platform="unknown"
  if command -v uname >/dev/null 2>&1; then
    platform=$(uname -s 2>/dev/null || printf '%s' "unknown")
  fi
  
  # core_dependencies - inlined
  case $platform in
    Darwin)
      deps='Git:git:install-git:uninstall-git
dd:dd:install-dd:uninstall-dd
stty:stty:install-stty:uninstall-stty
tput:tput:install-tput:uninstall-tput'
      ;;
    *)
      deps='Git:git:install-git:uninstall-git
Bubblewrap:bwrap:install-bwrap:uninstall-bwrap
dd:dd:install-dd:uninstall-dd
stty:stty:install-stty:uninstall-stty
tput:tput:install-tput:uninstall-tput'
      ;;
  esac
  
  printf '%s\n' "$deps" | while IFS=: read -r label command_name _ uninstall_spell; do
    if ! command -v "$command_name" >/dev/null 2>&1; then
      continue
    fi

    spell=$(uninstall_core_resolve_spell "$uninstall_spell") || return 1
    if ! ASSUME_YES=1 "$spell"; then
      printf '%s\n' "uninstall-core: failed to uninstall $label" >&2
      return 1
    fi
  done
}

if [ "${0##*/}" = "uninstall-core" ]; then
  set -eu
  uninstall_core "$@"
fi

}

# Load castable imp for direct execution
if true; then  # Always source castable, never use from PATH
  _d=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _r=$(cd "$_d" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  _i="${WIZARDRY_DIR:-${_r}}/spells/.imps/sys"
  [ -f "$_i/castable" ] && . "$_i/castable"
fi

castable "$@"