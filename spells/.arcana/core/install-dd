#!/bin/sh
# Bootstrap spell: installs the dd command using the system package manager.

install_dd_usage() {
        cat <<'USAGE' >&2
Usage: install-dd

This spell installs the dd command using the system package manager.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        install_dd_usage
        exit 0
        ;;
esac

set -eu

script_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)

APT_PACKAGE=coreutils
DNF_PACKAGE=coreutils
YUM_PACKAGE=coreutils
ZYPPER_PACKAGE=coreutils
PACMAN_PACKAGE=coreutils
APK_PACKAGE=coreutils
BREW_PACKAGE=coreutils
ASSUME_YES=1

export APT_PACKAGE DNF_PACKAGE YUM_PACKAGE ZYPPER_PACKAGE
export PACMAN_PACKAGE APK_PACKAGE BREW_PACKAGE ASSUME_YES

"$script_dir/manage-system-command" dd coreutils
