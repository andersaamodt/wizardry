#!/bin/sh
# Bootstrap spell: installs wl-clipboard (provides wl-copy/wl-paste) for Wayland.

install_wl_clipboard_usage() {
        cat <<'USAGE' >&2
Usage: install-wl-clipboard

This spell installs wl-clipboard (provides wl-copy/wl-paste) for Wayland.
USAGE
}

install_wl_clipboard() {
case "${1-}" in
--help|--usage|-h)
        install_wl_clipboard_usage
        return 0
        ;;
esac



set -eu
. env-clear

SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
ASSUME_YES=1 "$SCRIPT_DIR/manage-system-command" wl-copy wl-clipboard

}

# Load castable imp for direct execution
if true; then  # Always source castable, never use from PATH
  _d=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _r=$(cd "$_d" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  _i="${WIZARDRY_DIR:-${_r}}/spells/.imps/sys"
  [ -f "$_i/castable" ] && . "$_i/castable"
fi

castable "$@"