#!/bin/sh



case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: install-wl-clipboard

This spell installs wl-clipboard (provides wl-copy/wl-paste) for Wayland.
USAGE
  exit 0
  ;;
esac

set -eu

SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
ASSUME_YES=1 "$SCRIPT_DIR/manage-system-command" wl-copy wl-clipboard
