#!/bin/sh

# Bootstrap spell: Uninstall the sed command.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: uninstall-sed

This spell uninstalls the sed command using the system package manager.
USAGE
  exit 0
  ;;
esac

set -eu

SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)

# Package names for officially supported platforms (from detect-distro)
APT_PACKAGE=sed           # Debian, Ubuntu, Raspbian
PACMAN_PACKAGE=sed        # Arch, Manjaro
NIX_PACKAGE=gnused        # NixOS
PKGIN_PACKAGE=gsed        # macOS (pkgin package manager)

export APT_PACKAGE PACMAN_PACKAGE NIX_PACKAGE PKGIN_PACKAGE

"$SCRIPT_DIR/manage-system-command" --uninstall sed sed
