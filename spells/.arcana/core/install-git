#!/bin/sh
# Bootstrap spell: installs the git command using the system package manager.

install_git_usage() {
        cat <<'USAGE' >&2
Usage: install-git

This spell installs the git command using the system package manager.
USAGE
}

install_git() {
case "${1-}" in
--help|--usage|-h)
        install_git_usage
        return 0
        ;;
esac

require-wizardry || return 1


set -eu
. env-clear

SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)

ASSUME_YES=1
FORCE_INSTALL=${INSTALL_GIT_FORCE_INSTALL:-0}
export ASSUME_YES FORCE_INSTALL

"$SCRIPT_DIR/manage-system-command" git git

}

# Load castable imp for direct execution
if true; then  # Always source castable, never use from PATH
  _d=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _r=$(cd "$_d" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  _i="${WIZARDRY_DIR:-${_r}}/spells/.imps/sys"
  [ -f "$_i/castable" ] && . "$_i/castable"
fi

castable "$@"