#!/bin/sh



case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: install-git

This spell installs the git command using the system package manager.
USAGE
  exit 0
  ;;
esac

set -eu

SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)

ASSUME_YES=1
FORCE_INSTALL=${INSTALL_GIT_FORCE_INSTALL:-0}
export ASSUME_YES FORCE_INSTALL

"$SCRIPT_DIR/manage-system-command" git git
