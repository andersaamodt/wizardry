#!/usr/bin/env sh
# Bootstrap spell: installs the git command using the system package manager.

show_usage() {
        cat <<'USAGE' >&2
Usage: install-git

This spell installs the git command using the system package manager.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        show_usage
        exit 0
        ;;
esac

set -eu

SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
ASSUME_YES=1 FORCE_INSTALL=${INSTALL_GIT_FORCE_INSTALL:-0} \
  "$SCRIPT_DIR/manage-system-command" git git
