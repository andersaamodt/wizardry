#!/bin/sh
# Bootstrap spell: installs the xclip clipboard utility using the system package manager.

install_xclip_usage() {
        cat <<'USAGE' >&2
Usage: install-xclip

This spell installs the xclip clipboard utility using the system package manager.
USAGE
}

install_xclip() {
case "${1-}" in
--help|--usage|-h)
        install_xclip_usage
        return 0
        ;;
esac

require-wizardry || return 1


set -eu
. env-clear

SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
ASSUME_YES=1 "$SCRIPT_DIR/manage-system-command" xclip xclip

}

# Load castable imp for direct execution
if true; then  # Always source castable, never use from PATH
  _d=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _r=$(cd "$_d" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  _i="${WIZARDRY_DIR:-${_r}}/spells/.imps/sys"
  [ -f "$_i/castable" ] && . "$_i/castable"
fi

castable "$@"