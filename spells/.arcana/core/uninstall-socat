#!/bin/sh

# Bootstrap spell: Uninstall the socat command using the system package manager.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: uninstall-socat

This spell uninstalls the socat command using the system package manager.
USAGE
  exit 0
  ;;
esac

set -eu

SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)

ASSUME_YES=1
export ASSUME_YES

"$SCRIPT_DIR/manage-system-command" --uninstall socat socat
