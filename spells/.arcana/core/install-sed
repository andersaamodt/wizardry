#!/bin/sh

# Bootstrap spell: Install the sed command using the system package manager.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: install-sed

This spell installs the sed (stream editor) command using the system package manager.
USAGE
  exit 0
  ;;
esac

set -eu

SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)

# Package names for officially supported platforms (from detect-distro)
APT_PACKAGE=sed           # Debian, Ubuntu, Raspbian
PACMAN_PACKAGE=sed        # Arch, Manjaro
NIX_PACKAGE=gnused        # NixOS
PKGIN_PACKAGE=gsed        # macOS (pkgin package manager)
ASSUME_YES=1

export APT_PACKAGE PACMAN_PACKAGE NIX_PACKAGE PKGIN_PACKAGE ASSUME_YES

"$SCRIPT_DIR/manage-system-command" sed sed
