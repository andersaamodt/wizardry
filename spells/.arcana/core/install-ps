#!/bin/sh

# Bootstrap spell: Install the ps command using the system package manager.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: install-ps

This spell installs the ps command using the system package manager.
The ps command is provided by the procps or procps-ng package depending
on the Linux distribution.
USAGE
  exit 0
  ;;
esac

set -eu

SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)

ASSUME_YES=1
FORCE_INSTALL=${INSTALL_PS_FORCE_INSTALL:-0}

# Package names vary by distribution (officially supported platforms only)
# Debian/Ubuntu: procps
# Arch: procps-ng
APT_PACKAGE=procps
PACMAN_PACKAGE=procps-ng
export ASSUME_YES FORCE_INSTALL APT_PACKAGE PACMAN_PACKAGE

"$SCRIPT_DIR/manage-system-command" ps procps
