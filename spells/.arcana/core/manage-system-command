#!/usr/bin/env sh

# Bootstrap spell: install or uninstall a system command using the available package manager.

show_usage() {
        cat <<'USAGE' >&2
Usage: manage-system-command [OPTIONS] <command> <default-package>

Installs or removes a system command via the available package manager, falling back to the provided default package name when no override is set.

Options:
  --uninstall                Uninstall instead of install
  --nix-package PACKAGE      Override package name for nix
  --apt-package PACKAGE      Override package name for apt
  --dnf-package PACKAGE      Override package name for dnf
  --yum-package PACKAGE      Override package name for yum
  --zypper-package PACKAGE   Override package name for zypper
  --pacman-package PACKAGE   Override package name for pacman
  --apk-package PACKAGE      Override package name for apk
  --pkgin-package PACKAGE    Override package name for pkgin
  --force                    Force reinstall even if command exists
USAGE
}

case "${1-}" in
--help|--usage|-h)
        show_usage
        exit 0
        ;;
esac


# Install or uninstall a system command using the available package manager.

set -eu

action=install
force_install=0
nix_package=''
apt_package=''
dnf_package=''
yum_package=''
zypper_package=''
pacman_package=''
apk_package=''
pkgin_package=''

# Parse options
while [ "$#" -gt 0 ]; do
  case "$1" in
  --uninstall)
    action=uninstall
    shift
    ;;
  --force)
    force_install=1
    shift
    ;;
  --nix-package)
    if [ "$#" -lt 2 ]; then
      printf '%s\n' "manage-system-command: --nix-package requires an argument" >&2
      exit 1
    fi
    nix_package=$2
    shift 2
    ;;
  --apt-package)
    if [ "$#" -lt 2 ]; then
      printf '%s\n' "manage-system-command: --apt-package requires an argument" >&2
      exit 1
    fi
    apt_package=$2
    shift 2
    ;;
  --dnf-package)
    if [ "$#" -lt 2 ]; then
      printf '%s\n' "manage-system-command: --dnf-package requires an argument" >&2
      exit 1
    fi
    dnf_package=$2
    shift 2
    ;;
  --yum-package)
    if [ "$#" -lt 2 ]; then
      printf '%s\n' "manage-system-command: --yum-package requires an argument" >&2
      exit 1
    fi
    yum_package=$2
    shift 2
    ;;
  --zypper-package)
    if [ "$#" -lt 2 ]; then
      printf '%s\n' "manage-system-command: --zypper-package requires an argument" >&2
      exit 1
    fi
    zypper_package=$2
    shift 2
    ;;
  --pacman-package)
    if [ "$#" -lt 2 ]; then
      printf '%s\n' "manage-system-command: --pacman-package requires an argument" >&2
      exit 1
    fi
    pacman_package=$2
    shift 2
    ;;
  --apk-package)
    if [ "$#" -lt 2 ]; then
      printf '%s\n' "manage-system-command: --apk-package requires an argument" >&2
      exit 1
    fi
    apk_package=$2
    shift 2
    ;;
  --pkgin-package)
    if [ "$#" -lt 2 ]; then
      printf '%s\n' "manage-system-command: --pkgin-package requires an argument" >&2
      exit 1
    fi
    pkgin_package=$2
    shift 2
    ;;
  --)
    shift
    break
    ;;
  -*)
    printf '%s\n' "manage-system-command: unknown option: $1" >&2
    exit 1
    ;;
  *)
    break
    ;;
  esac
done

if [ "$#" -lt 2 ]; then
  printf '%s\n' "Usage: manage-system-command [OPTIONS] <command> <default-package>" >&2
  exit 1
fi

command_name=$1
package_default=$2

# Detect NixOS for automatic installation via nix-env
is_nixos=0
if [ -d /etc/nixos ] || [ -f /etc/NIXOS ] || grep -qi 'ID=nixos' /etc/os-release 2>/dev/null; then
        is_nixos=1
fi

# Use provided package names or fall back to default
nix_package=${nix_package:-$package_default}
apt_package=${apt_package:-$package_default}
dnf_package=${dnf_package:-$package_default}
yum_package=${yum_package:-$package_default}
zypper_package=${zypper_package:-$package_default}
pacman_package=${pacman_package:-$package_default}
apk_package=${apk_package:-$package_default}
pkgin_package=${pkgin_package:-$package_default}
pkgin_candidates=${PKGIN_CANDIDATES:-/usr/pkg/bin/pkgin /opt/pkg/bin/pkgin /usr/local/pkg/bin/pkgin}

if ! command -v pkgin >/dev/null 2>&1; then
  for candidate in $pkgin_candidates; do
    if [ -x "$candidate" ]; then
      PATH="$(dirname "$candidate"):$PATH"
      export PATH
      break
    fi
  done
fi

run_installer() {
  cmd=$1
  shift
  if command -v sudo >/dev/null 2>&1; then
    sudo "$cmd" "$@"
  else
    "$cmd" "$@"
  fi
}

try_action() {
  installer=$1
  shift
  if ! command -v "$installer" >/dev/null 2>&1; then
    return 1
  fi
  run_installer "$installer" "$@"
}

if [ "$action" = "install" ]; then
  if [ "$force_install" != "1" ] && command -v "$command_name" >/dev/null 2>&1; then
    printf '%s\n' "${command_name} is already installed."
    exit 0
  fi

  # Prefer non-interactive installs when possible.
  # Try nix-env first on NixOS for user-local installation
  if [ "$is_nixos" -eq 1 ] && command -v nix-env >/dev/null 2>&1; then
    if nix-env -iA "nixpkgs.$nix_package" 2>/dev/null; then
      exit 0
    fi
  fi

  if try_action pkgin -y install "$pkgin_package"; then
    exit 0
  fi

  if try_action apt-get -y update && try_action apt-get -y install "$apt_package"; then
    exit 0
  fi

  if try_action dnf -y install "$dnf_package"; then
    exit 0
  fi

  if try_action yum -y install "$yum_package"; then
    exit 0
  fi

  if try_action zypper --non-interactive install "$zypper_package"; then
    exit 0
  fi

  if try_action pacman --noconfirm -Sy "$pacman_package"; then
    exit 0
  fi

  if try_action apk add --no-cache "$apk_package"; then
    exit 0
  fi

  if try_action pkgin -y install "$pkgin_package"; then
    exit 0
  fi

  printf '%s\n' "manage-system-command: unable to install $package_default automatically." >&2
  exit 1
fi

# Uninstall path
if ! command -v "$command_name" >/dev/null 2>&1; then
  printf '%s\n' "${command_name} is not installed."
  exit 0
fi

# Try nix-env first on NixOS
if [ "$is_nixos" -eq 1 ] && command -v nix-env >/dev/null 2>&1; then
  if nix-env -e "$nix_package" 2>/dev/null; then
    exit 0
  fi
fi

if try_action pkgin -y remove "$pkgin_package"; then
  exit 0
fi

if try_action apt-get -y remove "$apt_package"; then
  exit 0
fi

if try_action dnf -y remove "$dnf_package"; then
  exit 0
fi

if try_action yum -y remove "$yum_package"; then
  exit 0
fi

if try_action zypper --non-interactive remove "$zypper_package"; then
  exit 0
fi

if try_action pacman --noconfirm -R "$pacman_package"; then
  exit 0
fi

if try_action apk del "$apk_package"; then
  exit 0
fi

printf '%s\n' "manage-system-command: unable to uninstall $command_name automatically." >&2
exit 1
