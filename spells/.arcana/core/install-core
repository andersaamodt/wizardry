#!/bin/sh

# Bootstrap spell: installs the core wizardry dependencies required for spell execution.

install_core_usage() {
  cat <<'USAGE'
Usage: install-core

Install the core wizardry dependencies required for running spells.
USAGE
}

install_core() {
  case "${1-}" in
    --help|--usage|-h)
      install_core_usage
      return 0
      ;;
  esac

require-wizardry || return 1


  set -eu
  install_core "$@"
fi

}

# Load castable imp for direct execution
if true; then  # Always source castable, never use from PATH
  _d=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _r=$(cd "$_d" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  _i="${WIZARDRY_DIR:-${_r}}/spells/.imps/sys"
  [ -f "$_i/castable" ] && . "$_i/castable"
fi

castable "$@"