#!/usr/bin/env sh
# Bootstrap spell: uninstalls wl-clipboard (provides wl-copy/wl-paste).

show_usage() {
        cat <<'USAGE' >&2
Usage: uninstall-wl-clipboard

This spell uninstalls wl-clipboard (provides wl-copy/wl-paste).
USAGE
}

case "${1-}" in
--help|--usage|-h)
        show_usage
        exit 0
        ;;
esac

set -eu

script_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
"$script_dir/manage-system-command" --uninstall wl-copy wl-clipboard
