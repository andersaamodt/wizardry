#!/bin/sh

# Bootstrap spell: Install the awk command using the system package manager.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: install-awk

This spell installs the awk (pattern scanning and processing language) command
using the system package manager. Typically installs GNU awk (gawk).
USAGE
  exit 0
  ;;
esac

set -eu

SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)

# Package names for officially supported platforms (from detect-distro)
APT_PACKAGE=gawk          # Debian, Ubuntu, Raspbian
PACMAN_PACKAGE=gawk       # Arch, Manjaro
DNF_PACKAGE=gawk          # Fedora
NIX_PACKAGE=gawk          # NixOS
PKGIN_PACKAGE=gawk        # macOS (pkgin package manager)
ASSUME_YES=1

export APT_PACKAGE PACMAN_PACKAGE DNF_PACKAGE NIX_PACKAGE PKGIN_PACKAGE ASSUME_YES

"$SCRIPT_DIR/manage-system-command" awk gawk
