#!/bin/sh

# Install nginx web server.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: install-nginx

Installs nginx using the system package manager.
USAGE
  exit 0
  ;;
esac

require-wizardry || exit 1

set -eu
. env-clear

script_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd)
manage_cmd=${MANAGE_SYSTEM_COMMAND:-manage-system-command}

if ! command -v "$manage_cmd" >/dev/null 2>&1; then
  core_dir=$(CDPATH= cd -- "$script_dir" 2>/dev/null && cd .. && cd core && pwd -P)
  if [ -n "$core_dir" ] && [ -x "$core_dir/manage-system-command" ]; then
    manage_cmd="$core_dir/manage-system-command"
  else
    printf '%s\n' "install-nginx: unable to find manage-system-command" >&2
    exit 1
  fi
fi

printf '%s\n' "Installing nginx..."

# Try to install via manage-system-command
if ! "$manage_cmd" nginx nginx; then
  # Check if failure is due to missing pkgin on macOS
  if [ "$(uname -s 2>/dev/null)" = "Darwin" ] && ! command -v pkgin >/dev/null 2>&1; then
    printf '%s\n' ""  >&2
    printf '%s\n' "nginx installation requires pkgin package manager on macOS." >&2
    printf '%s\n' "Would you like to see pkgin installation instructions? (y/N): " >&2
    read -r response || response="n"
    case "$response" in
      y|Y|yes|YES)
        if has install-pkgin; then
          install-pkgin || true
        else
          printf '%s\n' "Run 'core-menu' to install pkgin" >&2
        fi
        ;;
    esac
  fi
  exit 1
fi

# Add pkgin paths to PATH if not already available
pkgin_candidates="/usr/pkg/bin/pkgin /opt/pkg/bin/pkgin /usr/local/pkg/bin/pkgin"
if ! command -v pkgin >/dev/null 2>&1; then
  for candidate in $pkgin_candidates; do
    if [ -x "$candidate" ]; then
      pkg_base=$(dirname "$(dirname "$candidate")")
      # Add both bin and sbin directories (server tools are often in sbin)
      PATH="$pkg_base/bin:$pkg_base/sbin:$PATH"
      export PATH
      break
    fi
  done
fi

# Verify installation - check both PATH and pkgin sbin directory
if ! command -v nginx >/dev/null 2>&1; then
  # Check if it's in pkgin's sbin directory (where server tools are installed)
  if [ -x /opt/pkg/sbin/nginx ]; then
    : # installed successfully in pkgin sbin
  else
    printf '%s\n' "install-nginx: nginx installation failed or command not in PATH" >&2
    exit 1
  fi
fi

printf '%s\n' "nginx installation complete."
