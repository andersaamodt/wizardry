#!/bin/sh

# Uninstall OpenSSL cryptography toolkit.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: uninstall-openssl

Removes OpenSSL using the system package manager.
USAGE
  exit 0
  ;;
esac

require-wizardry || exit 1

set -eu
. env-clear

script_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd)
manage_cmd=${MANAGE_SYSTEM_COMMAND:-manage-system-command}

if ! command -v "$manage_cmd" >/dev/null 2>&1; then
  core_dir=$(CDPATH= cd -- "$script_dir" 2>/dev/null && cd .. && cd core && pwd -P)
  if [ -n "$core_dir" ] && [ -x "$core_dir/manage-system-command" ]; then
    manage_cmd="$core_dir/manage-system-command"
  else
    printf '%s\n' "uninstall-openssl: unable to find manage-system-command" >&2
    exit 1
  fi
fi

printf '%s\n' "Uninstalling OpenSSL..."
"$manage_cmd" --uninstall openssl openssl || {
  printf '%s\n' "uninstall-openssl: OpenSSL uninstallation failed (may be required by system)" >&2
  exit 1
}

# Verify uninstallation
if command -v openssl >/dev/null 2>&1; then
  printf '%s\n' "uninstall-openssl: OpenSSL still present after uninstall (may be required by system)" >&2
  exit 1
fi

printf '%s\n' "OpenSSL uninstallation complete."
