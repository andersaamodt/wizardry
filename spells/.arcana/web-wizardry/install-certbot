#!/bin/sh

# Install certbot for Let's Encrypt certificates.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: install-certbot

Installs certbot using the system package manager.
USAGE
  exit 0
  ;;
esac

require-wizardry || exit 1

set -eu
. env-clear

script_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd)
manage_cmd=${MANAGE_SYSTEM_COMMAND:-manage-system-command}

if ! command -v "$manage_cmd" >/dev/null 2>&1; then
  core_dir=$(CDPATH= cd -- "$script_dir" 2>/dev/null && cd .. && cd core && pwd -P)
  if [ -n "$core_dir" ] && [ -x "$core_dir/manage-system-command" ]; then
    manage_cmd="$core_dir/manage-system-command"
  else
    printf '%s\n' "install-certbot: unable to find manage-system-command" >&2
    exit 1
  fi
fi

printf '%s\n' "Installing certbot..."

# Determine installation method based on platform
os_type=$(uname -s 2>/dev/null)

case "$os_type" in
  Darwin)
    # On macOS, install certbot via pip (Python package manager)
    # This is the official recommended method for macOS without homebrew
    printf '%s\n' "Installing certbot via pip (Python package manager)..."
    
    # Check if python3 is available
    if ! command -v python3 >/dev/null 2>&1; then
      printf '%s\n' "install-certbot: python3 is required but not found" >&2
      printf '%s\n' "Please install Python 3 first (available from python.org or via system package manager)" >&2
      exit 1
    fi
    
    # Ensure pip is available
    if ! python3 -m pip --version >/dev/null 2>&1; then
      printf '%s\n' "Bootstrapping pip..." >&2
      python3 -m ensurepip --upgrade >/dev/null 2>&1 || {
        printf '%s\n' "install-certbot: failed to bootstrap pip" >&2
        exit 1
      }
    fi
    
    # Install certbot via pip
    if ! python3 -m pip install --user certbot; then
      printf '%s\n' "install-certbot: failed to install certbot via pip" >&2
      exit 1
    fi
    
    # Add Python user bin to PATH
    user_base=$(python3 -c 'import site; print(site.USER_BASE)' 2>/dev/null)
    if [ -n "$user_base" ] && [ -d "$user_base/bin" ]; then
      PATH="$user_base/bin:$PATH"
      export PATH
    fi
    ;;
  *)
    # On Linux and other platforms, use the system package manager
    if ! "$manage_cmd" certbot certbot; then
      printf '%s\n' "install-certbot: failed to install certbot via system package manager" >&2
      exit 1
    fi
    
    # Add pkgin paths to PATH so installed packages can be found
    . add-pkgin-to-path
    ;;
esac

# Verify installation
if ! command -v certbot >/dev/null 2>&1; then
  printf '%s\n' "install-certbot: certbot installation failed or command not in PATH" >&2
  exit 1
fi

printf '%s\n' "certbot installation complete."
