#!/bin/sh

# Install fcgiwrap FastCGI wrapper.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: install-fcgiwrap

Installs fcgiwrap using the system package manager.
USAGE
  exit 0
  ;;
esac

require-wizardry || exit 1

set -eu
. env-clear

script_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd)
manage_cmd=${MANAGE_SYSTEM_COMMAND:-manage-system-command}

if ! command -v "$manage_cmd" >/dev/null 2>&1; then
  core_dir=$(CDPATH= cd -- "$script_dir" 2>/dev/null && cd .. && cd core && pwd -P)
  if [ -n "$core_dir" ] && [ -x "$core_dir/manage-system-command" ]; then
    manage_cmd="$core_dir/manage-system-command"
  else
    printf '%s\n' "install-fcgiwrap: unable to find manage-system-command" >&2
    exit 1
  fi
fi

printf '%s\n' "Installing fcgiwrap..."
"$manage_cmd" install fcgiwrap fcgiwrap

# Verify installation - check PATH and common Homebrew locations on macOS
if ! command -v fcgiwrap >/dev/null 2>&1; then
  # On macOS, check Homebrew installation paths
  if [ "$(uname -s 2>/dev/null)" = "Darwin" ]; then
    if [ -x "/opt/homebrew/bin/fcgiwrap" ] || [ -x "/opt/homebrew/sbin/fcgiwrap" ] || \
       [ -x "/usr/local/bin/fcgiwrap" ] || [ -x "/usr/local/sbin/fcgiwrap" ]; then
      # fcgiwrap was installed by Homebrew but not in current PATH
      printf '%s\n' "fcgiwrap installation complete (requires shell reload for PATH update)."
      exit 0
    fi
  fi
  printf '%s\n' "install-fcgiwrap: fcgiwrap installation failed or command not in PATH" >&2
  exit 1
fi

printf '%s\n' "fcgiwrap installation complete."
