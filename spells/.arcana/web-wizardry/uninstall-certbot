#!/bin/sh

# Uninstall certbot.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: uninstall-certbot

Uninstalls certbot using the system package manager.
USAGE
  exit 0
  ;;
esac

require-wizardry || exit 1

set -eu
. env-clear

script_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd)
manage_cmd=${MANAGE_SYSTEM_COMMAND:-manage-system-command}

if ! command -v "$manage_cmd" >/dev/null 2>&1; then
  core_dir=$(CDPATH= cd -- "$script_dir" 2>/dev/null && cd .. && cd core && pwd -P)
  if [ -n "$core_dir" ] && [ -x "$core_dir/manage-system-command" ]; then
    manage_cmd="$core_dir/manage-system-command"
  else
    printf '%s\n' "uninstall-certbot: unable to find manage-system-command" >&2
    exit 1
  fi
fi

printf '%s\n' "Uninstalling certbot..."

# Determine uninstallation method based on platform
os_type=$(uname -s 2>/dev/null)

case "$os_type" in
  Darwin)
    # On macOS, check if we have acme.sh or pip-installed certbot
    if [ -d "$HOME/.acme.sh" ]; then
      printf '%s\n' "Uninstalling acme.sh..."
      if [ -x "$HOME/.acme.sh/acme.sh" ]; then
        "$HOME/.acme.sh/acme.sh" --uninstall || {
          printf '%s\n' "uninstall-certbot: acme.sh uninstall command failed" >&2
        }
      fi
      # Remove acme.sh directory
      rm -rf "$HOME/.acme.sh"
      # Remove certbot wrapper
      rm -f "$HOME/.local/bin/certbot"
    elif command -v python3 >/dev/null 2>&1 && python3 -m pip --version >/dev/null 2>&1; then
      # Check if certbot was installed via pip
      if python3 -m pip show certbot >/dev/null 2>&1; then
        printf '%s\n' "Uninstalling certbot via pip..."
        if ! python3 -m pip uninstall -y certbot; then
          printf '%s\n' "uninstall-certbot: failed to uninstall certbot via pip" >&2
          exit 1
        fi
      else
        # Try system package manager as fallback
        "$manage_cmd" --uninstall certbot certbot || {
          printf '%s\n' "uninstall-certbot: certbot uninstallation failed" >&2
          exit 1
        }
      fi
    else
      # No pip available, try system package manager
      "$manage_cmd" --uninstall certbot certbot || {
        printf '%s\n' "uninstall-certbot: certbot uninstallation failed" >&2
        exit 1
      }
    fi
    ;;
  *)
    # On Linux and other platforms, use the system package manager
    "$manage_cmd" --uninstall certbot certbot || {
      printf '%s\n' "uninstall-certbot: certbot uninstallation failed" >&2
      exit 1
    }
    ;;
esac

# Verify uninstallation
if command -v certbot >/dev/null 2>&1; then
  printf '%s\n' "uninstall-certbot: certbot still present after uninstall" >&2
  exit 1
fi

printf '%s\n' "certbot uninstallation complete."
