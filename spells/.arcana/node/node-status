#!/bin/sh

# Report installation and runtime status for Node.js.

node_status_usage() {
        cat <<'USAGE' >&2
Usage: node-status

Reports whether Node.js is installed, whether npm is available,
and whether a Node-related service is running.
USAGE
}

node_status() {
case "${1-}" in
--help|--usage|-h)
        node_status_usage
        return 0
        ;;
esac

require-wizardry || return 1

set -eu
env-clear

if command -v colors >/dev/null 2>&1; then
  # shellcheck source=/dev/null
  . colors
else
  RESET=""
  THEME_SUCCESS=""
  THEME_WARNING=""
  THEME_ERROR=""
  GREY=""
fi
# Older scripts expect GRAY, so mirror GREY when missing.
GRAY=${GREY-}

# Main execution - get_node_status inlined
if ! command -v node >/dev/null 2>&1; then
  status="not installed"
  color="$GRAY"
  printf "%s%s%s\n" "$color" "$status" "$RESET"
  return 0
fi

if ! node --version >/dev/null 2>&1; then
  status="installed, error"
  color="$THEME_ERROR"
  printf "%s%s%s\n" "$color" "$status" "$RESET"
  return 0
fi

if ! command -v npm >/dev/null 2>&1; then
  status="installed, npm missing"
else
  status="installed"
fi

# node_service_name - inlined
service_name=""
for candidate in ${NODE_SERVICE-} node nodejs node-app; do
  [ -n "$candidate" ] || continue
  
  if command -v is-service-installed >/dev/null 2>&1; then
    if is-service-installed "$candidate" >/dev/null 2>&1; then
      service_name=$candidate
      break
    fi
  fi
  
  if command -v systemctl >/dev/null 2>&1; then
    unit_files=$(systemctl list-unit-files --type=service --no-pager 2>/dev/null)
    if echo "$unit_files" | grep -q "^${candidate}\\.service"; then
      service_name=$candidate
      break
    fi
  fi
done

if [ -n "$service_name" ]; then
  is_running="no"
  if command -v is-service-running >/dev/null 2>&1; then
    if is-service-running "$service_name" >/dev/null 2>&1; then
      is_running="yes"
    fi
  elif command -v systemctl >/dev/null 2>&1; then
    if systemctl is-active "$service_name" >/dev/null 2>&1; then
      is_running="yes"
    fi
  fi
  
  if [ "$is_running" = "yes" ]; then
    status="installed, service running"
  else
    status="installed, service stopped"
  fi
fi

# color_for_status - inlined
case "$status" in
  "installed, service running"|"installed")
    color="$THEME_SUCCESS"
    ;;
  "installed, service stopped"|"installed, npm missing")
    color="$THEME_WARNING"
    ;;
  "not installed")
    color="$GRAY"
    ;;
  *)
    color="$THEME_ERROR"
    ;;
esac

printf "%s%s%s\n" "$color" "$status" "$RESET"
}

# Load castable imp for direct execution (AFTER all functions defined)
# When executed directly: always source to ensure castable sees correct $0
# When sourced (testing): use from PATH if available to avoid forks
case "$0" in
  sh|dash|bash|zsh|ksh|mksh|*/sh|*/dash|*/bash|*/zsh|*/ksh|*/mksh)
    # Being sourced - use from PATH if available
    if ! command -v castable >/dev/null 2>&1; then
      # Use WIZARDRY_DIR or ROOT_DIR if available (avoids dirname/basename)
      if [ -n "${WIZARDRY_DIR-}" ]; then
        _i="$WIZARDRY_DIR/spells/.imps/sys"
      elif [ -n "${ROOT_DIR-}" ]; then
        _i="$ROOT_DIR/spells/.imps/sys"
      else
        _i="${WIZARDRY_DIR:-${ROOT_DIR:-${0%/*/*/*/*}}}/spells/.imps/sys"
      fi
      [ -f "$_i/castable" ] && . "$_i/castable"
    fi
    ;;
  *)
    # Being executed - always source to ensure correct $0 detection
    if [ -n "${WIZARDRY_DIR-}" ]; then
      _i="$WIZARDRY_DIR/spells/.imps/sys"
    elif [ -n "${ROOT_DIR-}" ]; then
      _i="$ROOT_DIR/spells/.imps/sys"
    else
      _i="${WIZARDRY_DIR:-${ROOT_DIR:-${0%/*/*/*/*}}}/spells/.imps/sys"
    fi
    [ -f "$_i/castable" ] && . "$_i/castable"
    ;;
esac

castable "$@"
