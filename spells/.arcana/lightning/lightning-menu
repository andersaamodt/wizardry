#!/bin/sh

# Present the Lightning management menu.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: lightning-menu

Displays the Lightning management menu.
USAGE
  exit 0
  ;;
esac

require_wizardry || exit 1

set -eu
env_clear
. colors

trap 'exit 0' INT TERM

command_available() {
  command -v "$1" >/dev/null 2>&1
