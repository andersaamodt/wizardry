#!/bin/sh

# Manage Lightning wallets directly through lightning-cli.

lightning_wallet_menu_usage() {
  cat <<'USAGE'
Usage: lightning-wallet-menu

Displays wallet-focused Lightning commands.
USAGE
}

lightning_wallet_menu() {
case "${1-}" in
  --help|--usage|-h)
    lightning_wallet_menu_usage
    return 0
    ;;
esac

require-wizardry || return 1


set -eu
. env-clear
. colors

trap 'exit 0' INT TERM

read_prompt() {
  prompt=$1
  printf "%s: " "$prompt"
  read -r value
  printf '%s' "$value"
}

wallet_menu() {
  title="${BOLD}${CYAN}Lightning Wallet"
  balance_option="List Funds%lightning-cli listfunds"
  new_address_option="Generate New Address%lightning-cli newaddr"
  invoices_option="List Invoices%lightning-cli listinvoices"
  create_invoice_option="Create Invoice%sh -c 'amt=$(printf "Amount (msat): "; read -r a; printf "%s" "$a"); label=$(printf "Label: "; read -r l; printf "%s" "$l"); desc=$(printf "Description: "; read -r d; printf "%s" "$d"); lightning-cli invoice "$amt" "$label" "$desc"'"
  pay_invoice_option="Pay Invoice%sh -c 'printf "Invoice: "; read -r inv; lightning-cli pay "$inv"'"
  exit_label=$(exit-label)
  exit_option="${exit_label}%kill -TERM \$PPID"

  menu "$title" \
    "$balance_option" \
    "$new_address_option" \
    "$invoices_option" \
    "$create_invoice_option" \
    "$pay_invoice_option" \
    "$exit_option" || true
}

wallet_menu

}

# Load castable imp for direct execution (AFTER all functions defined)
# When executed directly: always source to ensure castable sees correct $0
# When sourced (testing): use from PATH if available to avoid forks
case "$0" in
  sh|dash|bash|zsh|ksh|mksh|*/sh|*/dash|*/bash|*/zsh|*/ksh|*/mksh)
    # Being sourced - use from PATH if available
    if ! command -v castable >/dev/null 2>&1; then
      _d=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
      _r=$(cd "$_d" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
      _i="${WIZARDRY_DIR:-${_r}}/spells/.imps/sys"
      [ -f "$_i/castable" ] && . "$_i/castable"
    fi
    ;;
  *)
    # Being executed - always source to ensure correct $0 detection
      _d=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
      _r=$(cd "$_d" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
      _i="${WIZARDRY_DIR:-${_r}}/spells/.imps/sys"
      [ -f "$_i/castable" ] && . "$_i/castable"
    ;;
esac

castable "$@"
