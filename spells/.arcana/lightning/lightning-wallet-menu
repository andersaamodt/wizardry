#!/bin/sh

# Manage Lightning wallets directly through lightning-cli.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: . lightning-wallet-menu    OR    lightning wallet menu    (via parse/gloss)

Displays wallet-focused Lightning commands.

This spell must be sourced (not executed) to affect your current shell.
USAGE
  return 0 2>/dev/null || exit 0
  ;;
esac

require-wizardry || return 1 2>/dev/null || exit 1

# Uncastable pattern - detect if sourced
lightning_wallet_menu_sourced=0
if eval '[ -n "${ZSH_VERSION+x}" ]' 2>/dev/null; then
  case "${ZSH_EVAL_CONTEXT-}" in
    *:file) lightning_wallet_menu_sourced=1 ;;
  esac
else
  lightning_wallet_menu_base=${0##*/}
  case "$lightning_wallet_menu_base" in
    sh|dash|bash|zsh|ksh|mksh) lightning_wallet_menu_sourced=1 ;;
    lightning-wallet-menu) lightning_wallet_menu_sourced=0 ;;
    parse) lightning_wallet_menu_sourced=1 ;;  # Sourced via parse
    *) lightning_wallet_menu_sourced=1 ;;
  esac
fi

if [ "$lightning_wallet_menu_sourced" -eq 0 ]; then
  printf '%s\n' "This spell must be sourced. Use:  . lightning-wallet-menu  OR  lightning wallet menu" >&2
  return 1 2>/dev/null || exit 1
fi
unset lightning_wallet_menu_sourced lightning_wallet_menu_base

set +e  # Permissive mode since we're in user's shell
set -u
. env-clear
. colors

trap 'return 0' INT TERM

first_run=1

while true; do
  if [ "$first_run" -eq 0 ]; then
    printf '\n'
  else
    first_run=0
  fi

  # Build wallet menu
  title="${BOLD}${CYAN}Lightning Wallet"
  exit_label=$(exit-label)
  exit_option="${exit_label}%kill -TERM \$PPID"
  
  new_addr="New Address%lightning-cli newaddr"
  list_funds="List Funds%lightning-cli listfunds"
  withdraw="Withdraw%printf 'Destination: '; read -r dest; printf 'Amount (sats): '; read -r amt; lightning-cli withdraw \"\$dest\" \"\$amt\""
  
  menu "$title" "$new_addr" "$list_funds" "$withdraw" "$exit_option" || true
done
