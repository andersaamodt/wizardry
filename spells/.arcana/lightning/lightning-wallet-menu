#!/bin/sh

# Manage Lightning wallets directly through lightning-cli.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: lightning-wallet-menu

Displays wallet-focused Lightning commands.
USAGE
  exit 0
  ;;
esac

require_wizardry || exit 1

set -eu
env_clear
. colors

trap 'exit 0' INT TERM

read_prompt() {
  prompt=$1
  printf "%s: " "$prompt"
  read -r value
  printf '%s' "$value"
