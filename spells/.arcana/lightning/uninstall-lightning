#!/bin/sh

# Uninstall Bitcoin Lightning.

uninstall_lightning_usage() {
        cat <<'USAGE' >&2
Usage: uninstall-lightning

Removes Bitcoin Lightning binaries and undoes NixOS configuration where possible.
USAGE
}

uninstall_lightning() {
case "${1-}" in
--help|--usage|-h)
        uninstall_lightning_usage
        return 0
        ;;
esac

require-wizardry || return 1


set -eu
. env-clear

remove_nixos_entry() {
  config=${1:-/etc/nixos/configuration.nix}
  if [ ! -f "$config" ]; then
    return 0
  fi
  if command -v backup-nix-config >/dev/null 2>&1; then
    backup-nix-config "$config" >&2 || true
  fi
  if grep -q 'clightning' "$config"; then
    sudo sed -i '/clightning/d' "$config"
    printf '%s\n' "Removed clightning from $config"
    printf '%s\n' 'Rebuilding NixOS after removal...'
    sudo nixos-rebuild all
  fi
}

uninstall_lightning() {
  distro="$(detect-distro 2>/dev/null || os)"
  case $distro in
    debian|ubuntu|linux)
      if command -v sudo >/dev/null 2>&1; then
        sudo apt-get remove -y lightningd || true
      else
        apt-get remove -y lightningd || true
      fi
      ;;
    arch)
      if command -v sudo >/dev/null 2>&1; then
        sudo pacman -R --noconfirm lightningd || true
      else
        pacman -R --noconfirm lightningd || true
      fi
      ;;
    mac|macos)
      if command -v brew >/dev/null 2>&1; then
        brew uninstall lightningd 2>/dev/null || brew uninstall core-lightning 2>/dev/null || true
      fi
      ;;
    nixos)
      remove_nixos_entry "/etc/nixos/configuration.nix"
      if command -v sudo >/dev/null 2>&1 && command -v nix-env >/dev/null 2>&1; then
        sudo nix-env -e clightning 2>/dev/null || true
      elif command -v nix-env >/dev/null 2>&1; then
        nix-env -e clightning 2>/dev/null || true
      fi
      ;;
    *)
      printf '%s\n' 'Unsupported distribution for automatic removal.'
      ;;
  esac

  if command -v lightning-cli >/dev/null 2>&1; then
    printf '%s\n' 'Lightning may still be present; some files might require manual cleanup.'
  else
    printf '%s\n' 'Lightning has been removed.'
  fi
}

uninstall_lightning

}

# Load castable imp for direct execution (AFTER all functions defined)
# When executed directly: always source to ensure castable sees correct $0
# When sourced (testing): use from PATH if available to avoid forks
case "$0" in
  sh|dash|bash|zsh|ksh|mksh|*/sh|*/dash|*/bash|*/zsh|*/ksh|*/mksh)
    # Being sourced - use from PATH if available
    if ! command -v castable >/dev/null 2>&1; then
      # Use WIZARDRY_DIR or ROOT_DIR if available (avoids dirname/basename)
      if [ -n "${WIZARDRY_DIR-}" ]; then
        _i="$WIZARDRY_DIR/spells/.imps/sys"
      elif [ -n "${ROOT_DIR-}" ]; then
        _i="$ROOT_DIR/spells/.imps/sys"
      else
        _i="${WIZARDRY_DIR:-${ROOT_DIR:-${0%/*/*/*/*}}}/spells/.imps/sys"
      fi
      [ -f "$_i/castable" ] && . "$_i/castable"
    fi
    ;;
  *)
    # Being executed - always source to ensure correct $0 detection
    if [ -n "${WIZARDRY_DIR-}" ]; then
      _i="$WIZARDRY_DIR/spells/.imps/sys"
    elif [ -n "${ROOT_DIR-}" ]; then
      _i="$ROOT_DIR/spells/.imps/sys"
    else
      _i="${WIZARDRY_DIR:-${ROOT_DIR:-${0%/*/*/*/*}}}/spells/.imps/sys"
    fi
    [ -f "$_i/castable" ] && . "$_i/castable"
    ;;
esac

castable "$@"
