#!/bin/sh

# Returns 0 (true) if Lightning is installed, 1 (false) if not

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: is-lightning-installed

Checks PATH for lightning-cli to confirm whether Core Lightning is installed.
USAGE
  exit 0
  ;;
esac

require-wizardry || exit 1

set -eu
. env-clear

command -v lightning-cli >/dev/null 2>&1
