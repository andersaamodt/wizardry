#!/bin/sh

# Check if Bitcoin daemon is currently running.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: is-bitcoin-running

Checks whether bitcoind is active by probing the bitcoin-cli RPC; emits "Yes" or "No" for easy scripting.
USAGE
  exit 0
  ;;
esac

require-wizardry || exit 1

set -eu
env_clear
if ps -e | grep -q '[b]itcoind'; then
    if [ -t 1 ]; then  # Check if output is a terminal
        echo "Bitcoin is running."
    fi
    return 0  # Bitcoin is running (success)
else
    if [ -t 1 ]; then  # Check if output is a terminal
        echo "Bitcoin is not running."
    fi
    return 1  # Bitcoin is not running (failure)
fi
