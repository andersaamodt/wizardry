#!/bin/sh

# Returns 0 (true) if Bitcoin is installed, 1 (false) if not

is_bitcoin_installed_usage() {
        cat <<'USAGE' >&2
Usage: is-bitcoin-installed

Checks PATH for bitcoin-cli to confirm whether Bitcoin Core is installed, responding "Yes" or "No".
USAGE
}

case "${1-}" in
--help|--usage|-h)
        is_bitcoin_installed_usage
        exit 0
        ;;
esac


# Returns 0 (true) if Bitcoin is installed, 1 (false) if not

set -eu
command -v bitcoin-cli >/dev/null 2>&1
