#!/bin/sh

# Returns 0 (true) if Bitcoin is installed, 1 (false) if not

is_bitcoin_installed_usage() {
        cat <<'USAGE' >&2
Usage: is-bitcoin-installed

Checks PATH for bitcoin-cli to confirm whether Bitcoin Core is installed, responding "Yes" or "No".
USAGE
}

is_bitcoin_installed() {
case "${1-}" in
--help|--usage|-h)
        is_bitcoin_installed_usage
        return 0
        ;;
esac

require-wizardry || return 1



# Returns 0 (true) if Bitcoin is installed, 1 (false) if not

set -eu
. env-clear
command -v bitcoin-cli >/dev/null 2>&1

}

# Load castable imp for direct execution
# CRITICAL: Check if already available before sourcing to avoid fork limits
if ! command -v castable >/dev/null 2>&1; then
  _d=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _r=$(cd "$_d" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  _i="${WIZARDRY_DIR:-${_r}}/spells/.imps/sys"
  [ -f "$_i/castable" ] && . "$_i/castable"
fi

castable "$@"