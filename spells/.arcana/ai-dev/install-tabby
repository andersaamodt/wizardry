#!/bin/sh

# Install Tabby in a cross-platform POSIX-compliant way.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: install-tabby

Installs Tabby without using homebrew, in a POSIX-compliant cross-platform manner.
USAGE
  exit 0
  ;;
esac

set -eu
. env-clear

script_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd)

# Check if already installed
if "$script_dir/is-ai-component-installed" tabby 2>/dev/null; then
  success "Tabby is already installed"
  exit 0
fi

say "Installing Tabby..."

OS=$(uname -s 2>/dev/null)
ARCH=$(uname -m 2>/dev/null)

install_dir="$HOME/.local/bin"
mkdir -p "$install_dir"

# Determine the download URL based on OS and architecture
case "$OS" in
Darwin)
  # macOS installation
  case "$ARCH" in
  x86_64)
    url="https://github.com/TabbyML/tabby/releases/latest/download/tabby_x86_64-apple-darwin"
    ;;
  arm64)
    url="https://github.com/TabbyML/tabby/releases/latest/download/tabby_aarch64-apple-darwin"
    ;;
  *)
    die "install-tabby: unsupported architecture: $ARCH"
    ;;
  esac
  ;;
Linux)
  # Linux installation
  case "$ARCH" in
  x86_64)
    url="https://github.com/TabbyML/tabby/releases/latest/download/tabby_x86_64-unknown-linux-musl"
    ;;
  aarch64|arm64)
    url="https://github.com/TabbyML/tabby/releases/latest/download/tabby_aarch64-unknown-linux-musl"
    ;;
  *)
    die "install-tabby: unsupported architecture: $ARCH"
    ;;
  esac
  ;;
*)
  die "install-tabby: unsupported operating system: $OS"
  ;;
esac

# Download Tabby binary
temp_file=$(temp-file tabby)
if has curl; then
  curl -fsSL -o "$temp_file" "$url" || die "install-tabby: failed to download Tabby"
elif has wget; then
  wget -q -O "$temp_file" "$url" || die "install-tabby: failed to download Tabby"
else
  die "install-tabby: curl or wget required"
fi

# Install the binary
mv "$temp_file" "$install_dir/tabby"
chmod +x "$install_dir/tabby"

# Verify installation
if ! "$script_dir/is-ai-component-installed" tabby 2>/dev/null; then
  die "install-tabby: installation verification failed"
fi

success "Tabby installed successfully"
