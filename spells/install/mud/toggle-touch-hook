#!/bin/sh

# Toggle touch hook on/off in MUD config.
# This is a planned feature that will activate special behavior on touch.

show_usage() {
        cat <<'USAGE'
Usage: toggle-touch-hook

Toggle the touch hook on or off. When enabled, touching a portkey
or other special file will activate its function.

This is a planned feature. Currently, toggling this option only
updates the configuration file at ~/.spellbook/.mud/config.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        show_usage
        exit 0
        ;;
esac

set -eu

SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
MUD_CONFIG="$SCRIPT_DIR/mud-config"

if [ ! -x "$MUD_CONFIG" ]; then
        printf '%s\n' "Error: mud-config not found at '$MUD_CONFIG'." >&2
        exit 1
fi

# Toggle the feature and report state
new_state=$("$MUD_CONFIG" toggle touch-hook)

if [ "$new_state" = "1" ]; then
        printf '%s\n' "✓ Touch hook enabled (planned feature)."
else
        printf '%s\n' "✓ Touch hook disabled."
fi
