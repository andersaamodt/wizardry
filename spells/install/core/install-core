#!/usr/bin/env sh

script_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)

detect_platform() {
  if command -v uname >/dev/null 2>&1; then
    uname -s 2>/dev/null || printf '%s' "unknown"
  else
    printf '%s' "unknown"
  fi
}

core_dependencies() {
  platform=$(detect_platform)
  case $platform in
    Darwin)
      cat <<'EOF'
Git:git:install-git:uninstall-git
dd:dd:install-dd:uninstall-dd
stty:stty:install-stty:uninstall-stty
tput:tput:install-tput:uninstall-tput
EOF
      ;;
    *)
      cat <<'EOF'
Git:git:install-git:uninstall-git
Bubblewrap:bwrap:install-bwrap:uninstall-bwrap
dd:dd:install-dd:uninstall-dd
stty:stty:install-stty:uninstall-stty
tput:tput:install-tput:uninstall-tput
EOF
      ;;
  esac
}

resolve_spell() {
  spell_name=$1
  if command -v "$spell_name" >/dev/null 2>&1; then
    printf '%s\n' "$spell_name"
    return 0
  fi

  if [ -x "$script_dir/$spell_name" ]; then
    printf '%s\n' "$script_dir/$spell_name"
    return 0
  fi

  printf '%s\n' "install-core: missing helper '$spell_name'" >&2
  return 1
}

install_core() {
  # Try to install each core dependency, but don't fail if optional packages
  # can't be installed (e.g., on NixOS where packages must be installed declaratively)
  core_dependencies | while IFS=: read -r label command_name install_spell _; do
    if command -v "$command_name" >/dev/null 2>&1; then
      continue
    fi

    spell=$(resolve_spell "$install_spell") || return 1
    if ! ASSUME_YES=1 "$spell"; then
      printf '%s\n' "install-core: optional dependency $label could not be installed automatically" >&2
      # Continue with other packages rather than failing completely
    fi
  done
  
  # Always return success - optional package installation failures are non-fatal
  return 0
}

if [ "${0##*/}" = "install-core" ]; then
  set -eu
  install_core "$@"
fi
