#!/usr/bin/env sh

# Install or uninstall a system command using the available package manager.
# Usage: manage-system-command [--uninstall] <command> <default-package>

set -eu

action=install
if [ "${1-}" = "--uninstall" ]; then
  action=uninstall
  shift
fi

if [ "$#" -lt 2 ]; then
  printf '%s\n' "Usage: manage-system-command [--uninstall] <command> <default-package>" >&2
  exit 1
fi

command_name=$1
package_default=$2
force_install=${FORCE_INSTALL:-0}

# Allow per-manager package overrides when names diverge across distros.
apt_package=${APT_PACKAGE:-$package_default}
dnf_package=${DNF_PACKAGE:-$package_default}
yum_package=${YUM_PACKAGE:-$package_default}
zypper_package=${ZYPPER_PACKAGE:-$package_default}
pacman_package=${PACMAN_PACKAGE:-$package_default}
apk_package=${APK_PACKAGE:-$package_default}
brew_package=${BREW_PACKAGE:-$package_default}

run_installer() {
  cmd=$1
  shift
  if command -v sudo >/dev/null 2>&1; then
    sudo "$cmd" "$@"
  else
    "$cmd" "$@"
  fi
}

try_action() {
  installer=$1
  shift
  if ! command -v "$installer" >/dev/null 2>&1; then
    return 1
  fi
  run_installer "$installer" "$@"
}

if [ "$action" = "install" ]; then
  if [ "$force_install" != "1" ] && command -v "$command_name" >/dev/null 2>&1; then
    printf '%s\n' "${command_name} is already installed."
    exit 0
  fi

  # Prefer non-interactive installs when possible.
  if try_action apt-get -y update && try_action apt-get -y install "$apt_package"; then
    exit 0
  fi

  if try_action dnf -y install "$dnf_package"; then
    exit 0
  fi

  if try_action yum -y install "$yum_package"; then
    exit 0
  fi

  if try_action zypper --non-interactive install "$zypper_package"; then
    exit 0
  fi

  if try_action pacman --noconfirm -Sy "$pacman_package"; then
    exit 0
  fi

  if try_action apk add --no-cache "$apk_package"; then
    exit 0
  fi

  if try_action brew install "$brew_package"; then
    exit 0
  fi

  printf '%s\n' "manage-system-command: unable to install $package_default automatically. Please install it manually." >&2
  exit 1
fi

# Uninstall path
if ! command -v "$command_name" >/dev/null 2>&1; then
  printf '%s\n' "${command_name} is not installed."
  exit 0
fi

if try_action apt-get -y remove "$apt_package"; then
  exit 0
fi

if try_action dnf -y remove "$dnf_package"; then
  exit 0
fi

if try_action yum -y remove "$yum_package"; then
  exit 0
fi

if try_action zypper --non-interactive remove "$zypper_package"; then
  exit 0
fi

if try_action pacman --noconfirm -R "$pacman_package"; then
  exit 0
fi

if try_action apk del "$apk_package"; then
  exit 0
fi

if try_action brew uninstall "$brew_package"; then
  exit 0
fi

printf '%s\n' "manage-system-command: unable to uninstall $command_name automatically. Please remove it manually." >&2
exit 1
