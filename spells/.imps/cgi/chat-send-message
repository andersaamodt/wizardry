#!/bin/sh
# chat-send-message - Send a message to a chat room (MUD-compatible format)
set -eu

# DEBUG: Log to file (safe - won't break script)
{
  printf '\n=== [DEBUG chat-send-message] Script started at %s ===\n' "$(date '+%Y-%m-%d %H:%M:%S')"
  printf '[DEBUG] REQUEST_METHOD=%s\n' "${REQUEST_METHOD:-UNSET}"
  printf '[DEBUG] QUERY_STRING=%s\n' "${QUERY_STRING:-UNSET}"
  printf '[DEBUG] WIZARDRY_SITE_NAME=%s\n' "${WIZARDRY_SITE_NAME:-UNSET}"
  printf '[DEBUG] WIZARDRY_SITES_DIR=%s\n' "${WIZARDRY_SITES_DIR:-UNSET}"
  printf '[DEBUG] WIZARDRY_DIR=%s\n' "${WIZARDRY_DIR:-UNSET}"
  printf '[DEBUG] HOME=%s\n' "${HOME:-UNSET}"
} >> ~/testlog.txt 2>&1 || true

http-ok-html

# Parse POST data from stdin (format: room=ROOM&user=USER&msg=MESSAGE)
if [ "${REQUEST_METHOD:-}" = "POST" ]; then
  post_data=$(cat)
  printf '[DEBUG] POST data received (length: %s)\n' "${#post_data}" >> ~/testlog.txt 2>&1 || true
else
  # Fallback to query string
  post_data="${QUERY_STRING:-}"
  printf '[DEBUG] Using query string\n' >> ~/testlog.txt 2>&1 || true
fi

# Parse parameters using get-query-param
printf '[DEBUG] Parsing parameters...\n' >> ~/testlog.txt 2>&1 || true
room_name=$(get-query-param "room" "$post_data")
printf '[DEBUG] room_name=%s\n' "$room_name" >> ~/testlog.txt 2>&1 || true
user_name=$(get-query-param "user" "$post_data")
printf '[DEBUG] user_name=%s\n' "$user_name" >> ~/testlog.txt 2>&1 || true
message=$(get-query-param "msg" "$post_data")
printf '[DEBUG] message=%s\n' "$message" >> ~/testlog.txt 2>&1 || true

# Validate inputs
printf '[DEBUG] Validating inputs...\n' >> ~/testlog.txt 2>&1 || true
if [ -z "$room_name" ] || [ -z "$message" ]; then
  printf '[DEBUG] VALIDATION FAILED: room_name or message empty\n' >> ~/testlog.txt 2>&1 || true
  cat <<HTML
<div class="demo-result error">
  <p>Room and message required</p>
</div>
HTML
  exit 0
fi
printf '[DEBUG] Input validation passed\n' >> ~/testlog.txt 2>&1 || true

# Validate room name to prevent path traversal
printf '[DEBUG] Validating room name...\n' >> ~/testlog.txt 2>&1 || true
if ! validate-room-name "$room_name"; then
  printf '[DEBUG] VALIDATION FAILED: invalid room name\n' >> ~/testlog.txt 2>&1 || true
  cat <<HTML
<div class="demo-result error">
  <p>Invalid room name</p>
</div>
HTML
  exit 0
fi
printf '[DEBUG] Room name validation passed\n' >> ~/testlog.txt 2>&1 || true

# Default user if not provided
if [ -z "$user_name" ]; then
  user_name="Anonymous"
  printf '[DEBUG] Using default username: Anonymous\n' >> ~/testlog.txt 2>&1 || true
fi

# Validate username
printf '[DEBUG] Validating username...\n' >> ~/testlog.txt 2>&1 || true
if ! validate-username "$user_name"; then
  printf '[DEBUG] VALIDATION FAILED: invalid username\n' >> ~/testlog.txt 2>&1 || true
  cat <<HTML
<div class="demo-result error">
  <p>Invalid username. Only alphanumeric, underscore, and hyphen allowed.</p>
</div>
HTML
  exit 0
fi
printf '[DEBUG] Username validation passed\n' >> ~/testlog.txt 2>&1 || true

# Sanitize username - reject reserved names that would conflict with room metadata
case "$user_name" in
  log|.log|.|..)
    printf '[DEBUG] VALIDATION FAILED: reserved username\n' >> ~/testlog.txt 2>&1 || true
    cat <<HTML
<div class="demo-result error">
  <p>Invalid username. 'log' is a reserved name.</p>
</div>
HTML
    exit 0
    ;;
esac
printf '[DEBUG] Username sanitization passed\n' >> ~/testlog.txt 2>&1 || true

# Chat rooms directory - use site-specific location
printf '[DEBUG] Getting chat directory...\n' >> ~/testlog.txt 2>&1 || true
CHAT_DIR=$(get-site-data-dir "chatrooms")
printf '[DEBUG] CHAT_DIR=%s\n' "$CHAT_DIR" >> ~/testlog.txt 2>&1 || true
ROOM_DIR="$CHAT_DIR/$room_name"
printf '[DEBUG] ROOM_DIR=%s\n' "$ROOM_DIR" >> ~/testlog.txt 2>&1 || true

if [ ! -d "$ROOM_DIR" ]; then
  printf '[DEBUG] Room not found\n' >> ~/testlog.txt 2>&1 || true
  cat <<HTML
<div class="demo-result error">
  <p>Room not found</p>
</div>
HTML
  exit 0
fi

LOG_FILE="$ROOM_DIR/.log"
printf '[DEBUG] LOG_FILE=%s\n' "$LOG_FILE" >> ~/testlog.txt 2>&1 || true

# Create or update avatar for this user using same logic as MUD incarnate
printf '[DEBUG] Checking avatar...\n' >> ~/testlog.txt 2>&1 || true
if [ ! -d "$ROOM_DIR/.$user_name" ]; then
  avatar_path=$(create-avatar "$user_name" "$ROOM_DIR" 2>/dev/null || printf '')
  # Mark as web avatar using enchant (xattr)
  if [ -n "$avatar_path" ]; then
    enchant "$avatar_path" "web_avatar=1" 2>/dev/null || true
  fi
fi

# Update last activity timestamp using enchant (xattr, not files)
current_timestamp=$(date +%s)
enchant "$ROOM_DIR/.$user_name" "last_activity=$current_timestamp" 2>/dev/null || true

# Create timestamp in full format for .log file (same as MUD)
timestamp=$(log-timestamp)

# Format message exactly like MUD 'say' command: [YYYY-MM-DD HH:MM:SS] player_name: message
log_entry="[$timestamp] $user_name: $message"
printf '[DEBUG] Log entry: %s\n' "$log_entry" >> ~/testlog.txt 2>&1 || true

# Append to log file
# CRITICAL: Wrap in subshell to force immediate buffer flush for tail -f visibility
# Shell file append (>>) buffers output until script exits
# Subshell exits immediately, flushing buffer so chat-stream's tail -f sees write
printf '[DEBUG] Attempting write...\n' >> ~/testlog.txt 2>&1 || true
if (printf '%s\n' "$log_entry" >> "$LOG_FILE") 2>/dev/null; then
  printf '[DEBUG] Write succeeded\n' >> ~/testlog.txt 2>&1 || true
  
  # Run cleanup after successful message send (periodic maintenance)
  # This removes avatars inactive for >5 minutes
  chat-cleanup-inactive-avatars "$ROOM_DIR" 2>/dev/null || true
  
  cat <<HTML
<div class="demo-result success">
  <p>âœ“ Message sent</p>
</div>
HTML
else
  printf '[DEBUG] Write FAILED\n' >> ~/testlog.txt 2>&1 || true
  cat <<HTML
<div class="demo-result error">
  <p>Failed to send message</p>
</div>
HTML
fi

printf '[DEBUG] Script completed\n' >> ~/testlog.txt 2>&1 || true
