#!/bin/sh
# pkg-remove PACKAGE - remove a package using the system package manager
# Example: pkg-remove vim
set -eu


pr_package=${1:-}
[ -z "$pr_package" ] && { printf '%s\n' "pkg-remove: package name required" >&2; exit 1; }

pr_pm=$(pkg-manager) || {
  printf '%s\n' "pkg-remove: no supported package manager" >&2
  exit 1
}

case $pr_pm in
  apt)    sudo apt-get -y remove "$pr_package" ;;
  pacman) sudo pacman --noconfirm -R "$pr_package" ;;
  nix)    nix-env -e "$pr_package" ;;
  pkgin)  sudo pkgin -y remove "$pr_package" ;;
esac
