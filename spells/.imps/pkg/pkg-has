#!/bin/sh
# pkg-has PACKAGE - test if a package is installed
# Example: pkg-has git && echo "git is installed"
set -eu


ph_package=${1:-}
[ -z "$ph_package" ] && { printf '%s\n' "pkg-has: package name required" >&2; exit 1; }

ph_pm=$(pkg-manager) || { printf '%s\n' "pkg-has: no supported package manager" >&2; exit 1; }

case $ph_pm in
  apt)    dpkg -l "$ph_package" 2>/dev/null | grep -q "^ii" ;;
  pacman) pacman -Q "$ph_package" >/dev/null 2>&1 ;;
  nix)    nix-env -q "$ph_package" >/dev/null 2>&1 ;;
  pkgin)  pkgin list 2>/dev/null | grep -q "^${_ph_package}-" ;;
esac
