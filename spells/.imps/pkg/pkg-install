#!/bin/sh
# pkg-install PACKAGE - install a package using the system package manager
# Example: pkg-install git

set -eu

_pkg_install() {
  _pi_package=${1:-}
  [ -z "$_pi_package" ] && { printf '%s\n' "pkg-install: package name required" >&2; return 1; }

  _pi_pm=$(_pkg_manager) || {
    printf '%s\n' "pkg-install: no supported package manager" >&2
    return 1
  }

  case $_pi_pm in
    apt)    sudo apt-get -y install "$_pi_package" ;;
    dnf)    sudo dnf -y install "$_pi_package" ;;
    pacman) sudo pacman --noconfirm -S "$_pi_package" ;;
    brew)   brew install "$_pi_package" ;;
    nix)    nix-env -iA "nixpkgs.$_pi_package" ;;
    pkgin)  sudo pkgin -y install "$_pi_package" ;;
    apk)    sudo apk add "$_pi_package" ;;
  esac
}

# Self-execute when run directly (not sourced)
case "$0" in
  */pkg-install) _pkg_install "$@" ;; esac
