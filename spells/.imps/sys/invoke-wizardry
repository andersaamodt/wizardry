#!/bin/sh
# invoke-wizardry - set up wizardry environment at shell startup
# Source this script to make all spells and imps available.
# Example in .bashrc: . ~/.wizardry/spells/.imps/sys/invoke-wizardry

# Prevent recursive sourcing
if [ "${_WIZARDRY_INVOKED-}" = "1" ]; then
  return 0
fi
_WIZARDRY_INVOKED=1
export _WIZARDRY_INVOKED

_invoke_wizardry() {
  if [ -z "${WIZARDRY_DIR-}" ]; then
    # Default to expected install location; user can set WIZARDRY_DIR manually if different
    _iw_script_dir="${HOME-}/.wizardry/spells/.imps/sys"
    WIZARDRY_DIR=$(CDPATH= cd -- "$_iw_script_dir/../../.." 2>/dev/null && pwd -P) || true
  fi
  
  if [ -z "${WIZARDRY_DIR-}" ] || [ ! -d "${WIZARDRY_DIR-}/spells" ]; then
    return 1
  fi
  
  export WIZARDRY_DIR
  
  : "${SPELLBOOK_DIR:=${HOME-}/.spellbook}"
  export SPELLBOOK_DIR
  
  # Source all imps to load their functions into the shell
  # This makes them available as shell functions for standardization and reliability
  _iw_imps_dir="$WIZARDRY_DIR/spells/.imps"
  if [ -d "$_iw_imps_dir" ]; then
    for _iw_family in "$_iw_imps_dir"/*; do
      [ -d "$_iw_family" ] || continue
      for _iw_imp in "$_iw_family"/*; do
        [ -f "$_iw_imp" ] && [ -r "$_iw_imp" ] || continue
        # Skip invoke-wizardry itself to prevent recursion
        case "$_iw_imp" in
          */invoke-wizardry) continue ;;
        esac
        # Source the imp to load its function
        # shellcheck disable=SC1090
        . "$_iw_imp" 2>/dev/null || true
        # Create alias from hyphenated name to underscore function name
        _iw_imp_name=$(basename "$_iw_imp")
        _iw_true_name=$(printf '_%s' "$_iw_imp_name" | sed 's/-/_/g')
        # Only create alias if the function exists
        if command -v "$_iw_true_name" >/dev/null 2>&1; then
          alias "$_iw_imp_name=$_iw_true_name" 2>/dev/null || true
        fi
      done
    done
  fi
  
  # Source all function-based spells that have self-execute guards
  # Function-based spells have both:
  # 1. A snake_case function definition matching the spell name (e.g., spell_name() for spell-name)
  # 2. A self-execute pattern (case "$0" in */spell-name) that prevents execution when sourced
  # Non-function spells will be handled by command_not_found_handle
  for _iw_spell_dir in "$WIZARDRY_DIR"/spells/*; do
    [ -d "$_iw_spell_dir" ] || continue
    case "$_iw_spell_dir" in
      */.imps|*/.arcana) continue ;;
    esac
    for _iw_spell in "$_iw_spell_dir"/*; do
      [ -f "$_iw_spell" ] && [ -r "$_iw_spell" ] || continue
      _iw_spell_name=$(basename "$_iw_spell")
      _iw_spell_func=$(printf '%s' "$_iw_spell_name" | sed 's/-/_/g')
      # Check if spell has both function definition AND self-execute guard
      if grep -qE "^[[:space:]]*${_iw_spell_func}[[:space:]]*\\(\\)" "$_iw_spell" 2>/dev/null && \
         grep -qE "case.*\\\$0.*in.*\\*/${_iw_spell_name}\\)" "$_iw_spell" 2>/dev/null; then
        # Safe to source - has function and self-execute guard
        # shellcheck disable=SC1090
        . "$_iw_spell" 2>/dev/null || true
        # Create alias if function exists
        if command -v "$_iw_spell_func" >/dev/null 2>&1; then
          alias "$_iw_spell_name=$_iw_spell_func" 2>/dev/null || true
        fi
      fi
    done
  done
  
  # Set up command_not_found_handle for non-function spells, parser, and .spellbook support
  # This enables:
  # - Non-function spells (not yet converted or without self-execute guards) to be executed
  # - Recursive parser functionality
  # - User spells in .spellbook to work on-the-fly
  # Use eval to check shell type while avoiding checkbashisms false positive
  if eval '[ -n "${BASH_VERSION+x}" ]' 2>/dev/null; then
    # Bash-specific command_not_found_handle
    eval 'command_not_found_handle() {
      # Try word-of-binding for autoloading (handles .spellbook and spell execution)
      if [ -n "${WIZARDRY_DIR-}" ] && [ -x "$WIZARDRY_DIR/spells/.imps/sys/word-of-binding" ]; then
        if "$WIZARDRY_DIR/spells/.imps/sys/word-of-binding" "$@" 2>/dev/null; then
          return $?
        fi
      fi
      # Fall back to parse for recursive grammar parsing
      if [ -n "${WIZARDRY_DIR-}" ] && [ -x "$WIZARDRY_DIR/spells/.imps/lex/parse" ]; then
        "$WIZARDRY_DIR/spells/.imps/lex/parse" "$@"
        return $?
      fi
      printf '\''%s: command not found\n'\'' "$1" >&2
      return 127
    }'
  elif eval '[ -n "${ZSH_VERSION+x}" ]' 2>/dev/null; then
    # Zsh-specific command_not_found_handler
    eval 'command_not_found_handler() {
      # Try word-of-binding for autoloading (handles .spellbook and spell execution)
      if [ -n "${WIZARDRY_DIR-}" ] && [ -x "$WIZARDRY_DIR/spells/.imps/sys/word-of-binding" ]; then
        if "$WIZARDRY_DIR/spells/.imps/sys/word-of-binding" "$@" 2>/dev/null; then
          return $?
        fi
      fi
      # Fall back to parse for recursive grammar parsing
      if [ -n "${WIZARDRY_DIR-}" ] && [ -x "$WIZARDRY_DIR/spells/.imps/lex/parse" ]; then
        "$WIZARDRY_DIR/spells/.imps/lex/parse" "$@"
        return $?
      fi
      printf '\''%s: command not found\n'\'' "$1" >&2
      return 127
    }'
  fi
}

# Run the setup when sourced
_invoke_wizardry

# Self-execute when run directly (not sourced)
case "$0" in
  */invoke-wizardry) _invoke_wizardry "$@" ;; esac
