#!/bin/sh
# invoke-wizardry - set up wizardry environment at shell startup
# Source this script to make all spells and imps available.
# Example in .bashrc: . ~/.wizardry/spells/.imps/sys/invoke-wizardry

# Ensure baseline PATH before anything else (macOS may have empty PATH)
# This prevents failures when trying to use basic commands like cd, pwd, etc.
baseline_path="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"
case ":${PATH-}:" in
  *":/usr/bin:"*|*":/bin:"*)
    # Already has at least one standard directory (with proper colon delimiters)
    ;;
  *)
    # PATH is empty or missing standard directories, prepend baseline
    # The ${PATH:+:}${PATH-} pattern adds a colon only if PATH is non-empty:
    # - ${PATH:+:} expands to ":" if PATH is set and non-empty, otherwise ""
    # - ${PATH-} expands to PATH's value if set, otherwise ""
    PATH="${baseline_path}${PATH:+:}${PATH-}"
    export PATH
    ;;
esac

# Explicitly use permissive mode - this file is sourced into user's shell
set +eu

# Prevent recursive sourcing
if [ "${_WIZARDRY_INVOKED-}" = "1" ]; then
  return 0
fi
_WIZARDRY_INVOKED=1
export _WIZARDRY_INVOKED

_invoke_wizardry() {
  if [ -z "${WIZARDRY_DIR-}" ]; then
    # Detect invoke-wizardry's actual location using shell-specific variables
    _iw_script_path=""
    
    # Bash: use BASH_SOURCE array
    # Use eval to prevent checkbashisms false positive on BASH_SOURCE
    if eval '[ -n "${BASH_VERSION-}" ]' 2>/dev/null; then
      _iw_script_path=$(eval 'printf "%s" "${BASH_SOURCE[0]-}"')
    # Zsh: use parameter expansion %x (current script path)
    elif [ -n "${ZSH_VERSION-}" ]; then
      # Use eval to prevent checkbashisms false positive
      _iw_script_path=$(eval 'printf "%s" "${(%):-%x}"')
    fi
    
    # Derive WIZARDRY_DIR from detected script path
    # invoke-wizardry is at: WIZARDRY_DIR/spells/.imps/sys/invoke-wizardry
    # So we need to go up 3 levels: sys -> .imps -> spells -> WIZARDRY_DIR
    if [ -n "$_iw_script_path" ] && [ -f "$_iw_script_path" ]; then
      _iw_script_dir=$(CDPATH= cd -- "$(dirname "$_iw_script_path")" 2>/dev/null && pwd -P) || true
      if [ -n "$_iw_script_dir" ]; then
        WIZARDRY_DIR=$(CDPATH= cd -- "$_iw_script_dir/../../.." 2>/dev/null && pwd -P) || true
      fi
    fi
  fi
  
  
  if [ -z "${WIZARDRY_DIR-}" ] || [ ! -d "${WIZARDRY_DIR-}/spells" ]; then
    return 1
  fi
  
  export WIZARDRY_DIR
  
  : "${SPELLBOOK_DIR:=${HOME-}/.spellbook}"
  export SPELLBOOK_DIR
  
  # Word-of-binding paradigm: Pre-load all spells and imps by sourcing them
  # Imps and spells are both loaded the same way - no PATH manipulation
  # The only difference is imps use _underscore true-names, spells use their own convention
  
  # Add only spellbook to PATH (for user's custom standalone scripts)
  case ":${PATH-}:" in
    *":$SPELLBOOK_DIR:"*) ;;
    *) PATH="$SPELLBOOK_DIR:${PATH-}" ;;
  esac
  export PATH
  
  
  # Source all imps to load their functions into the shell
  # Imps are spells too - they're loaded the same way as regular spells
  # The only difference is imps use _underscore true-names
  _iw_imps_dir="$WIZARDRY_DIR/spells/.imps"
  _iw_imp_count=0
  if [ -d "$_iw_imps_dir" ]; then
    for _iw_family in "$_iw_imps_dir"/*; do
      [ -d "$_iw_family" ] || continue
      # Skip test imps - they're only for testing, not production use
      _iw_family_name=$(basename "$_iw_family")
      case "$_iw_family_name" in
        test) continue ;;
      esac
      for _iw_imp in "$_iw_family"/*; do
        [ -f "$_iw_imp" ] && [ -r "$_iw_imp" ] || continue
        # Skip invoke-wizardry itself to prevent recursion
        # Skip invoke-thesaurus to prevent double execution (loaded separately later for synonym handling)
        case "$_iw_imp" in
          */invoke-wizardry|*/invoke-thesaurus) continue ;;
        esac
        
        # Imps use _underscore true-names (e.g., say -> _say)
        _iw_imp_name=$(basename "$_iw_imp")
        _iw_imp_true_name=$(printf '_%s' "$_iw_imp_name" | sed 's/-/_/g')
        
        # Only source imps that define their true-name function
        if grep -qE "^[[:space:]]*${_iw_imp_true_name}[[:space:]]*\\(\\)" "$_iw_imp" 2>/dev/null; then
          # Source the imp to load its function
          # shellcheck disable=SC1090
          . "$_iw_imp" 2>/dev/null || true
          # Restore permissive mode - sourcing imps with set -eu changes parent shell mode
          set +eu
          
          # Create alias from hyphenated name to underscore function name
          # This is the imp paradigm: hyphenated command -> _underscore_function
          if command -v "$_iw_imp_true_name" >/dev/null 2>&1; then
            alias "$_iw_imp_name=$_iw_imp_true_name" 2>/dev/null || true
            _iw_imp_count=$((_iw_imp_count + 1))
          fi
        fi
      done
    done
  fi
  
  
  # Set flag to prevent env-clear from clearing parent's variables
  _WIZARDRY_LOADING_SPELLS=1
  export _WIZARDRY_LOADING_SPELLS
  
  # Word-of-binding: Pre-load all spells by sourcing them
  # This makes spell functions immediately available in the current shell
  # Spells are sourced (not executed) to bind their functions into the shell
  _iw_spell_count=0
  for _iw_spell_cat in "$WIZARDRY_DIR"/spells/*; do
    [ -d "$_iw_spell_cat" ] || continue
    # Skip hidden directories (like .imps and .arcana)
    case "$_iw_spell_cat" in
      */.*) continue ;;
    esac
    
    _iw_cat_name=$(basename "$_iw_spell_cat")
    
    for _iw_spell in "$_iw_spell_cat"/*; do
      [ -f "$_iw_spell" ] && [ -r "$_iw_spell" ] || continue
      
      # Spells use spell_name() true-names (no underscore prefix)
      # Format: spell-name defines spell_name() function
      _iw_spell_name=$(basename "$_iw_spell")
      _iw_spell_true_name=$(printf '%s' "$_iw_spell_name" | sed 's/-/_/g')
      
      # Only source spells that define their true-name function
      # This skips standalone scripts that don't use the binding pattern
      if grep -qE "^[[:space:]]*${_iw_spell_true_name}[[:space:]]*\\(\\)" "$_iw_spell" 2>/dev/null; then
        # Source the spell to load its function
        # shellcheck disable=SC1090
        . "$_iw_spell" 2>/dev/null || true
        # Restore permissive mode - sourcing spells with set -eu changes parent shell mode
        set +eu
        
        # Create alias from hyphenated name to underscore function name
        # spell-name -> spell_name
        if command -v "$_iw_spell_true_name" >/dev/null 2>&1; then
          alias "$_iw_spell_name=$_iw_spell_true_name" 2>/dev/null || true
          _iw_spell_count=$((_iw_spell_count + 1))
        fi
      fi
    done
  done
  
  
  # Pre-load spells from user's spellbook
  # User spells follow the same pattern as regular spells (spell_name, no underscore)
  _iw_user_spell_count=0
  if [ -d "$SPELLBOOK_DIR" ]; then
    for _iw_user_spell in "$SPELLBOOK_DIR"/*; do
      [ -f "$_iw_user_spell" ] && [ -r "$_iw_user_spell" ] || continue
      
      _iw_user_spell_name=$(basename "$_iw_user_spell")
      _iw_user_spell_true_name=$(printf '%s' "$_iw_user_spell_name" | sed 's/-/_/g')
      
      # Only source if it has a true-name function (spell_name, not _spell_name)
      if grep -qE "^[[:space:]]*${_iw_user_spell_true_name}[[:space:]]*\\(\\)" "$_iw_user_spell" 2>/dev/null; then
        # shellcheck disable=SC1090
        . "$_iw_user_spell" 2>/dev/null || true
        set +eu
        
        if command -v "$_iw_user_spell_true_name" >/dev/null 2>&1; then
          alias "$_iw_user_spell_name=$_iw_user_spell_true_name" 2>/dev/null || true
          _iw_user_spell_count=$((_iw_user_spell_count + 1))
        fi
      fi
    done
  fi
  
  
  # Clear the spell loading flag
  unset _WIZARDRY_LOADING_SPELLS
  
  
  # Hotloading: command_not_found_handle provides fallback for spells not yet loaded
  # This handles new spells added after shell startup and non-function spells
  # Only set up if enabled via config (command-not-found=1 in ~/.spellbook/.mud/config)
  
  # Check if command-not-found hook is enabled (defaults to enabled if not configured)
  _iw_cnf_enabled=1
  _iw_spellbook="${SPELLBOOK_DIR:-${HOME-}/.spellbook}"
  _iw_cnf_config="$_iw_spellbook/.mud/config"
  if [ -f "$_iw_cnf_config" ]; then
    # Check if explicitly disabled (command-not-found=0)
    if grep -q "^command-not-found=0$" "$_iw_cnf_config" 2>/dev/null; then
      _iw_cnf_enabled=0
    fi
  fi
  
  # Only set up command_not_found_handle if enabled
  if [ "$_iw_cnf_enabled" -eq 1 ]; then
    # Use eval to check shell type while avoiding checkbashisms false positive
    if eval '[ -n "${BASH_VERSION+x}" ]' 2>/dev/null; then
      # Bash-specific command_not_found_handle
      eval 'command_not_found_handle() {
        # Prevent infinite recursion - check if we'\''re already in the handler
        if [ "${_WIZARDRY_IN_CNF_HANDLER-}" = "1" ]; then
          printf '\''%s: command not found\n'\'' "$1" >&2
          return 127
        fi
        _WIZARDRY_IN_CNF_HANDLER=1
        
        # Try word-of-binding for autoloading (handles hotloaded spells)
        if [ -n "${WIZARDRY_DIR-}" ] && [ -x "$WIZARDRY_DIR/spells/.imps/sys/word-of-binding" ]; then
          if "$WIZARDRY_DIR/spells/.imps/sys/word-of-binding" "$@" 2>/dev/null; then
            unset _WIZARDRY_IN_CNF_HANDLER
            return 0
          fi
        fi
        # Fall back to parse for recursive grammar parsing
        if [ -n "${WIZARDRY_DIR-}" ] && [ -x "$WIZARDRY_DIR/spells/.imps/lex/parse" ]; then
          if "$WIZARDRY_DIR/spells/.imps/lex/parse" "$@" 2>/dev/null; then
            unset _WIZARDRY_IN_CNF_HANDLER
            return 0
          fi
        fi
        # Command truly not found - return 127
        unset _WIZARDRY_IN_CNF_HANDLER
        printf '\''%s: command not found\n'\'' "$1" >&2
        return 127
      }'
    elif eval '[ -n "${ZSH_VERSION+x}" ]' 2>/dev/null; then
      # Zsh-specific command_not_found_handler
      eval 'command_not_found_handler() {
        # Prevent infinite recursion - check if we'\''re already in the handler
        if [ "${_WIZARDRY_IN_CNF_HANDLER-}" = "1" ]; then
          printf '\''%s: command not found\n'\'' "$1" >&2
          return 127
        fi
        _WIZARDRY_IN_CNF_HANDLER=1
        
        # Try word-of-binding for autoloading (handles hotloaded spells)
        if [ -n "${WIZARDRY_DIR-}" ] && [ -x "$WIZARDRY_DIR/spells/.imps/sys/word-of-binding" ]; then
          if "$WIZARDRY_DIR/spells/.imps/sys/word-of-binding" "$@" 2>/dev/null; then
            unset _WIZARDRY_IN_CNF_HANDLER
            return 0
          fi
        fi
        # Fall back to parse for recursive grammar parsing
        if [ -n "${WIZARDRY_DIR-}" ] && [ -x "$WIZARDRY_DIR/spells/.imps/lex/parse" ]; then
          if "$WIZARDRY_DIR/spells/.imps/lex/parse" "$@" 2>/dev/null; then
            unset _WIZARDRY_IN_CNF_HANDLER
            return 0
          fi
        fi
        # Command truly not found - return 127
        unset _WIZARDRY_IN_CNF_HANDLER
        printf '\''%s: command not found\n'\'' "$1" >&2
        return 127
      }'
    fi
  fi
  
  
  # Load synonyms (aliases) from spellbook by sourcing invoke-thesaurus
  # invoke-thesaurus handles initialization, enable/disable checks, and sourcing
  _iw_invoke_thesaurus="$WIZARDRY_DIR/spells/.imps/sys/invoke-thesaurus"
  if [ -f "$_iw_invoke_thesaurus" ] && [ -r "$_iw_invoke_thesaurus" ]; then
    # shellcheck disable=SC1090
    . "$_iw_invoke_thesaurus" 2>/dev/null || true
    # Restore permissive mode - sourcing may have changed shell mode
    set +eu
  fi
  
  
  # Set up cd hook for MUD features by sourcing the cd spell
  # This replaces the separate install-cd step
  # The cd spell checks config file to determine if look should run
  _iw_cd_spell="$WIZARDRY_DIR/spells/.arcana/mud/cd"
  if [ -f "$_iw_cd_spell" ] && [ -r "$_iw_cd_spell" ]; then
    # shellcheck disable=SC1090
    . "$_iw_cd_spell" 2>/dev/null || true
    # Restore permissive mode
    set +eu
  fi
  
  
  # Return success
  return 0
}

# Run the setup when sourced
_invoke_wizardry

# Self-execute when run directly (not sourced)
case "$0" in
  */invoke-wizardry) _invoke_wizardry "$@" ;; esac
