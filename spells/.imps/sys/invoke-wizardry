#!/bin/sh
# invoke-wizardry - set up wizardry environment at shell startup
# Source this script to make all spells and imps available.
# Example in .bashrc: . ~/.wizardry/spells/.imps/sys/invoke-wizardry

# IMMEDIATE DIAGNOSTIC - Output BEFORE anything else
printf '%s\n' "[invoke-wizardry] SCRIPT LOADED - Starting execution" >&2

# Ensure baseline PATH before anything else (macOS may have empty PATH)
# This prevents failures when trying to use basic commands like cd, pwd, etc.
baseline_path="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"
printf '%s\n' "[invoke-wizardry] Setting baseline PATH" >&2
case ":${PATH-}:" in
  *":/usr/bin:"*|*":/bin:"*)
    # Already has at least one standard directory (with proper colon delimiters)
    printf '%s\n' "[invoke-wizardry] PATH already has standard directories" >&2
    ;;
  *)
    # PATH is empty or missing standard directories, prepend baseline
    # The ${PATH:+:}${PATH-} pattern adds a colon only if PATH is non-empty:
    # - ${PATH:+:} expands to ":" if PATH is set and non-empty, otherwise ""
    # - ${PATH-} expands to PATH's value if set, otherwise ""
    printf '%s\n' "[invoke-wizardry] PATH missing standard directories, adding baseline" >&2
    PATH="${baseline_path}${PATH:+:}${PATH-}"
    export PATH
    ;;
esac
printf '%s\n' "[invoke-wizardry] PATH setup complete" >&2

# Explicitly use permissive mode - this file is sourced into user's shell
set +eu
printf '%s\n' "[invoke-wizardry] Permissive mode set" >&2

# DIAGNOSTIC MODE: Always show progress on stderr to diagnose hangs
# This will be visible in the terminal to help identify where it's hanging
printf '%s\n' "[invoke-wizardry] Starting (unconditional diagnostic output enabled)" >&2

# Debug logging support - set WIZARDRY_DEBUG=1 to enable detailed logging
# Logs go to ~/.wizardry-debug.log to avoid interfering with terminal
# Set up debug file path once
if [ "${WIZARDRY_DEBUG-}" = "1" ] && [ -n "${HOME-}" ]; then
  _iw_debug_file="$HOME/.wizardry-debug.log"
  # Write a marker immediately to confirm logging is working
  # Use printf directly without date to avoid potential hangs
  printf '%s\n' "=== invoke-wizardry: DEBUG LOGGING ENABLED ===" >> "$_iw_debug_file" 2>/dev/null || :
  printf '%s\n' "HOME=$HOME" >> "$_iw_debug_file" 2>/dev/null || :
  printf '%s\n' "WIZARDRY_DEBUG=$WIZARDRY_DEBUG" >> "$_iw_debug_file" 2>/dev/null || :
  printf '%s\n' "[invoke-wizardry] Debug file: $_iw_debug_file" >&2
else
  _iw_debug_file=""
  printf '%s\n' "[invoke-wizardry] Debug logging disabled" >&2
fi

# Log start of invoke-wizardry
printf '%s\n' "[invoke-wizardry] === Starting invoke-wizardry ===" >&2
if [ -n "$_iw_debug_file" ]; then
  printf '%s\n' "invoke-wizardry: === Starting invoke-wizardry ===" >> "$_iw_debug_file" 2>/dev/null || :
fi

# Detect shell type without using shell-specific variables directly
# Use eval to avoid checkbashisms false positives
if eval '[ -n "${BASH_VERSION+x}" ]' 2>/dev/null; then
  printf '%s\n' "[invoke-wizardry] Shell: bash" >&2
  if [ -n "$_iw_debug_file" ]; then
    printf '%s\n' "invoke-wizardry: Shell: bash" >> "$_iw_debug_file" 2>/dev/null || :
  fi
elif eval '[ -n "${ZSH_VERSION+x}" ]' 2>/dev/null; then
  printf '%s\n' "[invoke-wizardry] Shell: zsh" >&2
  if [ -n "$_iw_debug_file" ]; then
    printf '%s\n' "invoke-wizardry: Shell: zsh" >> "$_iw_debug_file" 2>/dev/null || :
  fi
else
  printf '%s\n' "[invoke-wizardry] Shell: unknown" >&2
  if [ -n "$_iw_debug_file" ]; then
    printf '%s\n' "invoke-wizardry: Shell: unknown" >> "$_iw_debug_file" 2>/dev/null || :
  fi
fi

printf '%s\n' "[invoke-wizardry] PATH: ${PATH-}" >&2
if [ -n "$_iw_debug_file" ]; then
  printf '%s\n' "invoke-wizardry: PATH: ${PATH-}" >> "$_iw_debug_file" 2>/dev/null || :
fi

# Prevent recursive sourcing
printf '%s\n' "[invoke-wizardry] Checking for recursive sourcing" >&2
if [ "${_WIZARDRY_INVOKED-}" = "1" ]; then
  printf '%s\n' "[invoke-wizardry] Already invoked, skipping" >&2
  if [ -n "$_iw_debug_file" ]; then
    printf '%s\n' "invoke-wizardry: Already invoked, skipping (recursive sourcing prevented)" >> "$_iw_debug_file" 2>/dev/null || :
  fi
  return 0
fi
printf '%s\n' "[invoke-wizardry] First invocation, continuing" >&2
_WIZARDRY_INVOKED=1
export _WIZARDRY_INVOKED

printf '%s\n' "[invoke-wizardry] Defining _invoke_wizardry function" >&2
_invoke_wizardry() {
  printf '%s\n' "[invoke-wizardry] INSIDE _invoke_wizardry function" >&2
  # Debug logging inline (no function to comply with one-function-or-zero rule)
  if [ -n "$_iw_debug_file" ]; then
    _iw_msg="invoke-wizardry: Entering _invoke_wizardry function"
    printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
  fi
  
  printf '%s\n' "[invoke-wizardry] Checking WIZARDRY_DIR: ${WIZARDRY_DIR-<unset>}" >&2
  if [ -z "${WIZARDRY_DIR-}" ]; then
    printf '%s\n' "[invoke-wizardry] WIZARDRY_DIR not set, will attempt detection" >&2
    if [ -n "$_iw_debug_file" ]; then
      _iw_msg="invoke-wizardry: WIZARDRY_DIR not set, attempting detection"
      printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
    fi
    # Detect invoke-wizardry's actual location using shell-specific variables
    _iw_script_path=""
    
    # Bash: use BASH_SOURCE array
    # Use eval to prevent checkbashisms false positive on BASH_SOURCE
    if eval '[ -n "${BASH_VERSION-}" ]' 2>/dev/null; then
      printf '%s\n' "[invoke-wizardry] Bash detected, using BASH_SOURCE" >&2
      _iw_script_path=$(eval 'printf "%s" "${BASH_SOURCE[0]-}"')
      if [ -n "$_iw_debug_file" ]; then
        _iw_msg="Detected script path via BASH_SOURCE: $_iw_script_path"
        printf '%s\n' "invoke-wizardry: $_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
      fi
      printf '%s\n' "[invoke-wizardry] Script path from BASH_SOURCE: $_iw_script_path" >&2
    # Zsh: use $0 which contains the sourced file path
    # Note: In Zsh, when a file is sourced, $0 is set to the sourced file's path
    # This is simpler and more reliable than using ${(%):-%x} with eval
    elif [ -n "${ZSH_VERSION-}" ]; then
      printf '%s\n' "[invoke-wizardry] Zsh detected, using \$0" >&2
      _iw_script_path="$0"
      if [ -n "$_iw_debug_file" ]; then
        _iw_msg="invoke-wizardry: Detected script path via ZSH \$0: $_iw_script_path"
        printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
      fi
      printf '%s\n' "[invoke-wizardry] Script path from \$0: $_iw_script_path" >&2
    fi
    
    printf '%s\n' "[invoke-wizardry] Deriving WIZARDRY_DIR from script path" >&2
    # Derive WIZARDRY_DIR from detected script path
    # invoke-wizardry is at: WIZARDRY_DIR/spells/.imps/sys/invoke-wizardry
    # So we need to go up 3 levels: sys -> .imps -> spells -> WIZARDRY_DIR
    if [ -n "$_iw_script_path" ] && [ -f "$_iw_script_path" ]; then
      printf '%s\n' "[invoke-wizardry] Script path exists, computing directory" >&2
      _iw_script_dir=$(CDPATH= cd -- "$(dirname "$_iw_script_path")" 2>/dev/null && pwd -P) || true
      if [ -n "$_iw_script_dir" ]; then
        WIZARDRY_DIR=$(CDPATH= cd -- "$_iw_script_dir/../../.." 2>/dev/null && pwd -P) || true
        printf '%s\n' "[invoke-wizardry] WIZARDRY_DIR derived: $WIZARDRY_DIR" >&2
        if [ -n "$_iw_debug_file" ]; then
          _iw_msg="invoke-wizardry: Derived WIZARDRY_DIR: $WIZARDRY_DIR"
          printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
        fi
      fi
    fi
  else
    printf '%s\n' "[invoke-wizardry] WIZARDRY_DIR already set: $WIZARDRY_DIR" >&2
    if [ -n "$_iw_debug_file" ]; then
      _iw_msg="invoke-wizardry: WIZARDRY_DIR already set: $WIZARDRY_DIR"
      printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
    fi
  fi
  
  printf '%s\n' "[invoke-wizardry] Validating WIZARDRY_DIR" >&2
  if [ -z "${WIZARDRY_DIR-}" ] || [ ! -d "${WIZARDRY_DIR-}/spells" ]; then
    printf '%s\n' "[invoke-wizardry] ERROR: WIZARDRY_DIR invalid or spells not found" >&2
    if [ -n "$_iw_debug_file" ]; then
      _iw_msg="ERROR: WIZARDRY_DIR invalid or spells directory not found"
      printf '%s\n' "invoke-wizardry: $_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
    fi
    return 1
  fi
  
  printf '%s\n' "[invoke-wizardry] WIZARDRY_DIR validated successfully" >&2
  export WIZARDRY_DIR
  
  printf '%s\n' "[invoke-wizardry] Setting up SPELLBOOK_DIR" >&2
  : "${SPELLBOOK_DIR:=${HOME-}/.spellbook}"
  export SPELLBOOK_DIR
  
  # Word-of-binding paradigm: Pre-load all spells and imps by sourcing them
  # Imps and spells are both loaded the same way - no PATH manipulation
  # The only difference is imps use _underscore true-names, spells use their own convention
  
  # Add only spellbook to PATH (for user's custom standalone scripts)
  printf '%s\n' "[invoke-wizardry] Adding SPELLBOOK_DIR to PATH" >&2
  case ":${PATH-}:" in
    *":$SPELLBOOK_DIR:"*) ;;
    *) PATH="$SPELLBOOK_DIR:${PATH-}" ;;
  esac
  export PATH
  
  printf '%s\n' "[invoke-wizardry] Starting imp sourcing" >&2
  # Source all imps to load their functions into the shell
  # Imps are spells too - they're loaded the same way as regular spells
  # The only difference is imps use _underscore true-names
  _iw_imps_dir="$WIZARDRY_DIR/spells/.imps"
  printf '%s\n' "[invoke-wizardry] Imp directory: $_iw_imps_dir" >&2
  if [ -n "$_iw_debug_file" ]; then
    _iw_msg="invoke-wizardry: Starting imp sourcing from: $_iw_imps_dir"
    printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
  fi
  printf '%s\n' "[invoke-wizardry] Initializing imp counters" >&2
  _iw_imp_count=0
  _iw_imp_success=0
  _iw_imp_skipped=0
  _iw_imp_failed=0
  
  printf '%s\n' "[invoke-wizardry] Checking if imp directory exists" >&2
  if [ -d "$_iw_imps_dir" ]; then
    printf '%s\n' "[invoke-wizardry] Imp directory exists, starting family loop" >&2
    for _iw_family in "$_iw_imps_dir"/*; do
      printf '%s\n' "[invoke-wizardry] Checking family: $_iw_family" >&2
      [ -d "$_iw_family" ] || continue
      # Skip test imps - they're only for testing, not production use
      _iw_family_name=$(basename "$_iw_family")
      printf '%s\n' "[invoke-wizardry] Family name: $_iw_family_name" >&2
      printf '%s\n' "[invoke-wizardry] Family name: $_iw_family_name" >&2
      case "$_iw_family_name" in
        test) 
          printf '%s\n' "[invoke-wizardry] Skipping test family" >&2
          if [ -n "$_iw_debug_file" ]; then
            _iw_msg="invoke-wizardry: Skipping test family: $_iw_family_name"
            printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
          fi
          continue 
          ;;
      esac
      printf '%s\n' "[invoke-wizardry] Processing family: $_iw_family_name" >&2
      if [ -n "$_iw_debug_file" ]; then
        _iw_msg="invoke-wizardry: Processing imp family: $_iw_family_name"
        printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
      fi
      
      printf '%s\n' "[invoke-wizardry] Starting imp loop for family: $_iw_family_name" >&2
      for _iw_imp in "$_iw_family"/*; do
        printf '%s\n' "[invoke-wizardry] Checking file: $(basename "$_iw_imp")" >&2
        [ -f "$_iw_imp" ] && [ -r "$_iw_imp" ] || continue
        _iw_imp_count=$((_iw_imp_count + 1))
        
        printf '%s\n' "[invoke-wizardry] Imp count: $_iw_imp_count" >&2
        # Skip invoke-wizardry itself to prevent recursion
        # Skip invoke-thesaurus (loaded separately later for synonyms)
        case "$_iw_imp" in
          */invoke-wizardry|*/invoke-thesaurus) 
            printf '%s\n' "[invoke-wizardry] Skipping special imp: $(basename "$_iw_imp")" >&2 
            printf '%s\n' "[invoke-wizardry] Skipping special imp: $(basename "$_iw_imp")" >&2
            _iw_imp_skipped=$((_iw_imp_skipped + 1))
            if [ -n "$_iw_debug_file" ]; then
              _iw_msg="Skipping special imp: $(basename "$_iw_imp")"
              _iw_full="invoke-wizardry: $_iw_msg"
              printf '%s\n' "$_iw_full" >> "$_iw_debug_file" 2>/dev/null || :
            fi
            continue 
            ;;
        esac
        
        printf '%s\n' "[invoke-wizardry] Processing imp: $(basename "$_iw_imp")" >&2
        # Imps use _underscore true-names (e.g., say -> _say)
        _iw_imp_name=$(basename "$_iw_imp")
        printf '%s\n' "[invoke-wizardry] Imp name: $_iw_imp_name" >&2
        _iw_imp_true_name=$(printf '_%s' "$_iw_imp_name" | sed 's/-/_/g')
        printf '%s\n' "[invoke-wizardry] Imp true name: $_iw_imp_true_name" >&2
        
        printf '%s\n' "[invoke-wizardry] Checking if imp has function definition" >&2
        # Only source imps that define their true-name function
        _iw_grep_pattern="^[[:space:]]*${_iw_imp_true_name}[[:space:]]*\\(\\)"
        if grep -qE "$_iw_grep_pattern" "$_iw_imp" 2>/dev/null; then
          printf '%s\n' "[invoke-wizardry] Imp has function, will source: $_iw_imp_name" >&2
          printf '%s\n' "[invoke-wizardry] Imp has function, will source: $_iw_imp_name" >&2
          if [ -n "$_iw_debug_file" ]; then
            _iw_msg="Sourcing imp: $_iw_imp_name -> $_iw_imp_true_name"
            _iw_full="invoke-wizardry: $_iw_msg"
            printf '%s\n' "$_iw_full" >> "$_iw_debug_file" 2>/dev/null || :
          fi
          printf '%s\n' "[invoke-wizardry] About to source: $_iw_imp" >&2
          # Source the imp to load its function
          # shellcheck disable=SC1090
          if . "$_iw_imp" 2>/dev/null; then
            printf '%s\n' "[invoke-wizardry] Successfully sourced imp: $_iw_imp_name" >&2
            # Restore permissive mode - sourcing imps with set -eu changes parent shell mode
            set +eu
            printf '%s\n' "[invoke-wizardry] Restored permissive mode" >&2
            
            printf '%s\n' "[invoke-wizardry] Checking if function exists: $_iw_imp_true_name" >&2
            # Create alias from hyphenated name to underscore function name
            # This is the imp paradigm: hyphenated command -> _underscore_function
            if command -v "$_iw_imp_true_name" >/dev/null 2>&1; then
              printf '%s\n' "[invoke-wizardry] Function exists, creating alias" >&2
              if alias "$_iw_imp_name=$_iw_imp_true_name" 2>/dev/null; then
                _iw_imp_success=$((_iw_imp_success + 1))
                printf '%s\n' "[invoke-wizardry] ✓ Loaded imp: $_iw_imp_name (success=$_iw_imp_success)" >&2
                printf '%s\n' "[invoke-wizardry] ✓ Loaded imp: $_iw_imp_name (success=$_iw_imp_success)" >&2
                if [ -n "$_iw_debug_file" ]; then
                  _iw_msg="invoke-wizardry: ✓ Loaded imp: $_iw_imp_name"
                  printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
                fi
              else
                _iw_imp_failed=$((_iw_imp_failed + 1))
                printf '%s\n' "[invoke-wizardry] ✗ Failed to alias imp: $_iw_imp_name" >&2
                if [ -n "$_iw_debug_file" ]; then
                  _iw_msg="invoke-wizardry: ✗ Failed to alias imp: $_iw_imp_name"
                  printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
                fi
              fi
            else
              _iw_imp_failed=$((_iw_imp_failed + 1))
              printf '%s\n' "[invoke-wizardry] ✗ Function not found after sourcing: $_iw_imp_true_name" >&2
              if [ -n "$_iw_debug_file" ]; then
                _iw_msg="✗ Function not found after sourcing: $_iw_imp_true_name"
                _iw_full="invoke-wizardry: $_iw_msg"
                printf '%s\n' "$_iw_full" >> "$_iw_debug_file" 2>/dev/null || :
              fi
            fi
          else
            _iw_imp_failed=$((_iw_imp_failed + 1))
            printf '%s\n' "[invoke-wizardry] ✗ Failed to source imp: $_iw_imp_name" >&2
            if [ -n "$_iw_debug_file" ]; then
              _iw_msg="invoke-wizardry: ✗ Failed to source imp: $_iw_imp_name"
              printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
            fi
            set +eu  # Ensure permissive mode even after failure
          fi
        else
          _iw_imp_skipped=$((_iw_imp_skipped + 1))
          printf '%s\n' "[invoke-wizardry] Skipping imp (no function): $_iw_imp_name" >&2
          printf '%s\n' "[invoke-wizardry] Skipping imp (no function): $_iw_imp_name" >&2
          if [ -n "$_iw_debug_file" ]; then
            _iw_msg="invoke-wizardry: Skipping imp (no function): $_iw_imp_name"
            printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
          fi
        fi
        printf '%s\n' "[invoke-wizardry] Finished processing imp: $_iw_imp_name" >&2
      done
      printf '%s\n' "[invoke-wizardry] Finished imp loop for family: $_iw_family_name" >&2
    done
    printf '%s\n' "[invoke-wizardry] Finished all imp families" >&2
  fi
  
  _iw_imp_summary="total=$_iw_imp_count success=$_iw_imp_success"
  _iw_imp_summary="$_iw_imp_summary skipped=$_iw_imp_skipped failed=$_iw_imp_failed"
  printf '%s\n' "[invoke-wizardry] Imp sourcing complete: $_iw_imp_summary" >&2
  if [ -n "$_iw_debug_file" ]; then
    _iw_msg="invoke-wizardry: Imp sourcing complete: $_iw_imp_summary"
    printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
  fi
  
  # Set flag to prevent env-clear from clearing parent's variables
  printf '%s\n' "[invoke-wizardry] Setting _WIZARDRY_LOADING_SPELLS flag" >&2
  _WIZARDRY_LOADING_SPELLS=1
  export _WIZARDRY_LOADING_SPELLS
  
  printf '%s\n' "[invoke-wizardry] Starting spell sourcing" >&2
  # Word-of-binding: Pre-load all spells by sourcing them
  # This makes spell functions immediately available in the current shell
  # Spells are sourced (not executed) to bind their functions into the shell
  if [ -n "$_iw_debug_file" ]; then
    _iw_msg="invoke-wizardry: Starting spell sourcing from: $WIZARDRY_DIR/spells"
    printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
  fi
  printf '%s\n' "[invoke-wizardry] Initializing spell counters" >&2
  _iw_spell_count=0
  _iw_spell_success=0
  _iw_spell_skipped=0
  _iw_spell_failed=0
  
  printf '%s\n' "[invoke-wizardry] Starting spell category loop" >&2
  for _iw_spell_cat in "$WIZARDRY_DIR"/spells/*; do
    printf '%s\n' "[invoke-wizardry] Checking category: $_iw_spell_cat" >&2
    [ -d "$_iw_spell_cat" ] || continue
    # Skip hidden directories (like .imps and .arcana)
    case "$_iw_spell_cat" in
      */.*) 
        printf '%s\n' "[invoke-wizardry] Skipping hidden directory: $(basename "$_iw_spell_cat")" >&2
        if [ -n "$_iw_debug_file" ]; then
          _iw_msg="Skipping hidden directory: $(basename "$_iw_spell_cat")"
          _iw_full="invoke-wizardry: $_iw_msg"
          printf '%s\n' "$_iw_full" >> "$_iw_debug_file" 2>/dev/null || :
        fi
        continue 
        ;;
    esac
    
    _iw_spell_cat_name=$(basename "$_iw_spell_cat")
    printf '%s\n' "[invoke-wizardry] Processing category: $_iw_spell_cat_name" >&2
    printf '%s\n' "[invoke-wizardry] Processing category: $_iw_spell_cat_name" >&2
    if [ -n "$_iw_debug_file" ]; then
      _iw_msg="invoke-wizardry: Processing spell category: $_iw_spell_cat_name"
      printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
    fi
    
    printf '%s\n' "[invoke-wizardry] Starting spell loop for category: $_iw_spell_cat_name" >&2
    for _iw_spell in "$_iw_spell_cat"/*; do
      [ -f "$_iw_spell" ] && [ -r "$_iw_spell" ] || continue
      _iw_spell_count=$((_iw_spell_count + 1))
      
      # Output progress every 10 spells to avoid overwhelming output
      _iw_spell_mod=$((_iw_spell_count % 10))
      if [ "$_iw_spell_mod" -eq 0 ] || [ "$_iw_spell_count" -eq 1 ]; then
        printf '%s\n' "[invoke-wizardry] Spell progress: count=$_iw_spell_count" >&2
      fi
      
      # Spells use spell_name() true-names (no underscore prefix)
      # Format: spell-name defines spell_name() function
      _iw_spell_name=$(basename "$_iw_spell")
      _iw_spell_true_name=$(printf '%s' "$_iw_spell_name" | sed 's/-/_/g')
      
      # Only source spells that define their true-name function
      # This skips standalone scripts that don't use the binding pattern
      _iw_grep_pattern="^[[:space:]]*${_iw_spell_true_name}[[:space:]]*\\(\\)"
      if grep -qE "$_iw_grep_pattern" "$_iw_spell" 2>/dev/null; then
        if [ -n "$_iw_debug_file" ]; then
          _iw_msg="Sourcing spell: $_iw_spell_name -> $_iw_spell_true_name"
          _iw_full="invoke-wizardry: $_iw_msg"
          printf '%s\n' "$_iw_full" >> "$_iw_debug_file" 2>/dev/null || :
        fi
        # Source the spell to load its function
        # shellcheck disable=SC1090
        if . "$_iw_spell" 2>/dev/null; then
          # Restore permissive mode - sourcing spells with set -eu changes parent shell mode
          set +eu
          
          # Create alias from hyphenated name to underscore function name
          # spell-name -> spell_name
          if command -v "$_iw_spell_true_name" >/dev/null 2>&1; then
            if alias "$_iw_spell_name=$_iw_spell_true_name" 2>/dev/null; then
              _iw_spell_success=$((_iw_spell_success + 1))
              if [ -n "$_iw_debug_file" ]; then
                _iw_msg="invoke-wizardry: ✓ Loaded spell: $_iw_spell_name"
                printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
              fi
            else
              _iw_spell_failed=$((_iw_spell_failed + 1))
              if [ -n "$_iw_debug_file" ]; then
                _iw_msg="invoke-wizardry: ✗ Failed to alias spell: $_iw_spell_name"
                printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
              fi
            fi
          else
            _iw_spell_failed=$((_iw_spell_failed + 1))
            if [ -n "$_iw_debug_file" ]; then
              _iw_msg="✗ Function not found after sourcing: $_iw_spell_true_name"
              _iw_full="invoke-wizardry: $_iw_msg"
              printf '%s\n' "$_iw_full" >> "$_iw_debug_file" 2>/dev/null || :
            fi
          fi
        else
          _iw_spell_failed=$((_iw_spell_failed + 1))
          if [ -n "$_iw_debug_file" ]; then
            _iw_msg="invoke-wizardry: ✗ Failed to source spell: $_iw_spell_name"
            printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
          fi
          set +eu  # Ensure permissive mode even after failure
        fi
      else
        _iw_spell_skipped=$((_iw_spell_skipped + 1))
        if [ -n "$_iw_debug_file" ]; then
          _iw_msg="invoke-wizardry: Skipping spell (no function): $_iw_spell_name"
          printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
        fi
      fi
    done
    printf '%s\n' "[invoke-wizardry] Finished spell loop for category: $_iw_spell_cat_name" >&2
  done
  printf '%s\n' "[invoke-wizardry] Finished all spell categories" >&2
  
  _iw_spell_summary="total=$_iw_spell_count success=$_iw_spell_success"
  _iw_spell_summary="$_iw_spell_summary skipped=$_iw_spell_skipped failed=$_iw_spell_failed"
  printf '%s\n' "[invoke-wizardry] Spell sourcing complete: $_iw_spell_summary" >&2
  if [ -n "$_iw_debug_file" ]; then
    _iw_msg="invoke-wizardry: Spell sourcing complete: $_iw_spell_summary"
    printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
  fi
  
  printf '%s\n' "[invoke-wizardry] Checking for user spells" >&2
  # Pre-load spells from user's spellbook
  # User spells follow the same pattern as regular spells (spell_name, no underscore)
  if [ -n "$_iw_debug_file" ]; then
    _iw_msg="invoke-wizardry: Checking for user spells in: $SPELLBOOK_DIR"
    printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
  fi
  _iw_user_spell_count=0
  _iw_user_spell_success=0
  
  if [ -d "$SPELLBOOK_DIR" ]; then
    for _iw_user_spell in "$SPELLBOOK_DIR"/*; do
      [ -f "$_iw_user_spell" ] && [ -r "$_iw_user_spell" ] || continue
      _iw_user_spell_count=$((_iw_user_spell_count + 1))
      
      _iw_user_spell_name=$(basename "$_iw_user_spell")
      _iw_user_spell_true_name=$(printf '%s' "$_iw_user_spell_name" | sed 's/-/_/g')
      
      # Only source if it has a true-name function (spell_name, not _spell_name)
      _iw_grep_pattern="^[[:space:]]*${_iw_user_spell_true_name}[[:space:]]*\\(\\)"
      if grep -qE "$_iw_grep_pattern" "$_iw_user_spell" 2>/dev/null; then
        if [ -n "$_iw_debug_file" ]; then
          _iw_msg="invoke-wizardry: Sourcing user spell: $_iw_user_spell_name"
          printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
        fi
        # shellcheck disable=SC1090
        if . "$_iw_user_spell" 2>/dev/null; then
          set +eu
          
          if command -v "$_iw_user_spell_true_name" >/dev/null 2>&1; then
            if alias "$_iw_user_spell_name=$_iw_user_spell_true_name" 2>/dev/null; then
              _iw_user_spell_success=$((_iw_user_spell_success + 1))
              if [ -n "$_iw_debug_file" ]; then
                _iw_msg="invoke-wizardry: ✓ Loaded user spell: $_iw_user_spell_name"
                printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
              fi
            fi
          fi
        else
          set +eu
          if [ -n "$_iw_debug_file" ]; then
            _iw_msg="✗ Failed to source user spell: $_iw_user_spell_name"
            _iw_full="invoke-wizardry: $_iw_msg"
            printf '%s\n' "$_iw_full" >> "$_iw_debug_file" 2>/dev/null || :
          fi
        fi
      fi
    done
  fi
  
  _iw_user_summary="total=$_iw_user_spell_count success=$_iw_user_spell_success"
  printf '%s\n' "[invoke-wizardry] User spell sourcing complete: $_iw_user_summary" >&2
  if [ -n "$_iw_debug_file" ]; then
    _iw_msg="invoke-wizardry: User spell sourcing complete: $_iw_user_summary"
    printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
  fi
  
  # Clear the spell loading flag
  printf '%s\n' "[invoke-wizardry] Clearing _WIZARDRY_LOADING_SPELLS flag" >&2
  unset _WIZARDRY_LOADING_SPELLS
  
  printf '%s\n' "[invoke-wizardry] Checking command-not-found configuration" >&2
  # Hotloading: command_not_found_handle provides fallback for spells not yet loaded
  # This handles new spells added after shell startup and non-function spells
  # Only set up if enabled via config (command-not-found=1 in ~/.spellbook/.mud/config)
  
  # Check if command-not-found hook is enabled (defaults to enabled if not configured)
  _iw_cnf_enabled=1
  _iw_spellbook="${SPELLBOOK_DIR:-${HOME-}/.spellbook}"
  _iw_cnf_config="$_iw_spellbook/.mud/config"
  printf '%s\n' "[invoke-wizardry] Config file: $_iw_cnf_config" >&2
  printf '%s\n' "[invoke-wizardry] Config file: $_iw_cnf_config" >&2
  if [ -f "$_iw_cnf_config" ]; then
    printf '%s\n' "[invoke-wizardry] Config file exists, checking settings" >&2
    # Check if explicitly disabled (command-not-found=0)
    if grep -q "^command-not-found=0$" "$_iw_cnf_config" 2>/dev/null; then
      _iw_cnf_enabled=0
      printf '%s\n' "[invoke-wizardry] command-not-found hook DISABLED by config" >&2
      if [ -n "$_iw_debug_file" ]; then
        _iw_msg="invoke-wizardry: command-not-found hook: DISABLED (config file)"
        printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
      fi
    else
      printf '%s\n' "[invoke-wizardry] command-not-found hook enabled (config allows)" >&2
      if [ -n "$_iw_debug_file" ]; then
        _iw_msg="invoke-wizardry: command-not-found hook: enabled (config file allows)"
        printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
      fi
    fi
  else
    printf '%s\n' "[invoke-wizardry] No config file, using default (enabled)" >&2
    if [ -n "$_iw_debug_file" ]; then
      _iw_msg="command-not-found hook: enabled (no config file, default enabled)"
      printf '%s\n' "invoke-wizardry: $_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
    fi
  fi
  
  printf '%s\n' "[invoke-wizardry] CNF enabled status: $_iw_cnf_enabled" >&2
  # Only set up command_not_found_handle if enabled
  if [ "$_iw_cnf_enabled" -eq 1 ]; then
    printf '%s\n' "[invoke-wizardry] Setting up command_not_found_handle" >&2
    if [ -n "$_iw_debug_file" ]; then
      _iw_msg="invoke-wizardry: Setting up command_not_found_handle"
      printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
    fi
    # Use eval to check shell type while avoiding checkbashisms false positive
    if eval '[ -n "${BASH_VERSION+x}" ]' 2>/dev/null; then
      if [ -n "$_iw_debug_file" ]; then
        _iw_msg="invoke-wizardry: Bash detected, installing command_not_found_handle"
        printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
      fi
      # Bash-specific command_not_found_handle
      eval 'command_not_found_handle() {
        # Debug logging for command_not_found_handle
        if [ "${WIZARDRY_DEBUG-}" = "1" ]; then
          _cnf_file="${HOME-}/.wizardry-debug.log"
          _cnf_msg="CNF: command not found: $1 (args: $*)"
          printf '\''%s\n'\'' "$_cnf_msg" >> "$_cnf_file" 2>/dev/null || :
        fi
        
        # Prevent infinite recursion - check if already in handler
        if [ "${_WIZARDRY_IN_CNF_HANDLER-}" = "1" ]; then
          if [ "${WIZARDRY_DEBUG-}" = "1" ]; then
            _cnf_file="${HOME-}/.wizardry-debug.log"
            _cnf_msg="CNF: recursion detected, bailing out"
            printf '\''%s\n'\'' "$_cnf_msg" >> "$_cnf_file" 2>/dev/null || :
          fi
          printf '\''%s: command not found\n'\'' "$1" >&2
          return 127
        fi
        _WIZARDRY_IN_CNF_HANDLER=1
        
        # Try word-of-binding for autoloading (handles hotloaded spells)
        _cnf_wob="$WIZARDRY_DIR/spells/.imps/sys/word-of-binding"
        if [ -n "${WIZARDRY_DIR-}" ] && [ -x "$_cnf_wob" ]; then
          if [ "${WIZARDRY_DEBUG-}" = "1" ]; then
            _cnf_file="${HOME-}/.wizardry-debug.log"
            _cnf_msg="CNF: trying word-of-binding for: $1"
            printf '\''%s\n'\'' "$_cnf_msg" >> "$_cnf_file" 2>/dev/null || :
          fi
          if "$_cnf_wob" "$@" 2>/dev/null; then
            if [ "${WIZARDRY_DEBUG-}" = "1" ]; then
              _cnf_file="${HOME-}/.wizardry-debug.log"
              _cnf_msg="CNF: word-of-binding succeeded for: $1"
              printf '\''%s\n'\'' "$_cnf_msg" >> "$_cnf_file" 2>/dev/null || :
            fi
            unset _WIZARDRY_IN_CNF_HANDLER
            return 0
          fi
          if [ "${WIZARDRY_DEBUG-}" = "1" ]; then
            _cnf_file="${HOME-}/.wizardry-debug.log"
            _cnf_msg="CNF: word-of-binding failed for: $1"
            printf '\''%s\n'\'' "$_cnf_msg" >> "$_cnf_file" 2>/dev/null || :
          fi
        fi
        # Fall back to parse for recursive grammar parsing
        _cnf_parse="$WIZARDRY_DIR/spells/.imps/lex/parse"
        if [ -n "${WIZARDRY_DIR-}" ] && [ -x "$_cnf_parse" ]; then
          if [ "${WIZARDRY_DEBUG-}" = "1" ]; then
            _cnf_file="${HOME-}/.wizardry-debug.log"
            _cnf_msg="CNF: trying parse for: $1"
            printf '\''%s\n'\'' "$_cnf_msg" >> "$_cnf_file" 2>/dev/null || :
          fi
          if "$_cnf_parse" "$@" 2>/dev/null; then
            if [ "${WIZARDRY_DEBUG-}" = "1" ]; then
              _cnf_file="${HOME-}/.wizardry-debug.log"
              _cnf_msg="CNF: parse succeeded for: $1"
              printf '\''%s\n'\'' "$_cnf_msg" >> "$_cnf_file" 2>/dev/null || :
            fi
            unset _WIZARDRY_IN_CNF_HANDLER
            return 0
          fi
          if [ "${WIZARDRY_DEBUG-}" = "1" ]; then
            _cnf_file="${HOME-}/.wizardry-debug.log"
            _cnf_msg="CNF: parse failed for: $1"
            printf '\''%s\n'\'' "$_cnf_msg" >> "$_cnf_file" 2>/dev/null || :
          fi
        fi
        # Command truly not found - return 127
        unset _WIZARDRY_IN_CNF_HANDLER
        if [ "${WIZARDRY_DEBUG-}" = "1" ]; then
          _cnf_file="${HOME-}/.wizardry-debug.log"
          _cnf_msg="CNF: command truly not found: $1"
          printf '\''%s\n'\'' "$_cnf_msg" >> "$_cnf_file" 2>/dev/null || :
        fi
        printf '\''%s: command not found\n'\'' "$1" >&2
        return 127
      }'
    elif eval '[ -n "${ZSH_VERSION+x}" ]' 2>/dev/null; then
      if [ -n "$_iw_debug_file" ]; then
        _iw_msg="invoke-wizardry: Zsh detected, installing command_not_found_handler"
        printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
      fi
      # Zsh-specific command_not_found_handler
      eval 'command_not_found_handler() {
        # Debug logging for command_not_found_handler
        if [ "${WIZARDRY_DEBUG-}" = "1" ]; then
          _cnf_file="${HOME-}/.wizardry-debug.log"
          _cnf_msg="CNF: command not found: $1 (args: $*)"
          printf '\''%s\n'\'' "$_cnf_msg" >> "$_cnf_file" 2>/dev/null || :
        fi
        
        # Prevent infinite recursion - check if already in handler
        if [ "${_WIZARDRY_IN_CNF_HANDLER-}" = "1" ]; then
          if [ "${WIZARDRY_DEBUG-}" = "1" ]; then
            _cnf_file="${HOME-}/.wizardry-debug.log"
            _cnf_msg="CNF: recursion detected, bailing out"
            printf '\''%s\n'\'' "$_cnf_msg" >> "$_cnf_file" 2>/dev/null || :
          fi
          printf '\''%s: command not found\n'\'' "$1" >&2
          return 127
        fi
        _WIZARDRY_IN_CNF_HANDLER=1
        
        # Try word-of-binding for autoloading (handles hotloaded spells)
        _cnf_wob="$WIZARDRY_DIR/spells/.imps/sys/word-of-binding"
        if [ -n "${WIZARDRY_DIR-}" ] && [ -x "$_cnf_wob" ]; then
          if [ "${WIZARDRY_DEBUG-}" = "1" ]; then
            _cnf_file="${HOME-}/.wizardry-debug.log"
            _cnf_msg="CNF: trying word-of-binding for: $1"
            printf '\''%s\n'\'' "$_cnf_msg" >> "$_cnf_file" 2>/dev/null || :
          fi
          if "$_cnf_wob" "$@" 2>/dev/null; then
            if [ "${WIZARDRY_DEBUG-}" = "1" ]; then
              _cnf_file="${HOME-}/.wizardry-debug.log"
              _cnf_msg="CNF: word-of-binding succeeded for: $1"
              printf '\''%s\n'\'' "$_cnf_msg" >> "$_cnf_file" 2>/dev/null || :
            fi
            unset _WIZARDRY_IN_CNF_HANDLER
            return 0
          fi
          if [ "${WIZARDRY_DEBUG-}" = "1" ]; then
            _cnf_file="${HOME-}/.wizardry-debug.log"
            _cnf_msg="CNF: word-of-binding failed for: $1"
            printf '\''%s\n'\'' "$_cnf_msg" >> "$_cnf_file" 2>/dev/null || :
          fi
        fi
        # Fall back to parse for recursive grammar parsing
        _cnf_parse="$WIZARDRY_DIR/spells/.imps/lex/parse"
        if [ -n "${WIZARDRY_DIR-}" ] && [ -x "$_cnf_parse" ]; then
          if [ "${WIZARDRY_DEBUG-}" = "1" ]; then
            _cnf_file="${HOME-}/.wizardry-debug.log"
            _cnf_msg="CNF: trying parse for: $1"
            printf '\''%s\n'\'' "$_cnf_msg" >> "$_cnf_file" 2>/dev/null || :
          fi
          if "$_cnf_parse" "$@" 2>/dev/null; then
            if [ "${WIZARDRY_DEBUG-}" = "1" ]; then
              _cnf_file="${HOME-}/.wizardry-debug.log"
              _cnf_msg="CNF: parse succeeded for: $1"
              printf '\''%s\n'\'' "$_cnf_msg" >> "$_cnf_file" 2>/dev/null || :
            fi
            unset _WIZARDRY_IN_CNF_HANDLER
            return 0
          fi
          if [ "${WIZARDRY_DEBUG-}" = "1" ]; then
            _cnf_file="${HOME-}/.wizardry-debug.log"
            _cnf_msg="CNF: parse failed for: $1"
            printf '\''%s\n'\'' "$_cnf_msg" >> "$_cnf_file" 2>/dev/null || :
          fi
        fi
        # Command truly not found - return 127
        unset _WIZARDRY_IN_CNF_HANDLER
        if [ "${WIZARDRY_DEBUG-}" = "1" ]; then
          _cnf_file="${HOME-}/.wizardry-debug.log"
          _cnf_msg="CNF: command truly not found: $1"
          printf '\''%s\n'\'' "$_cnf_msg" >> "$_cnf_file" 2>/dev/null || :
        fi
        printf '\''%s: command not found\n'\'' "$1" >&2
        return 127
      }'
    fi
  else
    printf '%s\n' "[invoke-wizardry] command_not_found_handle NOT installed (disabled)" >&2
    if [ -n "$_iw_debug_file" ]; then
      _iw_msg="command_not_found_handle NOT installed (disabled by config)"
      printf '%s\n' "invoke-wizardry: $_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
    fi
  fi
  
  printf '%s\n' "[invoke-wizardry] Loading invoke-thesaurus for synonyms" >&2
  # Load synonyms (aliases) from spellbook by sourcing invoke-thesaurus
  # invoke-thesaurus handles initialization, enable/disable checks, and sourcing
  if [ -n "$_iw_debug_file" ]; then
    _iw_msg="invoke-wizardry: Loading synonyms from invoke-thesaurus"
    printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
  fi
  _iw_invoke_thesaurus="$WIZARDRY_DIR/spells/.imps/sys/invoke-thesaurus"
  printf '%s\n' "[invoke-wizardry] Thesaurus path: $_iw_invoke_thesaurus" >&2
  if [ -f "$_iw_invoke_thesaurus" ] && [ -r "$_iw_invoke_thesaurus" ]; then
    printf '%s\n' "[invoke-wizardry] Sourcing invoke-thesaurus" >&2
    printf '%s\n' "[invoke-wizardry] Sourcing invoke-thesaurus" >&2
    # shellcheck disable=SC1090
    . "$_iw_invoke_thesaurus" 2>/dev/null || true
    printf '%s\n' "[invoke-wizardry] invoke-thesaurus sourced successfully" >&2
    # Restore permissive mode - sourcing may have changed shell mode
    set +eu
    if [ -n "$_iw_debug_file" ]; then
      _iw_msg="invoke-wizardry: invoke-thesaurus sourced"
      printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
    fi
  else
    printf '%s\n' "[invoke-wizardry] invoke-thesaurus not found or not readable" >&2
  fi
  
  printf '%s\n' "[invoke-wizardry] Setting up cd hook" >&2
  # Set up cd hook for MUD features by sourcing the cd spell
  # This replaces the separate install-cd step
  # The cd spell checks config file to determine if look should run
  if [ -n "$_iw_debug_file" ]; then
    _iw_msg="invoke-wizardry: Setting up cd hook"
    printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
  fi
  _iw_cd_spell="$WIZARDRY_DIR/spells/.arcana/mud/cd"
  printf '%s\n' "[invoke-wizardry] CD spell path: $_iw_cd_spell" >&2
  if [ -f "$_iw_cd_spell" ] && [ -r "$_iw_cd_spell" ]; then
    printf '%s\n' "[invoke-wizardry] Sourcing cd hook" >&2
    # shellcheck disable=SC1090
    . "$_iw_cd_spell" 2>/dev/null || true
    printf '%s\n' "[invoke-wizardry] cd hook sourced successfully" >&2
    # Restore permissive mode
    set +eu
    if [ -n "$_iw_debug_file" ]; then
      _iw_msg="invoke-wizardry: cd hook sourced"
      printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
    fi
  else
    printf '%s\n' "[invoke-wizardry] cd hook not found or not readable" >&2
  fi
  
  printf '%s\n' "[invoke-wizardry] === invoke-wizardry COMPLETE ===" >&2
  if [ -n "$_iw_debug_file" ]; then
    _iw_msg="invoke-wizardry: === invoke-wizardry complete ==="
    printf '%s\n' "$_iw_msg" >> "$_iw_debug_file" 2>/dev/null || :
  fi
  
  # Return success
  return 0
}

# Run the setup when sourced
# Note: invoke-wizardry is ONLY meant to be sourced, never executed directly
# The self-execute pattern is intentionally omitted to avoid double invocation in Zsh
# (In Zsh, $0 is set to the sourced file's path, which would cause the pattern to match)
printf '%s\n' "[invoke-wizardry] About to call _invoke_wizardry function" >&2
_invoke_wizardry
printf '%s\n' "[invoke-wizardry] FINISHED - invoke-wizardry complete" >&2
