#!/bin/sh
# invoke-wizardry - set up wizardry environment and PATH from shell rc
# Source this script to make all spells and imps available at startup.
# Example in .bashrc: . ~/.wizardry/spells/.imps/sys/invoke-wizardry

_invoke_wizardry() {
  if [ -z "${WIZARDRY_DIR-}" ]; then
    # Default to expected install location; user can set WIZARDRY_DIR manually if different
    _iw_script_dir="${HOME-}/.wizardry/spells/.imps/sys"
    WIZARDRY_DIR=$(CDPATH= cd -- "$_iw_script_dir/../../.." 2>/dev/null && pwd -P) || true
  fi
  
  if [ -z "${WIZARDRY_DIR-}" ] || [ ! -d "${WIZARDRY_DIR-}/spells" ]; then
    return 1
  fi
  
  export WIZARDRY_DIR
  
  : "${SPELLBOOK_DIR:=${HOME-}/.spellbook}"
  export SPELLBOOK_DIR
  
  _iw_paths_to_add=""
  _iw_imps_dir="$WIZARDRY_DIR/spells/.imps"
  
  case ":${PATH-}:" in
    *":$WIZARDRY_DIR/spells:"*) ;;
    *) _iw_paths_to_add="$WIZARDRY_DIR/spells" ;;
  esac
  
  for _iw_spell_dir in "$WIZARDRY_DIR"/spells/*; do
    [ -d "$_iw_spell_dir" ] || continue
    case "$_iw_spell_dir" in
      */.imps) continue ;;
    esac
    case ":${PATH-}:" in
      *":$_iw_spell_dir:"*) ;;
      *) 
        if [ -n "$_iw_paths_to_add" ]; then
          _iw_paths_to_add="$_iw_paths_to_add:$_iw_spell_dir"
        else
          _iw_paths_to_add="$_iw_spell_dir"
        fi
        ;;
    esac
  done
  
  if [ -d "$_iw_imps_dir" ]; then
    case ":${PATH-}:" in
      *":$_iw_imps_dir:"*) ;;
      *)
        if [ -n "$_iw_paths_to_add" ]; then
          _iw_paths_to_add="$_iw_paths_to_add:$_iw_imps_dir"
        else
          _iw_paths_to_add="$_iw_imps_dir"
        fi
        ;;
    esac
    
    for _iw_family in "$_iw_imps_dir"/*; do
      [ -d "$_iw_family" ] || continue
      case ":${PATH-}:" in
        *":$_iw_family:"*) ;;
        *)
          if [ -n "$_iw_paths_to_add" ]; then
            _iw_paths_to_add="$_iw_paths_to_add:$_iw_family"
          else
            _iw_paths_to_add="$_iw_family"
          fi
          ;;
      esac
    done
  fi
  
  if [ -d "$SPELLBOOK_DIR" ]; then
    case ":${PATH-}:" in
      *":$SPELLBOOK_DIR:"*) ;;
      *)
        if [ -n "$_iw_paths_to_add" ]; then
          _iw_paths_to_add="$_iw_paths_to_add:$SPELLBOOK_DIR"
        else
          _iw_paths_to_add="$SPELLBOOK_DIR"
        fi
        ;;
    esac
  fi
  
  if [ -n "$_iw_paths_to_add" ]; then
    PATH="${_iw_paths_to_add}${PATH:+:}${PATH-}"
    export PATH
  fi
}

# Set up command_not_found_handle for autoloading and recursive parsing
# This enables word-of-binding to load spells on demand and the parse spell
# to work with recursive grammar. Must be defined outside the function so it
# persists in the shell environment.
_setup_command_not_found() {
  if [ -n "${BASH_VERSION-}" ]; then
    # Bash-specific command_not_found_handle
    command_not_found_handle() {
      # Try word-of-binding first for autoloading wizardry commands
      if command -v word-of-binding >/dev/null 2>&1; then
        if word-of-binding "$@" 2>/dev/null; then
          return $?
        fi
      fi
      # Fall back to parse for recursive grammar parsing
      if command -v parse >/dev/null 2>&1; then
        parse "$@"
        return $?
      fi
      printf '%s: command not found\n' "$1" >&2
      return 127
    }
  elif [ -n "${ZSH_VERSION-}" ]; then
    # Zsh-specific command_not_found_handler
    command_not_found_handler() {
      # Try word-of-binding first for autoloading wizardry commands
      if command -v word-of-binding >/dev/null 2>&1; then
        if word-of-binding "$@" 2>/dev/null; then
          return $?
        fi
      fi
      # Fall back to parse for recursive grammar parsing
      if command -v parse >/dev/null 2>&1; then
        parse "$@"
        return $?
      fi
      printf '%s: command not found\n' "$1" >&2
      return 127
    }
  fi
}

# Run the setup when sourced
_invoke_wizardry
_setup_command_not_found

# Self-execute when run directly (not sourced)
case "$0" in
  */invoke-wizardry) _invoke_wizardry "$@" ;; esac
