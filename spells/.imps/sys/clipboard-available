#!/bin/sh
# clipboard-available - check if any clipboard helper is installed
# Returns 0 if pbcopy, xsel, xclip, or wl-copy is available


clipboard_available() {
  command -v pbcopy >/dev/null 2>&1 || \
  command -v xsel >/dev/null 2>&1 || \
  command -v xclip >/dev/null 2>&1 || \
  command -v wl-copy >/dev/null 2>&1
}

# Self-execute when run directly (not sourced)
case "$0" in
  */clipboard-available) clipboard_available "$@" ;; esac