#!/bin/sh
# spell-levels LEVEL - output shell variable assignments for level data
# Usage: eval "$(spell_levels 4)" to set level_name, level_spells, level_imps
# Example:
#   eval "$(spell_levels 4)"
#   printf "Level: %s\n" "$level_name"
#   printf "Spells: %s\n" "$level_spells"
#   printf "Imps: %s\n" "$level_imps"
set -eu

spell_levels() {
