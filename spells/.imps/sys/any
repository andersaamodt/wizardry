#!/bin/sh
# any CMD [CMD...] - return first available command from list
# Example: pkg=$(any apt-get brew pkgin) && $pkg install foo
set -eu

_any() {
  for _any_cmd in "$@"; do
    if command -v "$_any_cmd" >/dev/null 2>&1; then
      printf '%s' "$_any_cmd"
      return 0
    fi
  done
  return 1
}

# Self-execute when run directly (not sourced)
set -eu
case "$0" in
  */any) _any "$@" ;; esac
