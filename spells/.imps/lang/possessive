#!/bin/sh
# possessive NOUN - render NOUN in possessive form with appropriate apostrophe
# Example: possessive "James" -> "James'" | possessive "John" -> "John's"
set -eu


pos_noun=${1-}
if [ -z "$pos_noun" ]; then
  exit 1
fi
case $pos_noun in
  *"'"|*"'") printf '%s' "$pos_noun" ;;
  *[sS]) printf "%s'" "$pos_noun" ;;
  *) printf "%s's" "$pos_noun" ;;
esac
