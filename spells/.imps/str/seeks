#!/bin/sh
# seeks PATTERN FILE - silently test if file contains literal pattern
# Example: seeks "error" log.txt && echo "found errors"
set -eu

_seeks() {
  grep -Fq -- "$1" "$2" 2>/dev/null
}

# Self-execute when run directly (not sourced)
case "$0" in
  */seeks) [ "${_WIZARDRY_SOURCING:-}" != "1" ] && _seeks "$@" ;; esac
