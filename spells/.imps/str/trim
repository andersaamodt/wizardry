#!/bin/sh
# trim - remove leading/trailing whitespace from stdin
# Example: echo "  hello  " | trim


usage() {
        cat <<'USAGE' >&2
Usage: trim

Remove leading/trailing whitespace from stdin. Example: echo "  hello  " | trim.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        usage
        exit 0
        ;;
esac

sed 's/^[[:space:]]*//;s/[[:space:]]*$//'
