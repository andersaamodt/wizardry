#!/bin/sh
# upper - convert stdin to uppercase
# Example: echo "hello" | upper


usage() {
        cat <<'USAGE' >&2
Usage: upper

Convert stdin to uppercase. Example: echo "hello" | upper.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        usage
        exit 0
        ;;
esac

tr '[:lower:]' '[:upper:]'
