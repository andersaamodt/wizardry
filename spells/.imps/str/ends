#!/bin/sh
# ends STRING SUFFIX - test if string ends with suffix
# Example: ends "$file" ".sh" && echo "shell script"
set -eu

_ends() {
  case "$1" in
    *"$2") return 0 ;;
    *) return 1 ;;
  esac
}

# Self-execute when run directly (not sourced)
case "$0" in
  */ends) [ "${_WIZARDRY_SOURCING:-}" != "1" ] && _ends "$@" ;; esac
