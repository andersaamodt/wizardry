#!/bin/sh
# contains HAYSTACK NEEDLE - test if string contains substring
# Example: contains "$PATH" "/usr/local/bin" && echo "found"

set -eu

_contains() {
  case "$1" in
    *"$2"*) return 0 ;;
    *) return 1 ;;
  esac
}

# Self-execute when run directly (not sourced)
case "$0" in
  */contains) _contains "$@" ;; esac
