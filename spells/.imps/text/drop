#!/bin/sh
# drop N [FILE] - output all lines except last N
# Example: drop 5 log.txt   # all except last 5 lines


usage() {
        cat <<'USAGE' >&2
Usage: drop N [FILE]

Output all lines except last N. Example: drop 5 log.txt   # all except last 5 lines.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        usage
        exit 0
        ;;
esac

if [ "$#" -ge 2 ]; then head -n "-$1" "$2"; else head -n "-$1"; fi
