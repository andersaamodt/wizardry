#!/bin/sh
# take N [FILE] - take first N lines of input or file
# Example: take 5 file.txt   # first 5 lines


usage() {
        cat <<'USAGE' >&2
Usage: take N [FILE]

Take first N lines of input or file. Example: take 5 file.txt   # first 5 lines.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        usage
        exit 0
        ;;
esac

if [ "$#" -ge 2 ]; then head -n "$1" "$2"; else head -n "$1"; fi
