#!/bin/sh
# first [FILE] - output first line of input or file
# Examples: ls | first   # or: first /etc/passwd


usage() {
        cat <<'USAGE' >&2
Usage: first [FILE]

Output first line of input or file Examples: ls | first   # or: first /etc/passwd.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        usage
        exit 0
        ;;
esac

if [ "$#" -ge 1 ]; then head -n 1 "$1"; else head -n 1; fi
