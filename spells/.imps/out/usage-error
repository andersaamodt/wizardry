#!/bin/sh
# usage-error NAME MESSAGE - print usage error and exit with code 2
# Example: usage-error "my-spell" "unknown option: -x"
set -eu


ue_name=${1:-}
ue_message=${2:-}
if [ -n "$ue_name" ]; then
  printf '%s: %s\n' "$ue_name" "ue_message:-usage error}" >&2
elif [ -n "$ue_message" ]; then
  printf '%s\n' "$ue_message" >&2
fi
exit 2
