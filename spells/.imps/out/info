#!/bin/sh
# info MESSAGE - print informational message with visual indicator
# Example: info "Processing files..."

set -eu

_info() {
  _info_level=${WIZARDRY_LOG_LEVEL:-0}
  if [ "$_info_level" -ge 1 ]; then
    printf '%s\n' "$*"
  fi
}

# Self-execute when run directly (not sourced)
case "$0" in
  */info) [ "${_WIZARDRY_SOURCING:-}" != "1" ] && _info "$@" ;; esac
