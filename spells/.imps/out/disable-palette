#!/bin/sh
# disable-palette - reset all color variables to empty strings
# Source this script after sourcing colors to disable all ANSI escape sequences

usage() {
	cat <<'USAGE' >&2
Usage: disable-palette (source)

Sets all wizardry color and theme variables to empty strings, effectively
disabling ANSI escape sequences for scripts that have sourced the colors
palette. Also sets WIZARDRY_COLORS_AVAILABLE=0.
USAGE
}

# Only handle --help when run directly as a script, not when sourced
case "$0" in
*disable-palette)
	case "${1-}" in
	--help|--usage|-h)
		usage
		exit 0
		;;
	esac
	;;
esac

for name in \
	RESET BLACK RED GREEN YELLOW BLUE PURPLE CYAN WHITE GREY \
	BOLD ITALICS UNDERLINED BLINK INVERT STRIKE \
	BRIGHT_BLACK BRIGHT_RED BRIGHT_GREEN BRIGHT_YELLOW \
	BRIGHT_BLUE BRIGHT_PURPLE BRIGHT_CYAN BRIGHT_WHITE \
	LIGHT_BLUE \
	BG_BLACK BG_RED BG_GREEN BG_YELLOW BG_BLUE BG_PURPLE \
	BG_CYAN BG_WHITE BG_BRIGHT_BLACK BG_BRIGHT_RED \
	BG_BRIGHT_GREEN BG_BRIGHT_YELLOW BG_BRIGHT_BLUE \
	BG_BRIGHT_PURPLE BG_BRIGHT_CYAN BG_BRIGHT_WHITE \
	THEME_HIGHLIGHT THEME_MUTED THEME_CUSTOM THEME_SUCCESS \
	THEME_ERROR THEME_HEADING THEME_DIVIDER \
	MUD_LOCATION MUD_TITLE MUD_DESCRIPTION MUD_ITEM MUD_HANDLE MUD_SPELL MUD_MONSTER
do
	eval "$name=''"
done
WIZARDRY_COLORS_AVAILABLE=0
