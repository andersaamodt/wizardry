#!/bin/sh
# fail MESSAGE - print message to stderr and exit with failure
# Example: has git || fail "git required"


usage() {
        cat <<'USAGE' >&2
Usage: fail MESSAGE

Print message to stderr and exit with failure. Example: has git || fail "git required".
USAGE
}

case "${1-}" in
--help|--usage|-h)
        usage
        exit 0
        ;;
esac

printf '%s\n' "$*" >&2
exit 1
