#!/bin/sh
# else DEFAULT - output stdin if non-empty, else output default value
# Example: echo "" | else "fallback"
set -eu

else_output() {
  _else_input=$(cat)
  if [ -n "$_else_input" ]; then printf '%s\n' "$_else_input"; else printf '%s\n' "$1"; fi
}

# Self-execute when run directly (not sourced)
case "$0" in
  */else) else_output "$@" ;; esac
