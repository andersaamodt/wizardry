#!/bin/sh
# else DEFAULT - output stdin if non-empty, else output default value
# Example: echo "" | else "fallback"


usage() {
        cat <<'USAGE' >&2
Usage: else DEFAULT

Output stdin if non-empty, else output default value. Example: echo "" | else "fallback".
USAGE
}

case "${1-}" in
--help|--usage|-h)
        usage
        exit 0
        ;;
esac

input=$(cat)
if [ -n "$input" ]; then printf '%s\n' "$input"; else printf '%s\n' "$1"; fi
