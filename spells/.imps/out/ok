#!/bin/sh
# ok COMMAND [ARGS...] - run command silently, succeed if it succeeds
# Example: ok mkdir -p /tmp/test && echo "created"


usage() {
        cat <<'USAGE' >&2
Usage: ok COMMAND [ARGS...]

Run command silently, succeed if it succeeds. Example: ok mkdir -p /tmp/test && echo "created".
USAGE
}

case "${1-}" in
--help|--usage|-h)
        usage
        exit 0
        ;;
esac

"$@" >/dev/null 2>&1
