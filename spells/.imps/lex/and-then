#!/bin/sh
# and-then CMD CMD_ARGS MORE... - execute prior command, then continue if it succeeded (&&)
# Canonical linking word for shell's && operator.
# Receives: $1=command, $2=command_args (space-separated), $3+=remaining args
# Example: parse true and-then echo success â†’ outputs "success"

set -eu

cmd=${1:-}
cmd_args=${2:-}
shift 2 2>/dev/null || shift $#

# Run the prior command if present
if [ -n "$cmd" ]; then
  # shellcheck disable=SC2086
  if "$cmd" $cmd_args; then
    : # success
  else
    exit $?
  fi
fi

# Continue parsing remaining args
if [ $# -eq 0 ]; then
  exit 0
fi

lex_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
exec "$lex_dir/parse" "$@"
