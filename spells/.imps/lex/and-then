#!/bin/sh
# and-then CMD CMD_ARGS MORE... - execute prior command, continue if it succeeded (&&)
# Canonical linking word for shell's && operator.
# Receives: $1=command, $2=command_args, $3+=remaining args

_at_cmd=${1:-}
_at_cmd_args=${2:-}
shift 2 2>/dev/null || shift $#

if [ -n "$_at_cmd" ]; then
  # shellcheck disable=SC2086
  if "$_at_cmd" $_at_cmd_args; then
    : # success
  else
    exit $?
  fi
fi

if [ $# -eq 0 ]; then
  exit 0
fi

_at_lex_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
"$_at_lex_dir/parse" "$@"
