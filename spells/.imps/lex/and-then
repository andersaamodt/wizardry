#!/bin/sh
# and-then CMD... - execute prior command, then continue if it succeeded (&&)
# Canonical linking word for shell's && operator.
# Example: true and-then echo success â†’ outputs "success"

set -eu

cmd=${PARSE_CMD:-}
cmd_args=${PARSE_CMD_ARGS:-}

# Run the prior command if present
if [ -n "$cmd" ]; then
  # shellcheck disable=SC2086
  if "$cmd" $cmd_args; then
    : # success
  else
    exit $?
  fi
fi

# Continue parsing remaining args
if [ $# -eq 0 ]; then
  exit 0
fi

# Clear context for next command
unset PARSE_CMD PARSE_CMD_ARGS 2>/dev/null || true

exec parse-imperative "$@"
