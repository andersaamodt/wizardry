#!/bin/sh
# to TARGET [MORE...] - append TARGET to prior command args (alias for into)
# Example: cp file.txt to /tmp/dest.txt â†’ cp file.txt /tmp/dest.txt

set -eu

if [ $# -lt 1 ]; then
  printf '%s: to requires a target\n' "to" >&2
  exit 1
fi

target=$1
shift

cmd=${PARSE_CMD:-}
cmd_args=${PARSE_CMD_ARGS:-}

if [ -z "$cmd" ]; then
  printf '%s: to requires a command before it\n' "to" >&2
  exit 1
fi

# Append target to command args
if [ -n "$cmd_args" ]; then
  new_args="$cmd_args $target"
else
  new_args=$target
fi

# Update context
PARSE_CMD_ARGS=$new_args
export PARSE_CMD_ARGS

# If no more args, execute the command now
if [ $# -eq 0 ]; then
  # shellcheck disable=SC2086
  exec "$cmd" $new_args
fi

# Continue parsing with updated context
exec parse-imperative "$@"
