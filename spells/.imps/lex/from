#!/bin/sh
# from CMD CMD_ARGS SOURCE MORE... - prepend SOURCE to command args
# Receives: $1=command, $2=command_args (space-separated), $3=source, $4+=remaining
# Example: parse cp to /tmp from /etc/hosts â†’ cp /etc/hosts /tmp

set -eu

cmd=${1:-}
cmd_args=${2:-}
shift 2 2>/dev/null || shift $#

if [ $# -lt 1 ]; then
  printf '%s: from requires a source\n' "from" >&2
  exit 1
fi

source=$1
shift

if [ -z "$cmd" ]; then
  printf '%s: from requires a command before it\n' "from" >&2
  exit 1
fi

# Prepend source to command args
if [ -n "$cmd_args" ]; then
  new_args="$source $cmd_args"
else
  new_args=$source
fi

# If no more args, execute the command now
if [ $# -eq 0 ]; then
  # shellcheck disable=SC2086
  exec "$cmd" $new_args
fi

# More args - continue parsing with updated context
lex_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
# shellcheck disable=SC2086
exec "$lex_dir/parse" "$cmd" $new_args "$@"
