#!/bin/sh
# parent PATH - extract directory from path (like dirname but pure shell)
# Example: dir=$(parent /path/to/file.txt)  # outputs: /path/to


usage() {
        cat <<'USAGE' >&2
Usage: parent PATH

Extract directory from path (like dirname but pure shell). Example: dir=$(parent /path/to/file.txt)  # outputs: /path/to.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        usage
        exit 0
        ;;
esac

path=$1
case "$path" in
*/*) printf '%s\n' "${path%/*}" ;;
*)   printf '%s\n' "." ;;
esac
