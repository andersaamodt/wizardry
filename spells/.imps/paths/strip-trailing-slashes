#!/bin/sh
# strip-trailing-slashes PATH - remove trailing slashes, output "/" for empty
# Example: strip-trailing-slashes "/tmp/foo/" -> /tmp/foo
set -eu


_sts_normalized=$(printf '%s' "$1" | sed 's|/*$||')
if [ -z "$_sts_normalized" ]; then
  printf '/\n'
  exit
fi
printf '%s\n' "$_sts_normalized"
