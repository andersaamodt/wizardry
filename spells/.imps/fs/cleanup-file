#!/bin/sh
# cleanup-file FILE - remove temp file if it exists (silent on missing)
# Example: trap 'cleanup-file "$tmp"' EXIT
set -eu

_cleanup_file() {
  [ -n "${1:-}" ] && [ -f "$1" ] && rm -f "$1"
  return 0
}

# Self-execute when run directly (not sourced)
case "$0" in
  */cleanup-file) [ "${_WIZARDRY_SOURCING:-}" != "1" ] && _cleanup_file "$@" ;; esac
