#!/bin/sh
# is-submenu - check if current menu was called from another menu
# Always returns 1 (false) since submenu detection is not reliably possible
# without using environment variables, which is against project policy.
# Example: if is-submenu; then exit_label="Back"; else exit_label="Exit"; fi


usage() {
        cat <<'USAGE' >&2
Usage: is-submenu

Check if current menu was called from another menu Always returns 1 (false) since submenu detection is not reliably possible without using environment variables, which is against project policy.. Example: if is-submenu; then exit_label="Back"; else exit_label="Exit"; fi.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        usage
        exit 0
        ;;
esac

exit 1
