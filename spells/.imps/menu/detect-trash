#!/bin/sh
# detect-trash - print the path to the user's trash directory
# Returns the correct trash directory path for the current OS.
# Example: cd "$(detect-trash)"


dt_kernel=$(uname -s 2>/dev/null || printf 'unknown')

case "$dt_kernel" in
  Darwin)
    printf '%s/.Trash\n' "$HOME"
    ;;
  Linux)
    dt_xdg_data="${XDG_DATA_HOME:-$HOME/.local/share}"
    printf '%s/Trash/files\n' "$dt_xdg_data"
    ;;
  *)
    printf '%s\n' "detect-trash: unsupported operating system: $dt_kernel" >&2
    exit 1
    ;;
esac

