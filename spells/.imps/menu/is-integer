#!/bin/sh
# is-integer VALUE - test if value is a valid integer (positive, negative, or zero)
# Example: is-integer "42" && echo "valid"

case "$1" in
'') exit 1 ;;           # empty string
-) exit 1 ;;            # just a minus sign
-[0-9]) : ;;            # negative single digit
-[0-9]*) : ;;           # negative multi-digit (validated below)
[0-9]*) : ;;            # positive number or zero
*) exit 1 ;;            # anything else
esac
# Check for non-digit characters (excluding leading minus)
case "$1" in
-*) rest=${1#-}; case "$rest" in *[!0-9]*) exit 1 ;; esac ;;
*[!0-9]*) exit 1 ;;
esac
exit 0
