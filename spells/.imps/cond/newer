#!/bin/sh
# newer FILE1 FILE2 - test if FILE1 is newer than FILE2
# Example: newer src.c src.o && compile src.c


usage() {
        cat <<'USAGE' >&2
Usage: newer FILE1 FILE2

Test if FILE1 is newer than FILE2. Example: newer src.c src.o && compile src.c.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        usage
        exit 0
        ;;
esac

[ "$1" -nt "$2" ]
