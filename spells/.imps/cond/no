#!/bin/sh
# no VALUE - test if value is negative (n/no/false/0/N/NO/FALSE)
# Example: no "$VERBOSE" && echo "quiet mode"


usage() {
        cat <<'USAGE' >&2
Usage: no VALUE

Test if value is negative (n/no/false/0/N/NO/FALSE). Example: no "$VERBOSE" && echo "quiet mode".
USAGE
}

case "${1-}" in
--help|--usage|-h)
        usage
        exit 0
        ;;
esac

case "$1" in
n|N|no|NO|No|false|FALSE|False|0) exit 0 ;;
*) exit 1 ;;
esac
