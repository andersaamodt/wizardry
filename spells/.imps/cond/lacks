#!/bin/sh
# lacks COMMAND - test if command is NOT available (opposite of has)
# Example: lacks git && echo "please install git"


usage() {
        cat <<'USAGE' >&2
Usage: lacks COMMAND

Test if command is NOT available (opposite of has). Example: lacks git && echo "please install git".
USAGE
}

case "${1-}" in
--help|--usage|-h)
        usage
        exit 0
        ;;
esac

! command -v "$1" >/dev/null 2>&1
