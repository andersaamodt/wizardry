#!/bin/sh
# has COMMAND - test if command exists on PATH
# Example: has git && git status


usage() {
        cat <<'USAGE' >&2
Usage: has COMMAND

Test if command exists on PATH. Example: has git && git status.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        usage
        exit 0
        ;;
esac

command -v "$1" >/dev/null 2>&1
