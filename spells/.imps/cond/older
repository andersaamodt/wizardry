#!/bin/sh
# older FILE1 FILE2 - test if FILE1 is older than FILE2 (or FILE2 is newer)
# Example: older src.c src.o || compile src.c


usage() {
        cat <<'USAGE' >&2
Usage: older FILE1 FILE2

Test if FILE1 is older than FILE2 (or FILE2 is newer). Example: older src.c src.o || compile src.c.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        usage
        exit 0
        ;;
esac

[ "$1" -ot "$2" ]
