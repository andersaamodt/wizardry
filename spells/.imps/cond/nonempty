#!/bin/sh
# nonempty VALUE - test if string is non-empty (has content)
# Example: nonempty "$NAME" && echo "Hello, $NAME"


usage() {
        cat <<'USAGE' >&2
Usage: nonempty VALUE

Test if string is non-empty (has content). Example: nonempty "$NAME" && echo "Hello, $NAME".
USAGE
}

case "${1-}" in
--help|--usage|-h)
        usage
        exit 0
        ;;
esac

[ -n "$1" ]
