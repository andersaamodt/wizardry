#!/bin/sh
# empty VALUE - test if string is empty or unset
# Example: empty "$VAR" && echo "no value provided"


usage() {
        cat <<'USAGE' >&2
Usage: empty VALUE

Test if string is empty or unset. Example: empty "$VAR" && echo "no value provided".
USAGE
}

case "${1-}" in
--help|--usage|-h)
        usage
        exit 0
        ;;
esac

[ -z "$1" ]
