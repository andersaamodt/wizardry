#!/bin/sh
# yes VALUE - test if value is affirmative (y/yes/true/1/Y/YES/TRUE)
# Example: yes "$VERBOSE" && echo "verbose mode"

# Note: No set -eu because this is a conditional imp (returns exit codes for flow control)


yes() {
  case "$1" in
    y|Y|yes|YES|Yes|true|TRUE|True|1) return 0 ;;
    *) return 1 ;;
  esac
}

# Self-execute when run directly (not sourced)
case "$0" in
  */yes) yes "$@" ;; esac