#!/bin/sh
# is-posint VALUE - test if VALUE is a positive integer (greater than 0)
# Example: is-posint "$count" && echo "valid count"


is_posint() {
  case "$1" in
    ''|*[!0-9]*) return 1 ;;
    0) return 1 ;;
    *) return 0 ;;
  esac
}

# Self-execute when run directly (not sourced)
case "$0" in
  */is-posint) is_posint "$@" ;; esac