#!/bin/sh
# stub-await-keypress - test stub mimicking await-keypress for single-key tests
# Stubs mimic the interface of commands they replace
# Returns "enter" by default, allowing menu tests to select and exit
# Example: stub-await-keypress

set -eu

_stub_await_keypress() {
  # Return "enter" to simulate user pressing enter key
  # This allows menu to select current item and exit
  printf 'enter\n'
}

# Self-execute when run directly (not sourced)
# Match both stub name and symlink name (tests create symlinks without stub- prefix)
case "$0" in
  */await-keypress|*/stub-await-keypress) _stub_await_keypress "$@" ;; esac
