#!/bin/sh
# stub-fathom-terminal - test stub mimicking fathom-terminal system command
# Stubs mimic the interface of commands they replace, including flags
# Example: stub-fathom-terminal --width

set -eu

_stub_fathom_terminal() {
  case ${1-} in
    --width) printf '80\n' ;;
    --height) printf '24\n' ;;
    *) printf '80 24\n' ;;
  esac
}

# Self-execute when run directly (not sourced); match stub and symlink names
case "$0" in
  */fathom-terminal|*/stub-fathom-terminal)
    [ -z "${_WIZARDRY_SOURCING-}" ] && _stub_fathom_terminal "$@"
    ;;
esac
