#!/bin/sh
# stub-fathom-terminal - test stub mimicking fathom-terminal system command
# Stubs mimic the interface of commands they replace, including flags
# Example: stub-fathom-terminal --width

_stub_fathom_terminal() {
  case ${1-} in
    --width) printf '80\n' ;;
    --height) printf '24\n' ;;
    *) printf '80 24\n' ;;
  esac
}

# Self-execute when run directly (not sourced)
# Match both stub name and symlink name (tests create symlinks without stub- prefix)
case "$0" in
  */fathom-terminal|*/stub-fathom-terminal) _stub_fathom_terminal "$@" ;; esac
