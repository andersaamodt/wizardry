#!/bin/sh
# assert-path-exists PATH - verify path exists
# Sets TEST_FAILURE_REASON if path does not exist.

set -eu
. env-clear

_assert_path_exists() {
  if [ ! -e "$1" ]; then
    TEST_FAILURE_REASON="expected path to exist: $1"
    return 1
  fi
  return 0
}

# Self-execution when run directly (not sourced)
case "${0##*/}" in assert-path-exists) _assert_path_exists "$@" ;; esac
