#!/bin/sh
# write-command-stub DIR NAME - create a simple stub command that exits 0
# Creates an executable script at DIR/NAME that always succeeds.

set -eu
. env-clear

_write_command_stub() {
  dir=$1
  name=$2
  cat <<'STUB' >"$dir/$name"
#!/bin/sh
exit 0
STUB
  chmod +x "$dir/$name"
}

# Self-execution when run directly (not sourced)
case "${0##*/}" in write-command-stub) _write_command_stub "$@" ;; esac
