#!/bin/sh
# assert-path-missing PATH - verify path does not exist
# Sets TEST_FAILURE_REASON if path exists.
set -eu

assert_path_missing() {
  if [ -e "$1" ]; then
    TEST_FAILURE_REASON="expected path to be absent: $1"
    return 1
  fi
  return 0
}

# Self-execution when run directly (not sourced)
case "${0##*/}" in assert-path-missing) assert_path_missing "$@" ;; esac
