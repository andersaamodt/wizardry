#!/bin/sh
# test-skip NUM DESC REASON - output a test skip message
# NUM is the subtest number (passed as argument, no globals)
# Example: test-skip 3 "spell handles error" "mode mismatch"

set -eu

num=$1
desc=$2
reason=${3-}

if [ -n "$reason" ]; then
  printf 'SKIP #%s %s: %s\n' "$num" "$desc" "$reason"
else
  printf 'SKIP #%s %s\n' "$num" "$desc"
fi


