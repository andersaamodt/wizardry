#!/bin/sh
# make-fixture - create a test fixture directory with standard structure
# Creates bin/, log/, and home/.local/bin/ subdirectories.
set -eu

make_fixture() {
  fixture=$(make_tempdir)
  mkdir -p "$fixture/bin" "$fixture/log" "$fixture/home/.local/bin"
  printf '%s\n' "$fixture"
}

# Self-execution when run directly (not sourced)
case "${0##*/}" in make-fixture) make_fixture "$@" ;; esac
