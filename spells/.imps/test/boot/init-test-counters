#!/bin/sh
# init-test-counters - initialize global test result counters
# Must be sourced to set the global counter variables.
set -eu

init_test_counters() {

  # Initialize test counters (no function, just sets globals when sourced)
  _pass_count=0
  _fail_count=0
  _skip_count=0
  _test_index=0
  _fail_detail_indices=""
}

# Self-execute when run directly (not sourced)
case "$0" in
  */init-test-counters) init_test_counters "$@" ;; esac