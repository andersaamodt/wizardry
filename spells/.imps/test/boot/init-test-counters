#!/bin/sh
# init-test-counters - initialize global test result counters
# Must be sourced to set the global counter variables.
# Auto-executes when sourced to initialize counters immediately.
set -eu

init_test_counters() {

  # Initialize test counters (no function, just sets globals when sourced)
  _pass_count=0
  _fail_count=0
  _skip_count=0
  _test_index=0
  _fail_detail_indices=""
}

# Auto-execute when sourced OR when run directly
# This ensures counters are initialized immediately upon sourcing
init_test_counters "$@"