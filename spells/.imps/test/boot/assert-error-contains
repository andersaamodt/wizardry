#!/bin/sh
# assert-error-contains SUBSTRING - verify ERROR contains the substring
# Sets TEST_FAILURE_REASON on mismatch.
set -eu

assert_error_contains() {
  substring=$1
  case "$ERROR" in
    *"$substring"*)
      return 0
      ;;
    *)
      TEST_FAILURE_REASON="stderr missing substring: $substring"
      return 1
      ;;
  esac
}


assert_error_contains "$@"
