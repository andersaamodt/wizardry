#!/bin/sh
# assert-output-contains SUBSTRING - verify OUTPUT contains the substring
# Sets TEST_FAILURE_REASON on mismatch.
set -eu

assert_output_contains() {
  substring=$1
  case "$OUTPUT" in
    *"$substring"*)
      return 0
      ;;
    *)
      TEST_FAILURE_REASON="output missing substring: $substring"
      return 1
      ;;
  esac
}


assert_output_contains "$@"
