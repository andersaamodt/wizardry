#!/bin/sh
# write-stub-menu DIR - create a menu stub script in DIR
# Creates a stub that logs menu calls and simulates ESC by exiting 130
set -eu

dir=$1
cat <<'STUB' >"$dir/menu"
#!/bin/sh
printf '%s\n' "$@" >>"$MENU_LOG"
# Simulate ESC/Ctrl-C by exiting with 130
exit 130
STUB
chmod +x "$dir/menu"

