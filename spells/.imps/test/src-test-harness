#!/bin/sh
# src-test-harness - sourceable test harness with helper functions
# Source this imp to get test setup, assertions, and fixture helpers.
# Example: . "$(dirname "$0")/../../spells/.imps/test/src-test-harness"

# This is a sourceable imp - it contains exactly one function block.
# Sourcing this file sets up the test environment and defines test helpers.

# --- Begin harness setup (runs on source) ---

# Find repo root
_test_harness_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
while [ "$_test_harness_dir" != "/" ] && [ ! -d "$_test_harness_dir/spells" ]; do
  _test_harness_dir=$(dirname "$_test_harness_dir")
done
ROOT_DIR=$_test_harness_dir

# Setup PATH
_sys_path=${PATH:-/usr/local/bin:/usr/bin:/bin}
PATH="$ROOT_DIR/spells:$ROOT_DIR/spells/.imps"
for _d in "$ROOT_DIR/spells/.imps"/*; do [ -d "$_d" ] && PATH="$PATH:$_d"; done
for _d in "$ROOT_DIR/spells"/*; do [ -d "$_d" ] && PATH="$PATH:$_d"; done
PATH="$PATH:$_sys_path"

# Setup temp directory
WIZARDRY_TMPDIR=$(mktemp -d "${TMPDIR:-/tmp}/wizardry-test.XXXXXX")
export ROOT_DIR PATH WIZARDRY_TMPDIR

# Test state
_pass=0 _fail=0

# --- Test Helper Functions ---

run_cmd() {
  _o=$(mktemp "$WIZARDRY_TMPDIR/o.XXXXXX"); _e=$(mktemp "$WIZARDRY_TMPDIR/e.XXXXXX")
  STATUS=0; "$@" >"$_o" 2>"$_e" || STATUS=$?
  OUTPUT=$(cat "$_o"); ERROR=$(cat "$_e"); rm -f "$_o" "$_e"
}

run_spell() { _s=$1; shift; run_cmd "$ROOT_DIR/$_s" "$@"; }

# Assertions
assert_success() { assert-success "$STATUS" "$ERROR"; }
assert_failure() { assert-failure "$STATUS"; }
assert_status() { assert-status "$STATUS" "$1" "$ERROR"; }
assert_output_contains() { assert-output-contains "$OUTPUT" "$1"; }
assert_error_contains() { assert-error-contains "$ERROR" "$1"; }
assert_file_contains() { assert-file-contains "$1" "$2"; }
assert_path_exists() { assert-path-exists "$1"; }
assert_path_missing() { assert-path-missing "$1"; }

# Fixture helpers
make_tempdir() { make-tempdir; }
make_fixture() { make-fixture; }
write_apt_stub() { write-apt-stub "$1"; }
write_sudo_stub() { write-sudo-stub "$1"; }
write_command_stub() { write-command-stub "$1" "$2"; }
write_pkgin_stub() { write-pkgin-stub "$1"; }
provide_basic_tools() { provide-basic-tools "$1"; }
link_tools() { link-tools "$@"; }

# Test runner
run_test_case() {
  _d=$1; _f=$2
  if "$_f"; then _pass=$((_pass+1)); printf 'PASS %s\n' "$_d"
  else _fail=$((_fail+1)); printf 'FAIL %s\n' "$_d"; fi
}

finish_tests() {
  _t=$((_pass+_fail))
  printf '%s/%s tests passed' "$_pass" "$_t"
  [ "$_fail" -gt 0 ] && printf ' (%s failed)\n' "$_fail" && return 1
  printf '\n'
}
