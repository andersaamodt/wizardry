#!/bin/sh

# start-service requests systemd to start a unit, prompting for a name when
# none is provided. The script intentionally narrates each step so new users
# can see how wizardry interacts with systemctl.

start_service_usage() {
        cat <<'USAGE' >&2
Usage: start-service [unit]

Starts the requested systemd service, prompting for a unit name when none is supplied. Narrates each systemctl step so new casters can follow along.
USAGE
}



start_service() {
case "${1-}" in
--help|--usage|-h)
  start_service_usage
  return 0
  ;;
esac

set -eu
. env-clear

script_name=$(basename "$0")

# Get service name from argument or prompt user
service_name=${1-}
if [ -z "$service_name" ]; then
        # Find ask-text helper
        if [ -n "${start_service_ask_text-}" ]; then
                ask_text_helper=$start_service_ask_text
        elif command -v ask-text >/dev/null 2>&1; then
                ask_text_helper=$(command -v ask-text)
        else
                # Try to find in same directory as script
                script_source=$0
                case $script_source in
                */*)
                        script_dir=${script_source%/*}
                        ;;
                *)
                        resolved=$(command -v "$script_source" 2>/dev/null \
                                || printf '%s' "$script_source")
                        script_dir=${resolved%/*}
                        ;;
                esac
                if [ -z "$script_dir" ] || [ "$script_dir" = "$script_source" ]; then
                        script_dir=.
                fi
                script_dir=$(cd "$script_dir" && pwd -P)
                
                if [ -x "$script_dir/ask-text" ]; then
                        ask_text_helper=$script_dir/ask-text
                else
                        printf '%s\n' "$script_name: ask-text spell not found." >&2
                        return 1
                fi
        fi
        
        service_name=$("$ask_text_helper" "Which service should I start?")
fi

if [ -z "$service_name" ]; then
        printf '%s\n' "$script_name: No service name supplied." >&2
        return 1
fi

# Normalize unit name (add .service suffix if not present)
case $service_name in
*.service)
        unit=$service_name
        ;;
*)
        unit=${service_name}.service
        ;;
esac

# Find systemctl command
if [ -z "${systemctl_cmd-}" ]; then
        if command -v systemctl >/dev/null 2>&1; then
                systemctl_cmd=$(command -v systemctl)
        else
                printf '%s\n' "$script_name: systemctl is not available on this system." >&2
                return 1
        fi
fi

# Start the service (with sudo if needed)
printf 'Starting %s via systemctl...\n' "$unit"
if [ "$(id -u)" -eq 0 ]; then
        "$systemctl_cmd" start "$unit"
elif command -v sudo >/dev/null 2>&1; then
        sudo "$systemctl_cmd" start "$unit"
else
        printf '%s\n' "$script_name: systemctl requires root. Re-run as root or install sudo." >&2
        return 1
fi
}

# Self-execute when run directly (not sourced)
case "$0" in
  */start-service) start_service "$@" ;; esac
