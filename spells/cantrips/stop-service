#!/bin/sh

# stop-service asks systemd to stop a running unit. It mirrors start-service so
# users can read either script to understand the full lifecycle.

stop_service_usage() {
        cat <<'USAGE' >&2
Usage: stop-service UNIT

Stops the specified systemd service and reports the result, prompting for a unit name when omitted.
USAGE
}



stop_service() {
case "${1-}" in
--help|--usage|-h)
  stop_service_usage
  return 0
  ;;
esac

require_wizardry || return 1

set -eu
env_clear

script_name=$(basename "$0")

# Get service name from argument or prompt user
service_name=${1-}
if [ -z "$service_name" ]; then
        # Find ask-text helper
        if [ -n "${STOP_SERVICE_ASK_TEXT-}" ]; then
                ask_text_helper=$STOP_SERVICE_ASK_TEXT
        elif has ask-text; then
                ask_text_helper=$(command -v ask-text)
        else
                # Try to find in same directory as script
                script_source=$0
                case $script_source in
                */*)
                        script_dir=${script_source%/*}
                        ;;
                *)
                        resolved=$(command -v "$script_source" 2>/dev/null \
                                || printf '%s' "$script_source")
                        script_dir=${resolved%/*}
                        ;;
                esac
                if [ -z "$script_dir" ] || [ "$script_dir" = "$script_source" ]; then
                        script_dir=.
                fi
                script_dir=$(cd "$script_dir" && pwd -P)
                
                if [ -x "$script_dir/ask-text" ]; then
                        ask_text_helper=$script_dir/ask_text                 else
                        die "$script_name: ask_text spell not found."
                fi
        fi
        
        service_name=$("$ask_text_helper" "Which service should I stop?")
fi

if [ -z "$service_name" ]; then
        die "$script_name: No service name supplied."
fi

# Normalize unit name (add .service suffix if not present)
case $service_name in
*.service)
        unit=$service_name
        ;;
*)
        unit=${service_name}.service
        ;;
esac

# Find systemctl command
if [ -z "${systemctl_cmd-}" ]; then
        if has systemctl; then
                systemctl_cmd=$(command -v systemctl)
        else
                die "$script_name: systemctl is not available on this system."
        fi
fi

# Stop the service (with sudo if needed)
printf 'Stopping %s via systemctl...\n' "$unit"
if [ "$(id -u)" -eq 0 ]; then
        "$systemctl_cmd" stop "$unit"
elif has sudo; then
        sudo "$systemctl_cmd" stop "$unit"
else
        die "$script_name: systemctl requires root. Re-run as root or install sudo."
fi
}


# Load castable imp for direct execution (AFTER all functions defined)
# When executed directly: always source to ensure castable sees correct $0
# When sourced (testing): use from PATH if available to avoid forks
case "$0" in
  sh|dash|bash|zsh|ksh|mksh|*/sh|*/dash|*/bash|*/zsh|*/ksh|*/mksh)
    # Being sourced - use from PATH if available
    if ! command -v castable >/dev/null 2>&1; then
      # Use WIZARDRY_DIR or ROOT_DIR if available (avoids dirname/basename)
      if [ -n "${WIZARDRY_DIR-}" ]; then
        _i="$WIZARDRY_DIR/spells/.imps/sys"
      elif [ -n "${ROOT_DIR-}" ]; then
        _i="$ROOT_DIR/spells/.imps/sys"
      else
        _i="${WIZARDRY_DIR:-${ROOT_DIR:-${0%/*/*/*}}}/spells/.imps/sys"
      fi
      [ -f "$_i/castable" ] && . "$_i/castable"
    fi
    ;;
  *)
    # Being executed - always source to ensure correct $0 detection
    if [ -n "${WIZARDRY_DIR-}" ]; then
      _i="$WIZARDRY_DIR/spells/.imps/sys"
    elif [ -n "${ROOT_DIR-}" ]; then
      _i="$ROOT_DIR/spells/.imps/sys"
    else
      _i="${WIZARDRY_DIR:-${ROOT_DIR:-${0%/*/*/*}}}/spells/.imps/sys"
    fi
    [ -f "$_i/castable" ] && . "$_i/castable"
    ;;
esac

castable "$@"
