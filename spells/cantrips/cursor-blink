#!/bin/sh

# This spell awakens or stills the cyclic illumination of the cursor.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE' >&2
Usage: cursor-blink on|off

Toggles cursor blinking with ANSI escape codes, quietly succeeding on terminals that cannot honour the request.
USAGE
  exit 0
  ;;
esac

set -eu

# The helper expects exactly one argument that declares the desired state.
if [ "$#" -ne 1 ]; then
  usage-error "cursor-blink" "expected on or off"
fi

# Inline supports_cursor_control - only used once
case ${TERM-} in
  ''|dumb|unknown)
    # Quietly succeed so scripts keep running even when the terminal lacks ANSI
    # support (for example, on "dumb" terminals).
    exit 0
    ;;
esac

case "$1" in
  on)
    # Inline cursor_blink_on - trivial one-liner
    printf '\033[?25h'
    ;;
  off)
    # Inline cursor_blink_off - trivial one-liner
    printf '\033[?25l'
    ;;
  *)
    # Treat anything else as misuse so callers notice mistakes quickly.
    usage-error "cursor-blink" "expected on or off"
    ;;
esac
