#!/bin/sh

# This spell awakens or stills the cyclic illumination of the cursor.

# Emit the escape sequence that re-enables blinking.

cursor_blink_usage() {
  cat <<'USAGE' >&2
Usage: cursor-blink on|off

Toggles cursor blinking with ANSI escape codes, quietly succeeding on terminals that cannot honour the request.
USAGE
}



cursor_blink() {
case "${1-}" in
--help|--usage|-h)
  cursor_blink_usage
  return 0
  ;;
esac

require-wizardry || return 1

set -eu
. env-clear

# The helper expects exactly one argument that declares the desired state.
if [ "$#" -ne 1 ]; then
  usage-error "cursor-blink" "expected on or off" || return $?
fi

# Inline supports_cursor_control - only used once
case ${TERM-} in
  ''|dumb|unknown)
    # Quietly succeed so scripts keep running even when the terminal lacks ANSI
    # support (for example, on "dumb" terminals).
    return 0
    ;;
esac

case "$1" in
  on)
    # Inline cursor_blink_on - trivial one-liner
    printf '\033[?25h'
    ;;
  off)
    # Inline cursor_blink_off - trivial one-liner
    printf '\033[?25l'
    ;;
  *)
    # Treat anything else as misuse so callers notice mistakes quickly.
    usage-error "cursor-blink" "expected on or off" || return $?
    ;;
esac
}


# Load castable imp for direct execution (AFTER all functions defined)
# When executed directly: always source to ensure castable sees correct $0
# When sourced (testing): use from PATH if available to avoid forks
case "$0" in
  sh|dash|bash|zsh|ksh|mksh|*/sh|*/dash|*/bash|*/zsh|*/ksh|*/mksh)
    # Being sourced - use from PATH if available
    if ! command -v castable >/dev/null 2>&1; then
      # Use WIZARDRY_DIR or ROOT_DIR if available (avoids dirname/basename)
      if [ -n "${WIZARDRY_DIR-}" ]; then
        _i="$WIZARDRY_DIR/spells/.imps/sys"
      elif [ -n "${ROOT_DIR-}" ]; then
        _i="$ROOT_DIR/spells/.imps/sys"
      else
        _i="${WIZARDRY_DIR:-${ROOT_DIR:-${0%/*/*}}}/spells/.imps/sys"
      fi
      [ -f "$_i/castable" ] && . "$_i/castable"
    fi
    ;;
  *)
    # Being executed - always source to ensure correct $0 detection
    if [ -n "${WIZARDRY_DIR-}" ]; then
      _i="$WIZARDRY_DIR/spells/.imps/sys"
    elif [ -n "${ROOT_DIR-}" ]; then
      _i="$ROOT_DIR/spells/.imps/sys"
    else
      _i="${WIZARDRY_DIR:-${ROOT_DIR:-${0%/*/*}}}/spells/.imps/sys"
    fi
    [ -f "$_i/castable" ] && . "$_i/castable"
    ;;
esac

castable "$@"
