#!/bin/sh

# This spell validates whether a string is a valid UNIX path.
# Use it to check path input before file operations.

validate_path_usage() {
cat <<'USAGE'
Usage: validate-path <path>

Check whether a string looks like a safe UNIX path, including reasonable lengths for the path and its components. Exits 0 when the path passes basic sanity checks and 1 when it does not.
USAGE
}



validate_path() {
case "${1-}" in
--help|--usage|-h)
  validate_path_usage
  return 0
  ;;
esac

require-wizardry || return 1

set -eu
. env-clear

# Check argument provided
if [ -z "${1+x}" ]; then
  return 1
fi

path=$1

# Empty path is invalid
if [ -z "$path" ]; then
  return 1
fi

# Check path length (4096 is typical max for full path)
length=$(printf '%s' "$path" | wc -c | tr -d ' ')
if [ "$length" -gt 4096 ]; then
  return 1
fi

# Check each component length (255 is typical max for filename)
# Split on / and check each part
remaining=$path
while [ -n "$remaining" ]; do
  case "$remaining" in
    */*)
      component=${remaining%%/*}
      remaining=${remaining#*/}
      ;;
    *)
      component=$remaining
      remaining=''
      ;;
  esac
  
  if [ -n "$component" ]; then
    comp_length=$(printf '%s' "$component" | wc -c | tr -d ' ')
    if [ "$comp_length" -gt 255 ]; then
      return 1
    fi
  fi
done

return 0
}


# Load castable imp for direct execution (AFTER all functions defined)
# When executed directly: always source to ensure castable sees correct $0
# When sourced (testing): use from PATH if available to avoid forks
case "$0" in
  sh|dash|bash|zsh|ksh|mksh|*/sh|*/dash|*/bash|*/zsh|*/ksh|*/mksh)
    # Being sourced - use from PATH if available
    if ! command -v castable >/dev/null 2>&1; then
      # Use WIZARDRY_DIR or ROOT_DIR if available (avoids dirname/basename)
      if [ -n "${WIZARDRY_DIR-}" ]; then
        _i="$WIZARDRY_DIR/spells/.imps/sys"
      elif [ -n "${ROOT_DIR-}" ]; then
        _i="$ROOT_DIR/spells/.imps/sys"
      else
        _i="$(cd "$(dirname "$0")" && cd .. && cd .. && pwd)/spells/.imps/sys"
      fi
      [ -f "$_i/castable" ] && . "$_i/castable"
    fi
    ;;
  *)
    # Being executed - always source to ensure correct $0 detection
    if [ -n "${WIZARDRY_DIR-}" ]; then
      _i="$WIZARDRY_DIR/spells/.imps/sys"
    elif [ -n "${ROOT_DIR-}" ]; then
      _i="$ROOT_DIR/spells/.imps/sys"
    else
      _i="$(cd "$(dirname "$0")" && cd .. && cd .. && pwd)/spells/.imps/sys"
    fi
    [ -f "$_i/castable" ] && . "$_i/castable"
    ;;
esac

castable "$@"
