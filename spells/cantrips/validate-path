#!/bin/sh

# This spell validates whether a string is a valid UNIX path.
# Use it to check path input before file operations.

validate_path_usage() {
cat <<'USAGE'
Usage: validate-path <path>

Check whether a string looks like a safe UNIX path, including reasonable lengths for the path and its components. Exits 0 when the path passes basic sanity checks and 1 when it does not.
USAGE
}



validate_path() {
case "${1-}" in
--help|--usage|-h)
  validate_path_usage
  return 0
  ;;
esac

require-wizardry || exit 1

set -eu
. env-clear

# Check argument provided
if [ -z "${1+x}" ]; then
  return 1
fi

path=$1

# Empty path is invalid
if [ -z "$path" ]; then
  return 1
fi

# Check path length (4096 is typical max for full path)
length=$(printf '%s' "$path" | wc -c | tr -d ' ')
if [ "$length" -gt 4096 ]; then
  return 1
fi

# Check each component length (255 is typical max for filename)
# Split on / and check each part
remaining=$path
while [ -n "$remaining" ]; do
  case "$remaining" in
    */*)
      component=${remaining%%/*}
      remaining=${remaining#*/}
      ;;
    *)
      component=$remaining
      remaining=''
      ;;
  esac
  
  if [ -n "$component" ]; then
    comp_length=$(printf '%s' "$component" | wc -c | tr -d ' ')
    if [ "$comp_length" -gt 255 ]; then
      return 1
    fi
  fi
done

return 0
}


# Source castable imp if not already available (for direct execution)
if ! command -v castable >/dev/null 2>&1; then
  # Try to find imps directory relative to this spell
  _spell_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _repo_root=$(cd "$_spell_dir" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  WIZARDRY_IMPS_SYS="${WIZARDRY_DIR:-${_repo_root}}/spells/.imps/sys"
  if [ -f "$WIZARDRY_IMPS_SYS/castable" ]; then
    . "$WIZARDRY_IMPS_SYS/castable"
  fi
fi

castable "$@"
