#!/bin/sh

# This spell prints text in a subtle format only visible to wizards.
# Use it to show commands before they are executed for teaching purposes.

wizard_eyes_usage() {
cat <<'USAGE'
Usage: wizard-eyes <message>

Print a message in muted, indented text to mark it as a command or technical aside. Helpful for teaching moments when you want learners to see the command without shouting it.
USAGE
}



wizard_eyes() {
case "${1-}" in
--help|--usage|-h)
  wizard_eyes_usage
  return 0
  ;;
esac

require_wizardry || return 1

set -eu
env_clear

# Check if wizard mode is enabled (default to showing for teaching)
wizard_mode=${WIZARD:-1}

if [ "$wizard_mode" = "1" ]; then
        # Load colors if available
        if has colors; then
                # shellcheck disable=SC1091
                . colors
        else
                GREY=''
                RESET=''
                THEME_MUTED=''
        fi
        
        printf '    %s%s%s\n' "${THEME_MUTED:-$GREY}" "$*" "$RESET"
fi
}


# Load castable imp for direct execution (AFTER all functions defined)
# When executed directly: always source to ensure castable sees correct $0
# When sourced (testing): use from PATH if available to avoid forks
case "$0" in
  sh|dash|bash|zsh|ksh|mksh|*/sh|*/dash|*/bash|*/zsh|*/ksh|*/mksh)
    # Being sourced - use from PATH if available
    if ! command -v castable >/dev/null 2>&1; then
      # Use WIZARDRY_DIR or ROOT_DIR if available (avoids dirname/basename)
      if [ -n "${WIZARDRY_DIR-}" ]; then
        _i="$WIZARDRY_DIR/spells/.imps/sys"
      elif [ -n "${ROOT_DIR-}" ]; then
        _i="$ROOT_DIR/spells/.imps/sys"
      else
        _i="${WIZARDRY_DIR:-${ROOT_DIR:-${0%/*/*/*}}}/spells/.imps/sys"
      fi
      [ -f "$_i/castable" ] && . "$_i/castable"
    fi
    ;;
  *)
    # Being executed - always source to ensure correct $0 detection
    if [ -n "${WIZARDRY_DIR-}" ]; then
      _i="$WIZARDRY_DIR/spells/.imps/sys"
    elif [ -n "${ROOT_DIR-}" ]; then
      _i="$ROOT_DIR/spells/.imps/sys"
    else
      _i="${WIZARDRY_DIR:-${ROOT_DIR:-${0%/*/*/*}}}/spells/.imps/sys"
    fi
    [ -f "$_i/castable" ] && . "$_i/castable"
    ;;
esac

castable "$@"
