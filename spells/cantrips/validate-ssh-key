#!/bin/sh

# This spell validates whether a string is a valid SSH public key format.
# Use it to check SSH key input before adding to authorized_keys.

require_wizardry || return 1

validate_ssh_key_usage() {
cat <<'USAGE'
Usage: validate-ssh-key <key>

Check whether a string matches the SSH public key format: ssh-<type> <base64-data> [comment]. Exits 0 when the prefix and encoded data look valid, and 1 when they do not.
USAGE
}



validate_ssh_key() {
case "${1-}" in
--help|--usage|-h)
  validate_ssh_key_usage
  return 0
  ;;
esac

set -eu
env_clear

# Check argument
if [ -z "${1+x}" ]; then
        fail "validate-ssh-key: key required"
fi

ssh_key=$1

# SSH key format: ssh-<type> <base64-data> [optional-comment]
# Common types: ssh-rsa, ssh-ed25519, ssh-dss, ecdsa-sha2-*
case "$ssh_key" in
        ssh-rsa\ *|ssh-ed25519\ *|ssh-dss\ *|ecdsa-sha2-*\ *)
                # Valid key type prefix
                ;;
        *)
                return 1
                ;;
esac

# Extract the base64 portion (second field)
key_data=$(printf '%s' "$ssh_key" | cut -d' ' -f2)

# Check that key_data looks like base64 (alphanumeric, +, /, and = for padding)
case "$key_data" in
        *[!A-Za-z0-9+/=]*)
                return 1
                ;;
        '')
                return 1
                ;;
esac

return 0
}


# Load castable imp for direct execution (AFTER all functions defined)
# When executed directly: always source to ensure castable sees correct $0
# When sourced (testing): use from PATH if available to avoid forks
case "$0" in
  sh|dash|bash|zsh|ksh|mksh|*/sh|*/dash|*/bash|*/zsh|*/ksh|*/mksh)
    # Being sourced - use from PATH if available
    if ! command -v castable >/dev/null 2>&1; then
      # Use WIZARDRY_DIR or ROOT_DIR if available (avoids dirname/basename)
      if [ -n "${WIZARDRY_DIR-}" ]; then
        _i="$WIZARDRY_DIR/spells/.imps/sys"
      elif [ -n "${ROOT_DIR-}" ]; then
        _i="$ROOT_DIR/spells/.imps/sys"
      else
        _i="${WIZARDRY_DIR:-${ROOT_DIR:-${0%/*/*/*}}}/spells/.imps/sys"
      fi
      [ -f "$_i/castable" ] && . "$_i/castable"
    fi
    ;;
  *)
    # Being executed - always source to ensure correct $0 detection
    if [ -n "${WIZARDRY_DIR-}" ]; then
      _i="$WIZARDRY_DIR/spells/.imps/sys"
    elif [ -n "${ROOT_DIR-}" ]; then
      _i="$ROOT_DIR/spells/.imps/sys"
    else
      _i="${WIZARDRY_DIR:-${ROOT_DIR:-${0%/*/*/*}}}/spells/.imps/sys"
    fi
    [ -f "$_i/castable" ] && . "$_i/castable"
    ;;
esac

castable "$@"
