#!/bin/sh

# This spell validates whether a string is a valid SSH public key format.
# Use it to check SSH key input before adding to authorized_keys.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: validate-ssh-key <key>

Check whether a string matches the SSH public key format: ssh-<type> <base64-data> [comment]. Exits 0 when the prefix and encoded data look valid, and 1 when they do not.
USAGE
  exit 0
  ;;
esac

set -eu

# Check argument
if [ -z "${1+x}" ]; then
        fail "validate-ssh-key: key required"
fi

ssh_key=$1

# SSH key format: ssh-<type> <base64-data> [optional-comment]
# Common types: ssh-rsa, ssh-ed25519, ssh-dss, ecdsa-sha2-*
case "$ssh_key" in
        ssh-rsa\ *|ssh-ed25519\ *|ssh-dss\ *|ecdsa-sha2-*\ *)
                # Valid key type prefix
                ;;
        *)
                exit 1
                ;;
esac

# Extract the base64 portion (second field)
key_data=$(printf '%s' "$ssh_key" | cut -d' ' -f2)

# Check that key_data looks like base64 (alphanumeric, +, /, and = for padding)
case "$key_data" in
        *[!A-Za-z0-9+/=]*)
                exit 1
                ;;
        '')
                exit 1
                ;;
esac

exit 0
