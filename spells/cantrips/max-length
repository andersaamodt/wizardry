#!/usr/bin/env sh

# Reveal the maximum length of the provided strings.
# Usage: max-length <string1> [string2 ...] [-v]

verbose=0
if [ "${1-}" = "-v" ]; then
  verbose=1
  shift
fi

if [ "$#" -eq 0 ]; then
  printf '%s\n' "No arguments passed to max_length"
  exit 1
fi

# Preserve the intent of the previous implementation: when the caller passes a
# single argument that contains spaces, treat it as a whitespace-delimited list
# to measure each word individually.
if [ "$#" -eq 1 ]; then
  set -- $1
fi

longest=0
for arg in "$@"; do
  len=${#arg}
  if [ "$len" -gt "$longest" ]; then
    longest=$len
  fi
done

if [ "$verbose" -eq 1 ]; then
  printf '%s\n' "Maximum length: $longest"
fi

printf '%s\n' "$longest"
