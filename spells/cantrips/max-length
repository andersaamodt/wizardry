#!/bin/sh

# Reveal the maximum length of the provided strings.

max_length_usage() {
        cat <<'USAGE' >&2
Usage: max-length <string1> [string2 ...] [-v]

Reports the length of the longest argument, optionally echoing a labeled result when -v is supplied. A single quoted argument w
ith spaces is split into words for measurement.
USAGE
}




max_length() {
case "${1-}" in
--help|--usage|-h)
  max_length_usage
  return 0
  ;;
esac

require-wizardry || return 1

set -eu
. env-clear
verbose=0
if [ "${1-}" = "-v" ]; then
  verbose=1
  shift
fi

if [ "$#" -eq 0 ]; then
  printf '%s\n' "No arguments passed to max_length"
  return 1
fi

# Preserve the intent of the previous implementation: when the caller passes a
# single argument that contains spaces, treat it as a whitespace-delimited list
# to measure each word individually.
if [ "$#" -eq 1 ]; then
  set -- $1
fi

longest=0
for arg in "$@"; do
  len=${#arg}
  if [ "$len" -gt "$longest" ]; then
    longest=$len
  fi
done

if [ "$verbose" -eq 1 ]; then
  printf '%s\n' "Maximum length: $longest"
fi

printf '%s\n' "$longest"
}


# Load castable imp for direct execution (AFTER all functions defined)
# When executed directly: always source to ensure castable sees correct $0
# When sourced (testing): use from PATH if available to avoid forks
case "$0" in
  sh|dash|bash|zsh|ksh|mksh|*/sh|*/dash|*/bash|*/zsh|*/ksh|*/mksh)
    # Being sourced - use from PATH if available
    if ! command -v castable >/dev/null 2>&1; then
      # Use WIZARDRY_DIR or ROOT_DIR if available (avoids dirname/basename)
      if [ -n "${WIZARDRY_DIR-}" ]; then
        _i="$WIZARDRY_DIR/spells/.imps/sys"
      elif [ -n "${ROOT_DIR-}" ]; then
        _i="$ROOT_DIR/spells/.imps/sys"
      else
        _i="$(cd "$(dirname "$0")" && cd .. && cd .. && pwd)/spells/.imps/sys"
      fi
      [ -f "$_i/castable" ] && . "$_i/castable"
    fi
    ;;
  *)
    # Being executed - always source to ensure correct $0 detection
    if [ -n "${WIZARDRY_DIR-}" ]; then
      _i="$WIZARDRY_DIR/spells/.imps/sys"
    elif [ -n "${ROOT_DIR-}" ]; then
      _i="$ROOT_DIR/spells/.imps/sys"
    else
      _i="$(cd "$(dirname "$0")" && cd .. && cd .. && pwd)/spells/.imps/sys"
    fi
    [ -f "$_i/castable" ] && . "$_i/castable"
    ;;
esac

castable "$@"
