#!/bin/sh

# ask-number keeps watch over numeric ranges, nudging travelers toward a value
# between the provided bounds.  It repeats until a valid integer arrives.

ask_number_usage() {
  cat <<'USAGE' >&2
Usage: ask-number "Question" MIN MAX

Prompts until the user supplies an integer within the inclusive range.
USAGE
}



ask_number() {
case "${1-}" in
--help|--usage|-h)
  ask_number_usage
  return 0
  ;;
esac

set -eu
. "$(dirname "$0")/../.imps/sys/env-clear"

if [ "$#" -ne 3 ]; then
  ask_number_usage
  return 1
fi

question=$1
min=$2
max=$3

case $min in
*[!0-9-]*|"")
  printf '%s\n' "ask-number: MIN must be an integer." >&2
  return 1
  ;;
*) : ;;
esac
case $max in
*[!0-9-]*|"")
  printf '%s\n' "ask-number: MAX must be an integer." >&2
  return 1
  ;;
*) : ;;
esac

min=$(printf '%s' "$min")
max=$(printf '%s' "$max")

if [ "$min" -gt "$max" ]; then
  printf '%s\n' "ask-number: MIN must be less than or equal to MAX." >&2
  return 1
fi

while :; do
  # Inline ask_number_prompt
  printf '%s [%s-%s] ' "$question" "$min" "$max" >&2
  
  # Inline read_value with inlined ask_number_select_input
  case ${ASK_CANTRIP_INPUT:-auto} in
  stdin)
    input_source=stdin
    ;;
  none)
    input_source=none
    ;;
  *)
    # Use /dev/fd/0 instead of /dev/stdin for cross-platform compatibility.
    # On macOS, /dev/stdin is a symlink and tests may fail on the symlink itself.
    if [ -t 0 ] || [ -p /dev/fd/0 ] || [ -s /dev/fd/0 ]; then
      input_source=stdin
    elif [ -r /dev/tty ]; then
      input_source=tty
    else
      input_source=none
    fi
    ;;
  esac

  case $input_source in
  stdin)
    IFS= read -r response || response=
    ;;
  tty)
    IFS= read -r response </dev/tty || response=
    ;;
  *)
    printf '%s\n' "ask-number: No interactive input available." >&2
    return 1
    ;;
  esac

  case $response in
  *[!0-9-]*|"")
    printf '%s\n' "Whole number expected." >&2
    continue
    ;;
  esac

  if [ "$response" -lt "$min" ] || [ "$response" -gt "$max" ]; then
    printf '%s\n' "Number must be between $min and $max." >&2
    continue
  fi

  printf '%s\n' "$response"
  return 0

done
}

# Self-execute when run directly (not sourced)
case "$0" in
  */ask-number) ask_number "$@" ;; esac
