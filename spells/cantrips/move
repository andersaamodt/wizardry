#!/bin/sh

# Load required imps for direct execution
if ! command -v require_wizardry >/dev/null 2>&1; then
  if [ -n "${WIZARDRY_DIR-}" ]; then
    _i="$WIZARDRY_DIR/spells/.imps/sys"
  elif [ -n "${ROOT_DIR-}" ]; then
    _i="$ROOT_DIR/spells/.imps/sys"
  else
    _i="${WIZARDRY_DIR:-${ROOT_DIR:-${0%/*/*/*}}}/spells/.imps/sys"
  fi
  [ -f "$_i/require-wizardry" ] && . "$_i/require-wizardry"
fi

if ! command -v env_clear >/dev/null 2>&1; then
  if [ -n "${WIZARDRY_DIR-}" ]; then
    _i="$WIZARDRY_DIR/spells/.imps/sys"
  elif [ -n "${ROOT_DIR-}" ]; then
    _i="$ROOT_DIR/spells/.imps/sys"
  else
    _i="${WIZARDRY_DIR:-${ROOT_DIR:-${0%/*/*/*}}}/spells/.imps/sys"
  fi
  [ -f "$_i/env-clear" ] && . "$_i/env-clear"
fi


# Relocate files using natural language: "move from here to there".

move_usage() {
cat <<'USAGE'
Usage: move <source> <destination>

Move a file or directory to a new location. Accepts natural language forms like "move <source> to <destination>" or "move from <source> to <destination>" so the command reads like a sentence.
USAGE
}

move() {
case "${1-}" in
--help|--usage|-h)
  move_usage
  return 0
  ;;
esac

require_wizardry || return 1

set -eu
env_clear

from=''
to=''

while [ "$#" -gt 0 ]; do
        case "$1" in
                from)
                        shift
                        if [ "$#" -gt 0 ]; then
                                from=$1
                                shift
                        fi
                        ;;
                to)
                        shift
                        if [ "$#" -gt 0 ]; then
                                to=$1
                                shift
                        fi
                        ;;
                *)
                        if is unset "$from"; then
                                from=$1
                        elif is unset "$to"; then
                                to=$1
                        fi
                        shift
                        ;;
        esac
done

# Validate arguments
if is unset "$from"; then
        printf '%s\n' "move: source path required." >&2
        move_usage >&2
        return 1
fi

if is unset "$to"; then
        printf '%s\n' "move: destination path required." >&2
        move_usage >&2
        return 1
fi

# Check source exists before attempting move
if ! there "$from"; then
        die "move: source not found: $from" || return 1
fi

# Check write permission on destination directory
dest_dir=$(parent "$to")
if [ "$dest_dir" = "." ]; then
        dest_dir=$(here)
fi

if ! is writable "$dest_dir"; then
        die "move: no write permission on: $dest_dir" || return 1
fi

# Perform the move
mv "$from" "$to"
say "Moved '$(file-name "$from")' to '$to'."
}

# Load castable imp for direct execution (AFTER all functions defined)
# When executed directly: always source to ensure castable sees correct $0
# When sourced (testing): use from PATH if available to avoid forks
case "$0" in
  sh|dash|bash|zsh|ksh|mksh|*/sh|*/dash|*/bash|*/zsh|*/ksh|*/mksh)
    # Being sourced - use from PATH if available
    if ! command -v castable >/dev/null 2>&1; then
      # Use WIZARDRY_DIR or ROOT_DIR if available (avoids dirname/basename)
      if [ -n "${WIZARDRY_DIR-}" ]; then
        _i="$WIZARDRY_DIR/spells/.imps/sys"
      elif [ -n "${ROOT_DIR-}" ]; then
        _i="$ROOT_DIR/spells/.imps/sys"
      else
        _i="${WIZARDRY_DIR:-${ROOT_DIR:-${0%/*/*/*}}}/spells/.imps/sys"
      fi
      [ -f "$_i/castable" ] && . "$_i/castable"
    fi
    ;;
  *)
    # Being executed - always source to ensure correct $0 detection
    if [ -n "${WIZARDRY_DIR-}" ]; then
      _i="$WIZARDRY_DIR/spells/.imps/sys"
    elif [ -n "${ROOT_DIR-}" ]; then
      _i="$ROOT_DIR/spells/.imps/sys"
    else
      _i="${WIZARDRY_DIR:-${ROOT_DIR:-${0%/*/*/*}}}/spells/.imps/sys"
    fi
    [ -f "$_i/castable" ] && . "$_i/castable"
    ;;
esac

castable "$@"
