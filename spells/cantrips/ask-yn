#!/bin/sh

# ask-yn coaxes a yes or no from the adventurer.  Defaults guide hesitant
# wanderers, and every response is echoed so other spells can heed the choice.

show_usage() {
        cat <<'USAGE' >&2
Usage: ask-yn "Question" [default]

Prompt for a yes/no response. Defaults may be 'yes' or 'no'.
Exit status 0 represents "yes", 1 represents "no".
USAGE
}

case "${1-}" in
--help|--usage|-h)
        show_usage
        exit 0
        ;;
esac

set -eu

if [ "$#" -lt 1 ] || [ "$#" -gt 2 ]; then
        show_usage
        exit 1
fi

question=$1
default_choice=""
default_hint="[y/n]"
if [ "$#" -eq 2 ]; then
        case $2 in
        y|Y|yes|YES)
                default_choice=yes
                default_hint="[Y/n]"
                ;;
        n|N|no|NO)
                default_choice=no
                default_hint="[y/N]"
                ;;
        *)
                printf '%s\n' "ask-yn: default must be 'yes' or 'no'." >&2
                exit 1
                ;;
        esac
fi

select_input() {
        case ${ASK_CANTRIP_INPUT:-auto} in
        stdin)
                printf '%s\n' stdin
                return 0
                ;;
        none)
                return 1
                ;;
        esac
        # Determine the best input source. We prefer stdin in all cases where it might be
        # available - whether as an interactive terminal or as piped/redirected input.
        #
        # The -t 0 test tells us if stdin is connected to a terminal. When true, stdin is
        # definitely available for reading. When false, stdin might be piped, redirected
        # to a file, or closed. We can't reliably distinguish these cases in POSIX sh,
        # especially on macOS where /dev/stdin is a symlink and -p/-s tests fail.
        #
        # Strategy: Always prefer stdin unless explicitly told it's not available (via
        # ASK_CANTRIP_INPUT=none). If reading from stdin fails (closed/EOF), the read
        # command will fail gracefully and the caller can handle it.
        if [ -t 0 ]; then
                # stdin is a terminal - definitely use it
                printf '%s\n' stdin
                return 0
        fi
        # stdin is not a terminal - it could be piped, redirected, or closed.
        # We'll optimistically return "stdin" and let the read command handle
        # cases where it's actually closed. This works because:
        # - If stdin is piped: read works
        # - If stdin is redirected from a file: read works
        # - If stdin is closed: read fails immediately with empty input
        printf '%s\n' stdin
        return 0
}

prompt_and_read() {
        printf '%s %s ' "$question" "$default_hint" >&2
        input=$(select_input) || return 1
        case $input in
        stdin)
                IFS= read -r reply || reply=
                ;;
        tty)
                IFS= read -r reply </dev/tty || reply=
                ;;
        *)
                return 1
                ;;
        esac
        printf '%s' "$reply"
        return 0
}

while :; do
        if ! response=$(prompt_and_read); then
                if [ -n "$default_choice" ]; then
                        response=$default_choice
                else
                        printf '%s\n' "ask-yn: No interactive input available." >&2
                        exit 1
                fi
        elif [ -z "$response" ] && [ -n "$default_choice" ]; then
                response=$default_choice
        fi

        case $response in
        y|Y|yes|YES)
                printf '%s\n' "yes"
                exit 0
                ;;
        n|N|no|NO)
                printf '%s\n' "no"
                exit 1
                ;;
        esac

        printf '%s\n' "Yes or no?" >&2
        default_hint="[y/n]" # remove default hint after invalid input
        default_choice=""
done
