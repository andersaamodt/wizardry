#!/bin/sh

# ask-yn coaxes a yes or no from the adventurer.  Defaults guide hesitant
# wanderers, and every response is echoed so other spells can heed the choice.

show_usage() {
        cat <<'USAGE' >&2
Usage: ask-yn "Question" [default]

Prompt for a yes/no response. Defaults may be 'yes' or 'no'.
Exit status 0 represents "yes", 1 represents "no".
USAGE
}

case "${1-}" in
--help|--usage|-h)
        show_usage
        exit 0
        ;;
esac

set -eu

if [ "$#" -lt 1 ] || [ "$#" -gt 2 ]; then
        show_usage
        exit 1
fi

question=$1
default_choice=""
default_hint="[y/n]"
if [ "$#" -eq 2 ]; then
        case $2 in
        y|Y|yes|YES)
                default_choice=yes
                default_hint="[Y/n]"
                ;;
        n|N|no|NO)
                default_choice=no
                default_hint="[y/N]"
                ;;
        *)
                printf '%s\n' "ask-yn: default must be 'yes' or 'no'." >&2
                exit 1
                ;;
        esac
fi

while :; do
        # Prompt and read response (inlined from prompt_and_read and select_input)
        printf '%s %s ' "$question" "$default_hint" >&2
        
        # Determine input source (inlined from select_input)
        input=""
        case ${ASK_CANTRIP_INPUT:-auto} in
        stdin)
                input=stdin
                ;;
        none)
                input=none
                ;;
        *)
                # Prefer stdin whenever something is piped to us, even if a tty is also
                # present, so scripted callers can answer without interactivity.
                # Use /dev/fd/0 instead of /dev/stdin for better cross-platform compatibility.
                # On macOS, /dev/stdin is a symlink and -p/-s tests may fail on the symlink.
                # Testing /dev/fd/0 directly works reliably on both Linux and macOS.
                if [ -t 0 ] || [ -p /dev/fd/0 ] || [ -s /dev/fd/0 ]; then
                        input=stdin
                elif [ -r /dev/tty ]; then
                        input=tty
                else
                        input=none
                fi
                ;;
        esac
        
        # Read response based on input source
        response=""
        if [ "$input" = "none" ]; then
                if [ -n "$default_choice" ]; then
                        response=$default_choice
                else
                        printf '%s\n' "ask-yn: No interactive input available." >&2
                        exit 1
                fi
        else
                case $input in
                stdin)
                        IFS= read -r reply || reply=
                        ;;
                tty)
                        IFS= read -r reply </dev/tty || reply=
                        ;;
                esac
                response=$reply
                
                if [ -z "$response" ] && [ -n "$default_choice" ]; then
                        response=$default_choice
                fi
        fi

        case $response in
        y|Y|yes|YES)
                printf '%s\n' "yes"
                exit 0
                ;;
        n|N|no|NO)
                printf '%s\n' "no"
                exit 1
                ;;
        esac

        printf '%s\n' "Yes or no?" >&2
        default_hint="[y/n]" # remove default hint after invalid input
        default_choice=""
done
