#!/bin/sh

# disable-service removes a unit from systemd's boot sequence.

disable_service_usage() {
  cat <<'USAGE' >&2
Usage: disable-service UNIT

Stops the given systemd service from starting at boot, prompting for a unit name if one is not provided.
USAGE
}



disable_service() {
case "${1-}" in
--help|--usage|-h)
  disable_service_usage
  return 0
  ;;
esac

require-wizardry || exit 1

set -eu
. env-clear

script_name=$(basename "$0")

script_source=$0
case $script_source in
*/*)
  script_dir=${script_source%/*}
  ;;
*)
  resolved=$(command -v "$script_source" 2>/dev/null || printf '%s' "$script_source")
  script_dir=${resolved%/*}
  script_source=$resolved
  ;;
esac
if [ -z "$script_dir" ] || [ "$script_dir" = "$script_source" ]; then
  script_dir=.
fi
script_dir=$(cd "$script_dir" && pwd -P)

# Inline disable_service_find_ask_text - only used once
if [ -n "${DISABLE_SERVICE_ASK_TEXT-}" ]; then
  ask_text_helper=$DISABLE_SERVICE_ASK_TEXT
elif has ask-text; then
  ask_text_helper=$(command -v ask-text)
elif [ -x "$script_dir/ask-text" ]; then
  ask_text_helper="$script_dir/ask-text"
else
  die "$script_name: ask-text spell not found."
  return 1
fi

service_name=${1-}
if [ -z "$service_name" ]; then
  service_name=$("$ask_text_helper" "Which service should I disable?")
fi
if [ -z "$service_name" ]; then
  die "$script_name: No service name supplied."
  return 1
fi

# Inline disable_service_normalize_unit - only used once
case $service_name in
*.service)
  unit=$service_name
  ;;
*)
  unit="${service_name}.service"
  ;;
esac

printf 'Disabling %s so it no longer starts at boot...\n' "$unit"

# Inline disable_service_run_systemctl - only used once
if [ -z "${systemctl_cmd-}" ]; then
  if has systemctl; then
    systemctl_cmd=$(command -v systemctl)
  else
    die "$script_name: systemctl is not available on this system."
    return 1
  fi
fi
if [ "$(id -u)" -eq 0 ]; then
  "$systemctl_cmd" disable "$unit"
elif has sudo; then
  sudo "$systemctl_cmd" disable "$unit"
else
  die "$script_name: systemctl requires root. Re-run as root or install sudo."
  return 1
fi

printf '%s\n' "systemd disable request submitted."
}


# Source castable imp if not already available (for direct execution)
if ! command -v castable >/dev/null 2>&1; then
  # Try to find imps directory relative to this spell
  _spell_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _repo_root=$(cd "$_spell_dir" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  WIZARDRY_IMPS_SYS="${WIZARDRY_DIR:-${_repo_root}}/spells/.imps/sys"
  if [ -f "$WIZARDRY_IMPS_SYS/castable" ]; then
    . "$WIZARDRY_IMPS_SYS/castable"
  fi
fi

castable "$@"
