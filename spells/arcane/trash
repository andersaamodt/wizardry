#!/bin/sh

# This spell moves files or folders to the system trash (recycle bin) safely.
# Use this instead of `rm` when you want items to be recoverable.

trash_usage() {
  cat <<'USAGE'
Usage: trash [-r] [-f] <file|folder>...

Move files or folders to the system trash so they remain recoverable. Use -r for directories and -f to ignore missing files.
USAGE
}



trash() {
case "${1-}" in
--help|--usage|-h)
  trash_usage
  return 0
  ;;
esac

set -eu
. env-clear

recursive=0
force=0

# Parse options
while [ "$#" -gt 0 ]; do
  case "$1" in
  -r|--recursive)
    recursive=1
    shift
    ;;
  -f|--force)
    force=1
    shift
    ;;
  -rf|-fr)
    recursive=1
    force=1
    shift
    ;;
  --)
    shift
    break
    ;;
  -*)
    usage-error "trash" "unknown option: $1"
    ;;
  *)
    break
    ;;
  esac
done

if [ "$#" -eq 0 ]; then
  usage-error "trash" "missing file operand"
fi

# Detect the OS
if command -v detect-distro >/dev/null 2>&1; then
  platform=$(detect-distro 2>/dev/null || printf 'unknown')
  case "$platform" in
  mac)
    os=mac
    ;;
  *)
    os=linux
    ;;
  esac
else
  kernel=$(uname -s 2>/dev/null || printf 'unknown')
  case "$kernel" in
  Darwin)
    os=mac
    ;;
  Linux)
    os=linux
    ;;
  *)
    os=unknown
    ;;
  esac
fi

# Detect the best trash command available
case "$os" in
mac)
  if command -v osascript >/dev/null 2>&1; then
    trash_cmd=osascript
  else
    trash_cmd=none
  fi
  ;;
linux)
  if command -v gio >/dev/null 2>&1; then
    trash_cmd=gio
  elif command -v trash-put >/dev/null 2>&1; then
    trash_cmd=trash-put
  elif command -v kioclient5 >/dev/null 2>&1; then
    trash_cmd=kioclient5
  else
    trash_cmd=none
  fi
  ;;
*)
  trash_cmd=none
  ;;
esac

if [ "$trash_cmd" = "none" ]; then
  warn "trash: no supported trash utility found for your system."
  case "$os" in
  mac)
    info "On macOS, osascript should be available by default."
    ;;
  linux)
    info "Install one of: gio, trash-cli (for trash-put), or kde-cli-tools (for kioclient5)."
    ;;
  *)
    info "Your operating system is not supported."
    ;;
  esac
  return 1
fi

exit_status=0

for file in "$@"; do
  # Check if file exists
  if [ ! -e "$file" ]; then
    if [ "$force" -eq 1 ]; then
      continue
    fi
    warn "trash: cannot trash '$file': No such file or directory"
    exit_status=1
    continue
  fi

  # Check if it's a directory and -r is not specified
  if [ -d "$file" ] && [ "$recursive" -eq 0 ]; then
    warn "trash: cannot trash '$file': Is a directory (use -r to trash directories)"
    exit_status=1
    continue
  fi

  # Perform the trash operation based on available command
  case "$trash_cmd" in
  osascript)
    # Convert to absolute path for macOS
    case "$file" in
    /*)
      abs_path=$file
      ;;
    *)
      abs_path="$(pwd)/$file"
      ;;
    esac
    
    # Escape double quotes and backslashes in the path for AppleScript
    escaped_path=$(printf '%s' "$abs_path" | sed 's/\\/\\\\/g; s/"/\\"/g')
    
    # Use Finder to move to Trash
    if ! osascript -e "tell application \"Finder\" to delete POSIX file \"$escaped_path\"" >/dev/null 2>&1; then
      warn "trash: failed to trash '$file'"
      exit_status=1
    fi
    ;;
  gio)
    if [ "$force" -eq 1 ]; then
      if ! gio trash -f -- "$file" 2>/dev/null; then
        true  # Ignore errors when force is enabled
      fi
    else
      if ! gio trash -- "$file"; then
        warn "trash: failed to trash '$file'"
        exit_status=1
      fi
    fi
    ;;
  trash-put)
    if [ "$force" -eq 1 ]; then
      if ! trash-put -- "$file" 2>/dev/null; then
        true  # Ignore errors when force is enabled
      fi
    else
      if ! trash-put -- "$file"; then
        warn "trash: failed to trash '$file'"
        exit_status=1
      fi
    fi
    ;;
  kioclient5)
    # kioclient5 requires absolute paths
    case "$file" in
    /*)
      abs_path=$file
      ;;
    *)
      abs_path="$(pwd)/$file"
      ;;
    esac
    
    if [ "$force" -eq 1 ]; then
      if ! kioclient5 move "$abs_path" trash:/ 2>/dev/null; then
        true  # Ignore errors when force is enabled
      fi
    else
      if ! kioclient5 move "$abs_path" trash:/; then
        warn "trash: failed to trash '$file'"
        exit_status=1
      fi
    fi
    ;;
  esac
done

return $exit_status
}

# Self-execute when run directly (not sourced)
case "$0" in
  */trash) trash "$@" ;; esac
