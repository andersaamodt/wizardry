#!/bin/sh

# This spell lists extended attributes from a file, optionally narrowing to one key.
# It walks through existence checks and available helpers in a linear, didactic order.

require-wizardry || exit 1

read_magic_usage() {
cat <<'USAGE'
Usage: read-magic <file> [attribute]

List all extended attributes on a file or print the value of one attribute when named, using attr, xattr, or getfattr as available.
USAGE
}


read_magic() {
case "${1-}" in
--help|--usage|-h)
  read_magic_usage
  return 0
  ;;
esac

set -eu
. env-clear

# Validate arguments
if [ "$#" -lt 1 ] || [ "$#" -gt 2 ]; then
  die "read-magic: one or two parameters expected (file path and optional attribute name)."
  return 1
fi

file=$1
attribute=${2-}

# Check file exists
if [ ! -e "$file" ]; then
  die "read-magic: file does not exist."
  return 1
fi

# If specific attribute requested, read and print it
if [ -n "$attribute" ]; then
  if value=$(xattr-read-value "$attribute" "$file"); then
    say "$value"
  else
    die "read-magic: attribute does not exist."
    return 1
  fi
  return 0
fi

# Otherwise, list all attributes
keys=$(xattr-list-keys "$file" || printf '')

if [ -z "$keys" ]; then
  say "No enchanted attributes found."
  return 0
fi

# Print each attribute with its value
say "$keys" | while IFS= read -r key || [ -n "$key" ]; do
  [ -z "$key" ] && continue
  value=$(xattr-read-value "$key" "$file" || printf '')
  say "$key: $value"
done
}


# Source castable imp if not already available (for direct execution)
if ! command -v castable >/dev/null 2>&1; then
  # Try to find imps directory relative to this spell
  _spell_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _repo_root=$(cd "$_spell_dir" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  # Try to find imps directory relative to this spell
  _spell_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _repo_root=$(cd "$_spell_dir" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  WIZARDRY_IMPS_SYS="${WIZARDRY_DIR:-${_repo_root}}/spells/.imps/sys"
  if [ -f "$WIZARDRY_IMPS_SYS/castable" ]; then
    . "$WIZARDRY_IMPS_SYS/castable"
  fi
fi

# Source castable imp if not already available (for direct execution)
if ! command -v castable >/dev/null 2>&1; then
  # Try to find imps directory relative to this spell
  _spell_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  _repo_root=$(cd "$_spell_dir" && while [ ! -d "spells/.imps" ] && [ "$(pwd)" != "/" ]; do cd ..; done; pwd)
  WIZARDRY_IMPS_SYS="${WIZARDRY_DIR:-${_repo_root}}/spells/.imps/sys"
  if [ -f "$WIZARDRY_IMPS_SYS/castable" ]; then
    . "$WIZARDRY_IMPS_SYS/castable"
  fi
fi

castable "$@"
