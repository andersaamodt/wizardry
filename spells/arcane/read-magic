#!/bin/sh

# This spell lists extended attributes from a file, optionally narrowing to one key.
# It walks through existence checks and available helpers in a linear, didactic order.

require-wizardry || return 1

read_magic_usage() {
cat <<'USAGE'
Usage: read-magic <file> [attribute]

List all extended attributes on a file or print the value of one attribute when named, using attr, xattr, or getfattr as available.
USAGE
}


read_magic() {
case "${1-}" in
--help|--usage|-h)
  read_magic_usage
  return 0
  ;;
esac

set -eu
. env-clear

# Validate arguments
if [ "$#" -lt 1 ] || [ "$#" -gt 2 ]; then
  die "read-magic: one or two parameters expected (file path and optional attribute name)."
  return 1
fi

file=$1
attribute=${2-}

# Check file exists
if [ ! -e "$file" ]; then
  die "read-magic: file does not exist."
  return 1
fi

# If specific attribute requested, read and print it
if [ -n "$attribute" ]; then
  if value=$(xattr-read-value "$attribute" "$file"); then
    say "$value"
  else
    die "read-magic: attribute does not exist."
    return 1
  fi
  return 0
fi

# Otherwise, list all attributes
keys=$(xattr-list-keys "$file" || printf '')

if [ -z "$keys" ]; then
  say "No enchanted attributes found."
  return 0
fi

# Print each attribute with its value
say "$keys" | while IFS= read -r key || [ -n "$key" ]; do
  [ -z "$key" ] && continue
  value=$(xattr-read-value "$key" "$file" || printf '')
  say "$key: $value"
done
}


# Load castable imp for direct execution (AFTER all functions defined)
# When executed directly: always source to ensure castable sees correct $0
# When sourced (testing): use from PATH if available to avoid forks
case "$0" in
  sh|dash|bash|zsh|ksh|mksh|*/sh|*/dash|*/bash|*/zsh|*/ksh|*/mksh)
    # Being sourced - use from PATH if available
    if ! command -v castable >/dev/null 2>&1; then
      # Use WIZARDRY_DIR or ROOT_DIR if available (avoids dirname/basename)
      if [ -n "${WIZARDRY_DIR-}" ]; then
        _i="$WIZARDRY_DIR/spells/.imps/sys"
      elif [ -n "${ROOT_DIR-}" ]; then
        _i="$ROOT_DIR/spells/.imps/sys"
      else
        _i="${WIZARDRY_DIR:-${ROOT_DIR:-${0%/*/*/*}}}/spells/.imps/sys"
      fi
      [ -f "$_i/castable" ] && . "$_i/castable"
    fi
    ;;
  *)
    # Being executed - always source to ensure correct $0 detection
    if [ -n "${WIZARDRY_DIR-}" ]; then
      _i="$WIZARDRY_DIR/spells/.imps/sys"
    elif [ -n "${ROOT_DIR-}" ]; then
      _i="$ROOT_DIR/spells/.imps/sys"
    else
      _i="${WIZARDRY_DIR:-${ROOT_DIR:-${0%/*/*/*}}}/spells/.imps/sys"
    fi
    [ -f "$_i/castable" ] && . "$_i/castable"
    ;;
esac

castable "$@"
