#!/bin/sh

# This spell copies the text file at the specified path to the clipboard.
# It takes one argument, the path to the text file.
# When run without arguments, it prompts for the file path interactively.

set -eu

show_usage() {
        cat <<'USAGE'
Usage: copy <file>

Copy the contents of the specified text file to the system clipboard using
pbcopy, xsel, or xclip. Prints a confirmation when successful.

When run without arguments, prompts for the file path interactively.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        show_usage
        exit 0
        ;;
esac

# Handle missing argument - prompt interactively
if [ "$#" -eq 0 ]; then
    if command -v ask_text >/dev/null 2>&1; then
        file_path=$(ask_text "Enter file path to copy to clipboard:")
        if [ -z "$file_path" ]; then
            say 'No file path provided.'
            exit 1
        fi
        set -- "$file_path"
    else
        show_usage >&2
        exit 1
    fi
fi

is file "$1" || { say 'That file does not exist.'; exit 1; }

# Copy file contents to clipboard using the clip-copy imp
if ! clip-copy < "$1"; then
    warn 'Your spell fizzles. No clipboard utility available (xsel, xclip, or pbcopy).'
    exit 1
fi

# Normalize path for display
display_path=$(norm-path "$1")
say "Copied $display_path to your clipboard."
