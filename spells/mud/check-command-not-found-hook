#!/bin/sh

# This spell checks if the command-not-found hook is enabled via config.
# Use it to verify whether the handle-command-not-found integration is active.

check_command_not_found_hook_usage() {
cat <<'USAGE'
Usage: check-command-not-found-hook

Check if the command-not-found hook is enabled by looking at the config file.
Exits with code 0 if enabled (or not explicitly disabled), 1 if explicitly disabled.
Defaults to enabled if not configured (matches invoke-wizardry behavior).
USAGE
}

check_command_not_found_hook() {
case "${1-}" in
--help|--usage|-h)
  check_command_not_found_hook_usage
  return 0
  ;;
esac

set -eu
. env-clear

# Determine config file location
spellbook_dir="${SPELLBOOK_DIR:-$HOME/.spellbook}"
config_file="$spellbook_dir/.mud/config"

# Default to enabled (matches invoke-wizardry behavior)
# Only return disabled (1) if explicitly set to command-not-found=0
if [ -f "$config_file" ] && grep -q "^command-not-found=0$" "$config_file" 2>/dev/null; then
  return 1
fi

# Otherwise, enabled (either explicitly set to 1, or not configured = default enabled)
return 0
}

# Load castable imp for direct execution (AFTER all functions defined)
# When executed directly: always source to ensure castable sees correct $0
# When sourced (testing): use from PATH if available to avoid forks
case "$0" in
  sh|dash|bash|zsh|ksh|mksh|*/sh|*/dash|*/bash|*/zsh|*/ksh|*/mksh)
    # Being sourced - use from PATH if available
    if ! command -v castable >/dev/null 2>&1; then
      # Use WIZARDRY_DIR or ROOT_DIR if available (avoids dirname/basename)
      if [ -n "${WIZARDRY_DIR-}" ]; then
        _i="$WIZARDRY_DIR/spells/.imps/sys"
      elif [ -n "${ROOT_DIR-}" ]; then
        _i="$ROOT_DIR/spells/.imps/sys"
      else
        _i="${WIZARDRY_DIR:-${ROOT_DIR:-${0%/*/*/*}}}/spells/.imps/sys"
      fi
      [ -f "$_i/castable" ] && . "$_i/castable"
    fi
    ;;
  *)
    # Being executed - always source to ensure correct $0 detection
    if [ -n "${WIZARDRY_DIR-}" ]; then
      _i="$WIZARDRY_DIR/spells/.imps/sys"
    elif [ -n "${ROOT_DIR-}" ]; then
      _i="$ROOT_DIR/spells/.imps/sys"
    else
      _i="${WIZARDRY_DIR:-${ROOT_DIR:-${0%/*/*/*}}}/spells/.imps/sys"
    fi
    [ -f "$_i/castable" ] && . "$_i/castable"
    ;;
esac

castable "$@"
