#!/bin/sh

# This spell forgets (removes) a spell from the Cast menu.
# Use this to remove memorized spells from the Cast menu.
#
# Usage: forget SPELL_NAME

require-wizardry --check || exit 1

spell_name="forget"
tab_char=$(printf '\t')

forget_usage() {
        cat <<USAGE
Usage: $spell_name <spell-name>

Remove a spell from the Cast menu.
USAGE
}



forget() {
case "${1-}" in
--help|--usage|-h)
  forget_usage
  return 0
  ;;
esac

set -eu
. env-clear

# Helper for reading non-empty lines

# Resolve cast directory with tilde expansion
if [ -n "${WIZARDRY_CAST_DIR-}" ]; then
  cast_dir=$WIZARDRY_CAST_DIR
  case $cast_dir in
    \~) cast_dir=${HOME:-.} ;;
    \~/*) cast_dir=${HOME:-.}/${cast_dir#\~/} ;;
  esac
else
  cast_dir=$(env-or SPELLBOOK_DIR "${HOME:-.}/.spellbook")
fi

# Resolve command file with tilde expansion
if [ -n "${WIZARDRY_CAST_FILE-}" ]; then
  command_file=$WIZARDRY_CAST_FILE
  case $command_file in
    \~) command_file=${HOME:-.} ;;
    \~/*) command_file=${HOME:-.}/${command_file#\~/} ;;
  esac
elif [ -n "${MEMORIZE_COMMAND_FILE-}" ]; then
  command_file=$MEMORIZE_COMMAND_FILE
  case $command_file in
    \~) command_file=${HOME:-.} ;;
    \~/*) command_file=${HOME:-.}/${command_file#\~/} ;;
  esac
else
  command_file=$cast_dir/.memorized
fi

# Validate arguments
case ${1-} in
--help|--usage|-h)
  forget_usage
  return 0
  ;;
"")
  usage-error "$spell_name" "spell name required"
  ;;
-*)
  usage-error "$spell_name" "unknown option '$1'"
  ;;
esac

name=$1

# Validate spell name
case $name in
''|*[!A-Za-z0-9._-]*)
  die "$spell_name: names may contain only letters, digits, dots, underscores, and dashes."
  ;;
-*)
  die "$spell_name: names may not begin with a dash."
  ;;
esac

# Check if command file exists
if [ ! -f "$command_file" ]; then
  die "$spell_name: spell '$name' is not memorized."
fi

# Remove spell from command file
tmp=$(temp-file forget) || return 1
trap 'cleanup-file "$tmp"' EXIT HUP INT TERM
removed=0
while IFS= read -r line || nonempty "$line"; do
  entry_name=$line
  case $line in
  *"$tab_char"*)
    entry_name=${line%%"$tab_char"*}
    ;;
  esac
  if [ "$entry_name" = "$name" ] || [ -z "$entry_name" ]; then
    if [ "$entry_name" = "$name" ]; then
      removed=1
      continue
    fi
    continue
  fi
  printf '%s\n' "$line" >>"$tmp"
done <"$command_file"

if [ "$removed" -eq 0 ]; then
  trap - EXIT HUP INT TERM
  rm -f "$tmp"
  die "$spell_name: spell '$name' is not memorized."
fi

trap - EXIT HUP INT TERM
mv "$tmp" "$command_file"
}

# Self-execute when run directly (not sourced)
case "$0" in
  */forget) forget "$@" ;; esac
