#!/bin/sh
# This spell resets default synonyms to their original values.
# Does not affect custom synonyms.




reset_default_synonyms_usage() {
  cat <<'USAGE'
Usage: reset-default-synonyms

Reset default synonyms to their original values. This does not
affect any custom synonyms you have created.
USAGE
}

case "${1-}" in
--help|--usage|-h)
  reset_default_synonyms_usage
  exit 0
  ;;
esac

require_wizardry || return 1

set -eu
env_clear

reset_default_synonyms() {
  spell_home=$(env-or SPELLBOOK_DIR "${HOME:-.}/.spellbook")
  default_synonyms_file="$spell_home/.default-synonyms"

  # Confirm before resetting
  printf 'Reset default synonyms? Your custom synonyms will NOT be affected. (y/N): ' >&2
  IFS= read -r confirm || confirm="n"
  case $confirm in
    y|Y|yes|YES) ;;
    *)
      printf '%s\n' "reset-default-synonyms: cancelled" >&2
      return 0
      ;;
  esac

  # Remove existing default synonyms file
  if [ -f "$default_synonyms_file" ]; then
    rm -f "$default_synonyms_file"
  fi

  # Remove initialization marker to trigger re-initialization
  rm -f "$spell_home/.default-synonyms-initialized"

  # Reinitialize defaults by sourcing invoke-thesaurus
  _invoke_thes="$_i/invoke-thesaurus"
  if [ -f "$_invoke_thes" ]; then
    # shellcheck disable=SC1090,SC1091
    . "$_invoke_thes" 2>/dev/null || :
    success "Default synonyms reset. Custom synonyms preserved."
  else
    success "Default synonyms reset. Reload with: . invoke-thesaurus"
  fi
}


# Load castable imp for direct execution (AFTER all functions defined)
# When executed directly: always source to ensure castable sees correct $0
# When sourced (testing): use from PATH if available to avoid forks
case "$0" in
  sh|dash|bash|zsh|ksh|mksh|*/sh|*/dash|*/bash|*/zsh|*/ksh|*/mksh)
    # Being sourced - use from PATH if available
    if ! command -v castable >/dev/null 2>&1; then
      # Use WIZARDRY_DIR or ROOT_DIR if available (avoids dirname/basename)
      if [ -n "${WIZARDRY_DIR-}" ]; then
        _i="$WIZARDRY_DIR/spells/.imps/sys"
      elif [ -n "${ROOT_DIR-}" ]; then
        _i="$ROOT_DIR/spells/.imps/sys"
      else
        _i="${WIZARDRY_DIR:-${ROOT_DIR:-${0%/*/*/*}}}/spells/.imps/sys"
      fi
      [ -f "$_i/castable" ] && . "$_i/castable"
    fi
    ;;
  *)
    # Being executed - always source to ensure correct $0 detection
    if [ -n "${WIZARDRY_DIR-}" ]; then
      _i="$WIZARDRY_DIR/spells/.imps/sys"
    elif [ -n "${ROOT_DIR-}" ]; then
      _i="$ROOT_DIR/spells/.imps/sys"
    else
      _i="${WIZARDRY_DIR:-${ROOT_DIR:-${0%/*/*/*}}}/spells/.imps/sys"
    fi
    [ -f "$_i/castable" ] && . "$_i/castable"
    ;;
esac

castable "$@"
