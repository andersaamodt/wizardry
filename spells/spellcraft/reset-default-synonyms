#!/bin/sh
# This spell resets default synonyms to their original values.
# Does not affect custom synonyms.

case "${1-}" in
--help|--usage|-h)
  cat <<'USAGE'
Usage: reset-default-synonyms

Reset default synonyms to their original values. Does not affect custom synonyms.
USAGE
  exit 0
  ;;
esac

# Set up WIZARDRY_DIR if not already set
if [ -z "${WIZARDRY_DIR-}" ]; then
  rds_script_dir=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)
  WIZARDRY_DIR=$(cd "$rds_script_dir/../.." && pwd -P)
  export WIZARDRY_DIR
fi

set -eu
. env-clear

  spell_home=$(env-or SPELLBOOK_DIR "${HOME:-.}/.spellbook")
  default_synonyms_file="$spell_home/.default-synonyms"
  
  # Safety check: ensure the file path ends with .default-synonyms
  case "$default_synonyms_file" in
    *.default-synonyms) ;;
    *)
      die "reset-default-synonyms: invalid file path: $default_synonyms_file"
      ;;
  esac

  # Confirm before resetting
  printf 'Reset default synonyms? Your custom synonyms will NOT be affected. (y/N): ' >&2
  IFS= read -r confirm || confirm="n"
  case $confirm in
    y|Y|yes|YES) ;;
    *)
      printf '%s\n' "reset-default-synonyms: cancelled" >&2
      exit 0
      ;;
  esac

  # Remove existing default synonyms file
  if [ -f "$default_synonyms_file" ]; then
    rm -f "$default_synonyms_file"
  fi

  # Remove initialization marker to trigger re-initialization
  rm -f "$spell_home/.default-synonyms-initialized"

  # Reinitialize defaults by sourcing invoke-thesaurus
  if command -v invoke-thesaurus >/dev/null 2>&1; then
    # shellcheck disable=SC1090,SC1091
    if . invoke-thesaurus 2>/dev/null; then
      # Verify initialization succeeded by checking if the file was created
      if [ -f "$default_synonyms_file" ] && [ -f "$spell_home/.default-synonyms-initialized" ]; then
        success "Default synonyms reset. Custom synonyms preserved."
      else
        warn "reset-default-synonyms: initialization may have failed"
        printf '%s\n' "Reload with: . invoke-thesaurus" >&2
      fi
    else
      warn "reset-default-synonyms: failed to source invoke-thesaurus"
      printf '%s\n' "Reload with: . invoke-thesaurus" >&2
    fi
  else
    success "Default synonyms reset. Reload with: . invoke-thesaurus"
  fi
