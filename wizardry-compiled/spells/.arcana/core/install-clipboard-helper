# Inlined imp: is
_is() {
  case "$1" in
    file)     [ -f "$2" ] ;;
    dir)      [ -d "$2" ] ;;
    link)     [ -L "$2" ] ;;
    exec)     [ -x "$2" ] ;;
    readable) [ -r "$2" ] ;;
    writable) [ -w "$2" ] ;;
    empty)    if [ -f "$2" ]; then [ ! -s "$2" ]; elif [ -d "$2" ]; then [ -z "$(ls -A "$2" 2>/dev/null)" ]; else return 1; fi ;;
    set)      [ -n "$2" ] ;;
    unset)    [ -z "$2" ] ;;
    *)        return 1 ;;
  esac
}

# Bootstrap spell: installs a clipboard helper for the current environment.
# It detects if one _is already installed and prefers the best option for the platform:
# - macOS: pbcopy (built-in, no installation needed)
# - Wayland: wl-copy (from wl-clipboard)
# - X11: xsel (preferred) or xclip (fallback)


show_usage() {
        cat <<'USAGE' >&2
Usage: install-clipboard-helper

Installs a clipboard helper for the current environment. Detects if one _is already installed and prefers the best option for the platform (macOS: pbcopy, Wayland: wl-copy, X11: xsel or xclip).
USAGE
}

case "${1-}" in
--help|--usage|-h)
        show_usage
        exit 0
        ;;
esac

set -eu

SCRIPT_DIR=$(CDPATH= cd -- "$(dirname "$0")" && pwd -P)

# Detect which clipboard helper _is already installed
detect_installed_helper() {
  if command -v pbcopy >/dev/null 2>&1; then
    printf 'pbcopy'
  elif command -v xsel >/dev/null 2>&1; then
    printf 'xsel'
  elif command -v xclip >/dev/null 2>&1; then
    printf 'xclip'
  elif command -v wl-copy >/dev/null 2>&1; then
    printf 'wl-copy'
  else
    printf ''
  fi
}

# Detect the preferred helper for this environment
detect_preferred_helper() {
  # macOS has pbcopy built-in
  if [ "$(uname -s 2>/dev/null)" = "Darwin" ]; then
    printf 'pbcopy'
    return
  fi

  # Check for Wayland session
  if [ "${XDG_SESSION_TYPE:-}" = "wayland" ] || [ -n "${WAYLAND_DISPLAY:-}" ]; then
    printf 'wl-copy'
    return
  fi

  # Default to xsel for X11 (preferred over xclip)
  printf 'xsel'
}

# Get the label for the clipboard helper (for menu display)
get_clipboard_label() {
  installed=$(detect_installed_helper)
  preferred=$(detect_preferred_helper)
  
  if [ -n "$installed" ]; then
    printf '%s' "$installed (installed)"
  else
    printf '%s' "$preferred"
  fi
}

# Install the appropriate clipboard helper
install_clipboard_helper() {
  installed=$(detect_installed_helper)
  preferred=$(detect_preferred_helper)
  
  # If already have a clipboard helper, we're done
  if [ -n "$installed" ]; then
    printf '%s\n' "Clipboard helper already installed: $installed"
    return 0
  fi
  
  # pbcopy _is built-in on macOS, no installation needed
  if [ "$preferred" = "pbcopy" ]; then
    printf '%s\n' "pbcopy _is built-in on macOS"
    return 0
  fi
  
  # Install the preferred helper
  case "$preferred" in
    wl-copy)
      ASSUME_YES=1 "$SCRIPT_DIR/install-wl-clipboard"
      ;;
    xsel)
      if ! ASSUME_YES=1 "$SCRIPT_DIR/install-xsel" 2>/dev/null; then
        # Fall back to xclip if xsel fails
        printf '%s\n' "xsel installation failed, trying xclip..."
        ASSUME_YES=1 "$SCRIPT_DIR/install-xclip"
      fi
      ;;
    xclip)
      ASSUME_YES=1 "$SCRIPT_DIR/install-xclip"
      ;;
    *)
      printf '%s\n' "Unknown clipboard helper: $preferred" >&2
      return 1
      ;;
  esac
}

# Main execution
case "${1:-}" in
  --detect-installed)
    detect_installed_helper
    ;;
  --detect-preferred)
    detect_preferred_helper
    ;;
  --label)
    get_clipboard_label
    ;;
  *)
    install_clipboard_helper
    ;;
esac
