# Inlined imp: exit-label
_exit_label() {
  printf '%s' "Exit"
}


# Present the simplex-chat management menu.

show_usage() {
  cat <<'USAGE'
Usage: simplex-chat-menu

Displays the simplex-chat management menu.
USAGE
}

case "${1-}" in
  --help|--usage|-h)
    show_usage
    exit 0
    ;;
esac

set -eu
. colors

trap 'exit 0' INT TERM

command_available() {
  command -v "$1" >/dev/null 2>&1
}

simplex_bin=${SIMPLEX_CHAT_BIN:-simplex-chat}

is_simplex_installed() {
  command_available "$simplex_bin"
}

default_launch_cmd=${SIMPLEX_CHAT_LAUNCH_CMD:-"$simplex_bin"}
status_cmd=${SIMPLEX_CHAT_STATUS_CMD:-"$simplex_bin status"}
version_cmd=${SIMPLEX_CHAT_VERSION_CMD:-"$simplex_bin --version"}
help_cmd=${SIMPLEX_CHAT_HELP_CMD:-"$simplex_bin --help"}
keygen_cmd=${SIMPLEX_CHAT_KEYGEN_CMD:-"$simplex_bin keygen"}
restore_cmd=${SIMPLEX_CHAT_RESTORE_CMD:-"$simplex_bin restore-key"}

build_menu_entries() {
  title="${BOLD}${CYAN}simplex-chat: $(simplex-chat-status)"
  exit_label=$(_exit_label)
  exit_option="${exit_label}%kill -TERM \$PPID"
  install_option="Install simplex-chat%install-simplex-chat"
  uninstall_option="Uninstall simplex-chat%uninstall-simplex-chat"

  launch_option="Launch simplex-chat%$default_launch_cmd"
  status_option="Check simplex-chat status%$status_cmd"
  version_option="Show simplex-chat version%$version_cmd"
  help_option="Show simplex-chat help%$help_cmd"
  keygen_option="Create or rotate user key%$keygen_cmd"
  restore_option="Restore user key from backup%$restore_cmd"

  if is_simplex_installed; then
    menu "$title" \
      "$launch_option" \
      "$status_option" \
      "$version_option" \
      "$help_option" \
      "$keygen_option" \
      "$restore_option" \
      "$uninstall_option" \
      "$exit_option" || true
  else
    menu "$title" "$install_option" "$exit_option" || true
  fi
}

first_run=1
while :; do
  if [ "$first_run" -eq 0 ]; then
    printf '\n'
  else
    first_run=0
  fi

  build_menu_entries || true

done
