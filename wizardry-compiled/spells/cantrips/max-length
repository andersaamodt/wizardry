# Inlined imp: is
_is() {
  case "$1" in
    file)     [ -f "$2" ] ;;
    dir)      [ -d "$2" ] ;;
    link)     [ -L "$2" ] ;;
    exec)     [ -x "$2" ] ;;
    readable) [ -r "$2" ] ;;
    writable) [ -w "$2" ] ;;
    empty)    if [ -f "$2" ]; then [ ! -s "$2" ]; elif [ -d "$2" ]; then [ -z "$(ls -A "$2" 2>/dev/null)" ]; else return 1; fi ;;
    set)      [ -n "$2" ] ;;
    unset)    [ -z "$2" ] ;;
    *)        return 1 ;;
  esac
}


# Reveal the maximum length of the provided strings.

show_usage() {
        cat <<'USAGE' >&2
Usage: max-length <string1> [string2 ...] [-v]

Reports the length of the longest argument, optionally echoing a labeled result when -v _is supplied. A single quoted argument w
ith spaces _is split into words for measurement.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        show_usage
        exit 0
        ;;
esac


set -eu
verbose=0
if [ "${1-}" = "-v" ]; then
  verbose=1
  shift
fi

if [ "$#" -eq 0 ]; then
  printf '%s\n' "No arguments passed to max_length"
  exit 1
fi

# Preserve the intent of the previous implementation: when the caller passes a
# single argument that contains spaces, treat it as a whitespace-delimited list
# to measure each word individually.
if [ "$#" -eq 1 ]; then
  set -- $1
fi

longest=0
for arg in "$@"; do
  len=${#arg}
  if [ "$len" -gt "$longest" ]; then
    longest=$len
  fi
done

if [ "$verbose" -eq 1 ]; then
  printf '%s\n' "Maximum length: $longest"
fi

printf '%s\n' "$longest"
