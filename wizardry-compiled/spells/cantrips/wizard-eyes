# Inlined imp: has
_has() {
  command -v "$1" >/dev/null 2>&1
}


# This spell prints text in a subtle format only visible to wizards.
# Use it to show commands before they are executed for teaching purposes.

show_usage() {
cat <<'USAGE'
Usage: wizard-eyes <message>

Print a message in muted, indented text to mark it as a command or technical aside. Helpful for teaching moments when you want learners to see the command without shouting it.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        show_usage
        exit 0
        ;;
esac

set -eu

# Check if wizard mode is enabled (default to showing for teaching)
wizard_mode=${WIZARD:-1}

if [ "$wizard_mode" = "1" ]; then
        # Load colors if available
        if _has colors; then
                # shellcheck disable=SC1091
                . colors
        else
                GREY=''
                RESET=''
                THEME_MUTED=''
        fi
        
        printf '    %s%s%s\n' "${THEME_MUTED:-$GREY}" "$*" "$RESET"
fi
