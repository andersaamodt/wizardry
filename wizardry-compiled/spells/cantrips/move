# Inlined imp: die
_die() {
  case "$1" in
    [0-9]|[0-9][0-9]|[0-9][0-9][0-9]) _die_code=$1; shift ;;
    *) _die_code=1 ;;
  esac
  printf '%s\n' "$*" >&2
  return "$_die_code"
}

# Inlined imp: file-name
_file_name() {
  printf '%s\n' "${1##*/}"
}

# Inlined imp: is
_is() {
  case "$1" in
    file)     [ -f "$2" ] ;;
    dir)      [ -d "$2" ] ;;
    link)     [ -L "$2" ] ;;
    exec)     [ -x "$2" ] ;;
    readable) [ -r "$2" ] ;;
    writable) [ -w "$2" ] ;;
    empty)    if [ -f "$2" ]; then [ ! -s "$2" ]; elif [ -d "$2" ]; then [ -z "$(ls -A "$2" 2>/dev/null)" ]; else return 1; fi ;;
    set)      [ -n "$2" ] ;;
    unset)    [ -z "$2" ] ;;
    *)        return 1 ;;
  esac
}

# Inlined imp: say
_say() {
  printf '%s\n' "$*"
}

# Inlined imp: there
_there() {
  [ -e "$1" ]
}


# This spell moves files or directories from one location to another.
# Use it as a more intuitive wrapper around the mv command.

show_usage() {
cat <<'USAGE'
Usage: move <source> <destination>

Move a file or directory to a new location. Accepts natural language forms like "move <source> to <destination>" or "move from <source> to <destination>" so the command reads like a sentence.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        show_usage
        exit 0
        ;;
esac

set -eu

from=''
to=''

# Parse arguments supporting both simple and natural language forms
while [ "$#" -gt 0 ]; do
        case "$1" in
                from)
                        shift
                        if [ "$#" -gt 0 ]; then
                                from=$1
                                shift
                        fi
                        ;;
                to)
                        shift
                        if [ "$#" -gt 0 ]; then
                                to=$1
                                shift
                        fi
                        ;;
                *)
                        if _is unset "$from"; then
                                from=$1
                        elif _is unset "$to"; then
                                to=$1
                        fi
                        shift
                        ;;
        esac
done

# Validate arguments
if _is unset "$from"; then
        printf '%s\n' "move: source path required." >&2
        show_usage >&2
        exit 1
fi

if _is unset "$to"; then
        printf '%s\n' "move: destination path required." >&2
        show_usage >&2
        exit 1
fi

# Check source exists
if ! _there "$from"; then
        _die "move: source not found: $from"
fi

# Check write permission on destination directory
dest_dir=$(parent "$to")
if [ "$dest_dir" = "." ]; then
        dest_dir=$(here)
fi

if ! _is writable "$dest_dir"; then
        _die "move: no write permission on: $dest_dir"
fi

# Perform the move
mv "$from" "$to"
_say "Moved '$(_file_name "$from")' to '$to'."
