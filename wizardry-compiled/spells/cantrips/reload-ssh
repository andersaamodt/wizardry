# Inlined imp: die
_die() {
  case "$1" in
    [0-9]|[0-9][0-9]|[0-9][0-9][0-9]) _die_code=$1; shift ;;
    *) _die_code=1 ;;
  esac
  printf '%s\n' "$*" >&2
  return "$_die_code"
}

# Inlined imp: full
_full() {
  case "$1" in
    file) [ -s "$2" ] ;;
    dir)  [ -d "$2" ] && [ -n "$(ls -A "$2" 2>/dev/null)" ] ;;
    *)    return 1 ;;
  esac
}

# Inlined imp: has
_has() {
  command -v "$1" >/dev/null 2>&1
}

# Inlined imp: say
_say() {
  printf '%s\n' "$*"
}


# This spell reloads the SSH service configuration without restarting.
# Use it after modifying sshd_config to apply changes.

show_usage() {
cat <<'USAGE'
Usage: reload-ssh

Reload the SSH daemon configuration without a full restart. Detects the operating system and calls the right service manager so sshd_config changes take effect immediately.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        show_usage
        exit 0
        ;;
esac

set -eu

current_os=$(os)

case "$current_os" in
        debian|arch|fedora|nixos|linux)
                if _has systemctl; then
                        sudo systemctl reload sshd 2>/dev/null || sudo systemctl reload ssh
                elif _has service; then
                        sudo service ssh reload 2>/dev/null || sudo service sshd reload
                else
                        _die "reload-ssh: no service manager found."
                fi
                ;;
        mac)
                sudo launchctl stop com.openssh.sshd
                sudo launchctl start com.openssh.sshd
                ;;
        *)
                _die "reload-ssh: unsupported OS: $current_os"
                ;;
esac

_say "SSH service reloaded."
