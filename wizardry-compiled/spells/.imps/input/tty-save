# Inlined imp: tty-save
_tty_save() {
  if ! stty -g 2>/dev/null; then
    printf '%s\n' "tty-save: unable to read terminal settings" >&2
    return 1
  fi
}

# _tty_save - save terminal settings (reads from stdin)
# Example: state=$(_tty_save) && ... && tty-restore "$state"

_tty_save() {
  if ! stty -g 2>/dev/null; then
    printf '%s\n' "_tty_save: unable to read terminal settings" >&2
    return 1
  fi
}

# Self-execute when run directly (not sourced)
case "$0" in
  */_tty_save) _tty_save "$@" ;; esac
