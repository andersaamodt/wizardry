# Inlined imp: read-line
_read_line() {
  _rl_prompt=${1:-}
  [ -n "$_rl_prompt" ] && printf '%s' "$_rl_prompt" >&2

  if command -v select-input >/dev/null 2>&1; then
    _rl_src=$(select-input) || return 1
  else
    case ${SELECT_INPUT_MODE:-auto} in
      stdin) _rl_src=stdin ;;
      tty)   _rl_src=tty ;;
      none)  return 1 ;;
      *)
        if [ -t 0 ] || [ -p /dev/stdin ] || [ -s /dev/stdin ]; then _rl_src=stdin
        elif [ -r /dev/tty ]; then _rl_src=tty
        else return 1; fi ;;
    esac
  fi

  case $_rl_src in
    stdin) IFS= read -r _rl_line || _rl_line= ;;
    tty)   IFS= read -r _rl_line </dev/tty || _rl_line= ;;
    *)     return 1 ;;
  esac

  printf '%s' "$_rl_line"
}

# Inlined imp: select-input
_select_input() {
  case ${SELECT_INPUT_MODE:-auto} in
    stdin) printf '%s\n' stdin; return 0 ;;
    tty)   printf '%s\n' tty;   return 0 ;;
    none)  return 1 ;;
  esac

  if [ -t 0 ] || [ -p /dev/stdin ] || [ -s /dev/stdin ]; then
    printf '%s\n' stdin
    return 0
  fi

  if [ -r /dev/tty ]; then
    printf '%s\n' tty
    return 0
  fi

  return 1
}

# _read_line [PROMPT] - read a line from stdin or tty, optional prompt to stderr
# Example: name=$(_read_line "Enter name: ") | line=$(_read_line)
# Set SELECT_INPUT_MODE=stdin|tty|none to override source detection

_read_line() {
  _rl_prompt=${1:-}
  [ -n "$_rl_prompt" ] && printf '%s' "$_rl_prompt" >&2

  if command -v _select_input >/dev/null 2>&1; then
    _rl_src=$(_select_input) || return 1
  else
    case ${SELECT_INPUT_MODE:-auto} in
      stdin) _rl_src=stdin ;;
      tty)   _rl_src=tty ;;
      none)  return 1 ;;
      *)
        if [ -t 0 ] || [ -p /dev/stdin ] || [ -s /dev/stdin ]; then _rl_src=stdin
        elif [ -r /dev/tty ]; then _rl_src=tty
        else return 1; fi ;;
    esac
  fi

  case $_rl_src in
    stdin) IFS= read -r _rl_line || _rl_line= ;;
    tty)   IFS= read -r _rl_line </dev/tty || _rl_line= ;;
    *)     return 1 ;;
  esac

  printf '%s' "$_rl_line"
}

# Self-execute when run directly (not sourced)
case "$0" in
  */_read_line) _read_line "$@" ;; esac
