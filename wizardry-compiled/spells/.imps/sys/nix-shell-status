# Inlined imp: nix-shell-status
_nix_shell_status() {
  _nss_block_name=${1:-}
  _nss_nix_file=${2:-}

  if [ -z "$_nss_block_name" ] || [ -z "$_nss_nix_file" ]; then
    printf '%s\n' "nix-shell-status: NAME and FILE are required" >&2
    return 1
  fi

  _nss_marker="# wizardry: $_nss_block_name"

  [ -f "$_nss_nix_file" ] && grep -Fq "$_nss_marker" "$_nss_nix_file" 2>/dev/null
  return $?
}

# _nix_shell_status NAME FILE - check if shell init block exists in nix config
# Example: _nix_shell_status myspell home.nix && echo "installed"

_nix_shell_status() {
  _nss_block_name=${1:-}
  _nss_nix_file=${2:-}

  if [ -z "$_nss_block_name" ] || [ -z "$_nss_nix_file" ]; then
    printf '%s\n' "_nix_shell_status: NAME and FILE are required" >&2
    return 1
  fi

  _nss_marker="# wizardry: $_nss_block_name"

  [ -f "$_nss_nix_file" ] && grep -Fq "$_nss_marker" "$_nss_nix_file" 2>/dev/null
  return $?
