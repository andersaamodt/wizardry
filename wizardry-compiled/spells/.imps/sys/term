# term [FD] - test if file descriptor is a terminal (default stdin, 0)
# Examples: term && echo "interactive" | term 1 && echo "stdout is tty"

_term() {
  _term_fd=${1:-0}
  [ -t "$_term_fd" ]
}

# Self-execute when run directly (not sourced)
case "$0" in
  */term) _term "$@" ;; esac
