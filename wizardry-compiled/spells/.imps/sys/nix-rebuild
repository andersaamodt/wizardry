# Inlined imp: nix-rebuild
_nix_rebuild() {
  if [ "${WIZARDRY_SKIP_NIX_REBUILD-}" = "1" ]; then
    return 0
  fi

  _nr_rebuild_success=0

  _nr_priv_cmd=""
  if command -v sudo >/dev/null 2>&1; then
    _nr_priv_cmd="sudo"
  elif command -v doas >/dev/null 2>&1; then
    _nr_priv_cmd="doas"
  fi

  if command -v home-manager >/dev/null 2>&1; then
    printf '%s\n' "nix-rebuild: running home-manager switch..."
    if home-manager switch; then
      printf '%s\n' "nix-rebuild: user environment rebuilt successfully."
      _nr_rebuild_success=1
    fi
  fi

  if [ "$_nr_rebuild_success" -eq 0 ] && [ -n "$_nr_priv_cmd" ] && command -v nixos-rebuild >/dev/null 2>&1; then
    printf '%s\n' "nix-rebuild: running $_nr_priv_cmd nixos-rebuild switch..."
    if "$_nr_priv_cmd" nixos-rebuild switch; then
      printf '%s\n' "nix-rebuild: NixOS system rebuilt successfully."
      _nr_rebuild_success=1
    fi
  fi

  if [ "$_nr_rebuild_success" -eq 0 ]; then
    printf '%s\n' "nix-rebuild: NixOS configuration could not be automatically rebuilt." >&2
    return 1
  fi

  return 0
}

# _nix_rebuild - run nixos-rebuild or home-manager switch automatically
# Attempts home-manager first, then nixos-rebuild with privilege escalation.
# Set WIZARDRY_SKIP_NIX_REBUILD=1 to skip without error.

_nix_rebuild() {
  if [ "${WIZARDRY_SKIP_NIX_REBUILD-}" = "1" ]; then
    return 0
  fi

  _nr_rebuild_success=0

  _nr_priv_cmd=""
  if command -v sudo >/dev/null 2>&1; then
    _nr_priv_cmd="sudo"
  elif command -v doas >/dev/null 2>&1; then
    _nr_priv_cmd="doas"
  fi

  if command -v home-manager >/dev/null 2>&1; then
    printf '%s\n' "_nix_rebuild: running home-manager switch..."
    if home-manager switch; then
      printf '%s\n' "_nix_rebuild: user environment rebuilt successfully."
      _nr_rebuild_success=1
    fi
  fi

  if [ "$_nr_rebuild_success" -eq 0 ] && [ -n "$_nr_priv_cmd" ] && command -v nixos-rebuild >/dev/null 2>&1; then
    printf '%s\n' "_nix_rebuild: running $_nr_priv_cmd nixos-rebuild switch..."
    if "$_nr_priv_cmd" nixos-rebuild switch; then
      printf '%s\n' "_nix_rebuild: NixOS system rebuilt successfully."
      _nr_rebuild_success=1
    fi
  fi

  if [ "$_nr_rebuild_success" -eq 0 ]; then
    printf '%s\n' "_nix_rebuild: NixOS configuration could not be automatically rebuilt." >&2
    return 1
  fi

  return 0
}

# Self-execute when run directly (not sourced)
case "$0" in
  */_nix_rebuild) _nix_rebuild "$@" ;; esac
