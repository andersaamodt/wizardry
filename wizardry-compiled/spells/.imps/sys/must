# Inlined imp: has
_has() {
  command -v "$1" >/dev/null 2>&1
}

# Inlined imp: there
_there() {
  [ -e "$1" ]
}

# must TEST TARGET [MESSAGE] - return failure with message if test fails
# Use with 'set -e' or '|| return $?' to propagate failure
# Examples: must _there /etc/config "config missing" || return $?

_must() {
  _must_type=$1
  shift

  case "$_must_type" in
    file)
      if [ "$#" -ge 2 ]; then _must_target=$1; _must_msg=$2
      else _must_target=$1; _must_msg="file not found: $_must_target"; fi
      [ -f "$_must_target" ] || { printf '%s\n' "$_must_msg" >&2; return 1; }
      ;;
    dir)
      if [ "$#" -ge 2 ]; then _must_target=$1; _must_msg=$2
      else _must_target=$1; _must_msg="directory not found: $_must_target"; fi
      [ -d "$_must_target" ] || { printf '%s\n' "$_must_msg" >&2; return 1; }
      ;;
    link)
      if [ "$#" -ge 2 ]; then _must_target=$1; _must_msg=$2
      else _must_target=$1; _must_msg="link not found: $_must_target"; fi
      [ -L "$_must_target" ] || { printf '%s\n' "$_must_msg" >&2; return 1; }
      ;;
    exec)
      if [ "$#" -ge 2 ]; then _must_target=$1; _must_msg=$2
      else _must_target=$1; _must_msg="executable not found: $_must_target"; fi
      [ -x "$_must_target" ] || { printf '%s\n' "$_must_msg" >&2; return 1; }
      ;;
    readable)
      if [ "$#" -ge 2 ]; then _must_target=$1; _must_msg=$2
      else _must_target=$1; _must_msg="not readable: $_must_target"; fi
      [ -r "$_must_target" ] || { printf '%s\n' "$_must_msg" >&2; return 1; }
      ;;
    writable)
      if [ "$#" -ge 2 ]; then _must_target=$1; _must_msg=$2
      else _must_target=$1; _must_msg="not writable: $_must_target"; fi
      [ -w "$_must_target" ] || { printf '%s\n' "$_must_msg" >&2; return 1; }
      ;;
    set)
      if [ "$#" -ge 2 ]; then _must_target=$1; _must_msg=$2
      else _must_target=$1; _must_msg="value not provided"; fi
      [ -n "$_must_target" ] || { printf '%s\n' "$_must_msg" >&2; return 1; }
      ;;
    _there)
      if [ "$#" -ge 2 ]; then _must_target=$1; _must_msg=$2
      else _must_target=$1; _must_msg="path not found: $_must_target"; fi
      [ -e "$_must_target" ] || { printf '%s\n' "$_must_msg" >&2; return 1; }
      ;;
    _has)
      if [ "$#" -ge 2 ]; then _must_target=$1; _must_msg=$2
      else _must_target=$1; _must_msg="command not found: $_must_target"; fi
      command -v "$_must_target" >/dev/null 2>&1 || { printf '%s\n' "$_must_msg" >&2; return 1; }
      ;;
    *)
      printf '%s\n' "must: unknown test type '$_must_type'" >&2
      return 1
      ;;
  esac
}

# Self-execute when run directly (not sourced)
case "$0" in
  */must) _must "$@" ;; esac
