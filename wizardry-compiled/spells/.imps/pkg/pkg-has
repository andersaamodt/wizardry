# Inlined imp: pkg-has
_pkg_has() {
  _ph_package=${1:-}
  [ -z "$_ph_package" ] && { printf '%s\n' "pkg-has: package name required" >&2; return 1; }

  _ph_pm=$(_pkg_manager) || { printf '%s\n' "pkg-has: no supported package manager" >&2; return 1; }

  case $_ph_pm in
    apt)    dpkg -l "$_ph_package" 2>/dev/null | grep -q "^ii" ;;
    dnf)    rpm -q "$_ph_package" >/dev/null 2>&1 ;;
    pacman) pacman -Q "$_ph_package" >/dev/null 2>&1 ;;
    brew)   brew list "$_ph_package" >/dev/null 2>&1 ;;
    nix)    nix-env -q "$_ph_package" >/dev/null 2>&1 ;;
    pkgin)  pkgin list 2>/dev/null | grep -q "^${_ph_package}-" ;;
    apk)    apk info -e "$_ph_package" >/dev/null 2>&1 ;;
  esac
}

# _pkg_has PACKAGE - test if a package is installed
# Example: _pkg_has git && echo "git is installed"

_pkg_has() {
  _ph_package=${1:-}
  [ -z "$_ph_package" ] && { printf '%s\n' "_pkg_has: package name required" >&2; return 1; }

  _ph_pm=$(_pkg_manager) || { printf '%s\n' "_pkg_has: no supported package manager" >&2; return 1; }

  case $_ph_pm in
    apt)    dpkg -l "$_ph_package" 2>/dev/null | grep -q "^ii" ;;
    dnf)    rpm -q "$_ph_package" >/dev/null 2>&1 ;;
    pacman) pacman -Q "$_ph_package" >/dev/null 2>&1 ;;
    brew)   brew list "$_ph_package" >/dev/null 2>&1 ;;
    nix)    nix-env -q "$_ph_package" >/dev/null 2>&1 ;;
    pkgin)  pkgin list 2>/dev/null | grep -q "^${_ph_package}-" ;;
    apk)    apk info -e "$_ph_package" >/dev/null 2>&1 ;;
  esac
}

# Self-execute when run directly (not sourced)
case "$0" in
  */_pkg_has) _pkg_has "$@" ;; esac
