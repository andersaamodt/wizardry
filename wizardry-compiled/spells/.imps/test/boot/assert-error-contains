# Inlined imp: assert-error-contains
_assert_error_contains() {
  substring=$1
  case "$ERROR" in
    *"$substring"*)
      return 0
      ;;
    *)
      TEST_FAILURE_REASON="stderr missing substring: $substring"
      return 1
      ;;
  esac
}

# _assert_error_contains SUBSTRING - verify ERROR contains the substring
# Sets TEST_FAILURE_REASON on mismatch.

_assert_error_contains() {
  substring=$1
  case "$ERROR" in
    *"$substring"*)
      return 0
      ;;
    *)
      TEST_FAILURE_REASON="stderr missing substring: $substring"
      return 1
      ;;
  esac
}

# Self-execution when run directly (not sourced)
case "${0##*/}" in _assert_error_contains) _assert_error_contains "$@" ;; esac
