# Inlined imp: strip-trailing-slashes
_strip_trailing_slashes() {
  _sts_normalized=$(printf '%s' "$1" | sed 's|/*$||')
  if [ -z "$_sts_normalized" ]; then
    printf '/\n'
    return
  fi
  printf '%s\n' "$_sts_normalized"
}

# _strip_trailing_slashes PATH - remove trailing slashes, output "/" for empty
# Example: _strip_trailing_slashes "/tmp/foo/" -> /tmp/foo

_strip_trailing_slashes() {
  _sts_normalized=$(printf '%s' "$1" | sed 's|/*$||')
  if [ -z "$_sts_normalized" ]; then
    printf '/\n'
    return
  fi
  printf '%s\n' "$_sts_normalized"
}

# Self-execute when run directly (not sourced)
case "$0" in
  */_strip_trailing_slashes) _strip_trailing_slashes "$@" ;; esac
