# Inlined imp: file-name
_file_name() {
  printf '%s\n' "${1##*/}"
}

# _file_name PATH - extract filename from path (like basename but pure shell)
# Example: name=$(_file_name /path/to/file.txt)  # outputs: file.txt

_file_name() {
  printf '%s\n' "${1##*/}"
