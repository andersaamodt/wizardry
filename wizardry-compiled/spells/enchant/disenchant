# Inlined spell: ask-number
_ask_number() {

# ask-number keeps watch over numeric ranges, nudging travelers toward a value
# between the provided bounds.  It repeats until a valid integer arrives.


case "${1-}" in
--help|--usage|-h)
        show_usage
        exit 0
        ;;
esac


if [ "$#" -ne 3 ]; then
        show_usage
        exit 1
fi

question=$1
min=$2
max=$3

case $min in
*[!0-9-]*|"")
        printf '%s\n' "ask-number: MIN must be an integer." >&2
        exit 1
        ;;
*) : ;;
esac
case $max in
*[!0-9-]*|"")
        printf '%s\n' "ask-number: MAX must be an integer." >&2
        exit 1
        ;;
*) : ;;
esac

min=$(printf '%s' "$min")
max=$(printf '%s' "$max")

if [ "$min" -gt "$max" ]; then
        printf '%s\n' "ask-number: MIN must be less than or equal to MAX." >&2
        exit 1
fi

# select_input matches ask-text/ask-yn so callers can steer input selection.
select_input() {
        case ${ASK_CANTRIP_INPUT:-auto} in
        stdin)
                printf '%s\n' stdin
                return 0
                ;;
        none)
                return 1
                ;;
        esac
        if [ -t 0 ] || [ -p /dev/stdin ] || [ -s /dev/stdin ]; then
                printf '%s\n' stdin
                return 0
        fi
        if [ -r /dev/tty ]; then
                printf '%s\n' tty
                return 0
        fi
        return 1
}

prompt() {
        printf '%s [%s-%s] ' "$question" "$min" "$max" >&2
}

read_value() {
        input=$(select_input) || return 1
        case $input in
        stdin)
                IFS= read -r value || value=
                ;;
        tty)
                IFS= read -r value </dev/tty || value=
                ;;
        *)
                return 1
                ;;
        esac
        printf '%s' "$value"
        return 0
}

while :; do
        prompt
        if ! response=$(read_value); then
                printf '%s\n' "ask-number: No interactive input available." >&2
                exit 1
        fi

        case $response in
        *[!0-9-]*|"")
                printf '%s\n' "Whole number expected." >&2
                continue
                ;;
        esac

        if [ "$response" -lt "$min" ] || [ "$response" -gt "$max" ]; then
                printf '%s\n' "Number must be between $min and $max." >&2
                continue
        fi

        printf '%s\n' "$response"
        exit 0

done
}

# Inlined imp: empty
_empty() {
  [ -z "$1" ]
}

# Inlined imp: fail
_fail() {
  printf '%s\n' "$*" >&2
  return 1
}

# Inlined imp: has
_has() {
  command -v "$1" >/dev/null 2>&1
}

# Inlined imp: lacks
_lacks() {
  ! command -v "$1" >/dev/null 2>&1
}


# This spell removes extended attributes from a target file.
# Provide a key to delete it directly or choose interactively when several exist.


show_usage() {
  cat <<'USAGE'
Usage: disenchant <file> [key]

Remove an extended attribute from a file. Provide a key to delete that one directly; otherwise the spell inspects the file and either removes the single attribute it finds or lets you pick from a menu when several exist.
USAGE
}

case "${1-}" in
--help|--usage|-h)
  show_usage
  exit 0
  ;;
esac
set -eu

if [ "$#" -lt 1 ] || [ "$#" -gt 2 ]; then
  printf '%s\n' "Error: This spell requires one or two arguments: a file path and an optional attribute name." >&2
  show_usage >&2
  exit 1
fi

file=$1
requested_key=${2-}

gone "$file" && _fail "Error: The file does not exist."

helper_usable() {
  helper=$1
  _lacks "$helper" && return 1

  resolved=$(where "$helper")

  if [ "${WIZARDRY_TEST_HELPERS_ONLY-0}" -eq 1 ]; then
    case $resolved in
      /usr/*|/bin/*|/sbin/*|/usr/local/*)
        return 1
        ;;
    esac
  fi

  return 0
}

parse_attr_keys() {
  awk -F '"' '/Attribute/ {print $2}'
}

list_keys() {
  target=$1

  if helper_usable attr; then
    if keys=$(attr -l "$target" 2>/dev/null); then
      parsed=$(printf '%s\n' "$keys" | parse_attr_keys)
      if [ -n "$parsed" ]; then
        printf '%s\n' "$parsed"
        return 0
      fi
    fi
  fi

  if helper_usable xattr; then
    if keys=$(xattr "$target" 2>/dev/null); then
      if [ -n "$keys" ]; then
        printf '%s\n' "$keys"
        return 0
      fi
    fi
  fi

  if helper_usable getfattr; then
    if keys=$(getfattr -d "$target" 2>/dev/null); then
      parsed=$(printf '%s' "$keys" | awk -F '=' '/^# / {next} {print $1}')
      if [ -n "$parsed" ]; then
        printf '%s' "$parsed"
        return 0
      fi
    fi
  fi

  return 1
}

remove_with_helper() {
  helper=$1
  key=$2
  target=$3

  case "$helper" in
    attr)
      attr -r "$key" "$target"
      ;;
    xattr)
      xattr -d "$key" "$target"
      ;;
    setfattr)
      setfattr -x "$key" "$target"
      ;;
    *)
      return 1
      ;;
  esac
}

disenchant_attr() {
  key=$1
  target=$2

  for helper in attr xattr setfattr; do
    if helper_usable "$helper"; then
      if remove_with_helper "$helper" "$key" "$target"; then
        printf '%s\n' "Disenchanted $key attribute from $target."
        return 0
      fi
    fi
  done

  printf '%s\n' "Error: requires the 'attr', 'xattr', or 'setfattr' helper to remove attributes." >&2
  return 1
}

select_from_many() {
  keys=$1
  set -- $keys disenchant-all
  count=$#

  if [ "$count" -eq 0 ]; then
    return 1
  fi

  if ! _has _ask_number; then
    printf '%s\n' "Error: multiple attributes found; install _ask_number or specify a key." >&2
    return 1
  fi

  printf '%s\n' "Available attributes:" >&2
  idx=1
  for key in "$@"; do
    printf '  %s) %s\n' "$idx" "$key" >&2
    idx=$((idx + 1))
  done

  choice=$(_ask_number "Choose which attribute to disenchant" 1 "$count") || return 1
  eval "printf '%s\n' \"\${$choice}\""
}

if nonempty "$requested_key"; then
  disenchant_attr "$requested_key" "$file"
  exit $?
fi

keys=$(list_keys "$file" || printf '')
if _empty "$keys"; then
  printf '%s\n' "Error: No enchanted attributes found on $file." >&2
  exit 1
fi

key_count=$(printf '%s\n' "$keys" | awk 'NF{c++} END{print c+0}')

if [ "$key_count" -eq 1 ]; then
  chosen_key=$(printf '%s\n' "$keys" | awk 'NF{print; exit}')
else
  chosen_key=$(select_from_many "$keys") || exit 1
fi

if [ "$chosen_key" = "disenchant-all" ]; then
  failure=0
  for key in $keys; do
    if ! disenchant_attr "$key" "$file"; then
      failure=1
    fi
  done
  [ "$failure" -eq 0 ] || exit 1
  printf '%s\n' "Disenchanted all attributes from $file."
  exit 0
fi

disenchant_attr "$chosen_key" "$file"
