# Inlined imp: die
_die() {
  case "$1" in
    [0-9]|[0-9][0-9]|[0-9][0-9][0-9]) _die_code=$1; shift ;;
    *) _die_code=1 ;;
  esac
  printf '%s\n' "$*" >&2
  return "$_die_code"
}

# Inlined imp: empty
_empty() {
  [ -z "$1" ]
}

# Inlined imp: env-or
_env_or() {
  _eo_var=$1
  # Validate variable name contains only alphanumerics and underscores
  case "$_eo_var" in
    *[!A-Za-z0-9_]*|"")
      printf '%s\n' "$2"
      return
      ;;
  esac
  eval "_eo_val=\${$_eo_var-}"
  if [ -n "$_eo_val" ]; then
    printf '%s\n' "$_eo_val"
  else
    printf '%s\n' "$2"
  fi
}

# Inlined imp: file-name
_file_name() {
  printf '%s\n' "${1##*/}"
}

# Inlined spell: follow-portkey
_follow_portkey() {

# This spell activates a portkey enchantment to teleport to the stored destination.
# The destination is read from the file's 'context' extended attribute.



case "${1-}" in
--help|--usage|-h)
        show_usage
        exit 0
        ;;
esac


# Ensure file argument is provided
if [ -z "${1-}" ]; then
        printf '%s\n' "follow-portkey: file path required." >&2
        show_usage >&2
        exit 1
fi

file=$1

# Verify file exists
if ! is file "$file"; then
        die "follow-portkey: file not found: $file"
fi

# Read the context attribute from the file
context=$(read-magic "$file" context 2>/dev/null || true)

# Verify context was found
case "$context" in
        ''|*Error*)
                die "follow-portkey: no portkey enchantment on file: $file"
                ;;
esac

# Verify destination exists
if ! is dir "$context"; then
        warn "follow-portkey: destination does not exist: $context"
fi

# Output the cd command for eval
printf 'cd "%s"\n' "$context"
say "Following portkey to $context."
}

# Inlined imp: is
_is() {
  case "$1" in
    file)     [ -f "$2" ] ;;
    dir)      [ -d "$2" ] ;;
    link)     [ -L "$2" ] ;;
    exec)     [ -x "$2" ] ;;
    readable) [ -r "$2" ] ;;
    writable) [ -w "$2" ] ;;
    empty)    if [ -f "$2" ]; then [ ! -s "$2" ]; elif [ -d "$2" ]; then [ -z "$(ls -A "$2" 2>/dev/null)" ]; else return 1; fi ;;
    set)      [ -n "$2" ] ;;
    unset)    [ -z "$2" ] ;;
    *)        return 1 ;;
  esac
}

# Inlined imp: read-file
_read_file() {
  cat "$1"
}

# Inlined imp: say
_say() {
  printf '%s\n' "$*"
}


# This spell enchants a file with a portkey that transports to a destination.
# Activate the portkey with _follow_portkey to teleport to the stored location.


show_usage() {
cat <<'USAGE'
Usage: enchant-portkey <file> [destination]

Enchant a file with a portkey that stores a destination path, defaulting to marker 1 ($SPELLBOOK_DIR/.markers/1) when none is provided. Activate the portkey later with follow-portkey to teleport to the stored location.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        show_usage
        exit 0
        ;;
esac

set -eu

# Ensure file argument _is provided
if [ -z "${1-}" ]; then
        printf '%s\n' "enchant-portkey: file path required." >&2
        show_usage >&2
        exit 1
fi

file=$1
destination=${2-}
spell_home=$(_env_or SPELLBOOK_DIR "${HOME:-.}/.spellbook")
markers_dir="$spell_home/.markers"
marker_file="$markers_dir/1"

# Verify file exists
if ! _is file "$file"; then
        _die "enchant-portkey: file not found: $file"
fi

# If no destination provided, try to read from marker file
if _is unset "$destination"; then
        if _is file "$marker_file"; then
                destination=$(_read_file "$marker_file")
        else
                _die "enchant-portkey: no destination provided and no marker 1 found."
        fi
fi

# Verify destination _is valid
if _is unset "$destination"; then
        _die "enchant-portkey: destination cannot be _empty."
fi

# Enchant the file with the destination context
enchant "$file" context "$destination" >/dev/null

_say "Portkey enchanted on '$(_file_name "$file")'. Use _follow_portkey to activate."
