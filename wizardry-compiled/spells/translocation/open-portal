# Inlined imp: die
_die() {
  case "$1" in
    [0-9]|[0-9][0-9]|[0-9][0-9][0-9]) _die_code=$1; shift ;;
    *) _die_code=1 ;;
  esac
  printf '%s\n' "$*" >&2
  return "$_die_code"
}

# Inlined imp: has
_has() {
  command -v "$1" >/dev/null 2>&1
}

# Inlined imp: is
_is() {
  case "$1" in
    file)     [ -f "$2" ] ;;
    dir)      [ -d "$2" ] ;;
    link)     [ -L "$2" ] ;;
    exec)     [ -x "$2" ] ;;
    readable) [ -r "$2" ] ;;
    writable) [ -w "$2" ] ;;
    empty)    if [ -f "$2" ]; then [ ! -s "$2" ]; elif [ -d "$2" ]; then [ -z "$(ls -A "$2" 2>/dev/null)" ]; else return 1; fi ;;
    set)      [ -n "$2" ] ;;
    unset)    [ -z "$2" ] ;;
    *)        return 1 ;;
  esac
}

# Inlined imp: say
_say() {
  printf '%s\n' "$*"
}


# This spell mounts a remote directory using sshfs through Tor.
# Use it to access remote servers anonymously via SSH filesystem.


show_usage() {
cat <<'USAGE'
Usage: open-portal <remote_address> <remote_directory> [local_mount_point]

Mount a remote directory using sshfs over Tor for anonymous access. The local mount point defaults to ~/portals/<remote_address> if not specified and uses the MUD_PLAYER key for authentication.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        show_usage
        exit 0
        ;;
esac

set -eu

# Check for required commands
if ! _has sshfs; then
        _die "open-portal: sshfs not found."
fi

if ! _has torify; then
        _die "open-portal: torify (tor) not found."
fi

# Get player key from environment
if _is unset "${MUD_PLAYER-}"; then
        _die "open-portal: MUD_PLAYER environment variable not set."
fi
player_key="$HOME/.ssh/$MUD_PLAYER"

if ! _is file "$player_key"; then
        _die "open-portal: SSH key not found: $player_key"
fi

# Get address and directory from arguments or prompt
tor_address=${1-}
remote_dir=${2-}
local_mount=${3-}

if _is unset "$tor_address"; then
        printf '%s' "Enter the Tor address of the remote server: "
        read -r tor_address
fi

if _is unset "$remote_dir"; then
        printf '%s' "Enter the remote directory to mount: "
        read -r remote_dir
fi

# Normalize remote path (remove trailing slash for consistency)
remote_dir="${remote_dir%/}"

# Set local mount point if not provided
if _is unset "$local_mount"; then
        # Create a safe directory name from the address
        safe_name=$(printf '%s' "$tor_address" | tr -c 'A-Za-z0-9.-' '_')
        local_mount="$HOME/portals/$safe_name"
fi

# Ensure local mount point exists
make dir "$local_mount" || _die "open-portal: cannot create mount point: $local_mount"

# Mount the remote directory using sshfs over tor
torify sshfs -o "IdentityFile=$player_key" "$tor_address:$remote_dir" "$local_mount"

_say "Portal opened: $tor_address:$remote_dir mounted at $local_mount"
