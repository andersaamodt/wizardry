# Inlined imp: die
_die() {
  case "$1" in
    [0-9]|[0-9][0-9]|[0-9][0-9][0-9]) _die_code=$1; shift ;;
    *) _die_code=1 ;;
  esac
  printf '%s\n' "$*" >&2
  return "$_die_code"
}

# Inlined imp: has
_has() {
  command -v "$1" >/dev/null 2>&1
}

# Inlined imp: is
_is() {
  case "$1" in
    file)     [ -f "$2" ] ;;
    dir)      [ -d "$2" ] ;;
    link)     [ -L "$2" ] ;;
    exec)     [ -x "$2" ] ;;
    readable) [ -r "$2" ] ;;
    writable) [ -w "$2" ] ;;
    empty)    if [ -f "$2" ]; then [ ! -s "$2" ]; elif [ -d "$2" ]; then [ -z "$(ls -A "$2" 2>/dev/null)" ]; else return 1; fi ;;
    set)      [ -n "$2" ] ;;
    unset)    [ -z "$2" ] ;;
    *)        return 1 ;;
  esac
}

# Inlined imp: say
_say() {
  printf '%s\n' "$*"
}


# This spell opens an SSH connection through Tor for anonymous remote access.
# Use it to connect to remote servers while preserving anonymity.


show_usage() {
cat <<'USAGE'
Usage: open-teletype [remote_address] [user]

Open an SSH connection over Tor for anonymous access to a remote server. Prompts for address and user if you don't pass them and uses the MUD_PLAYER key as your SSH identity.
USAGE
}

case "${1-}" in
--help|--usage|-h)
        show_usage
        exit 0
        ;;
esac

set -eu

# Check for required commands
if ! _has torify; then
        _die "open-teletype: torify (tor) not found."
fi

# Get player key from environment
if _is unset "${MUD_PLAYER-}"; then
        _die "open-teletype: MUD_PLAYER environment variable not set."
fi
player_key="$HOME/.ssh/$MUD_PLAYER"

if ! _is file "$player_key"; then
        _die "open-teletype: SSH key not found: $player_key"
fi

# Get address and user from arguments or prompt
tor_address=${1-}
remote_user=${2-}

if _is unset "$tor_address"; then
        printf '%s' "Enter the Tor address: "
        read -r tor_address
fi

if _is unset "$remote_user"; then
        printf '%s' "Enter the remote user: "
        read -r remote_user
fi

# Connect via ssh through torify
_say "Opening teletype to $remote_user@$tor_address..."
torify ssh -i "$player_key" "$remote_user@$tor_address"
